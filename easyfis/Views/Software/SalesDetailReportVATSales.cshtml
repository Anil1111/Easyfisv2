        // ============
        // Download CSV
        // ============
        function btnSalesDetailVATSalesReportDownloadCSVOnclick() {
            var CSV = '';
            var salesDetailVATSalesReport = [];
            var fileName = 'SalesDetailVATSalesReport.CSV';

            salesDetailVATSalesReportCollectionView.moveToFirstPage();

            for (var p = 1; p <= salesDetailVATSalesReportCollectionView.pageCount; p++) {
                for (i = 0; i < salesDetailVATSalesReportCollectionView.items.length; i++) {
                    salesDetailVATSalesReport.push({
                        Branch: salesDetailVATSalesReportCollectionView.items[i].Branch,
                        SINumber: salesDetailVATSalesReportCollectionView.items[i].SIForCSV,
                        SIDate: salesDetailVATSalesReportCollectionView.items[i].SIDate,
                        Customer: salesDetailVATSalesReportCollectionView.items[i].Customer,
                        Item: salesDetailVATSalesReportCollectionView.items[i].Item,
                        Price: salesDetailVATSalesReportCollectionView.items[i].Price,
                        Unit: salesDetailVATSalesReportCollectionView.items[i].Unit,
                        Quantity: salesDetailVATSalesReportCollectionView.items[i].Quantity,
                        Discount: salesDetailVATSalesReportCollectionView.items[i].Discount,
                        DiscountRate: salesDetailVATSalesReportCollectionView.items[i].DiscountRate,
                        DiscountAmount: salesDetailVATSalesReportCollectionView.items[i].DiscountRate,
                        VAT: salesDetailVATSalesReportCollectionView.items[i].Discount,
                        VATRate: salesDetailVATSalesReportCollectionView.items[i].DiscountRate,
                        VATAmount: salesDetailVATSalesReportCollectionView.items[i].DiscountRate,
                        Amount: salesDetailVATSalesReportCollectionView.items[i].Amount,
                    });
                }

                salesDetailVATSalesReportCollectionView.moveToNextPage();
                if (p == salesDetailVATSalesReportCollectionView.pageCount) {
                    salesDetailVATSalesReportCollectionView.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                SINumber: "SI Number",
                SIDate: "SI Date",
                Customer: "Customer",
                Item: "Item",
                Price: "Price",
                Unit: "Unit",
                Quantity: "Quantity",
                Discount: "Discount",
                DiscountRate: "Discount Rate",
                DiscountAmount: "Discount Amount",
                VAT: "VAT",
                VATRate: "VAT Rate",
                VATAmount: "VAT Amount",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < salesDetailVATSalesReport.length; i++) {
                var row = '';
                for (var a in salesDetailVATSalesReport[i]) {
                    row += '"' + salesDetailVATSalesReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

