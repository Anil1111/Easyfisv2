        // =====================================
        // Download Disbursement Book Report CSV
        // =====================================
        function btnDisbursementBookDownloadCSVOnclick() {
            var CSV = '';
            var disbursementBook = [];
            var fileName = 'DisbursementBook.CSV';

            disbursementBookCollectionView.moveToFirstPage();

            for (var p = 1; p <= disbursementBookCollectionView.pageCount; p++) {
                for (i = 0; i < disbursementBookCollectionView.items.length; i++) {
                    var IsClose = disbursementBookCollectionView.items[i].IsClose;
                    var isPOClose = "Not Closed";
                    if (IsClose) {
