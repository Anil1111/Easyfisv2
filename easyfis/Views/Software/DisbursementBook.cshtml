<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Disbursement Book</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Disbursement Book
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpDisbursementBookSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboDisbursementBookDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnDisbursementBookDownloadCSVOnclick()" id="btnDisbursementBookDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnDisbursementBookPrintPDFOnclick()" id="btnDisbursementBookPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ==================
                        Date Range Filters
                        ==================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementBookStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementBookEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementBookCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementBookBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="disbursementBookFlexGrid" class="grid" style="font-size: 12px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="disbursementBookNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementBookMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementBookMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnDisbursementBookCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementBookMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementBookMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Debit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalDebitAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Credit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalCreditAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Balance</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalBalanceAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ===============================
        // Disbursement Date Range Filters
        // ===============================
        var cboDisbursementBookStartDateFilter = new wijmo.input.InputDate('#cboDisbursementBookStartDateFilter');
        var cboDisbursementBookEndDateFilter = new wijmo.input.InputDate('#cboDisbursementBookEndDateFilter');
        var isCboDisbursementBookStartDateFilterSelected = false;
        var isCboDisbursementBookEndDateFilterSelected = false;

        // ==========================
        // Company and Branch Filters
        // ==========================
        var cboDisbursementBookCompanyFilter = new wijmo.input.ComboBox('#cboDisbursementBookCompanyFilter');
        var isCboDisbursementBookCompanyFilterSelected = false;
        var cboDisbursementBookBranchFilter = new wijmo.input.ComboBox('#cboDisbursementBookBranchFilter');

        // ============================
        // Disbursement View, Flex Grid
        // ============================
        var disbursementBookCollectionView;
        var disbursementBookFlexGrid;
        var cboDisbursementBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementBookDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnDisbursementBookMoveToFirstPageGrid = document.getElementById('btnDisbursementBookMoveToFirstPageGrid');
        var btnDisbursementBookMoveToPreviousPageGrid = document.getElementById('btnDisbursementBookMoveToPreviousPageGrid');
        var btnDisbursementBookMoveToNextPageGrid = document.getElementById('btnDisbursementBookMoveToNextPageGrid');
        var btnDisbursementBookMoveToLastPageGrid = document.getElementById('btnDisbursementBookMoveToLastPageGrid');
        var btnDisbursementBookCurrentPageGrid = document.getElementById('btnDisbursementBookCurrentPageGrid');
        var disbursementBookCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // =========================
        // Create Combo Date Filters
        // =========================
        function createCboDisbursementBookDateFilters() {
            NProgress.start();
            cboDisbursementBookStartDateFilter.dispose();
            cboDisbursementBookStartDateFilter = new wijmo.input.InputDate('#cboDisbursementBookStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboDisbursementBookStartDateFilterSelected) {
                        NProgress.start();
                        refreshDisbursementBookFlexGrid();
                    } else {
                        isCboDisbursementBookStartDateFilterSelected = false;
                    }
                }
            });

            cboDisbursementBookEndDateFilter.dispose();
            cboDisbursementBookEndDateFilter = new wijmo.input.InputDate('#cboDisbursementBookEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboDisbursementBookEndDateFilterSelected) {
                        NProgress.start();
                        refreshDisbursementBookFlexGrid();
                    } else {
                        isCboDisbursementBookEndDateFilterSelected = false;
                    }
                }
            });

            createCboDisbursementBookCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboDisbursementBookCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/disbursementBook/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnDisbursementBookDownloadCSV").prop("disabled", true);
                        $("#btnDisbursementBookPrintPDF").prop("disabled", true);
                    }

                    cboDisbursementBookCompanyFilter.dispose();
                    cboDisbursementBookCompanyFilter = new wijmo.input.ComboBox('#cboDisbursementBookCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnDisbursementBookDownloadCSV").prop("disabled", false);
                            $("#btnDisbursementBookPrintPDF").prop("disabled", false);
                            isCboDisbursementBookCompanyFilterSelected = true;
                            createCboDisbursementBookBranchFilter();
                        }
                    });

                    createCboDisbursementBookBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboDisbursementBookBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboDisbursementBookCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/disbursementBook/dropdown/list/branch/' + cboDisbursementBookCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnDisbursementBookDownloadCSV").prop("disabled", true);
                            $("#btnDisbursementBookPrintPDF").prop("disabled", true);
                        }

                        cboDisbursementBookBranchFilter.dispose();
                        cboDisbursementBookBranchFilter = new wijmo.input.ComboBox('#cboDisbursementBookBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshDisbursementBookFlexGrid();
                            }
                        });

                        createCboDisbursementBookDisplayNumberOfRows();
                    }
                });
            }
        }

        // =============================
        // Create Display Number of Rows
        // =============================
        function createCboDisbursementBookDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboDisbursementBookDisplayNumberOfRows.dispose();
            cboDisbursementBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementBookDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboDisbursementBookDisplayNumberOfRows.selectedValue;
                        disbursementBookCollectionView.pageSize = parseInt(numberOfRows);
                        disbursementBookCollectionView.refresh();
                        disbursementBookFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboDisbursementBookCompanyFilterSelected) {
                createDisbursementBookFlexGrid();
            } else {
                refreshDisbursementBookFlexGrid();
            }
        }

        // ==========================
        // Get Disbursement Book Data
        // ==========================
        function getCollecitonBookData() {
            var disbursementBooks = new wijmo.collections.ObservableArray;
            if (cboDisbursementBookCompanyFilter.selectedValue != null) {
                if (cboDisbursementBookBranchFilter.selectedValue != null) {

                    var startDate = cboDisbursementBookStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboDisbursementBookEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboDisbursementBookCompanyFilter.selectedValue;
                    var branchId = cboDisbursementBookBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/DisbursementBook/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {

                            var totalDebit = 0;
                            var totalCredit = 0;
                            var totalBalance = 0;

                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    disbursementBooks.push({
                                        DocumentReference: results[i]["DocumentReference"],
                                        ManualDocumentCode: results[i]["ManualDocumentCode"],
                                        AccountCode: results[i]["AccountCode"],
                                        Account: results[i]["Account"],
                                        Article: results[i]["Article"],
                                        CheckNumber: results[i]["CheckNumber"],
                                        CheckDate: results[i]["CheckDate"],
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        DebitAmount: results[i]["DebitAmount"],
                                        DebitAmountDisplay: parseFloat(results[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        CreditAmount: results[i]["CreditAmount"],
                                        CreditAmountDisplay: parseFloat(results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Balance: results[i]["DebitAmount"] - results[i]["CreditAmount"],
                                        BalanceDisplay: parseFloat(results[i]["DebitAmount"] - results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                    });

                                    totalDebit += results[i]["DebitAmount"];
                                    totalCredit += results[i]["CreditAmount"];
                                    totalBalance += results[i]["DebitAmount"] - results[i]["CreditAmount"];
                                }
                            }

                            document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return disbursementBooks;
        }

        // ==================================
        // Create Disbursement Book Flex Grid
        // ==================================
        function createDisbursementBookFlexGrid() {
            disbursementBookCollectionView = new wijmo.collections.CollectionView(getCollecitonBookData());
            disbursementBookCollectionView.canFilter = true;
            disbursementBookCollectionView.pageSize = cboDisbursementBookDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpDisbursementBookSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementBookCollectionView.refresh();

                if (disbursementBookCollectionView.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;
                    for (var i = 0; i < disbursementBookCollectionView.items.length; i++) {
                        totalDebit += disbursementBookCollectionView.items[i].DebitAmount;
                        totalCredit += disbursementBookCollectionView.items[i].CreditAmount;
                        totalBalance += disbursementBookCollectionView.items[i].Balance;
                    }

                    document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            disbursementBookCollectionView.filter = function (item) {
                return !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ManualDocumentCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.AccountCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementBookCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateDisbursementBookNavigationButtons();
            });

            disbursementBookFlexGrid = new wijmo.grid.FlexGrid('#disbursementBookFlexGrid');
            disbursementBookFlexGrid.initialize({
                columns: [
                    {
                        "header": "Doc Reference",
                        "binding": "DocumentReference",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Manual CV No.",
                        "binding": "ManualDocumentCode",
                        "allowSorting": true,
                        "width": "1.3*"
                    },
                    {
                        "header": "Code",
                        "binding": "AccountCode",
                        "allowSorting": true,
                        "width": "0.5*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Check No.",
                        "binding": "CheckNumber",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Check Date",
                        "binding": "CheckDate",
                        "allowSorting": true,
                        "width": "1.3*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Debit",
                        "binding": "DebitAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Credit",
                        "binding": "CreditAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Balance",
                        "binding": "BalanceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: disbursementBookCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            disbursementBookFlexGrid.trackChanges = true;

            updateDisbursementBookNavigationButtons();

            btnDisbursementBookMoveToFirstPageGrid.addEventListener('click', function () {
                disbursementBookCollectionView.moveToFirstPage();
                disbursementBookCurrentPageIndex = disbursementBookCollectionView.pageIndex + 1;
                updateDisbursementBookNavigationButtons();
            });

            btnDisbursementBookMoveToPreviousPageGrid.addEventListener('click', function () {
                disbursementBookCollectionView.moveToPreviousPage();
                disbursementBookCurrentPageIndex = disbursementBookCollectionView.pageIndex + 1;
                updateDisbursementBookNavigationButtons();
            });

            btnDisbursementBookMoveToNextPageGrid.addEventListener('click', function () {
                disbursementBookCollectionView.moveToNextPage();
                disbursementBookCurrentPageIndex = disbursementBookCollectionView.pageIndex + 1;
                updateDisbursementBookNavigationButtons();
            });

            btnDisbursementBookMoveToLastPageGrid.addEventListener('click', function () {
                disbursementBookCollectionView.moveToLastPage();
                disbursementBookCurrentPageIndex = disbursementBookCollectionView.pageIndex + 1;
                updateDisbursementBookNavigationButtons();
            });
        }

        // ===================================
