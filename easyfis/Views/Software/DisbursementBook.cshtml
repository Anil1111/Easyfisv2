                    }

                    disbursementBook.push({
                        DocumentReference: disbursementBookCollectionView.items[i].DocumentReference,
                        ManualDocumentCode: disbursementBookCollectionView.items[i].ManualDocumentCode,
                        AccountCode: disbursementBookCollectionView.items[i].AccountCode,
                        Account: disbursementBookCollectionView.items[i].Account,
                        Article: disbursementBookCollectionView.items[i].Article,
                        DebitAmount: disbursementBookCollectionView.items[i].DebitAmount,
                        CreditAmount: disbursementBookCollectionView.items[i].CreditAmount,
                        Balance: disbursementBookCollectionView.items[i].Balance,
                    });
                }

                disbursementBookCollectionView.moveToNextPage();
                if (p == disbursementBookCollectionView.pageCount) {
                    disbursementBookCollectionView.moveToPage(disbursementBookCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                DocumentReference: "Document Reference",
                ManualDocumentCode: "Manual CV Number",
                AccountCode: "Account Code",
                Account: "Account",
                Article: "Article",
                DebitAmount: "Debit Amount",
                CreditAmount: "Credit Amount",
                Balance: "Balance",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < disbursementBook.length; i++) {
                var row = '';
                for (var a in disbursementBook[i]) {
                    row += '"' + disbursementBook[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

