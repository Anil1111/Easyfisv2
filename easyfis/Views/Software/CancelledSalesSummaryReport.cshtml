<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Cancelled Sales Summary Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Cancelled Sales Summary Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpCancelledSalesSummaryReportSeacrhFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboCancelledSalesSummaryReportDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button class="btn btn-success" onclick="btnCancelledSalesSummaryReportDownloadCSVOnclick()" id="btnCancelledSalesSummaryReportDownloadCSV"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboCancelledSalesSummaryReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboCancelledSalesSummaryReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboCancelledSalesSummaryReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboCancelledSalesSummaryReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="cancelledSalesSummaryReportFlexGrid" class="grid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="cancelledSalesSummaryReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnCancelledSalesSummaryReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnCancelledSalesSummaryReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCancelledSalesSummaryReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnCancelledSalesSummaryReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnCancelledSalesSummaryReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpCancelledSalesSummaryReportTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ==================
        // Data Range Filters
        // ==================
        var cboCancelledSalesSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboCancelledSalesSummaryReportStartDateFilter');
        var cboCancelledSalesSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboCancelledSalesSummaryReportEndDateFilter');
        var isCboCancelledSalesSummaryReportStartDateFilterSelected = false;
        var isCboCancelledSalesSummaryReportEndDateFilterSelected = false;

        // ==========================
        // Company and Branch Filters
        // ==========================
        var cboCancelledSalesSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboCancelledSalesSummaryReportCompanyFilter');
        var isCboCancelledSalesSummaryReportCompanyFilterSelected = false;
        var cboCancelledSalesSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboCancelledSalesSummaryReportBranchFilter');

        // =============================
        // Collection View and Flex Grid
        // =============================
        var salesSummaryReportCollections;
        var cancelledSalesSummaryReportFlexGrid;
        var cboCancelledSalesSummaryReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboCancelledSalesSummaryReportDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnCancelledSalesSummaryReportMoveToFirstPageGrid = document.getElementById('btnCancelledSalesSummaryReportMoveToFirstPageGrid');
        var btnCancelledSalesSummaryReportMoveToPreviousPageGrid = document.getElementById('btnCancelledSalesSummaryReportMoveToPreviousPageGrid');
        var btnCancelledSalesSummaryReportMoveToNextPageGrid = document.getElementById('btnCancelledSalesSummaryReportMoveToNextPageGrid');
        var btnCancelledSalesSummaryReportMoveToLastPageGrid = document.getElementById('btnCancelledSalesSummaryReportMoveToLastPageGrid');
        var btnCancelledSalesSummaryReportCurrentPageGrid = document.getElementById('btnCancelledSalesSummaryReportCurrentPageGrid');
        var cancelledSalesSummaryReportCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangedFilter() {
            NProgress.start();
            cboCancelledSalesSummaryReportStartDateFilter.dispose();
            cboCancelledSalesSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboCancelledSalesSummaryReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboCancelledSalesSummaryReportStartDateFilterSelected) {
                        NProgress.start();
                        refreshCancelledSalesSummaryReportFlexGrid();
                    } else {
                        isCboCancelledSalesSummaryReportStartDateFilterSelected = false;
                    }
                }
            });

            cboCancelledSalesSummaryReportEndDateFilter.dispose();
            cboCancelledSalesSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboCancelledSalesSummaryReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboCancelledSalesSummaryReportEndDateFilterSelected) {
                        NProgress.start();
                        refreshCancelledSalesSummaryReportFlexGrid();
                    } else {
                        isCboCancelledSalesSummaryReportEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/cancelledSalesSummaryReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnCancelledSalesSummaryReportDownloadCSV").prop("disabled", true);
                        $("#btnCancelledSalesSummaryReportPrintPDF").prop("disabled", true);
                    }

                    cboCancelledSalesSummaryReportCompanyFilter.dispose();
                    cboCancelledSalesSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboCancelledSalesSummaryReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnCancelledSalesSummaryReportDownloadCSV").prop("disabled", false);
                            $("#btnCancelledSalesSummaryReportPrintPDF").prop("disabled", false);
                            isCboCancelledSalesSummaryReportCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();

            if (cboCancelledSalesSummaryReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/cancelledSalesSummaryReport/dropdown/list/branch/' + cboCancelledSalesSummaryReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnCancelledSalesSummaryReportDownloadCSV").prop("disabled", true);
                            $("#btnCancelledSalesSummaryReportPrintPDF").prop("disabled", true);
                        }

                        cboCancelledSalesSummaryReportBranchFilter.dispose();
                        cboCancelledSalesSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboCancelledSalesSummaryReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshCancelledSalesSummaryReportFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboCancelledSalesSummaryReportDisplayNumberOfRows.dispose();
            cboCancelledSalesSummaryReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboCancelledSalesSummaryReportDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboCancelledSalesSummaryReportDisplayNumberOfRows.selectedValue;
                        salesSummaryReportCollections.pageSize = parseInt(numberOfRows);
                        salesSummaryReportCollections.refresh();
                        cancelledSalesSummaryReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboCancelledSalesSummaryReportCompanyFilterSelected) {
                createCancelledSalesSummaryReportFlexGrid();
            } else {
                refreshCancelledSalesSummaryReportFlexGrid();
            }
        }

        // =======================================
        // Get Cancelled Sales Summary Report Data
        // =======================================
        function getCancelledSalesSummaryReportData() {
            var salesSummaryReports = new wijmo.collections.ObservableArray;
            if (cboCancelledSalesSummaryReportCompanyFilter.selectedValue != null) {
                if (cboCancelledSalesSummaryReportBranchFilter.selectedValue != null) {
                    var startDate = cboCancelledSalesSummaryReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboCancelledSalesSummaryReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboCancelledSalesSummaryReportCompanyFilter.selectedValue;
                    var branchId = cboCancelledSalesSummaryReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/cancelledSalesSummaryReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (salesSummaryReportResult) {
                            var inpCancelledSalesSummaryReportTotalAmount = 0;
                            if (salesSummaryReportResult.length > 0) {
                                for (i = 0; i < salesSummaryReportResult.length; i++) {
                                    var docLink = "/Software/SalesDetail?id=" + salesSummaryReportResult[i]["Id"];

                                    var SIDateResult = new Date(salesSummaryReportResult[i]["SIDate"])
                                    var SIDate = ('0' + (SIDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + SIDateResult.getDate()).slice(-2) + '-' + SIDateResult.getFullYear();

                                    salesSummaryReports.push({
                                        Id: salesSummaryReportResult[i]["Id"],
                                        Branch: salesSummaryReportResult[i]["Branch"],
                                        SINumber: salesSummaryReportResult[i]["SINumber"],
                                        SINumberForCSV: "SI-" + salesSummaryReportResult[i]["SINumber"],
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block'><i class='fa fa-edit'></i> Detail</a>",
                                        SINumberButton: salesSummaryReportResult[i]["SINumber"],
                                        SIDate: SIDate,
                                        Customer: salesSummaryReportResult[i]["Customer"],
                                        Remarks: salesSummaryReportResult[i]["Remarks"],
                                        SoldBy: salesSummaryReportResult[i]["SoldBy"],
                                        Amount: salesSummaryReportResult[i]["Amount"],
                                        AmountDisplay: parseFloat(salesSummaryReportResult[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                    });

                                    inpCancelledSalesSummaryReportTotalAmount += salesSummaryReportResult[i]["Amount"];
                                }
                            }

                            document.getElementById("inpCancelledSalesSummaryReportTotalAmount").value = parseFloat(inpCancelledSalesSummaryReportTotalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpCancelledSalesSummaryReportTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpCancelledSalesSummaryReportTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return salesSummaryReports;
        }

        // ===============================================
        // Create Cancelled Sales Summary Report Flex Grid
        // ===============================================
        function createCancelledSalesSummaryReportFlexGrid() {
            salesSummaryReportCollections = new wijmo.collections.CollectionView(getCancelledSalesSummaryReportData());
            salesSummaryReportCollections.canFilter = true;
            salesSummaryReportCollections.pageSize = cboCancelledSalesSummaryReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpCancelledSalesSummaryReportSeacrhFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesSummaryReportCollections.refresh();

                if (salesSummaryReportCollections.items.length > 0) {
                    var inpCancelledSalesSummaryReportTotalAmount = 0;
                    for (var i = 0; i < salesSummaryReportCollections.items.length; i++) {
                        inpCancelledSalesSummaryReportTotalAmount += salesSummaryReportCollections.items[i].Amount;
                    }

                    document.getElementById("inpCancelledSalesSummaryReportTotalAmount").value = parseFloat(inpCancelledSalesSummaryReportTotalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpCancelledSalesSummaryReportTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            salesSummaryReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SoldBy.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Remarks.toLowerCase().indexOf(filterText) > -1);
            }

            salesSummaryReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateCancelledSalesSummaryReportNavigationButton();
            });

            cancelledSalesSummaryReportFlexGrid = new wijmo.grid.FlexGrid('#cancelledSalesSummaryReportFlexGrid');
            cancelledSalesSummaryReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": 70
                    },
                    {
                        "header": "SI Number",
                        "binding": "SINumberButton",
                        "allowSorting": true,
                        "width": 100
                    },
                    {
                        "header": "SI Date ",
                        "binding": "SIDate",
                        "allowSorting": true,
                        "width": 90
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "3*"
                    },
                    {
                        "header": "Remarks",
                        "binding": "Remarks",
                        "allowSorting": true,
                        "width": "3*"
                    },
                    {
                        "header": "Sold By",
                        "binding": "SoldBy",
                        "allowSorting": true,
                        "width": "3*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "2*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: salesSummaryReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            cancelledSalesSummaryReportFlexGrid.trackChanges = true;

            updateCancelledSalesSummaryReportNavigationButton();

            btnCancelledSalesSummaryReportMoveToFirstPageGrid.addEventListener('click', function () {
                salesSummaryReportCollections.moveToFirstPage();
                cancelledSalesSummaryReportCurrentPageIndex = salesSummaryReportCollections.pageIndex + 1;
                updateCancelledSalesSummaryReportNavigationButton();
            });

            btnCancelledSalesSummaryReportMoveToPreviousPageGrid.addEventListener('click', function () {
                salesSummaryReportCollections.moveToPreviousPage();
                cancelledSalesSummaryReportCurrentPageIndex = salesSummaryReportCollections.pageIndex + 1;
                updateCancelledSalesSummaryReportNavigationButton();
            });

            btnCancelledSalesSummaryReportMoveToNextPageGrid.addEventListener('click', function () {
                salesSummaryReportCollections.moveToNextPage();
                cancelledSalesSummaryReportCurrentPageIndex = salesSummaryReportCollections.pageIndex + 1;
                updateCancelledSalesSummaryReportNavigationButton();
            });

            btnCancelledSalesSummaryReportMoveToLastPageGrid.addEventListener('click', function () {
                salesSummaryReportCollections.moveToLastPage();
                cancelledSalesSummaryReportCurrentPageIndex = salesSummaryReportCollections.pageIndex + 1;
                updateCancelledSalesSummaryReportNavigationButton();
            });
        }

        // ========================================================
        // Update Cancelled Sales Summary Report Navigation Buttons
        // ========================================================
        function updateCancelledSalesSummaryReportNavigationButton() {
            if (salesSummaryReportCollections.pageSize <= 0) {
                document.getElementById('cancelledSalesSummaryReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('cancelledSalesSummaryReportNavigationPageGrid').style.display = 'block';
            if (salesSummaryReportCollections.pageIndex === 0) {
                btnCancelledSalesSummaryReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnCancelledSalesSummaryReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnCancelledSalesSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnCancelledSalesSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (salesSummaryReportCollections.pageIndex === (salesSummaryReportCollections.pageCount - 1)) {
                btnCancelledSalesSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnCancelledSalesSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnCancelledSalesSummaryReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnCancelledSalesSummaryReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnCancelledSalesSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnCancelledSalesSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnCancelledSalesSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnCancelledSalesSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnCancelledSalesSummaryReportCurrentPageGrid.innerHTML = (salesSummaryReportCollections.pageIndex + 1) + ' / ' + salesSummaryReportCollections.pageCount;
        }

        // ================================================
        // Refresh Cancelled Sales Summary Report Flex Grid
        // ================================================
        function refreshCancelledSalesSummaryReportFlexGrid() {
            salesSummaryReportCollections = new wijmo.collections.CollectionView(getCancelledSalesSummaryReportData());
            salesSummaryReportCollections.canFilter = true;
            salesSummaryReportCollections.pageSize = cboCancelledSalesSummaryReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpCancelledSalesSummaryReportSeacrhFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesSummaryReportCollections.refresh();

                if (salesSummaryReportCollections.items.length > 0) {
                    var inpCancelledSalesSummaryReportTotalAmount = 0;
                    for (var i = 0; i < salesSummaryReportCollections.items.length; i++) {
                        inpCancelledSalesSummaryReportTotalAmount += salesSummaryReportCollections.items[i].Amount;
                    }

                    document.getElementById("inpCancelledSalesSummaryReportTotalAmount").value = parseFloat(inpCancelledSalesSummaryReportTotalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpCancelledSalesSummaryReportTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            salesSummaryReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SoldBy.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Remarks.toLowerCase().indexOf(filterText) > -1);
            }

            salesSummaryReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateCancelledSalesSummaryReportNavigationButton();
            });

            cancelledSalesSummaryReportFlexGrid.itemsSource = salesSummaryReportCollections;
            cancelledSalesSummaryReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnCancelledSalesSummaryReportDownloadCSVOnclick() {
            var CSV = '';
            var salesSummaryReport = [];
            var fileName = 'CancelledSalesSummaryReport.CSV';

            salesSummaryReportCollections.moveToFirstPage();

            for (var p = 1; p <= salesSummaryReportCollections.pageCount; p++) {
                for (i = 0; i < salesSummaryReportCollections.items.length; i++) {
                    salesSummaryReport.push({
                        Branch: salesSummaryReportCollections.items[i].Branch,
                        SINumber: salesSummaryReportCollections.items[i].SINumberForCSV,
                        SIDate: salesSummaryReportCollections.items[i].SIDate,
                        Customer: salesSummaryReportCollections.items[i].Customer,
                        SoldBy: salesSummaryReportCollections.items[i].SoldBy,
                        Remarks: salesSummaryReportCollections.items[i].Remarks,
                        Amount: salesSummaryReportCollections.items[i].Amount,
                    });
                }

                salesSummaryReportCollections.moveToNextPage();
                if (p == salesSummaryReportCollections.pageCount) {
                    salesSummaryReportCollections.moveToPage(cancelledSalesSummaryReportCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                SINumber: "SI Number",
                SIDate: "SI Date",
                Customer: "Customer",
                SoldBy: "Sold By",
                Remarks: "Remarks",
                Amount: "Amount",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < salesSummaryReport.length; i++) {
                var row = '';
                for (var a in salesSummaryReport[i]) {
                    row += '"' + salesSummaryReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

