<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Stock Transfer Book</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Stock Transfer Book
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpStockTransferBookSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboStockTransferBookDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnStockTransferBookDownloadCSVOnclick()" id="btnStockTransferBookDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnStockTransferBookPrintPDFOnclick()" id="btnStockTransferBookPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ==================
                        Date Range Filters
                        ==================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboStockTransferBookStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboStockTransferBookEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboStockTransferBookCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboStockTransferBookBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="stockTransferBookFlexGrid" class="grid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="stockTransferBookNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnStockTransferBookMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnStockTransferBookMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnStockTransferBookCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnStockTransferBookMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnStockTransferBookMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Debit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalDebitAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Credit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalCreditAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Balance</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalBalanceAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // =============================
        // Collection Date Range Filters
        // =============================
        var cboStockTransferBookStartDateFilter = new wijmo.input.InputDate('#cboStockTransferBookStartDateFilter');
        var cboStockTransferBookEndDateFilter = new wijmo.input.InputDate('#cboStockTransferBookEndDateFilter');
        var isCboStockTransferBookStartDateFilterSelected = false;
        var isCboStockTransferBookEndDateFilterSelected = false;

        // ==========================
        // Company and Branch Filters
        // ==========================
        var cboStockTransferBookCompanyFilter = new wijmo.input.ComboBox('#cboStockTransferBookCompanyFilter');
        var isCboStockTransferBookCompanyFilterSelected = false;
        var cboStockTransferBookBranchFilter = new wijmo.input.ComboBox('#cboStockTransferBookBranchFilter');

        // ==========================
        // Collection View, Flex Grid
        // ==========================
        var stockTransferBookCollections;
        var stockTransferBookFlexGrid;
        var cboStockTransferBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboStockTransferBookDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnStockTransferBookMoveToFirstPageGrid = document.getElementById('btnStockTransferBookMoveToFirstPageGrid');
        var btnStockTransferBookMoveToPreviousPageGrid = document.getElementById('btnStockTransferBookMoveToPreviousPageGrid');
        var btnStockTransferBookMoveToNextPageGrid = document.getElementById('btnStockTransferBookMoveToNextPageGrid');
        var btnStockTransferBookMoveToLastPageGrid = document.getElementById('btnStockTransferBookMoveToLastPageGrid');
        var btnStockTransferBookCurrentPageGrid = document.getElementById('btnStockTransferBookCurrentPageGrid');
        var stockTransferBookCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // =========================
        // Create Combo Date Filters
        // =========================
        function createCboStockTransferBookDateFilters() {
            NProgress.start();
            cboStockTransferBookStartDateFilter.dispose();
            cboStockTransferBookStartDateFilter = new wijmo.input.InputDate('#cboStockTransferBookStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboStockTransferBookStartDateFilterSelected) {
                        NProgress.start();
                        refreshStockTransferBookFlexGrid();
                    } else {
                        isCboStockTransferBookStartDateFilterSelected = false;
                    }
                }
            });

            cboStockTransferBookEndDateFilter.dispose();
            cboStockTransferBookEndDateFilter = new wijmo.input.InputDate('#cboStockTransferBookEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboStockTransferBookEndDateFilterSelected) {
                        NProgress.start();
                        refreshStockTransferBookFlexGrid();
                    } else {
                        isCboStockTransferBookEndDateFilterSelected = false;
                    }
                }
            });

            createCboStockTransferBookCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboStockTransferBookCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/stockTransferBook/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnStockTransferBookDownloadCSV").prop("disabled", true);
                        $("#btnStockTransferBookPrintPDF").prop("disabled", true);
                    }

                    cboStockTransferBookCompanyFilter.dispose();
                    cboStockTransferBookCompanyFilter = new wijmo.input.ComboBox('#cboStockTransferBookCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnStockTransferBookDownloadCSV").prop("disabled", false);
                            $("#btnStockTransferBookPrintPDF").prop("disabled", false);
                            isCboStockTransferBookCompanyFilterSelected = true;
                            createCboStockTransferBookBranchFilter();
                        }
                    });

                    createCboStockTransferBookBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboStockTransferBookBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboStockTransferBookCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/stockTransferBook/dropdown/list/branch/' + cboStockTransferBookCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnStockTransferBookDownloadCSV").prop("disabled", true);
                            $("#btnStockTransferBookPrintPDF").prop("disabled", true);
                        }

                        cboStockTransferBookBranchFilter.dispose();
                        cboStockTransferBookBranchFilter = new wijmo.input.ComboBox('#cboStockTransferBookBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshStockTransferBookFlexGrid();
                            }
                        });

                        createCboStockTransferBookDisplayNumberOfRows();
                    }
                });
            }
        }

        // =============================
        // Create Display Number of Rows
        // =============================
        function createCboStockTransferBookDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboStockTransferBookDisplayNumberOfRows.dispose();
            cboStockTransferBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboStockTransferBookDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboStockTransferBookDisplayNumberOfRows.selectedValue;
                        stockTransferBookCollections.pageSize = parseInt(numberOfRows);
                        stockTransferBookCollections.refresh();
                        stockTransferBookFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboStockTransferBookCompanyFilterSelected) {
                createStockTransferBookFlexGrid();
            } else {
                refreshStockTransferBookFlexGrid();
            }
        }

        // ============================
        // Get Stock Transfer Book Data
        // ============================
        function getCollecitonBookData() {
            var stockTransferBooks = new wijmo.collections.ObservableArray;
            if (cboStockTransferBookCompanyFilter.selectedValue != null) {
                if (cboStockTransferBookBranchFilter.selectedValue != null) {

                    var startDate = cboStockTransferBookStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboStockTransferBookEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboStockTransferBookCompanyFilter.selectedValue;
                    var branchId = cboStockTransferBookBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/stockTransferBook/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {

                            var totalDebit = 0;
                            var totalCredit = 0;
                            var totalBalance = 0;

                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    stockTransferBooks.push({
                                        DocumentReference: results[i]["DocumentReference"],
                                        ManualDocumentCode: results[i]["ManualDocumentCode"],
                                        AccountCode: results[i]["AccountCode"],
                                        Account: results[i]["Account"],
                                        Article: results[i]["Article"],
                                        DebitAmount: results[i]["DebitAmount"],
                                        DebitAmountDisplay: parseFloat(results[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        CreditAmount: results[i]["CreditAmount"],
                                        CreditAmountDisplay: parseFloat(results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Balance: results[i]["DebitAmount"] - results[i]["CreditAmount"],
                                        BalanceDisplay: parseFloat(results[i]["DebitAmount"] - results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                    });

                                    totalDebit += results[i]["DebitAmount"];
                                    totalCredit += results[i]["CreditAmount"];
                                    totalBalance += results[i]["DebitAmount"] - results[i]["CreditAmount"];
                                }
                            }

                            document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return stockTransferBooks;
        }

        // ====================================
        // Create Stock Transfer Book Flex Grid
        // ====================================
        function createStockTransferBookFlexGrid() {
            stockTransferBookCollections = new wijmo.collections.CollectionView(getCollecitonBookData());
            stockTransferBookCollections.canFilter = true;
            stockTransferBookCollections.pageSize = cboStockTransferBookDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpStockTransferBookSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                stockTransferBookCollections.refresh();

                if (stockTransferBookCollections.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;
                    for (var i = 0; i < stockTransferBookCollections.items.length; i++) {
                        totalDebit += stockTransferBookCollections.items[i].DebitAmount;
                        totalCredit += stockTransferBookCollections.items[i].CreditAmount;
                        totalBalance += stockTransferBookCollections.items[i].Balance;
                    }

                    document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            stockTransferBookCollections.filter = function (item) {
                return !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ManualDocumentCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.AccountCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1);
            }

            stockTransferBookCollections.collectionChanged.addHandler(function (sender, args) {
                updateStockTransferBookNavigationButtons();
            });

            stockTransferBookFlexGrid = new wijmo.grid.FlexGrid('#stockTransferBookFlexGrid');
            stockTransferBookFlexGrid.initialize({
                columns: [
                    {
                        "header": "Doc Reference",
                        "binding": "DocumentReference",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Manual ST No.",
                        "binding": "ManualDocumentCode",
                        "allowSorting": true,
                        "width": "1.3*"
                    },
                    {
                        "header": "Code",
                        "binding": "AccountCode",
                        "allowSorting": true,
                        "width": "0.5*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Debit",
                        "binding": "DebitAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Credit",
                        "binding": "CreditAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Balance",
                        "binding": "BalanceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: stockTransferBookCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            stockTransferBookFlexGrid.trackChanges = true;

            updateStockTransferBookNavigationButtons();

            btnStockTransferBookMoveToFirstPageGrid.addEventListener('click', function () {
                stockTransferBookCollections.moveToFirstPage();
                stockTransferBookCurrentPageIndex = stockTransferBookCollections.pageIndex + 1;
                updateStockTransferBookNavigationButtons();
            });

            btnStockTransferBookMoveToPreviousPageGrid.addEventListener('click', function () {
                stockTransferBookCollections.moveToPreviousPage();
                stockTransferBookCurrentPageIndex = stockTransferBookCollections.pageIndex + 1;
                updateStockTransferBookNavigationButtons();
            });

            btnStockTransferBookMoveToNextPageGrid.addEventListener('click', function () {
                stockTransferBookCollections.moveToNextPage();
                stockTransferBookCurrentPageIndex = stockTransferBookCollections.pageIndex + 1;
                updateStockTransferBookNavigationButtons();
            });

            btnStockTransferBookMoveToLastPageGrid.addEventListener('click', function () {
                stockTransferBookCollections.moveToLastPage();
                stockTransferBookCurrentPageIndex = stockTransferBookCollections.pageIndex + 1;
                updateStockTransferBookNavigationButtons();
            });
        }

        // =====================================
        // Refresh Stock Transfer Book Flex Grid
        // =====================================
        function refreshStockTransferBookFlexGrid() {
            stockTransferBookCollections = new wijmo.collections.CollectionView(getCollecitonBookData());
            stockTransferBookCollections.canFilter = true;
            stockTransferBookCollections.pageSize = cboStockTransferBookDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpStockTransferBookSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                stockTransferBookCollections.refresh();

                if (stockTransferBookCollections.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;
                    for (var i = 0; i < stockTransferBookCollections.items.length; i++) {
                        totalDebit += stockTransferBookCollections.items[i].DebitAmount;
                        totalCredit += stockTransferBookCollections.items[i].CreditAmount;
                        totalBalance += stockTransferBookCollections.items[i].Balance;
                    }

                    document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
