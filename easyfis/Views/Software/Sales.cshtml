<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <title>Sales Invoice</title>

    <!-- CSS StyleSheets-->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Sales Invoice
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 59%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 40%" align="right">
                                    <button class="btn btn-primary " id="btnAddSales" onclick="btnAddSales_OnClick()"><i class="fa fa-plus"></i> Add</button>
                                    <button class="btn btn-danger " id="btnCloseSales" onclick="btnCloseSales_OnClick()"><i class=" fa fa-times"></i> Close</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 29%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div id="cboStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 29%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div id="cboEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 41%"></td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="salesFlexGrid" class="grid" align="left"></div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    <!-- Sales Delete Modal -->
    <div class="modal fade" id="deleteSalesConfirm" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete</h4>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this sales invoice?
                </div>
                <div class="modal-footer">
                    <button id="cmdConfirmDeleteSales" class="btn btn-danger" onclick="cmdSalesConfirmDeleteButton_OnClick()"><i class="fa fa-trash"></i> Delete</button>
                    <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var salesCollectionView;
        var salesFlexGrid;
        var btnFirstPageGrid;
        var btnPreviousPageGrid;
        var btnNextPageGrid;
        var btnLastPageGrid;
        var btnCurrentPageGrid;
        var cboStartDateFilter = new wijmo.input.InputDate('#cboStartDateFilter');
        var cboEndDateFilter = new wijmo.input.InputDate('#cboEndDateFilter');
        var isStartDateFirstSelect = true;
        var isEndDateFirstSelect = true;

        // ===========
        // Date Filter
        // ===========
        function cboDateFilters() {
            cboStartDateFilter.dispose();
            cboStartDateFilter = new wijmo.input.InputDate('#cboStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(),
                onValueChanged: function () {
                    if (!isStartDateFirstSelect) {
                        refreshSalesFlexGrid();
                    } else {
                        isStartDateFirstSelect = false;
                    }
                }
            });

            cboEndDateFilter.dispose();
            cboEndDateFilter = new wijmo.input.InputDate('#cboEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(),
                onValueChanged: function () {
                    if (!isEndDateFirstSelect) {
                        refreshSalesFlexGrid();
                    } else {
                        isEndDateFirstSelect = false;
                    }
                }
            });
        }

        // ==========================
        // GET Sales Filter By SIDate
        // ==========================
        function getSalesFilterBySIDate() {
            NProgress.start();
            var startDate = cboStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
            var endDate = cboEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');

            var salesObservableArray = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/listSalesInvoiceFilterBySIDate/' + startDate + '/' + endDate,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {

                            var canDelete = "@ViewData["CanDelete"]";
                            var deleteDisabled = "";
                            if (canDelete == "False") {
                                deleteDisabled = "disabled";
                            }

                            var canEdit = "@ViewData["CanEdit"]";
                            var editDisabled = "";
                            if (canEdit == "False") {
                                editDisabled = "disabled";
                            }

                            salesObservableArray.push({
                                EditId: "<button class='btn btn-primary btn-xs btn-block' id='salesEditButton' onclick='cmdSalesEditButton_OnClick()' " + editDisabled + "><i class='fa fa-edit'></i> Edit</button>",
                                DeleteId: "<button class='btn btn-danger btn-xs btn-block' onclick='cmdSalesDeleteButton_OnClick()' " + deleteDisabled + "><i class='fa fa-trash'></i> Delete</button>",
                                Id: Results[i]["Id"],
                                BranchId: Results[i]["BranchId"],
                                Branch: Results[i]["Branch"],
                                SINumber: Results[i]["SINumber"],
                                SIDate: Results[i]["SIDate"],
                                CustomerId: Results[i]["CustomerId"],
                                Customer: Results[i]["Customer"],
                                TermId: Results[i]["TermId"],
                                Term: Results[i]["Term"],
                                DocumentReference: Results[i]["DocumentReference"],
                                ManualSINumber: Results[i]["ManualSINumber"],
                                Remarks: Results[i]["Remarks"],
                                Amount: Results[i]["Amount"],
                                PaidAmount: Results[i]["PaidAmount"],
                                AdjustmentAmount: Results[i]["AdjustmentAmount"],
                                BalanceAmount: Results[i]["BalanceAmount"],
                                SoldById: Results[i]["SoldById"],
                                SoldBy: Results[i]["SoldBy"],
                                PreparedById: Results[i]["PreparedById"],
                                PreparedBy: Results[i]["PreparedBy"],
                                CheckedById: Results[i]["CheckedById"],
                                CheckedBy: Results[i]["CheckedBy"],
                                ApprovedById: Results[i]["ApprovedById"],
                                ApprovedBy: Results[i]["ApprovedBy"],
                                IsLocked: Results[i]["IsLocked"],
                                CreatedById: Results[i]["CreatedById"],
                                CreatedBy: Results[i]["CreatedBy"],
                                CreatedDateTime: Results[i]["CreatedDateTime"],
                                UpdatedById: Results[i]["UpdatedById"],
                                UpdatedBy: Results[i]["UpdatedBy"],
                                UpdatedDateTime: Results[i]["UpdatedDateTime"]
                            });
                        }
                    }

                    NProgress.done();
                }
            });

            return salesObservableArray;
        }

        // ================
        // Sales Add Button
        // ================
        function btnAddSales_OnClick() {
            document.getElementById('btnAddSales').innerHTML = "<i class='fa fa-spinner fa-spin'></i> Adding";
            $('#btnAddSales').prop('disabled', true);
            $('#btnCloseSales').prop('disabled', true);

            var canAccessToDetailPage = "@ViewData["CanAccessToDetailPage"]";
            if (canAccessToDetailPage == "True") {
                $.ajax({
                    type: "POST",
                    url: '/api/addSales',
                    contentType: "application/json; charset=utf-8",
                    success: function (id) {
                        if (id > 0) {
                            window.location = '/Software/SalesDetail?SalesId=' + id;
                        } else {
                            toastr.error("Internal Server Error");
                            document.getElementById('btnAddSales').innerHTML = "<i class='fa fa-plus'></i> Add";
                            $('#btnAddSales').prop('disabled', false);
                            $('#btnCloseSales').prop('disabled', false);
                        }
                    }
                });
            } else {
                if (canAccessToDetailPage == "False") {
                    window.location = '/Software/Forbidden';
                }
            }
        }

        // =================
        // Sales Edit Button
        // =================
        function cmdSalesEditButton_OnClick() {
            salesCollectionView.editItem(salesCollectionView.currentItem);
            var sale = salesCollectionView.currentEditItem;
            var saleId = sale.Id;
            window.location = '/Software/SalesDetail?SalesId=' + saleId;
        }

        // ==================
        // Sales Close Button
        // ==================
        function btnCloseSales_OnClick() {
            window.location = '/Software';
        }

        // ===================
        // Sales delete Button
        // ===================
        function cmdSalesDeleteButton_OnClick() {
            salesCollectionView.editItem(salesCollectionView.currentItem);
            var sale = salesCollectionView.currentEditItem;
            if (sale.IsLocked) {
                toastr.error("Delete is not allowed when the selected record is locked!");
            } else {
                $('#deleteSalesConfirm').modal({
                    show: true,
                    backdrop: 'static'
                });

                document.getElementById('cmdConfirmDeleteSales').innerHTML = "<i class='fa fa-trash'></i> Delete";
                $("#cmdConfirmDeleteSales").prop("disabled", false);
                $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
            }
        }

        // Sales Confirm Delete Button
        function cmdSalesConfirmDeleteButton_OnClick() {
            document.getElementById('cmdConfirmDeleteSales').innerHTML = "<i class='fa fa-spinner fa-spin'></i> Deleting";
            $("#cmdConfirmDeleteSales").prop("disabled", true);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

            salesCollectionView.editItem(salesCollectionView.currentItem);
            var id = salesCollectionView.currentEditItem.Id;
            $.ajax({
                url: '/api/deleteSales/' + id,
                type: "DELETE",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        toastr.success("Delete Successful");
                        $('#deleteSalesConfirm').modal('hide');
                        refreshSalesFlexGrid();
                    },
                    404: function () {
                        toastr.error("Not Found");
                        $('#deleteSalesConfirm').modal('hide');
                        document.getElementById('cmdConfirmDeleteSales').innerHTML = "<i class='fa fa-trash'></i> Delete";
                        $("#cmdConfirmDeleteSales").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Bad Request");
                        $('#deleteSalesConfirm').modal('hide');
                        document.getElementById('cmdConfirmDeleteSales').innerHTML = "<i class='fa fa-trash'></i> Delete";
                        $("#cmdConfirmDeleteSales").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    }
                }
            });
        }

        // ===================
        // FlexGrid Selection
        // ===================
        function updateDetails() {
            var item = salesCollectionView.currentItem;
            document.getElementById('createdBy').innerHTML = item.CreatedBy;
            document.getElementById('createdDate').innerHTML = item.CreatedDateTime;
            document.getElementById('updatedBy').innerHTML = item.UpdatedBy;
            document.getElementById('updatedDate').innerHTML = item.UpdatedDateTime;
        }

        // ============================
        // Navigation Buttons for Sales
        // ============================
        function updateNavigateButtonsSales() {
            if (salesCollectionView.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (salesCollectionView.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (salesCollectionView.pageIndex === (salesCollectionView.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (salesCollectionView.pageIndex + 1) + ' / ' + salesCollectionView.pageCount;
        }

        // ======================
        // Refresh Sales FlexGrid
        // ======================
        function refreshSalesFlexGrid() {
            salesCollectionView = new wijmo.collections.CollectionView(getSalesFilterBySIDate());
            salesCollectionView.canFilter = true;
            salesCollectionView.pageSize = 15;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesCollectionView.refresh();
            });

            salesCollectionView.filter = function (item) {
                return !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1);
            }

            salesCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsSales();
            });

            salesCollectionView.currentChanged.addHandler(function (sender, args) {
                updateDetails();
            });

            // Flex Grid
            salesFlexGrid.itemsSource = salesCollectionView;
            salesFlexGrid.trackChanges = true;
        }

        // ==============
        // Sales FlexGrid
        // ==============
        function createSalesFlexGrid() {
            salesCollectionView = new wijmo.collections.CollectionView(getSalesFilterBySIDate());
            salesCollectionView.canFilter = true;
            salesCollectionView.pageSize = 15;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesCollectionView.refresh();
            });

            salesCollectionView.filter = function (item) {
                return !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                                   || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                                   || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                                   || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1);
            }

            salesCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsSales();
            });

            salesCollectionView.currentChanged.addHandler(function (sender, args) {
                updateDetails();
            });

            // Flex Grid
            salesFlexGrid = new wijmo.grid.FlexGrid('#salesFlexGrid');
            salesFlexGrid.initialize({
                columns: [
                            {
                                "header": "Edit",
                                "binding": "EditId",
                                "width": 70,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteId",
                                "width": 70,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "SI Number",
                                "binding": "SINumber",
                                "allowSorting": true,
                                "width": "1.5*"
                            },
                            {
                                "header": "SI Date",
                                "binding": "SIDate",
                                "allowSorting": true,
                                "width": "1.5*"
                            },
                            {
                                "header": "Branch",
                                "binding": "Branch",
                                "allowSorting": true,
                                "width": "2.5*"
                            },
                            {
                                "header": "Customer",
                                "binding": "Customer",
                                "allowSorting": true,
                                "width": "3*"
                            },
                            {
                                "header": "Doc Reference",
                                "binding": "DocumentReference",
                                "allowSorting": true,
                                "width": "2*"
                            },
                            {
                                "header": "Amount",
                                "binding": "Amount",
                                "allowSorting": true,
                                "width": "2*"
                            },
                            {
                                "header": "L",
                                "binding": "IsLocked",
                                "allowSorting": true,
                                "width": 50
                            }
                ],
                autoGenerateColumns: false,
                itemsSource: salesCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesFlexGrid.trackChanges = true;

            btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
            btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
            btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
            btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
            btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

            updateNavigateButtonsSales();

            btnFirstPageGrid.addEventListener('click', function () {
                salesCollectionView.moveToFirstPage();
                updateNavigateButtonsSales();
            });

            btnPreviousPageGrid.addEventListener('click', function () {
                salesCollectionView.moveToPreviousPage();
                updateNavigateButtonsSales();
            });

            btnNextPageGrid.addEventListener('click', function () {
                salesCollectionView.moveToNextPage();
                updateNavigateButtonsSales();
            });

            btnLastPageGrid.addEventListener('click', function () {
                salesCollectionView.moveToLastPage();
                updateNavigateButtonsSales();
            });

            var canAdd = "@ViewData["CanAdd"]";
            if (canAdd == "False") {
                $("#btnAddSales").prop("disabled", true);
            }
        }

        // ===========
        // Onload Page
        // ===========
        $(document).ready(function () {
            cboDateFilters();
            createSalesFlexGrid();
        });
    </script>
    <script type="text/javascript">
        var cboUserBranches = new wijmo.input.ComboBox('#cboUserBranches');
        function getUserBranches() {
            $("#loadingUserBranches").show();
            document.getElementById("loadingUserBranches").innerHTML = '<i class="fa fa-spinner fa-spin"></i>';
            $("#userBranchContent").hide();

            $('#userBranchesModal').modal({ show: true, backdrop: 'static' });

            document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-save fa-fw'></i> Update";
            $("#updateUserBranch").prop("disabled", false);
            $("#closeUserBranch").prop("disabled", false);

            var userBranchesObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/userBranch/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (userBranchesResults) {
                    if (userBranchesResults.length > 0) {
                        for (i = 0; i < userBranchesResults.length; i++) {
                            userBranchesObservableArray.push({
                                BranchId: userBranchesResults[i]["BranchId"],
                                Branch: userBranchesResults[i]["Branch"]
                            });
                        }
                    }

                    var currentBranch = "@ViewData["BranchId"]";
                    cboUserBranches.dispose();
                    cboUserBranches = new wijmo.input.ComboBox('#cboUserBranches', {
                        isEditable: false,
                        placeholder: "Select Branches",
                        itemsSource: userBranchesObservableArray,
                        displayMemberPath: "Branch",
                        selectedValuePath: "BranchId",
                        selectedValue: currentBranch
                    });

                    setTimeout(function () {
                        $("#loadingUserBranches").hide();
                        $("#userBranchContent").show();
                    }, 500)
                }
            });
        }

        function updateUserBranchOnclick() {
            document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-spinner fa-spin'></i> Updating";
            $("#updateUserBranch").prop("disabled", true);
            $("#closeUserBranch").prop("disabled", true);

            var userBranchObject = new Object();
            userBranchObject.BranchId = cboUserBranches.selectedValue;
            var userBranchData = JSON.stringify(userBranchObject);

            $.ajax({
                type: "PUT",
                url: '/api/userBranch/update',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: userBranchData,
                statusCode: {
                    200: function () {
                        toastr.success("Update Successful");
                        window.setTimeout(function () {
                            location.reload()
                        }, 1000);
                    },
                    404: function () {
                        toastr.error("Not Found");
                        document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-save fa-fw'></i> Update";
                        $("#updateUserBranch").prop("disabled", false);
                        $("#closeUserBranch").prop("disabled", false);
                    },
                    500: function () {
                        toastr.error("Bad Request");
                        document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-save fa-fw'></i> Update";
                        $("#updateUserBranch").prop("disabled", false);
                        $("#closeUserBranch").prop("disabled", false);
                    }
                }
            });
        }
    </script>
    <script type="text/javascript">
        var slideLeft = new Menu({
            wrapper: '#o-wrapper',
            type: 'slide-left',
            menuOpenerClass: '.c-button',
            maskId: '#c-mask'
        });

        var slideLeftBtn = document.querySelector('#c-button--slide-left');

        slideLeftBtn.addEventListener('click', function (e) {
            e.preventDefault;
            slideLeft.open();
        });
    </script>
</body>
</html>