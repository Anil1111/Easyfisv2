<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <title>Sales</title>

    <!-- CSS StyleSheets-->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    @Styles.Render("~/Content/Software-css")
</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_SoftwareHeader")
        @Html.Partial("_SoftwareSideBarMenu")

        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Sales
                    <small><i class="fa fa-building"></i> @ViewData["Company"] / @ViewData["Branch"]</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Software"> Dashboard</a></li>
                    <li> Sales </li>
                </ol>
            </section>

            <section class="content">
                <div class="box box-default">
                    <div class="box-header">

                    </div>
                    <div class="box-body">
                        <!-- Sales List -->
                        <div id="salesList">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control input-sm" id="InputFilter" placeholder="Search">
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div id="filterDate"></div>
                                    <input type="hidden" id="filterDate_data" />
                                </div>
                                <div class="col-lg-6" align="right">
                                    <button class="btn btn-primary btn-sm" onclick="btnAddSales_OnClick()"><i class="fa fa-plus"></i> Add</button>
                                    <button class="btn btn-danger btn-sm" onclick="btnCloseSales_OnClick()"><i class=" fa fa-times"></i> Close</button>
                                </div>
                            </div>
                            <br />
                            <div class="row" align="left">
                                <div class="col-lg-12">
                                    <div id="SalesGrid" class="grid" align="left"></div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                    <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                        <span class="glyphicon glyphicon-fast-backward"></span>
                                    </button>
                                    <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                        <span class="glyphicon glyphicon-step-backward"></span>
                                    </button>
                                    <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                    <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                        <span class="glyphicon glyphicon-step-forward"></span>
                                    </button>
                                    <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                        <span class="glyphicon glyphicon-fast-forward"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        @Html.Partial("_SoftwareFooter")
    </div>

    <!-- Sales Delete -->
    <div class="modal fade" id="deleteSalesConfirm" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Sale <i class="fa fa-trash"></i></h4>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger btn-sm" id="cmdConfirmDeleteSales" onclick="cmdSalesConfirmDeleteButton_OnClick()"><i class="fa fa-trash"></i> Delete</button>
                    <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary btn-sm" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Lock -->
    <div class="modal fade" id="deleteRecordLock" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Record Locked <i class="fa fa-lock"></i></h4>
                </div>
                <div class="modal-body">
                    Sorry, the record is lock! It can't be deleted!
                </div>
                <div class="modal-footer">
                    <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary btn-sm" data-dismiss="modal"> Okay</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var sales;
        var salesGrid;
        var btnFirstPageGrid;
        var btnPreviousPageGrid;
        var btnNextPageGrid;
        var btnLastPageGrid;
        var btnCurrentPageGrid;

        var isFirstSelect = true;

        // ==========================
        // GET Sales Filter By SIDate
        // ==========================
        function getSalesFilterBySIDate(SIDateFilter) {
            var sales = new wijmo.collections.ObservableArray;
            NProgress.start();
            $.ajax({
                url: '/api/listSalesInvoiceFilterBySIDate/' + SIDateFilter,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            if (Results[i]["IsLocked"] == true) {
                                sales.push({
                                    EditId: "<button class='btn btn-primary btn-xs btn-block' id='salesEditButton' onclick='cmdSalesEditButton_OnClick()'><i class='fa fa-edit'></i> Edit</button>",
                                    DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='salesDeleteButton' onclick='cmdSalesDeleteLockButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                    Id: Results[i]["Id"],
                                    BranchId: Results[i]["BranchId"],
                                    Branch: Results[i]["Branch"],
                                    SINumber: Results[i]["SINumber"],
                                    SIDate: Results[i]["SIDate"],
                                    CustomerId: Results[i]["CustomerId"],
                                    Customer: Results[i]["Customer"],
                                    TermId: Results[i]["TermId"],
                                    Term: Results[i]["Term"],
                                    DocumentReference: Results[i]["DocumentReference"],
                                    ManualSINumber: Results[i]["ManualSINumber"],
                                    Remarks: Results[i]["Remarks"],
                                    Amount: Results[i]["Amount"],
                                    PaidAmount: Results[i]["PaidAmount"],
                                    AdjustmentAmount: Results[i]["AdjustmentAmount"],
                                    BalanceAmount: Results[i]["BalanceAmount"],
                                    SoldById: Results[i]["SoldById"],
                                    SoldBy: Results[i]["SoldBy"],
                                    PreparedById: Results[i]["PreparedById"],
                                    PreparedBy: Results[i]["PreparedBy"],
                                    CheckedById: Results[i]["CheckedById"],
                                    CheckedBy: Results[i]["CheckedBy"],
                                    ApprovedById: Results[i]["ApprovedById"],
                                    ApprovedBy: Results[i]["ApprovedBy"],
                                    IsLocked: Results[i]["IsLocked"],
                                    CreatedById: Results[i]["CreatedById"],
                                    CreatedBy: Results[i]["CreatedBy"],
                                    CreatedDateTime: Results[i]["CreatedDateTime"],
                                    UpdatedById: Results[i]["UpdatedById"],
                                    UpdatedBy: Results[i]["UpdatedBy"],
                                    UpdatedDateTime: Results[i]["UpdatedDateTime"]
                                });
                            } else {
                                sales.push({
                                    EditId: "<button class='btn btn-primary btn-xs btn-block' id='salesEditButton' onclick='cmdSalesEditButton_OnClick()'><i class='fa fa-edit'></i> Edit</button>",
                                    DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='salesDeleteButton' onclick='cmdSalesDeleteButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                    Id: Results[i]["Id"],
                                    BranchId: Results[i]["BranchId"],
                                    Branch: Results[i]["Branch"],
                                    SINumber: Results[i]["SINumber"],
                                    SIDate: Results[i]["SIDate"],
                                    CustomerId: Results[i]["CustomerId"],
                                    Customer: Results[i]["Customer"],
                                    TermId: Results[i]["TermId"],
                                    Term: Results[i]["Term"],
                                    DocumentReference: Results[i]["DocumentReference"],
                                    ManualSINumber: Results[i]["ManualSINumber"],
                                    Remarks: Results[i]["Remarks"],
                                    Amount: Results[i]["Amount"],
                                    PaidAmount: Results[i]["PaidAmount"],
                                    AdjustmentAmount: Results[i]["AdjustmentAmount"],
                                    BalanceAmount: Results[i]["BalanceAmount"],
                                    SoldById: Results[i]["SoldById"],
                                    SoldBy: Results[i]["SoldBy"],
                                    PreparedById: Results[i]["PreparedById"],
                                    PreparedBy: Results[i]["PreparedBy"],
                                    CheckedById: Results[i]["CheckedById"],
                                    CheckedBy: Results[i]["CheckedBy"],
                                    ApprovedById: Results[i]["ApprovedById"],
                                    ApprovedBy: Results[i]["ApprovedBy"],
                                    IsLocked: Results[i]["IsLocked"],
                                    CreatedById: Results[i]["CreatedById"],
                                    CreatedBy: Results[i]["CreatedBy"],
                                    CreatedDateTime: Results[i]["CreatedDateTime"],
                                    UpdatedById: Results[i]["UpdatedById"],
                                    UpdatedBy: Results[i]["UpdatedBy"],
                                    UpdatedDateTime: Results[i]["UpdatedDateTime"]
                                });
                            }
                        }
                    }
                    NProgress.done();
                }
            }).fail(function (xhr, textStatus, err) {
                alert(err);
            });
            return sales;
        }

        // ========================
        // Sales Delete Lock Button
        // ========================
        function cmdSalesDeleteLockButton_OnClick() {
            $('#deleteRecordLock').modal({
                show: true,
                backdrop: 'static'
            });
        }

        // ================
        // Sales Add Button
        // ================
        function btnAddSales_OnClick() {
            window.location = '/Software/SalesDetail';
        }

        // =================
        // Sales Edit Button
        // =================
        function cmdSalesEditButton_OnClick() {
            sales.editItem(sales.currentItem);
            var sale = sales.currentEditItem;
            var saleId = sale.Id;
            window.location = '/Software/SalesDetail?SalesId=' + saleId;
        }

        // ==================
        // Sales Close Button
        // ==================
        function btnCloseSales_OnClick() {
            window.location = '/Software';
        }

        // ===================
        // Sales delete Button
        // ===================
        function cmdSalesDeleteButton_OnClick() {
            $('#deleteSalesConfirm').modal({
                show: true,
                backdrop: 'static'
            });

            $("#cmdConfirmDeleteSales").prop("disabled", false);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
        }
        // Sales Confirm Delete Button
        function cmdSalesConfirmDeleteButton_OnClick() {
            $("#cmdConfirmDeleteSales").prop("disabled", true);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

            sales.editItem(sales.currentItem);
            var id = sales.currentEditItem.Id;
            $.ajax({
                url: '/api/deleteSales/' + id,
                type: "DELETE",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        $("#cmdConfirmDeleteSales").prop("disabled", true);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                        toastr.success("Successfully Deleted");

                        $('#deleteSalesConfirm').modal('hide');

                        var SIDateFilter = document.getElementById('filterDate_data').value;
                        sales = new wijmo.collections.CollectionView(getSalesFilterBySIDate(SIDateFilter));
                        sales.canFilter = true;
                        sales.pageSize = 15;

                        var filterText = '';
                        $('#InputFilter').keyup(function () {
                            filterText = this.value.toLowerCase();
                            sales.refresh();
                        });
                        sales.filter = function (item) {
                            return !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1);
                        }
                        sales.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsSales();
                        });
                        sales.currentChanged.addHandler(function (sender, args) {
                            updateDetails();
                        });

                        salesGrid.itemsSource = sales;
                        salesGrid.trackChanges = true;
                    },
                    404: function () {
                        toastr.error("Request Not Found");
                        $('#deleteSalesConfirm').modal('hide');
                        $("#cmdConfirmDeleteSales").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Can't be deleted");
                        $('#deleteSalesConfirm').modal('hide');
                        $("#cmdConfirmDeleteSales").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    }
                }
            });
        }

        // ===================
        // FlexGrid Selection
        // ===================
        function updateDetails() {
            var item = sales.currentItem;
            document.getElementById('createdBy').innerHTML = item.CreatedBy;
            document.getElementById('createdDate').innerHTML = item.CreatedDateTime;
            document.getElementById('updatedBy').innerHTML = item.UpdatedBy;
            document.getElementById('updatedDate').innerHTML = item.UpdatedDateTime;
        }

        // ============================
        // Navigation Buttons for Sales
        // ============================
        function updateNavigateButtonsSales() {
            if (sales.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (sales.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (sales.pageIndex === (sales.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (sales.pageIndex + 1) + ' / ' + sales.pageCount;
        }

        // ===========
        // Onload Page
        // ===========
        $(document).ready(function () {
            var userId = '@ViewData["UserId"]';
            rightsAccessValidation(userId);

            var SIDateFilter_Date = new Date();
            document.getElementById("filterDate_data").value = [SIDateFilter_Date.getMonth() + 1, SIDateFilter_Date.getDate(), SIDateFilter_Date.getFullYear()].join('-');

            var cboFilterDate;
            cboFilterDate = new wijmo.input.InputDate('#filterDate', {
                format: 'MM/dd/yyyy',
                value: new Date(),
                mask: '99/99/9999',
                onValueChanged: function () {
                    if (!isFirstSelect) {
                        document.getElementById('filterDate_data').value = [this.value.getMonth() + 1, this.value.getDate(), this.value.getFullYear()].join('-');
                        var SIDateFilterValue = document.getElementById('filterDate_data').value;

                        $('body').removeClass('modal-open');
                        $(".modal-backdrop").remove();

                        sales = new wijmo.collections.CollectionView(getSalesFilterBySIDate(SIDateFilterValue));
                        sales.canFilter = true;
                        sales.pageSize = 15;

                        var filterText = '';
                        $('#InputFilter').keyup(function () {
                            filterText = this.value.toLowerCase();
                            sales.refresh();
                        });
                        sales.filter = function (item) {
                            return !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1);
                        }
                        sales.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsSales();
                        });
                        sales.currentChanged.addHandler(function (sender, args) {
                            updateDetails();
                        });

                        salesGrid.itemsSource = sales;
                        salesGrid.trackChanges = true;

                        updateNavigateButtonsSales();
                    }
                    else {
                        isFirstSelect = false;
                    }
                }
            });

            var SIDateFilter = document.getElementById('filterDate_data').value;
            sales = new wijmo.collections.CollectionView(getSalesFilterBySIDate(SIDateFilter));
            sales.canFilter = true;
            sales.pageSize = 15;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                sales.refresh();
            });
            sales.filter = function (item) {
                return !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1);
            }
            sales.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsSales();
            });
            sales.currentChanged.addHandler(function (sender, args) {
                updateDetails();
            });

            // Flex Grid
            salesGrid = new wijmo.grid.FlexGrid('#SalesGrid');
            salesGrid.initialize({
                columns: [
                            {
                                "header": "Edit",
                                "binding": "EditId",
                                "width": 60,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteId",
                                "width": 70,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "SI Number",
                                "binding": "SINumber",
                                "allowSorting": true,
                                "width": "1.5*",
                            },
                            {
                                "header": "SI Date",
                                "binding": "SIDate",
                                "allowSorting": true,
                                "width": "1*"
                            },
                            {
                                "header": "Branch",
                                "binding": "Branch",
                                "allowSorting": true,
                                "width": "2*"
                            },
                            {
                                "header": "Customer",
                                "binding": "Customer",
                                "allowSorting": true,
                                "width": "3*"
                            },
                            {
                                "header": "Doc Reference",
                                "binding": "DocumentReference",
                                "allowSorting": true,
                                "width": "2*"
                            },
                            {
                                "header": "Amount",
                                "binding": "Amount",
                                "allowSorting": true,
                                "width": "2*"
                            },
                            {
                                "header": "Lock",
                                "binding": "IsLocked",
                                "allowSorting": true,
                                "width": "0.5*"
                            }
                ],
                autoGenerateColumns: false,
                itemsSource: sales,
                isReadOnly: true,
                //frozenColumns: 2,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesGrid.trackChanges = true;

            //Navigation button
            btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
            btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
            btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
            btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
            btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

            updateNavigateButtonsSales();

            btnFirstPageGrid.addEventListener('click', function () {
                sales.moveToFirstPage();
                updateNavigateButtonsSales();
            });
            btnPreviousPageGrid.addEventListener('click', function () {
                sales.moveToPreviousPage();
                updateNavigateButtonsSales();
            });
            btnNextPageGrid.addEventListener('click', function () {
                sales.moveToNextPage();
                updateNavigateButtonsSales();
            });
            btnLastPageGrid.addEventListener('click', function () {
                sales.moveToLastPage();
                updateNavigateButtonsSales();
            });
        });
    </script>
</body>
</html>