        function btnStockCardReportCSVOnclick() {
            var CSV = '';
            var stockCardReport = [];
            var fileName = 'StockCardReport.CSV';

            stockCardReportCollections.moveToFirstPage();

            for (var p = 1; p <= stockCardReportCollections.pageCount; p++) {
                for (i = 0; i < stockCardReportCollections.items.length; i++) {
                    stockCardReport.push({
                        Branch: stockCardReportCollections.items[i].Branch,
                        Document: stockCardReportCollections.items[i].Document,
                        InventoryDate: stockCardReportCollections.items[i].InventoryDate,
                        ManualNumber: stockCardReportCollections.items[i].ManualNumber,
                        InQuantity: stockCardReportCollections.items[i].InQuantity,
                        OutQuantity: stockCardReportCollections.items[i].OutQuantity,
                        BalanceQuantity: stockCardReportCollections.items[i].BalanceQuantity,
                        RunningQuantity: stockCardReportCollections.items[i].RunningQuantity,
                        Unit: stockCardReportCollections.items[i].Unit,
                        Cost: stockCardReportCollections.items[i].Cost,
                        Amount: stockCardReportCollections.items[i].Amount
                    });
                }

                stockCardReportCollections.moveToNextPage();
                if (p == stockCardReportCollections.pageCount) {
                    stockCardReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                Document: "Document",
                InventoryDate: "Inventory Date",
                ManualNumber: "Manual Number",
                InQuantity: "In Quantity",
                OutQuantity: "Out Quantity",
                BalanceQuantity: "Balance Quantity",
                RunningQuantity: "Running Quantity",
                Unit: "Unit",
                Cost: "Cost",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < stockCardReport.length; i++) {
                var row = '';
                for (var a in stockCardReport[i]) {
                    row += '"' + stockCardReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

