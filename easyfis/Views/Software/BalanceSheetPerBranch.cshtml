        // ============
        // Download CSV
        // ============
        function btnBalanceSheetPerBranchDownloadCSVOnclick() {
            var CSV = '';
            var balanceSheetPerBranch = [];
            var fileName = 'BalanceSheetPerBranch.CSV';

            balanceSheetPerBranchCollectionView.moveToFirstPage();

            for (var p = 1; p <= balanceSheetPerBranchCollectionView.pageCount; p++) {
                for (i = 0; i < balanceSheetPerBranchCollectionView.items.length; i++) {
                    balanceSheetPerBranch.push({
                        AccountCategory: balanceSheetPerBranchCollectionView.items[i].AccountCategory,
                        SubCategoryDescription: balanceSheetPerBranchCollectionView.items[i].SubCategoryDescription,
                        AccountType: balanceSheetPerBranchCollectionView.items[i].AccountType,
                        Account: balanceSheetPerBranchCollectionView.items[i].Account,
                        Amount: balanceSheetPerBranchCollectionView.items[i].Balance,
                    });
                }

                balanceSheetPerBranchCollectionView.moveToNextPage();
                if (p == balanceSheetPerBranchCollectionView.pageCount) {
                    balanceSheetPerBranchCollectionView.moveToPage(balanceSheetPerBranchCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                AccountCategory: "Account Category",
                SubCategoryDescription: "Sub Category Description",
                AccountType: "Account Type",
                Account: "Account",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < balanceSheetPerBranch.length; i++) {
                var row = '';
                for (var a in balanceSheetPerBranch[i]) {
                    row += '"' + balanceSheetPerBranch[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Download successful.");
            }
        }

