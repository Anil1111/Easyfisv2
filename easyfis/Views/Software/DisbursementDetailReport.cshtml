<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Disbursement Detail Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Disbursement Detail Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboAPDisbursementDetailReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnDisbursementDetailReportCSVOnclick()" id="btnDisbursementDetailReportCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnDisbursementDetailReportPrintPDFOnclick()" id="btnDisbursementDetailReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsPayable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboAPDisbursementDetailReportStartDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboAPDisbursementDetailReportEndDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboAPDisbursementDetailReportCompany"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboAPDisbursementDetailReportBranch"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="disbursementDetailReportGrid" style="font-size: 13px;"></div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboAPDisbursementDetailReportStartDate = new wijmo.input.InputDate('#cboAPDisbursementDetailReportStartDate');
        var cboAPDisbursementDetailReportEndDate = new wijmo.input.InputDate('#cboAPDisbursementDetailReportEndDate');
        var isAPDisbursementDetailReportStartDateSelected = false;
        var isAPDisbursementDetailReportEndDateSelected = false;
        var cboAPDisbursementDetailReportCompany = new wijmo.input.ComboBox('#cboAPDisbursementDetailReportCompany');
        var cboAPDisbursementDetailReportBranch = new wijmo.input.ComboBox('#cboAPDisbursementDetailReportBranch');
        var disbursementDetailReportCollections;
        var disbursementDetailReportGrid;
        var isAPDisbursementDetailReportCompanySelected = false;
        var cboAPDisbursementDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboAPDisbursementDetailReportShowNumberOfRows');
        var btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
        var btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
        var btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
        var btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
        var btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');
        var currentPageIndex = 0;

        // ===================
        // Get Parameter Value
        // ===================
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ============
        // Date Filters
        // ============
        function disbursementDetailReportDateFilters() {
            NProgress.start();
            cboAPDisbursementDetailReportStartDate.dispose();
            cboAPDisbursementDetailReportStartDate = new wijmo.input.InputDate('#cboAPDisbursementDetailReportStartDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("StartDate")),
                onValueChanged: function () {
                    if (!isAPDisbursementDetailReportStartDateSelected) {
                        NProgress.start();
                        refreshDisbursementDetailReportFlexGrid();
                    } else {
                        isAPDisbursementDetailReportStartDateSelected = false;
                    }
                }
            });

            cboAPDisbursementDetailReportEndDate.dispose();
            cboAPDisbursementDetailReportEndDate = new wijmo.input.InputDate('#cboAPDisbursementDetailReportEndDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("EndDate")),
                onValueChanged: function () {
                    if (!isAPDisbursementDetailReportEndDateSelected) {
                        NProgress.start();
                        refreshDisbursementDetailReportFlexGrid();
                    } else {
                        isAPDisbursementDetailReportEndDateSelected = false;
                    }
                }
            });

            createCboCompany();
        }

        // ==============
        // Company Filter
        // ==============
        function createCboCompany() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/company/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnDisbursementDetailReportCSV").prop("disabled", true);
                        $("#btnDisbursementDetailReportPrintPDF").prop("disabled", true);
                    }

                    cboAPDisbursementDetailReportCompany.dispose();
                    cboAPDisbursementDetailReportCompany = new wijmo.input.ComboBox('#cboAPDisbursementDetailReportCompany', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getParam("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnDisbursementDetailReportCSV").prop("disabled", false);
                            $("#btnDisbursementDetailReportPrintPDF").prop("disabled", false);
                            isAPDisbursementDetailReportCompanySelected = true;
                            createCboBranch();
                        }
                    });

                    createCboBranch();
                }
            });
        }

        // =============
        // Branch Filter
        // =============
        function createCboBranch() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboAPDisbursementDetailReportCompany.selectedValue != null) {
                $.ajax({
                    url: '/api/branch/byCompanyId/list/locked/' + cboAPDisbursementDetailReportCompany.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnDisbursementDetailReportCSV").prop("disabled", true);
                            $("#btnDisbursementDetailReportPrintPDF").prop("disabled", true);
                        }

                        cboAPDisbursementDetailReportBranch.dispose();
                        cboAPDisbursementDetailReportBranch = new wijmo.input.ComboBox('#cboAPDisbursementDetailReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getParam("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshDisbursementDetailReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===============
        // Show Rows Table
        // ===============
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboAPDisbursementDetailReportShowNumberOfRows.dispose();
            cboAPDisbursementDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboAPDisbursementDetailReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboAPDisbursementDetailReportShowNumberOfRows.selectedValue;
                        disbursementDetailReportCollections.pageSize = parseInt(numberOfRows);
                        disbursementDetailReportCollections.refresh();
                        disbursementDetailReportGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isAPDisbursementDetailReportCompanySelected) {
                createDisbursementDetailReportFlexGrid();
            } else {
                refreshDisbursementDetailReportFlexGrid();
            }
        }

        // ==================================
        // Get Disbursement Order Detail Data
        // ==================================
        function getDisbursementDetailReport() {
            var disbursementDetailReports = new wijmo.collections.ObservableArray;
            if (cboAPDisbursementDetailReportCompany.selectedValue != null) {
                if (cboAPDisbursementDetailReportBranch.selectedValue != null) {
                    var startDate = cboAPDisbursementDetailReportStartDate.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboAPDisbursementDetailReportEndDate.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboAPDisbursementDetailReportCompany.selectedValue;
                    var branchId = cboAPDisbursementDetailReportBranch.selectedValue;

                    $.ajax({
                        url: '/api/disbursementDetailReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (disbursementDetailReportResults) {
                            var totalAmount = 0;
                            if (disbursementDetailReportResults.length > 0) {
                                for (i = 0; i < disbursementDetailReportResults.length; i++) {
                                    var docLink = "/Software/DisbursementDetail?id=" + disbursementDetailReportResults[i]["CVId"];

                                    var CVDateResult = new Date(disbursementDetailReportResults[i]["CVDate"])
                                    var CVDate = ('0' + (CVDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + CVDateResult.getDate()).slice(-2) + '-' + CVDateResult.getFullYear();

                                    var RRNumberForCSV = "";
                                    if (disbursementDetailReportResults[i]["RR"] != null) {
                                        RRNumberForCSV = "RR-" + disbursementDetailReportResults[i]["RR"];
                                    }

                                    disbursementDetailReports.push({
                                        CVId: disbursementDetailReportResults[i]["CVId"],
                                        Id: disbursementDetailReportResults[i]["Id"],
                                        Branch: disbursementDetailReportResults[i]["Branch"],
                                        CV: disbursementDetailReportResults[i]["CV"],
                                        CVForCSV: "CV-" + disbursementDetailReportResults[i]["CV"],
                                        CVButton: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 10.5px;'>" + disbursementDetailReportResults[i]["CV"],
                                        CVDate: CVDate,
                                        Supplier: disbursementDetailReportResults[i]["Supplier"],
                                        Account: disbursementDetailReportResults[i]["Account"],
                                        Article: disbursementDetailReportResults[i]["Article"],
                                        RR: disbursementDetailReportResults[i]["RR"] != null ? disbursementDetailReportResults[i]["RR"] : "",
                                        RRForCSV: RRNumberForCSV,
                                        Particulars: disbursementDetailReportResults[i]["Particulars"],
                                        Amount: disbursementDetailReportResults[i]["Amount"],
                                        AmountDisplay: parseFloat(disbursementDetailReportResults[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    totalAmount += disbursementDetailReportResults[i]["Amount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return disbursementDetailReports;
        }

        // =========================
        // Update Navigation Buttons
        // =========================
        function updateNavigateButtonsItems() {
            if (disbursementDetailReportCollections.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (disbursementDetailReportCollections.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (disbursementDetailReportCollections.pageIndex === (disbursementDetailReportCollections.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (disbursementDetailReportCollections.pageIndex + 1) + ' / ' + disbursementDetailReportCollections.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshDisbursementDetailReportFlexGrid() {
            disbursementDetailReportCollections = new wijmo.collections.CollectionView(getDisbursementDetailReport());
            disbursementDetailReportCollections.canFilter = true;
            disbursementDetailReportCollections.pageSize = cboAPDisbursementDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementDetailReportCollections.refresh();

                if (disbursementDetailReportCollections.items.length > 0) {
                    var totalAmount = 0;
                    for (var i = 0; i < disbursementDetailReportCollections.items.length; i++) {
                        totalAmount += disbursementDetailReportCollections.items[i].Amount;
                    }

                    document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            disbursementDetailReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CV.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Supplier.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.RR.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            disbursementDetailReportGrid.itemsSource = disbursementDetailReportCollections;
            disbursementDetailReportGrid.trackChanges = true;
        }

        // =========
        // Flex Grid
        // =========
        function createDisbursementDetailReportFlexGrid() {
            disbursementDetailReportCollections = new wijmo.collections.CollectionView(getDisbursementDetailReport());
            disbursementDetailReportCollections.canFilter = true;
            disbursementDetailReportCollections.pageSize = cboAPDisbursementDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementDetailReportCollections.refresh();

                if (disbursementDetailReportCollections.items.length > 0) {
                    var totalAmount = 0;
                    for (var i = 0; i < disbursementDetailReportCollections.items.length; i++) {
                        totalAmount += disbursementDetailReportCollections.items[i].Amount;
                    }

                    document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            disbursementDetailReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CV.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Supplier.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.RR.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            disbursementDetailReportGrid = new wijmo.grid.FlexGrid('#disbursementDetailReportGrid');
            disbursementDetailReportGrid.initialize({
                columns: [
                    {
                        "header": "CV Number  ",
                        "binding": "CVButton",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "CV Date",
                        "binding": "CVDate",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Supplier",
                        "binding": "Supplier",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "RR Number",
                        "binding": "RR",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Particulars",
                        "binding": "Particulars",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: disbursementDetailReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            disbursementDetailReportGrid.trackChanges = true;

            updateNavigateButtonsItems();

            btnFirstPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToFirstPage();
                currentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPreviousPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToPreviousPage();
                currentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnNextPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToNextPage();
                currentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnLastPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToLastPage();
                currentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });
        }

        // ============
        // Download CSV
        // ============
        function btnDisbursementDetailReportCSVOnclick() {
            var CSV = '';
            var disbursementDetailReport = [];
            var fileName = 'DisbursementDetailReport.CSV';

            disbursementDetailReportCollections.moveToFirstPage();

            for (var p = 1; p <= disbursementDetailReportCollections.pageCount; p++) {
                for (i = 0; i < disbursementDetailReportCollections.items.length; i++) {
                    var IsClose = disbursementDetailReportCollections.items[i].IsClose;
                    var isPOClose = "Not Closed";
                    if (IsClose) {
                        isPOClose = "Closed"
                    }

                    disbursementDetailReport.push({
                        Branch: disbursementDetailReportCollections.items[i].Branch,
                        CVNumber: disbursementDetailReportCollections.items[i].CVForCSV,
                        CVDate: disbursementDetailReportCollections.items[i].CVDate,
                        Supplier: disbursementDetailReportCollections.items[i].Supplier,
                        Article: disbursementDetailReportCollections.items[i].Article,
                        Account: disbursementDetailReportCollections.items[i].Account,
                        RRNumber: disbursementDetailReportCollections.items[i].RRForCSV,
                        Particulars: disbursementDetailReportCollections.items[i].Particulars,
                        Amount: disbursementDetailReportCollections.items[i].Amount,
                    });
                }

                disbursementDetailReportCollections.moveToNextPage();
                if (p == disbursementDetailReportCollections.pageCount) {
                    disbursementDetailReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                CVNumber: "CV Number",
                CVDate: "CV Date",
                Supplier: "Supplier",
                Article: "Article",
                Account: "Account",
                RRNumber: "RR Number",
                Particulars: "Particulars",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < disbursementDetailReport.length; i++) {
                var row = '';
                for (var a in disbursementDetailReport[i]) {
                    row += '"' + disbursementDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

