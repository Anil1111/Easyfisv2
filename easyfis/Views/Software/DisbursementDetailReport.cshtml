<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Disbursement Detail Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Disbursement Detail Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpDisbursementDetailReportSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboDisbursementDetailReportDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnDisbursementDetailReportDownloadCSVOnclick()" id="btnDisbursementDetailReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnDisbursementDetailReportPrintPDFOnclick()" id="btnDisbursementDetailReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsPayable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementDetailReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementDetailReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementDetailReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementDetailReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="disbursementDetailReportFlexGrid" style="font-size: 12px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="disbursementDetailReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementDetailReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementDetailReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnDisbursementDetailReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementDetailReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementDetailReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboDisbursementDetailReportStartDateFilter = new wijmo.input.InputDate('#cboDisbursementDetailReportStartDateFilter');
        var cboDisbursementDetailReportEndDateFilter = new wijmo.input.InputDate('#cboDisbursementDetailReportEndDateFilter');
        var isCboDisbursementDetailReportStartDateFilterSelected = false;
        var isCboDisbursementDetailReportEndDateFilterSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboDisbursementDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboDisbursementDetailReportCompanyFilter');
        var isCboDisbursementDetailReportCompanyFilterSelected = false;
        var cboDisbursementDetailReportBranchFilter = new wijmo.input.ComboBox('#cboDisbursementDetailReportBranchFilter');

        // =============================
        // Collection View and Flex Grid
        // =============================
        var disbursementDetailReportCollections;
        var disbursementDetailReportFlexGrid;
        var cboDisbursementDetailReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementDetailReportDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnDisbursementDetailReportMoveToFirstPageGrid = document.getElementById('btnDisbursementDetailReportMoveToFirstPageGrid');
        var btnDisbursementDetailReportMoveToPreviousPageGrid = document.getElementById('btnDisbursementDetailReportMoveToPreviousPageGrid');
        var btnDisbursementDetailReportMoveToNextPageGrid = document.getElementById('btnDisbursementDetailReportMoveToNextPageGrid');
        var btnDisbursementDetailReportMoveToLastPageGrid = document.getElementById('btnDisbursementDetailReportMoveToLastPageGrid');
        var btnDisbursementDetailReportCurrentPageGrid = document.getElementById('btnDisbursementDetailReportCurrentPageGrid');
        var disbursementDetailReportCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboDisbursementDetailReportStartDateFilter.dispose();
            cboDisbursementDetailReportStartDateFilter = new wijmo.input.InputDate('#cboDisbursementDetailReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboDisbursementDetailReportStartDateFilterSelected) {
                        NProgress.start();
                        refreshDisbursementDetailReportFlexGrid();
                    } else {
                        isCboDisbursementDetailReportStartDateFilterSelected = false;
                    }
                }
            });

            cboDisbursementDetailReportEndDateFilter.dispose();
            cboDisbursementDetailReportEndDateFilter = new wijmo.input.InputDate('#cboDisbursementDetailReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboDisbursementDetailReportEndDateFilterSelected) {
                        NProgress.start();
                        refreshDisbursementDetailReportFlexGrid();
                    } else {
                        isCboDisbursementDetailReportEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/disbursementDetailReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnDisbursementDetailReportDownloadCSV").prop("disabled", true);
                        $("#btnDisbursementDetailReportPrintPDF").prop("disabled", true);
                    }

                    cboDisbursementDetailReportCompanyFilter.dispose();
                    cboDisbursementDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboDisbursementDetailReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnDisbursementDetailReportDownloadCSV").prop("disabled", false);
                            $("#btnDisbursementDetailReportPrintPDF").prop("disabled", false);
                            isCboDisbursementDetailReportCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboDisbursementDetailReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/disbursementDetailReport/dropdown/list/branch/' + cboDisbursementDetailReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnDisbursementDetailReportDownloadCSV").prop("disabled", true);
                            $("#btnDisbursementDetailReportPrintPDF").prop("disabled", true);
                        }

                        cboDisbursementDetailReportBranchFilter.dispose();
                        cboDisbursementDetailReportBranchFilter = new wijmo.input.ComboBox('#cboDisbursementDetailReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshDisbursementDetailReportFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboDisbursementDetailReportDisplayNumberOfRows.dispose();
            cboDisbursementDetailReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementDetailReportDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboDisbursementDetailReportDisplayNumberOfRows.selectedValue;
                        disbursementDetailReportCollections.pageSize = parseInt(numberOfRows);
                        disbursementDetailReportCollections.refresh();
                        disbursementDetailReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboDisbursementDetailReportCompanyFilterSelected) {
                createDisbursementDetailReportFlexGrid();
            } else {
                refreshDisbursementDetailReportFlexGrid();
            }
        }

        // ===================================
        // Get Disbursement Detail Report Data
        // ===================================
        function getDisbursementDetailReportData() {
            var disbursementDetailReports = new wijmo.collections.ObservableArray;
            if (cboDisbursementDetailReportCompanyFilter.selectedValue != null) {
                if (cboDisbursementDetailReportBranchFilter.selectedValue != null) {

                    var startDate = cboDisbursementDetailReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboDisbursementDetailReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboDisbursementDetailReportCompanyFilter.selectedValue;
                    var branchId = cboDisbursementDetailReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/disbursementDetailReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var inpTotalAmount = 0;
                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/DisbursementDetail?id=" + results[i]["CVId"];

                                    var CVDateResult = new Date(results[i]["CVDate"])
                                    var CVDate = ('0' + (CVDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + CVDateResult.getDate()).slice(-2) + '-' + CVDateResult.getFullYear();

                                    disbursementDetailReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 9.5px;'><i class='fa fa-edit'></i> Detail",
                                        CVId: results[i]["CVId"],
                                        CVBranch: results[i]["CVBranch"],
                                        CVNumber: results[i]["CVNumber"],
                                        CVDate: CVDate,
                                        Payee: results[i]["Payee"],
                                        Branch: results[i]["Branch"],
                                        Account: results[i]["Account"],
                                        Article: results[i]["Article"],
                                        RRNumber: results[i]["RRNumber"],
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    inpTotalAmount += results[i]["Amount"];
                                }
                            }

                            document.getElementById("inpTotalAmount").value = parseFloat(inpTotalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return disbursementDetailReports;
        }

        // ===========================================
        // Create Disbursement Detail Report Flex Grid
        // ===========================================
        function createDisbursementDetailReportFlexGrid() {
            disbursementDetailReportCollections = new wijmo.collections.CollectionView(getDisbursementDetailReportData());
            disbursementDetailReportCollections.canFilter = true;
            disbursementDetailReportCollections.pageSize = cboDisbursementDetailReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpDisbursementDetailReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementDetailReportCollections.refresh();
            });

            disbursementDetailReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CVNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Payee.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.RRNumber.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateDisbursementDetailReportNavigationButtons();
            });

            disbursementDetailReportFlexGrid = new wijmo.grid.FlexGrid('#disbursementDetailReportFlexGrid');
            disbursementDetailReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "CV No.",
                        "binding": "CVNumber",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "CV Date",
                        "binding": "CVDate",
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "Payee",
                        "binding": "Payee",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Branch",
                        "binding": "Branch",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "RR No.",
                        "binding": "RRNumber",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: disbursementDetailReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            disbursementDetailReportFlexGrid.trackChanges = true;

            updateDisbursementDetailReportNavigationButtons();

            btnDisbursementDetailReportMoveToFirstPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToFirstPage();
                disbursementDetailReportCurrentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateDisbursementDetailReportNavigationButtons();
            });

            btnDisbursementDetailReportMoveToPreviousPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToPreviousPage();
                disbursementDetailReportCurrentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateDisbursementDetailReportNavigationButtons();
            });

            btnDisbursementDetailReportMoveToNextPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToNextPage();
                disbursementDetailReportCurrentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateDisbursementDetailReportNavigationButtons();
            });

            btnDisbursementDetailReportMoveToLastPageGrid.addEventListener('click', function () {
                disbursementDetailReportCollections.moveToLastPage();
                disbursementDetailReportCurrentPageIndex = disbursementDetailReportCollections.pageIndex + 1;
                updateDisbursementDetailReportNavigationButtons();
            });
        }

        // ====================================================
        // Update Disbursement Detail Report Navigation Buttons
        // ====================================================
        function updateDisbursementDetailReportNavigationButtons() {
            if (disbursementDetailReportCollections.pageSize <= 0) {
                document.getElementById('disbursementDetailReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('disbursementDetailReportNavigationPageGrid').style.display = 'block';
            if (disbursementDetailReportCollections.pageIndex === 0) {
                btnDisbursementDetailReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnDisbursementDetailReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnDisbursementDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnDisbursementDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (disbursementDetailReportCollections.pageIndex === (disbursementDetailReportCollections.pageCount - 1)) {
                btnDisbursementDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnDisbursementDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnDisbursementDetailReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnDisbursementDetailReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnDisbursementDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnDisbursementDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnDisbursementDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnDisbursementDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnDisbursementDetailReportCurrentPageGrid.innerHTML = (disbursementDetailReportCollections.pageIndex + 1) + ' / ' + disbursementDetailReportCollections.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshDisbursementDetailReportFlexGrid() {
            disbursementDetailReportCollections = new wijmo.collections.CollectionView(getDisbursementDetailReportData());
            disbursementDetailReportCollections.canFilter = true;
            disbursementDetailReportCollections.pageSize = cboDisbursementDetailReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpDisbursementDetailReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementDetailReportCollections.refresh();
            });

            disbursementDetailReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CVNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Payee.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.RRNumber.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateDisbursementDetailReportNavigationButtons();
            });

            disbursementDetailReportFlexGrid.itemsSource = disbursementDetailReportCollections;
            disbursementDetailReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnDisbursementDetailReportDownloadCSVOnclick() {
            var CSV = '';
            var disbursementDetailReport = [];
            var fileName = 'DisbursementDetailReport.CSV';

            disbursementDetailReportCollections.moveToFirstPage();

            for (var p = 1; p <= disbursementDetailReportCollections.pageCount; p++) {
                for (i = 0; i < disbursementDetailReportCollections.items.length; i++) {

                    disbursementDetailReport.push({
                        CVBranch: disbursementDetailReportCollections.items[i].CVBranch,
                        CVNumber: "CV-" + disbursementDetailReportCollections.items[i].CVNumber,
                        CVDate: disbursementDetailReportCollections.items[i].CVDate,
                        Payee: disbursementDetailReportCollections.items[i].Payee,
                        Branch: disbursementDetailReportCollections.items[i].Branch,
                        Account: disbursementDetailReportCollections.items[i].Account,
                        Article: disbursementDetailReportCollections.items[i].Article,
                        RRNumber: "RR-" + disbursementDetailReportCollections.items[i].RRNumber,
                        Amount: disbursementDetailReportCollections.items[i].Amount,
                    });
                }

                disbursementDetailReportCollections.moveToNextPage();
                if (p == disbursementDetailReportCollections.pageCount) {
                    disbursementDetailReportCollections.moveToPage(disbursementDetailReportCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                CVBranch: "CV Branch",
                CVNumber: "CV Number",
                CVDate: "CV Date",
                Payee: "Payee",
                Branch: "Branch",
                Account: "Account",
                Article: "Article",
                RRNumber: "RR Number",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < disbursementDetailReport.length; i++) {
                var row = '';
                for (var a in disbursementDetailReport[i]) {
                    row += '"' + disbursementDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

