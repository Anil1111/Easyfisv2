<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Disbursement Summary Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Disbursement Summary Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="disbursementSummaryFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnDisbursementSummaryReportCSVOnclick()" id="btnDisbursementSummaryReportCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnDisbursementSummaryReportPDFOnclick()" id="btnDisbursementSummaryReportPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsPayable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportStartDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportEndDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportCompany"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportBranch"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="disbursementSummaryReportGrid" style="font-size: 12px;"></div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="btnDisbursementSummaryReportNaviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnDisbursementSummaryReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboDisbursementSummaryReportStartDate = new wijmo.input.InputDate('#cboDisbursementSummaryReportStartDate');
        var cboDisbursementSummaryReportEndDate = new wijmo.input.InputDate('#cboDisbursementSummaryReportEndDate');
        var isAPDisbursementSummaryReportStartDateSelected = false;
        var isAPDisbursementSummaryReportEndDateSelected = false;

        var cboDisbursementSummaryReportCompany = new wijmo.input.ComboBox('#cboDisbursementSummaryReportCompany');
        var cboDisbursementSummaryReportBranch = new wijmo.input.ComboBox('#cboDisbursementSummaryReportBranch');
        var isAPDisbursementSummaryReportCompanySelected = false;

        var disbursementSummaryReportCollections;
        var disbursementSummaryReportGrid;

        var cboDisbursementSummaryReportShowNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementSummaryReportShowNumberOfRows');

        var btnFirstPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToFirstPageGrid');
        var btnPreviousPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToPreviousPageGrid');
        var btnNextPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToNextPageGrid');
        var btnLastPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToLastPageGrid');
        var btnDisbursementSummaryReportCurrentPageGrid = document.getElementById('btnDisbursementSummaryReportCurrentPageGrid');
        var currentPageIndex = 0;

        // ===================
        // Get Parameter Value
        // ===================
        function getURLParameter(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ============
        // Date Filters
        // ============
        function disbursementSummaryReportDateFilters() {
            NProgress.start();

            cboDisbursementSummaryReportStartDate.dispose();
            cboDisbursementSummaryReportStartDate = new wijmo.input.InputDate('#cboDisbursementSummaryReportStartDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameter("StartDate")),
                onValueChanged: function () {
                    if (!isAPDisbursementSummaryReportStartDateSelected) {
                        NProgress.start();
                        refreshDisbursementSummaryReportFlexGrid();
                    } else {
                        isAPDisbursementSummaryReportStartDateSelected = false;
                    }
                }
            });

            cboDisbursementSummaryReportEndDate.dispose();
            cboDisbursementSummaryReportEndDate = new wijmo.input.InputDate('#cboDisbursementSummaryReportEndDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameter("EndDate")),
                onValueChanged: function () {
                    if (!isAPDisbursementSummaryReportEndDateSelected) {
                        NProgress.start();
                        refreshDisbursementSummaryReportFlexGrid();
                    } else {
                        isAPDisbursementSummaryReportEndDateSelected = false;
                    }
                }
            });

            createCboCompany();
        }

        // ==============
        // Company Filter
        // ==============
        function createCboCompany() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/disbursementSummaryReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnDisbursementSummaryReportCSV").prop("disabled", true);
                        $("#btnDisbursementSummaryReportPDF").prop("disabled", true);
                    }

                    cboDisbursementSummaryReportCompany.dispose();
                    cboDisbursementSummaryReportCompany = new wijmo.input.ComboBox('#cboDisbursementSummaryReportCompany', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameter("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnDisbursementSummaryReportCSV").prop("disabled", false);
                            $("#btnDisbursementSummaryReportPDF").prop("disabled", false);
                            isAPDisbursementSummaryReportCompanySelected = true;
                            createCboBranch();
                        }
                    });

                    createCboBranch();
                }
            });
        }

        // =============
        // Branch Filter
        // =============
        function createCboBranch() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboDisbursementSummaryReportCompany.selectedValue != null) {
                $.ajax({
                    url: '/api/disbursementSummaryReport/dropdown/list/branch/' + cboDisbursementSummaryReportCompany.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnDisbursementSummaryReportCSV").prop("disabled", true);
                            $("#btnDisbursementSummaryReportPDF").prop("disabled", true);
                        }

                        cboDisbursementSummaryReportBranch.dispose();
                        cboDisbursementSummaryReportBranch = new wijmo.input.ComboBox('#cboDisbursementSummaryReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameter("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshDisbursementSummaryReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===============
        // Show Rows Table
        // ===============
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboDisbursementSummaryReportShowNumberOfRows.dispose();
            cboDisbursementSummaryReportShowNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementSummaryReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboDisbursementSummaryReportShowNumberOfRows.selectedValue;
                        disbursementSummaryReportCollections.pageSize = parseInt(numberOfRows);
                        disbursementSummaryReportCollections.refresh();
                        disbursementSummaryReportGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isAPDisbursementSummaryReportCompanySelected) {
                createDisbursementSummaryReportFlexGrid();
            } else {
                refreshDisbursementSummaryReportFlexGrid();
            }
        }

        // ===============================
        // Get Disbursement Order Summary Data
        // ===============================
        function getDisbursementSummaryReport() {
            var disbursementSummaryReports = new wijmo.collections.ObservableArray;
            if (cboDisbursementSummaryReportCompany.selectedValue != null) {
                if (cboDisbursementSummaryReportBranch.selectedValue != null) {

                    var startDate = cboDisbursementSummaryReportStartDate.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboDisbursementSummaryReportEndDate.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboDisbursementSummaryReportCompany.selectedValue;
                    var branchId = cboDisbursementSummaryReportBranch.selectedValue;

                    $.ajax({
                        url: '/api/disbursementSummaryReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var totalAmount = 0;
                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/DisbursementDetail?id=" + results[i]["CVId"];

                                    var CVDateResult = new Date(results[i]["CVDate"])
                                    var CVDate = ('0' + (CVDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + CVDateResult.getDate()).slice(-2) + '-' + CVDateResult.getFullYear();

                                    var CheckDateResult = new Date(results[i]["CheckDate"])
                                    var CheckDate = ('0' + (CheckDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + CheckDateResult.getDate()).slice(-2) + '-' + CheckDateResult.getFullYear();

                                    disbursementSummaryReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 9.5px;'><i class='fa fa-edit'></i> Detail",
                                        CVId: results[i]["CVId"],
                                        Branch: results[i]["Branch"],
                                        CVNumber: results[i]["CVNumber"],
                                        CVDate: CVDate,
                                        Payee: results[i]["Payee"],
                                        Particulars: results[i]["Particulars"],
                                        Bank: results[i]["Bank"],
                                        CheckNumber: results[i]["CheckNumber"],
                                        CheckDate: CheckDate,
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    totalAmount += results[i]["Amount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return disbursementSummaryReports;
        }

        // =========================
        // Update Navigation Buttons
        // =========================
        function updateNavigateButtonsItems() {
            if (disbursementSummaryReportCollections.pageSize <= 0) {
                document.getElementById('btnDisbursementSummaryReportNaviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('btnDisbursementSummaryReportNaviagtionPageGrid').style.display = 'block';
            if (disbursementSummaryReportCollections.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (disbursementSummaryReportCollections.pageIndex === (disbursementSummaryReportCollections.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnDisbursementSummaryReportCurrentPageGrid.innerHTML = (disbursementSummaryReportCollections.pageIndex + 1) + ' / ' + disbursementSummaryReportCollections.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshDisbursementSummaryReportFlexGrid() {
            disbursementSummaryReportCollections = new wijmo.collections.CollectionView(getDisbursementSummaryReport());
            disbursementSummaryReportCollections.canFilter = true;
            disbursementSummaryReportCollections.pageSize = cboDisbursementSummaryReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#disbursementSummaryFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementSummaryReportCollections.refresh();
            });

            disbursementSummaryReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CVNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Payee.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckNumber.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementSummaryReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            disbursementSummaryReportGrid.itemsSource = disbursementSummaryReportCollections;
            disbursementSummaryReportGrid.trackChanges = true;
        }

        // =========
        // Flex Grid
        // =========
        function createDisbursementSummaryReportFlexGrid() {
            disbursementSummaryReportCollections = new wijmo.collections.CollectionView(getDisbursementSummaryReport());
            disbursementSummaryReportCollections.canFilter = true;
            disbursementSummaryReportCollections.pageSize = cboDisbursementSummaryReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#disbursementSummaryFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementSummaryReportCollections.refresh();
            });

            disbursementSummaryReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CVNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Payee.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckNumber.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementSummaryReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            disbursementSummaryReportGrid = new wijmo.grid.FlexGrid('#disbursementSummaryReportGrid');
            disbursementSummaryReportGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "CV No.",
                        "binding": "CVNumber",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "CV Date",
                        "binding": "CVDate",
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "Payee",
                        "binding": "Payee",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Particulars",
                        "binding": "Particulars",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Bank",
                        "binding": "Bank",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Check No.",
                        "binding": "CheckNumber",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Check Date",
                        "binding": "CheckDate",
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: disbursementSummaryReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            disbursementSummaryReportGrid.trackChanges = true;

            updateNavigateButtonsItems();

            btnFirstPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToFirstPage();
                currentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPreviousPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToPreviousPage();
                currentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnNextPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToNextPage();
                currentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnLastPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToLastPage();
                currentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });
        }

        // ============
        // Download CSV
        // ============
        function btnDisbursementSummaryReportCSVOnclick() {
            var CSV = '';
            var disbursementSummaryReport = [];
            var fileName = 'DisbursementSummaryReport.CSV';

            disbursementSummaryReportCollections.moveToFirstPage();

            for (var p = 1; p <= disbursementSummaryReportCollections.pageCount; p++) {
                for (i = 0; i < disbursementSummaryReportCollections.items.length; i++) {
                    disbursementSummaryReport.push({
                        Branch: disbursementSummaryReportCollections.items[i].Branch,
                        CVNumber: "CV-" + disbursementSummaryReportCollections.items[i].CVNumber,
                        CVDate: disbursementSummaryReportCollections.items[i].CVDate,
                        Payee: disbursementSummaryReportCollections.items[i].Payee,
                        Particulars: disbursementSummaryReportCollections.items[i].Particulars,
                        Bank: disbursementSummaryReportCollections.items[i].Bank,
                        CheckNumber: disbursementSummaryReportCollections.items[i].CheckNumber,
                        CheckDate: disbursementSummaryReportCollections.items[i].CheckDate,
                        Amount: disbursementSummaryReportCollections.items[i].Amount,
                    });
                }

                disbursementSummaryReportCollections.moveToNextPage();
                if (p == disbursementSummaryReportCollections.pageCount) {
                    disbursementSummaryReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                CVNumber: "CV Number",
                CVDate: "CV Date",
                Payee: "Payee",
                Particulars: "Particulars",
                Bank: "Bank",
                CheckNumber: "Check Number",
                CheckDate: "Check Date",
                Amount: "Amount",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < disbursementSummaryReport.length; i++) {
                var row = '';
                for (var a in disbursementSummaryReport[i]) {
                    row += '"' + disbursementSummaryReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

