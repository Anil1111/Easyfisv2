<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Accounts Payable Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_SoftwareHeader")
        @Html.Partial("_SoftwareSideBarMenu")

        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Disbursement Summary Report
                    <small><i class="fa fa-building"></i> @ViewData["Company"] / @ViewData["Branch"]</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Software"> Dashboard</a></li>
                    <li> <a href="/Software/AccountsPayable"> Accounts Payable </a></li>
                    <li> Disbursement Summary Report </li>
                </ol>
            </section>

            <section class="content">
                <div class="box box-default">
                    <div class="box-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>
                                    @ViewData["Company"]
                                    <small>
                                        <i class="fa fa-calendar fa-fw"></i> <span id="dateFrom"></span>
                                    </small>
                                </h4>
                            </div>
                            <div class="col-md-6" align="right">
                                <button onclick="disbursementSummaryReportPDF_OnClick()" class="btn btn-primary btn-sm"><i class="fa fa-print"></i> Print</button>
                                <a href="/Software/AccountsPayable" class="btn btn-danger btn-sm"><i class="fa fa-close"></i> Close</a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div id="disbursementSummaryReportGrid" class="grid"></div>
                        <br /><br /><br />
                        <div align="right">
                            <div class="row">
                                <div class="col-md-8"></div>
                                <div class="col-md-4">
                                    <table class="table table-responsive table-bordered">
                                        <tr>
                                            <td align="right">
                                                <b>Total: </b>
                                            </td>
                                            <td style="padding-left: 10px" align="right">
                                                <span id="total">NA</span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        @Html.Partial("_SoftwareFooter")
    </div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);
            var results = regex.exec(window.location.href);
            if (results == null)
                return "";
            else
                return results[1];
        }

        function disbursementSummaryReportPDF_OnClick() {
            window.location.href = '/RepDisbursementSummaryReport/DisbursementSummaryReport?StartDate=' + getParam("StartDate") + '&EndDate=' + getParam("EndDate");
        }

        function getDisbursementSummaryReport() {
            var disbursementSummaryReport = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/disbursementSummaryReport/list/' + getParam("StartDate") + '/' + getParam("EndDate"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (disbursementSummaryReportResults) {
                    if (disbursementSummaryReportResults.length > 0) {
                        var totalAmount = 0;

                        for (i = 0; i < disbursementSummaryReportResults.length; i++) {

                            // Array Push
                            disbursementSummaryReport.push({



                                Id: disbursementSummaryReportResults[i]["Id"],
                                Branch: disbursementSummaryReportResults[i]["Branch"],
                                CVNumber: disbursementSummaryReportResults[i]["CVNumber"],
                                CVDate: disbursementSummaryReportResults[i]["CVDate"],
                                Supplier: disbursementSummaryReportResults[i]["Supplier"],
                                CheckNumber: disbursementSummaryReportResults[i]["CheckNumber"],
                                Amount: disbursementSummaryReportResults[i]["Amount"],
                               
                            });

                            totalAmount += disbursementSummaryReportResults[i]["Amount"];
                        }

                        document.getElementById("total").innerHTML = totalAmount.toLocaleString();
                    }
                    NProgress.done();
                }
            });

            return disbursementSummaryReport;
        }

        $(document).ready(function () {
            NProgress.start();
            document.getElementById("dateFrom").innerHTML = "Date from " + getParam("StartDate") + " to " + getParam("EndDate");

            var disbursementSummaryReportCollection = new wijmo.collections.CollectionView(getDisbursementSummaryReport());

            // Flex Grid
            var disbursementSummaryReportGrid = new wijmo.grid.FlexGrid('#disbursementSummaryReportGrid');
            disbursementSummaryReportGrid.initialize({
                columns: [
                            {
                                "header": "Branch  ",
                                "binding": "Branch",
                                "allowSorting": true,
                                "width": "0.5*",
                            },
                            {
                                "header": "CV Date",
                                "binding": "CVDate",
                                "allowSorting": true,
                                "width": "0.3*"
                            },
                            {
                                "header": "CV Number ",
                                "binding": "CVNumber",
                                "allowSorting": true,
                                "width": "0.4*"
                            },
                            {
                                "header": "Supplier",
                                "binding": "Supplier",
                                "allowSorting": true,
                                "width": "0.6*"
                            },
                            {
                                "header": "Check Number",
                                "binding": "CheckNumber",
                                "allowSorting": true,
                                "width": "0.8*"
                            },
                            {
                               "header": "Amount",
                               "binding": "Amount",
                               "allowSorting": true,
                               "width": "0.5*"
                            }


                ],
                autoGenerateColumns: false,
                itemsSource: disbursementSummaryReportCollection,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            disbursementSummaryReportGrid.trackChanges = true;
        });

    </script>
</body>
</html>