<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Disbursement Summary Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Disbursement Summary Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpDisbursementSummaryReportSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnDisbursementSummaryReportDownloadCSVOnclick()" id="btnDisbursementSummaryReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnDisbursementSummaryReportPrintPDFOnclick()" id="btnDisbursementSummaryReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsPayable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboDisbursementSummaryReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="disbursementSummaryReportFlexGrid" style="font-size: 12px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="btnDisbursementSummaryReportNaviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnDisbursementSummaryReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnDisbursementSummaryReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboDisbursementSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboDisbursementSummaryReportStartDateFilter');
        var cboDisbursementSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboDisbursementSummaryReportEndDateFilter');
        var isCboDisbursementSummaryReportStartDateFilterSelected = false;
        var isCboDisbursementSummaryReportEndDateFilterSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboDisbursementSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboDisbursementSummaryReportCompanyFilter');
        var isCboDisbursementSummaryReportCompanyFilterSelected = false;
        var cboDisbursementSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboDisbursementSummaryReportBranchFilter');

        // =============================
        // Collection View and Flex Grid
        // =============================
        var disbursementSummaryReportCollections;
        var disbursementSummaryReportFlexGrid;
        var cboDisbursementSummaryReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementSummaryReportDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnDisbursementSummaryReportMoveToFirstPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToFirstPageGrid');
        var btnDisbursementSummaryReportMoveToPreviousPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToPreviousPageGrid');
        var btnDisbursementSummaryReportMoveToNextPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToNextPageGrid');
        var btnDisbursementSummaryReportMoveToLastPageGrid = document.getElementById('btnDisbursementSummaryReportMoveToLastPageGrid');
        var btnDisbursementSummaryReportCurrentPageGrid = document.getElementById('btnDisbursementSummaryReportCurrentPageGrid');
        var disbursementSummaryReportCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboDisbursementSummaryReportStartDateFilter.dispose();
            cboDisbursementSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboDisbursementSummaryReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboDisbursementSummaryReportStartDateFilterSelected) {
                        NProgress.start();
                        refreshDisbursementSummaryReportFlexGrid();
                    } else {
                        isCboDisbursementSummaryReportStartDateFilterSelected = false;
                    }
                }
            });

            cboDisbursementSummaryReportEndDateFilter.dispose();
            cboDisbursementSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboDisbursementSummaryReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboDisbursementSummaryReportEndDateFilterSelected) {
                        NProgress.start();
                        refreshDisbursementSummaryReportFlexGrid();
                    } else {
                        isCboDisbursementSummaryReportEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/disbursementSummaryReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnDisbursementSummaryReportDownloadCSV").prop("disabled", true);
                        $("#btnDisbursementSummaryReportPrintPDF").prop("disabled", true);
                    }

                    cboDisbursementSummaryReportCompanyFilter.dispose();
                    cboDisbursementSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboDisbursementSummaryReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnDisbursementSummaryReportDownloadCSV").prop("disabled", false);
                            $("#btnDisbursementSummaryReportPrintPDF").prop("disabled", false);
                            isCboDisbursementSummaryReportCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboDisbursementSummaryReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/disbursementSummaryReport/dropdown/list/branch/' + cboDisbursementSummaryReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnDisbursementSummaryReportDownloadCSV").prop("disabled", true);
                            $("#btnDisbursementSummaryReportPrintPDF").prop("disabled", true);
                        }

                        cboDisbursementSummaryReportBranchFilter.dispose();
                        cboDisbursementSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboDisbursementSummaryReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshDisbursementSummaryReportFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboDisbursementSummaryReportDisplayNumberOfRows.dispose();
            cboDisbursementSummaryReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboDisbursementSummaryReportDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboDisbursementSummaryReportDisplayNumberOfRows.selectedValue;
                        disbursementSummaryReportCollections.pageSize = parseInt(numberOfRows);
                        disbursementSummaryReportCollections.refresh();
                        disbursementSummaryReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboDisbursementSummaryReportCompanyFilterSelected) {
                createDisbursementSummaryReportFlexGrid();
            } else {
                refreshDisbursementSummaryReportFlexGrid();
            }
        }

        // ====================================
        // Get Disbursement Summary Report Data
        // ====================================
        function getDisbursementSummaryReportData() {
            var disbursementSummaryReports = new wijmo.collections.ObservableArray;
            if (cboDisbursementSummaryReportCompanyFilter.selectedValue != null) {
                if (cboDisbursementSummaryReportBranchFilter.selectedValue != null) {

                    var startDate = cboDisbursementSummaryReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboDisbursementSummaryReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboDisbursementSummaryReportCompanyFilter.selectedValue;
                    var branchId = cboDisbursementSummaryReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/disbursementSummaryReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var inpTotalAmount = 0;
                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/DisbursementDetail?id=" + results[i]["CVId"];

                                    var CVDateResult = new Date(results[i]["CVDate"])
                                    var CVDate = ('0' + (CVDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + CVDateResult.getDate()).slice(-2) + '-' + CVDateResult.getFullYear();

                                    var CheckDateResult = new Date(results[i]["CheckDate"])
                                    var CheckDate = ('0' + (CheckDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + CheckDateResult.getDate()).slice(-2) + '-' + CheckDateResult.getFullYear();

                                    disbursementSummaryReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 9.5px;'><i class='fa fa-edit'></i> Detail",
                                        CVId: results[i]["CVId"],
                                        Branch: results[i]["Branch"],
                                        CVNumber: results[i]["CVNumber"],
                                        CVDate: CVDate,
                                        Payee: results[i]["Payee"],
                                        Particulars: results[i]["Particulars"],
                                        Bank: results[i]["Bank"],
                                        CheckNumber: results[i]["CheckNumber"],
                                        CheckDate: CheckDate,
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    inpTotalAmount += results[i]["Amount"];
                                }
                            }

                            document.getElementById("inpTotalAmount").value = parseFloat(inpTotalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return disbursementSummaryReports;
        }

        // ============================================
        // Create Disbursement Summary Report Flex Grid
        // ============================================
        function createDisbursementSummaryReportFlexGrid() {
            disbursementSummaryReportCollections = new wijmo.collections.CollectionView(getDisbursementSummaryReportData());
            disbursementSummaryReportCollections.canFilter = true;
            disbursementSummaryReportCollections.pageSize = cboDisbursementSummaryReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpDisbursementSummaryReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementSummaryReportCollections.refresh();
            });

            disbursementSummaryReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CVNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Payee.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckNumber.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementSummaryReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateDisbursementSummaryReportNavigationButtons();
            });

            disbursementSummaryReportFlexGrid = new wijmo.grid.FlexGrid('#disbursementSummaryReportFlexGrid');
            disbursementSummaryReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "CV No.",
                        "binding": "CVNumber",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "CV Date",
                        "binding": "CVDate",
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "Payee",
                        "binding": "Payee",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Particulars",
                        "binding": "Particulars",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Bank",
                        "binding": "Bank",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Check No.",
                        "binding": "CheckNumber",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Check Date",
                        "binding": "CheckDate",
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: disbursementSummaryReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            disbursementSummaryReportFlexGrid.trackChanges = true;

            updateDisbursementSummaryReportNavigationButtons();

            btnDisbursementSummaryReportMoveToFirstPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToFirstPage();
                disbursementSummaryReportCurrentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateDisbursementSummaryReportNavigationButtons();
            });

            btnDisbursementSummaryReportMoveToPreviousPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToPreviousPage();
                disbursementSummaryReportCurrentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateDisbursementSummaryReportNavigationButtons();
            });

            btnDisbursementSummaryReportMoveToNextPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToNextPage();
                disbursementSummaryReportCurrentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateDisbursementSummaryReportNavigationButtons();
            });

            btnDisbursementSummaryReportMoveToLastPageGrid.addEventListener('click', function () {
                disbursementSummaryReportCollections.moveToLastPage();
                disbursementSummaryReportCurrentPageIndex = disbursementSummaryReportCollections.pageIndex + 1;
                updateDisbursementSummaryReportNavigationButtons();
            });
        }

        // =====================================================
        // Update Disbursement Summary Report Navigation Buttons
        // =====================================================
        function updateDisbursementSummaryReportNavigationButtons() {
            if (disbursementSummaryReportCollections.pageSize <= 0) {
                document.getElementById('btnDisbursementSummaryReportNaviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('btnDisbursementSummaryReportNaviagtionPageGrid').style.display = 'block';
            if (disbursementSummaryReportCollections.pageIndex === 0) {
                btnDisbursementSummaryReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnDisbursementSummaryReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnDisbursementSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnDisbursementSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (disbursementSummaryReportCollections.pageIndex === (disbursementSummaryReportCollections.pageCount - 1)) {
                btnDisbursementSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnDisbursementSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnDisbursementSummaryReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnDisbursementSummaryReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnDisbursementSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnDisbursementSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnDisbursementSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnDisbursementSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnDisbursementSummaryReportCurrentPageGrid.innerHTML = (disbursementSummaryReportCollections.pageIndex + 1) + ' / ' + disbursementSummaryReportCollections.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshDisbursementSummaryReportFlexGrid() {
            disbursementSummaryReportCollections = new wijmo.collections.CollectionView(getDisbursementSummaryReportData());
            disbursementSummaryReportCollections.canFilter = true;
            disbursementSummaryReportCollections.pageSize = cboDisbursementSummaryReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpDisbursementSummaryReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementSummaryReportCollections.refresh();
            });

            disbursementSummaryReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CVNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Payee.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckNumber.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementSummaryReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateDisbursementSummaryReportNavigationButtons();
            });

            disbursementSummaryReportFlexGrid.itemsSource = disbursementSummaryReportCollections;
            disbursementSummaryReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnDisbursementSummaryReportDownloadCSVOnclick() {
            var CSV = '';
            var disbursementSummaryReport = [];
            var fileName = 'DisbursementSummaryReport.CSV';

            disbursementSummaryReportCollections.moveToFirstPage();

            for (var p = 1; p <= disbursementSummaryReportCollections.pageCount; p++) {
                for (i = 0; i < disbursementSummaryReportCollections.items.length; i++) {
                    disbursementSummaryReport.push({
                        Branch: disbursementSummaryReportCollections.items[i].Branch,
                        CVNumber: "CV-" + disbursementSummaryReportCollections.items[i].CVNumber,
                        CVDate: disbursementSummaryReportCollections.items[i].CVDate,
                        Payee: disbursementSummaryReportCollections.items[i].Payee,
                        Particulars: disbursementSummaryReportCollections.items[i].Particulars,
                        Bank: disbursementSummaryReportCollections.items[i].Bank,
                        CheckNumber: disbursementSummaryReportCollections.items[i].CheckNumber,
                        CheckDate: disbursementSummaryReportCollections.items[i].CheckDate,
                        Amount: disbursementSummaryReportCollections.items[i].Amount,
                    });
                }

                disbursementSummaryReportCollections.moveToNextPage();
                if (p == disbursementSummaryReportCollections.pageCount) {
                    disbursementSummaryReportCollections.moveToPage(disbursementSummaryReportCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                CVNumber: "CV Number",
                CVDate: "CV Date",
                Payee: "Payee",
                Particulars: "Particulars",
                Bank: "Bank",
                CheckNumber: "Check Number",
                CheckDate: "Check Date",
                Amount: "Amount",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < disbursementSummaryReport.length; i++) {
                var row = '';
                for (var a in disbursementSummaryReport[i]) {
                    row += '"' + disbursementSummaryReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Download successful.");
            }
        }

