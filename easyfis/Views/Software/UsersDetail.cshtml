                            <dt>Form</dt>
                            <dd><div class="comboBox-wide" id="userForm_FormName"></div></dd>
                            <dt>Add</dt>
                            <dd><input type="checkbox" id="userForm_CanAdd" /></dd>
                            <dt>Edit</dt>
                            <dd><input type="checkbox" id="userForm_CanEdit" /></dd>
