<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Collection Summary Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Collection Summary Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpCollectionSummaryReportSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboCollectionSummaryReportDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnCollectionSummaryReportDownloadCSVOnclick()" id="btnCollectionSummaryReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnCollectionSummaryReportPrintPDFOnclick()" id="btnCollectionSummaryReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboCollectionSummaryReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboCollectionSummaryReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboCollectionSummaryReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboCollectionSummaryReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="collectionSummaryReportFlexGrid" class="grid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="btnCollectionSummaryReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionSummaryReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionSummaryReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCollectionSummaryReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionSummaryReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionSummaryReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpCollectionSummaryReportTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboCollectionSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboCollectionSummaryReportStartDateFilter');
        var cboCollectionSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboCollectionSummaryReportEndDateFilter');
        var isCboCollectionSummaryReportStartDateFilterSelected = false;
        var isCboCollectionSummaryReportEndDateFilterSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboCollectionSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboCollectionSummaryReportCompanyFilter');
        var cboCollectionSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboCollectionSummaryReportBranchFilter');
        var isCboCollectionSummaryReportCompanyFilterSelected = false;

        // =============================
        // Collection View and Flex Grid
        // =============================
        var collectionSummaryReportCollectionView;
        var collectionSummaryReportFlexGrid;
        var cboCollectionSummaryReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboCollectionSummaryReportDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnCollectionSummaryReportMoveToFirstPageGrid = document.getElementById('btnCollectionSummaryReportMoveToFirstPageGrid');
        var btnCollectionSummaryReportMoveToPreviousPageGrid = document.getElementById('btnCollectionSummaryReportMoveToPreviousPageGrid');
        var btnCollectionSummaryReportMoveToNextPageGrid = document.getElementById('btnCollectionSummaryReportMoveToNextPageGrid');
        var btnCollectionSummaryReportMoveToLastPageGrid = document.getElementById('btnCollectionSummaryReportMoveToLastPageGrid');
        var btnCollectionSummaryReportCurrentPageGrid = document.getElementById('btnCollectionSummaryReportCurrentPageGrid');
        var collectionSummaryReportCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboCollectionSummaryReportStartDateFilter.dispose();
            cboCollectionSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboCollectionSummaryReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboCollectionSummaryReportStartDateFilterSelected) {
                        NProgress.start();
                        refreshCollectionSummaryReportFlexGrid();
                    } else {
                        isCboCollectionSummaryReportStartDateFilterSelected = false;
                    }
                }
            });

            cboCollectionSummaryReportEndDateFilter.dispose();
            cboCollectionSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboCollectionSummaryReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboCollectionSummaryReportEndDateFilterSelected) {
                        NProgress.start();
                        refreshCollectionSummaryReportFlexGrid();
                    } else {
                        isCboCollectionSummaryReportEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/collectionSummaryReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnCollectionSummaryReportDownloadCSV").prop("disabled", true);
                        $("#btnCollectionSummaryReportPrintPDF").prop("disabled", true);
                    }

                    cboCollectionSummaryReportCompanyFilter.dispose();
                    cboCollectionSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboCollectionSummaryReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnCollectionSummaryReportDownloadCSV").prop("disabled", false);
                            $("#btnCollectionSummaryReportPrintPDF").prop("disabled", false);
                            isCboCollectionSummaryReportCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboCollectionSummaryReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/collectionSummaryReport/dropdown/list/branch/' + cboCollectionSummaryReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnCollectionSummaryReportDownloadCSV").prop("disabled", true);
                            $("#btnCollectionSummaryReportPrintPDF").prop("disabled", true);
                        }

                        cboCollectionSummaryReportBranchFilter.dispose();
                        cboCollectionSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboCollectionSummaryReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshCollectionSummaryReportFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboCollectionSummaryReportDisplayNumberOfRows.dispose();
            cboCollectionSummaryReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboCollectionSummaryReportDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboCollectionSummaryReportDisplayNumberOfRows.selectedValue;
                        collectionSummaryReportCollectionView.pageSize = parseInt(numberOfRows);
                        collectionSummaryReportCollectionView.refresh();
                        collectionSummaryReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboCollectionSummaryReportCompanyFilterSelected) {
                createCollectionSummaryReportFlexGrid();
            } else {
                refreshCollectionSummaryReportFlexGrid();
            }
        }

        // ==================================
        // Get Collection Summary Report Data
        // ==================================
        function getCollectionSummaryReportData() {
            var collectionSummaryReports = new wijmo.collections.ObservableArray;
            if (cboCollectionSummaryReportCompanyFilter.selectedValue != null) {
                if (cboCollectionSummaryReportBranchFilter.selectedValue != null) {

                    var startDate = cboCollectionSummaryReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboCollectionSummaryReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboCollectionSummaryReportCompanyFilter.selectedValue;
                    var branchId = cboCollectionSummaryReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/collectionSummaryReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var inpCollectionSummaryReportTotalAmount = 0;
                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/CollectionDetail?id=" + results[i]["ORId"];

                                    var ORDateResult = new Date(results[i]["ORDate"])
                                    var ORDate = ('0' + (ORDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + ORDateResult.getDate()).slice(-2) + '-' + ORDateResult.getFullYear();

                                    collectionSummaryReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block'><i class='fa fa-edit'></i> Detail",
                                        ORId: results[i]["ORId"],
                                        Branch: results[i]["Branch"],
                                        ORNumber: results[i]["ORNumber"],
                                        ORDate: ORDate,
                                        Customer: results[i]["Customer"],
                                        ManualORNumber: results[i]["ManualORNumber"],
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    inpCollectionSummaryReportTotalAmount += results[i]["Amount"];
                                }
                            }

                            document.getElementById("inpCollectionSummaryReportTotalAmount").value = parseFloat(inpCollectionSummaryReportTotalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpCollectionSummaryReportTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpCollectionSummaryReportTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return collectionSummaryReports;
        }

        // ==========================================
        // Create Collection Summary Report Flex Grid
        // ==========================================
        function createCollectionSummaryReportFlexGrid() {
            collectionSummaryReportCollectionView = new wijmo.collections.CollectionView(getCollectionSummaryReportData());
            collectionSummaryReportCollectionView.canFilter = true;
            collectionSummaryReportCollectionView.pageSize = cboCollectionSummaryReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpCollectionSummaryReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                collectionSummaryReportCollectionView.refresh();
            });

            collectionSummaryReportCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ManualORNumber.toLowerCase().indexOf(filterText) > -1);
            }

            collectionSummaryReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateCollectionSummaryReportNavigationButtons();
            });

            collectionSummaryReportFlexGrid = new wijmo.grid.FlexGrid('#collectionSummaryReportFlexGrid');
            collectionSummaryReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "OR No.",
                        "binding": "ORNumber",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": 100
                    },
                    {
                        "header": "OR Date ",
                        "binding": "ORDate",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "5*"
                    },
                    {
                        "header": "Manual OR No.",
                        "binding": "ManualORNumber",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "2*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: collectionSummaryReportCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            collectionSummaryReportFlexGrid.trackChanges = true;

            updateCollectionSummaryReportNavigationButtons();

            btnCollectionSummaryReportMoveToFirstPageGrid.addEventListener('click', function () {
                collectionSummaryReportCollectionView.moveToFirstPage();
                collectionSummaryReportCurrentPageIndex = collectionSummaryReportCollectionView.pageIndex + 1;
                updateCollectionSummaryReportNavigationButtons();
            });

            btnCollectionSummaryReportMoveToPreviousPageGrid.addEventListener('click', function () {
                collectionSummaryReportCollectionView.moveToPreviousPage();
                collectionSummaryReportCurrentPageIndex = collectionSummaryReportCollectionView.pageIndex + 1;
                updateCollectionSummaryReportNavigationButtons();
            });

            btnCollectionSummaryReportMoveToNextPageGrid.addEventListener('click', function () {
                collectionSummaryReportCollectionView.moveToNextPage();
                collectionSummaryReportCurrentPageIndex = collectionSummaryReportCollectionView.pageIndex + 1;
                updateCollectionSummaryReportNavigationButtons();
            });

            btnCollectionSummaryReportMoveToLastPageGrid.addEventListener('click', function () {
                collectionSummaryReportCollectionView.moveToLastPage();
                collectionSummaryReportCurrentPageIndex = collectionSummaryReportCollectionView.pageIndex + 1;
                updateCollectionSummaryReportNavigationButtons();
            });
        }

        // ===================================================
        // Update Collection Summary Report Navigation Buttons
        // ===================================================
        function updateCollectionSummaryReportNavigationButtons() {
            if (collectionSummaryReportCollectionView.pageSize <= 0) {
                document.getElementById('btnCollectionSummaryReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('btnCollectionSummaryReportNavigationPageGrid').style.display = 'block';
            if (collectionSummaryReportCollectionView.pageIndex === 0) {
                btnCollectionSummaryReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnCollectionSummaryReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnCollectionSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnCollectionSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (collectionSummaryReportCollectionView.pageIndex === (collectionSummaryReportCollectionView.pageCount - 1)) {
                btnCollectionSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnCollectionSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnCollectionSummaryReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnCollectionSummaryReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnCollectionSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnCollectionSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnCollectionSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnCollectionSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnCollectionSummaryReportCurrentPageGrid.innerHTML = (collectionSummaryReportCollectionView.pageIndex + 1) + ' / ' + collectionSummaryReportCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshCollectionSummaryReportFlexGrid() {
            collectionSummaryReportCollectionView = new wijmo.collections.CollectionView(getCollectionSummaryReportData());
            collectionSummaryReportCollectionView.canFilter = true;
            collectionSummaryReportCollectionView.pageSize = cboCollectionSummaryReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpCollectionSummaryReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                collectionSummaryReportCollectionView.refresh();
            });

            collectionSummaryReportCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ManualORNumber.toLowerCase().indexOf(filterText) > -1);
            }

            collectionSummaryReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateCollectionSummaryReportNavigationButtons();
            });

            collectionSummaryReportFlexGrid.itemsSource = collectionSummaryReportCollectionView;
            collectionSummaryReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnCollectionSummaryReportDownloadCSVOnclick() {
            var CSV = '';
            var collectionSummaryReport = [];
            var fileName = 'CollectionSummaryReport.CSV';

            collectionSummaryReportCollectionView.moveToFirstPage();

            for (var p = 1; p <= collectionSummaryReportCollectionView.pageCount; p++) {
                for (i = 0; i < collectionSummaryReportCollectionView.items.length; i++) {

                    collectionSummaryReport.push({
                        Branch: collectionSummaryReportCollectionView.items[i].Branch,
                        ORNumber: "OR-" + collectionSummaryReportCollectionView.items[i].ORNumber,
                        ORDate: collectionSummaryReportCollectionView.items[i].ORDate,
                        Customer: collectionSummaryReportCollectionView.items[i].Customer,
                        ManualORNumber: collectionSummaryReportCollectionView.items[i].ManualORNumber,
                        Amount: collectionSummaryReportCollectionView.items[i].Amount,
                    });
                }

                collectionSummaryReportCollectionView.moveToNextPage();
                if (p == collectionSummaryReportCollectionView.pageCount) {
                    collectionSummaryReportCollectionView.moveToPage(collectionSummaryReportCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                ORNumber: "OR Number",
                ORDate: "OR Date",
                Customer: "Customer",
                ManualORNumber: "Manual OR Number",
                Amount: "Amount",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < collectionSummaryReport.length; i++) {
                var row = '';
                for (var a in collectionSummaryReport[i]) {
                    row += '"' + collectionSummaryReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

        // =========
        // Print PDF
        // =========
        function btnCollectionSummaryReportPrintPDFOnclick() {
            if (cboCollectionSummaryReportCompanyFilter.selectedValue != null) {
                if (cboCollectionSummaryReportBranchFilter.selectedValue != null) {
                    var startDate = cboCollectionSummaryReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboCollectionSummaryReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
