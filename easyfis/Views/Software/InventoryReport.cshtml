        function btnInventoryReportCSVOnclick() {
            var CSV = '';
            var inventoryReport = [];
            var fileName = 'InventoryReport.CSV';

            inventoryReportCollections.moveToFirstPage();

            for (var p = 1; p <= inventoryReportCollections.pageCount; p++) {
                for (i = 0; i < inventoryReportCollections.items.length; i++) {
                    inventoryReport.push({
                        Branch: inventoryReportCollections.items[i].Branch,
                        InventoryCode: inventoryReportCollections.items[i].InventoryCode,
                        ManualArticleCode: inventoryReportCollections.items[i].ManualArticleCode,
                        ManualArticleOldCode: inventoryReportCollections.items[i].ManualArticleOldCode,
                        Article: inventoryReportCollections.items[i].ArticleForCSV,
                        Category: inventoryReportCollections.items[i].Category,
                        Unit: inventoryReportCollections.items[i].Unit,
                        Cost: inventoryReportCollections.items[i].Cost,
                        BegQuantity: inventoryReportCollections.items[i].BegQuantity,
                        InQuantity: inventoryReportCollections.items[i].InQuantity,
                        OutQuantity: inventoryReportCollections.items[i].OutQuantity,
                        EndQuantity: inventoryReportCollections.items[i].EndQuantity,
                        TotalAmount: inventoryReportCollections.items[i].TotalAmount
                    });
                }

                inventoryReportCollections.moveToNextPage();
                if (p == inventoryReportCollections.pageCount) {
                    inventoryReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                InventoryCode: "Inventory Code",
                ManualArticleCode: "Barcode",
                ManualArticleOldCode: "SKU Code",
                Article: "Item",
                ItemGroup: "Item Group",
                Unit: "Unit",
                Cost: "Cost",
                BegQuantity: "Beg Quantity",
                InQuantity: "In Quantity",
                OutQuantity: "Out Quantity",
                EndQuantity: "End Quantity",
                TotalAmount: "Total Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < inventoryReport.length; i++) {
                var row = '';
                for (var a in inventoryReport[i]) {
                    row += '"' + inventoryReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

