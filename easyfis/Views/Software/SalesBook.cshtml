        // ==============================
        // Download Sales Book Report CSV
        // ==============================
        function btnSalesBookDownloadCSVOnclick() {
            var CSV = '';
            var salesBook = [];
            var fileName = 'SalesBook.CSV';

            salesBookCollectionView.moveToFirstPage();

            for (var p = 1; p <= salesBookCollectionView.pageCount; p++) {
                for (i = 0; i < salesBookCollectionView.items.length; i++) {
                    salesBook.push({
                        DocumentReference: salesBookCollectionView.items[i].DocumentReference,
                        ManualDocumentCode: salesBookCollectionView.items[i].ManualDocumentCode,
                        AccountCode: salesBookCollectionView.items[i].AccountCode,
                        Account: salesBookCollectionView.items[i].Account,
                        Article: salesBookCollectionView.items[i].Article,
                        DebitAmount: salesBookCollectionView.items[i].DebitAmount,
                        CreditAmount: salesBookCollectionView.items[i].CreditAmount,
                        Balance: salesBookCollectionView.items[i].Balance,
                    });
                }

                salesBookCollectionView.moveToNextPage();
                if (p == salesBookCollectionView.pageCount) {
                    salesBookCollectionView.moveToPage(salesBookCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                DocumentReference: "Document Reference",
                ManualDocumentCode: "Manual SI Number",
                AccountCode: "Account Code",
                Account: "Account",
                Article: "Article",
                DebitAmount: "Debit Amount",
                CreditAmount: "Credit Amount",
                Balance: "Balance",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < salesBook.length; i++) {
                var row = '';
                for (var a in salesBook[i]) {
                    row += '"' + salesBook[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

