<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Purchase Detail Report</title>
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Purchase Detail Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="purchaseDetailReportFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboPurchaseDetailReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnPurchaseOrderDetailReportCSVOnclick()" id="btnPurchaseOrderDetailReportCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnPurchaseOrderDetailReportPDFOnclick()" id="btnPurchaseOrderDetailReportPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsPayable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboPurchaseDetailReportStartDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboPurchaseDetailReportEndDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboPurchaseDetailReportCompany"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboPurchaseDetailReportBranch"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="purchaseDetailReportFlexGrid" style="font-size: 12px;"></div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="purchaseDetailReportNaviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnPurchaseDetailReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnPurchaseDetailReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnPurchaseDetailReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnPurchaseDetailReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnPurchaseDetailReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboPurchaseDetailReportStartDate = new wijmo.input.InputDate('#cboPurchaseDetailReportStartDate');
        var cboPurchaseDetailReportEndDate = new wijmo.input.InputDate('#cboPurchaseDetailReportEndDate');
        var isPurchaseDetailReportStartDateSelected = false;
        var isPurchaseDetailReportEndDateSelected = false;

        var cboPurchaseDetailReportCompany = new wijmo.input.ComboBox('#cboPurchaseDetailReportCompany');
        var cboPurchaseDetailReportBranch = new wijmo.input.ComboBox('#cboPurchaseDetailReportBranch');
        var isPurchaseDetailReportCompanySelected = false;

        var purchaseDetailReportCollections;
        var purchaseDetailReportFlexGrid;

        var cboPurchaseDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboPurchaseDetailReportShowNumberOfRows');

        var btnPurchaseDetailReportMoveToFirstPageGrid = document.getElementById('btnPurchaseDetailReportMoveToFirstPageGrid');
        var btnPurchaseDetailReportMoveToPreviousPageGrid = document.getElementById('btnPurchaseDetailReportMoveToPreviousPageGrid');
        var btnPurchaseDetailReportMoveToNextPageGrid = document.getElementById('btnPurchaseDetailReportMoveToNextPageGrid');
        var btnPurchaseDetailReportMoveToLastPageGrid = document.getElementById('btnPurchaseDetailReportMoveToLastPageGrid');
        var btnPurchaseDetailReportCurrentPageGrid = document.getElementById('btnPurchaseDetailReportCurrentPageGrid');

        var currentPageIndex = 0;

        // ===================
        // Get Parameter Value
        // ===================
        function getURLParameter(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ============
        // Date Filters
        // ============
        function purchaseOrderDetailReportDateFilters() {
            NProgress.start();

            cboPurchaseDetailReportStartDate.dispose();
            cboPurchaseDetailReportStartDate = new wijmo.input.InputDate('#cboPurchaseDetailReportStartDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameter("StartDate")),
                onValueChanged: function () {
                    if (!isPurchaseDetailReportStartDateSelected) {
                        NProgress.start();
                        refreshPurchaseOrderDetailReportFlexGrid();
                    } else {
                        isPurchaseDetailReportStartDateSelected = false;
                    }
                }
            });

            cboPurchaseDetailReportEndDate.dispose();
            cboPurchaseDetailReportEndDate = new wijmo.input.InputDate('#cboPurchaseDetailReportEndDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameter("EndDate")),
                onValueChanged: function () {
                    if (!isPurchaseDetailReportEndDateSelected) {
                        NProgress.start();
                        refreshPurchaseOrderDetailReportFlexGrid();
                    } else {
                        isPurchaseDetailReportEndDateSelected = false;
                    }
                }
            });

            createCboCompany();
        }

        // ==============
        // Company Filter
        // ==============
        function createCboCompany() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/purchaseDetailReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"],
                                Address: results[i]["Address"],
                                ContactNumber: results[i]["ContactNumber"],
                                TaxNumber: results[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnPurchaseOrderDetailReportCSV").prop("disabled", true);
                        $("#btnPurchaseOrderDetailReportPDF").prop("disabled", true);
                    }

                    cboPurchaseDetailReportCompany.dispose();
                    cboPurchaseDetailReportCompany = new wijmo.input.ComboBox('#cboPurchaseDetailReportCompany', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameter("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnPurchaseOrderDetailReportCSV").prop("disabled", false);
                            $("#btnPurchaseOrderDetailReportPDF").prop("disabled", false);
                            isPurchaseDetailReportCompanySelected = true;
                            createCboBranch();
                        }
                    });

                    createCboBranch();
                }
            });
        }

        // =============
        // Branch Filter
        // =============
        function createCboBranch() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboPurchaseDetailReportCompany.selectedValue != null) {
                $.ajax({
                    url: '/api/purchaseDetailReport/dropdown/list/branch/' + cboPurchaseDetailReportCompany.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    CompanyId: results[i]["CompanyId"],
                                    Branch: results[i]["Branch"],
                                    Address: results[i]["Address"],
                                    ContactNumber: results[i]["ContactNumber"],
                                    TaxNumber: results[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnPurchaseOrderDetailReportCSV").prop("disabled", true);
                            $("#btnPurchaseOrderDetailReportPDF").prop("disabled", true);
                        }

                        cboPurchaseDetailReportBranch.dispose();
                        cboPurchaseDetailReportBranch = new wijmo.input.ComboBox('#cboPurchaseDetailReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameter("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshPurchaseOrderDetailReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===============
        // Show Rows Table
        // ===============
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboPurchaseDetailReportShowNumberOfRows.dispose();
            cboPurchaseDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboPurchaseDetailReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboPurchaseDetailReportShowNumberOfRows.selectedValue;
                        purchaseDetailReportCollections.pageSize = parseInt(numberOfRows);
                        purchaseDetailReportCollections.refresh();
                        purchaseDetailReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isPurchaseDetailReportCompanySelected) {
                createPurchaseOrderDetailReportFlexGrid();
            } else {
                refreshPurchaseOrderDetailReportFlexGrid();
            }
        }

        // =========================
        // Update Navigation Buttons
        // =========================
        function updateNavigateButtonsItems() {
            if (purchaseDetailReportCollections.pageSize <= 0) {
                document.getElementById('purchaseDetailReportNaviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('purchaseDetailReportNaviagtionPageGrid').style.display = 'block';
            if (purchaseDetailReportCollections.pageIndex === 0) {
                btnPurchaseDetailReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPurchaseDetailReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnPurchaseDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnPurchaseDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (purchaseDetailReportCollections.pageIndex === (purchaseDetailReportCollections.pageCount - 1)) {
                btnPurchaseDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnPurchaseDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnPurchaseDetailReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnPurchaseDetailReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnPurchaseDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnPurchaseDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnPurchaseDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnPurchaseDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnPurchaseDetailReportCurrentPageGrid.innerHTML = (purchaseDetailReportCollections.pageIndex + 1) + ' / ' + purchaseDetailReportCollections.pageCount;
        }

        // ==============================
        // Get Purchase Order Detail Data
        // ==============================
        function getPurchaseDetailReport() {
            var purchaseDetailReports = new wijmo.collections.ObservableArray;
            if (cboPurchaseDetailReportCompany.selectedValue != null) {
                if (cboPurchaseDetailReportBranch.selectedValue != null) {
                    var startDate = cboPurchaseDetailReportStartDate.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboPurchaseDetailReportEndDate.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboPurchaseDetailReportCompany.selectedValue;
                    var branchId = cboPurchaseDetailReportBranch.selectedValue;

                    $.ajax({
                        url: '/api/purchaseDetailReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var totalAmount = 0;

                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/PurchaseOrderDetail?id=" + results[i]["POId"];

                                    var PODateResult = new Date(results[i]["PODate"])
                                    var PODate = ('0' + (PODateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + PODateResult.getDate()).slice(-2) + '-' + PODateResult.getFullYear();

                                    purchaseDetailReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 9.5px;'><i class='fa fa-edit'></i> Detail",
                                        Branch: results[i]["Branch"],
                                        PONumber: results[i]["PONumber"],
                                        PODate: PODate,
                                        Supplier: results[i]["Supplier"],
                                        Remarks: results[i]["Remarks"],
                                        Quantity: results[i]["Quantity"],
                                        QuantityDisplay: parseFloat(results[i]["Quantity"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Unit: results[i]["Unit"],
                                        ItemCode: results[i]["ItemCode"],
                                        ItemManualArticleOldCode: results[i]["ItemManualArticleOldCode"],
                                        Item: results[i]["Item"],
                                        Cost: results[i]["Cost"],
                                        CostDisplay: parseFloat(results[i]["Cost"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    totalAmount += results[i]["Amount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return purchaseDetailReports;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshPurchaseOrderDetailReportFlexGrid() {
            purchaseDetailReportCollections = new wijmo.collections.CollectionView(getPurchaseDetailReport());
            purchaseDetailReportCollections.canFilter = true;
            purchaseDetailReportCollections.pageSize = cboPurchaseDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#purchaseDetailReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                purchaseDetailReportCollections.refresh();
            });

            purchaseDetailReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.PONumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Supplier.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemManualArticleOldCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1);

            }

            purchaseDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            purchaseDetailReportFlexGrid.itemsSource = purchaseDetailReportCollections;
            purchaseDetailReportFlexGrid.trackChanges = true;
        }

        // =========
        // Flex Grid
        // =========
        function createPurchaseOrderDetailReportFlexGrid() {
            purchaseDetailReportCollections = new wijmo.collections.CollectionView(getPurchaseDetailReport());
            purchaseDetailReportCollections.canFilter = true;
            purchaseDetailReportCollections.pageSize = cboPurchaseDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#purchaseDetailReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                purchaseDetailReportCollections.refresh();
            });

            purchaseDetailReportCollections.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.PONumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Supplier.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemManualArticleOldCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1);

            }

            purchaseDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            purchaseDetailReportFlexGrid = new wijmo.grid.FlexGrid('#purchaseDetailReportFlexGrid');
            purchaseDetailReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "PO No.",
                        "binding": "PONumber",
                        "allowSorting": true,
                        "width": 100
                    },
                    {
                        "header": "PO Date",
                        "binding": "PODate",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Supplier",
                        "binding": "Supplier",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Remarks",
                        "binding": "Remarks",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Quantity",
                        "binding": "QuantityDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Barcode",
                        "binding": "ItemCode",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "SKU Code",
                        "binding": "ItemManualArticleOldCode",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Item",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Unit",
                        "binding": "Unit",
                        "allowSorting": true,
                        "width": "0.7*"
                    },
                    {
                        "header": "Cost",
                        "binding": "CostDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: purchaseDetailReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            purchaseDetailReportFlexGrid.trackChanges = true;

            updateNavigateButtonsItems();

            btnPurchaseDetailReportMoveToFirstPageGrid.addEventListener('click', function () {
                purchaseDetailReportCollections.moveToFirstPage();
                currentPageIndex = purchaseDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPurchaseDetailReportMoveToPreviousPageGrid.addEventListener('click', function () {
                purchaseDetailReportCollections.moveToPreviousPage();
                currentPageIndex = purchaseDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPurchaseDetailReportMoveToNextPageGrid.addEventListener('click', function () {
                purchaseDetailReportCollections.moveToNextPage();
                currentPageIndex = purchaseDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPurchaseDetailReportMoveToLastPageGrid.addEventListener('click', function () {
                purchaseDetailReportCollections.moveToLastPage();
                currentPageIndex = purchaseDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });
        }

        // ============
        // Download CSV
        // ============
        function btnPurchaseOrderDetailReportCSVOnclick() {
            var CSV = '';
            var purchaseDetailReport = [];
            var fileName = 'PurchaseDetailReport.CSV';

            purchaseDetailReportCollections.moveToFirstPage();

            for (var p = 1; p <= purchaseDetailReportCollections.pageCount; p++) {
                for (i = 0; i < purchaseDetailReportCollections.items.length; i++) {
                    purchaseDetailReport.push({
                        Branch: purchaseDetailReportCollections.items[i].Branch,
                        PONumber: "PO-" + purchaseDetailReportCollections.items[i].PONumber,
                        PODate: purchaseDetailReportCollections.items[i].PODate,
                        Supplier: purchaseDetailReportCollections.items[i].Supplier,
                        Remarks: purchaseDetailReportCollections.items[i].Remarks,
                        Quantity: purchaseDetailReportCollections.items[i].Quantity,
                        Item: purchaseDetailReportCollections.items[i].Item,
                        Unit: purchaseDetailReportCollections.items[i].Unit,
                        Cost: purchaseDetailReportCollections.items[i].Cost,
                        Amount: purchaseDetailReportCollections.items[i].Amount,
                    });
                }

                purchaseDetailReportCollections.moveToNextPage();
                if (p == purchaseDetailReportCollections.pageCount) {
                    purchaseDetailReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                PONumber: "PO Number",
                PODate: "PO Date",
                Supplier: "Supplier",
                Remarks: "Remarks",
                Quantity: "Quantity",
                Item: "Item",
                Unit: "Unit",
                Cost: "Cost",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < purchaseDetailReport.length; i++) {
                var row = '';
                for (var a in purchaseDetailReport[i]) {
                    row += '"' + purchaseDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

