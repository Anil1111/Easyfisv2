<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Stock In Detail Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Stock In Detail Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpStockInDetailReportFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboStockInDetailReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnStockInDetailReportDownloadCSVOnclick()" id="btnStockInDetailReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnStockInDetailReportPDFOnclick()" id="btnStockInDetailReportPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboStockInDetailReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboStockInDetailReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboStockInDetailReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboStockInDetailReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="stockInDetailReportFlexGrid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="stockInDetailReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnStockInDetailReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnStockInDetailReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnStockInDetailReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnStockInDetailReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnStockInDetailReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboStockInDetailReportStartDateFilter = new wijmo.input.InputDate('#cboStockInDetailReportStartDateFilter');
        var cboStockInDetailReportEndDateFilter = new wijmo.input.InputDate('#cboStockInDetailReportEndDateFilter');
        var isStockInDetailReportStartDateSelected = false;
        var isStockInDetailReportEndDateSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboStockInDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboStockInDetailReportCompanyFilter');
        var cboStockInDetailReportBranchFilter = new wijmo.input.ComboBox('#cboStockInDetailReportBranchFilter');
        var isCboStockInDetailReportCompanySelected = false;

        // =============================
        // Collection View and Flex Grid
        // =============================
        var stockInDetailReportCollectionView;
        var stockInDetailReportFlexGrid;
        var cboStockInDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboStockInDetailReportShowNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnStockInDetailReportMoveToFirstPageGrid = document.getElementById('btnStockInDetailReportMoveToFirstPageGrid');
        var btnStockInDetailReportMoveToPreviousPageGrid = document.getElementById('btnStockInDetailReportMoveToPreviousPageGrid');
        var btnStockInDetailReportMoveToNextPageGrid = document.getElementById('btnStockInDetailReportMoveToNextPageGrid');
        var btnStockInDetailReportMoveToLastPageGrid = document.getElementById('btnStockInDetailReportMoveToLastPageGrid');
        var btnStockInDetailReportCurrentPageGrid = document.getElementById('btnStockInDetailReportCurrentPageGrid');
        var currentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboStockInDetailReportStartDateFilter.dispose();
            cboStockInDetailReportStartDateFilter = new wijmo.input.InputDate('#cboStockInDetailReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isStockInDetailReportStartDateSelected) {
                        NProgress.start();
                        refreshStockInDetailReportFlexGrid();
                    } else {
                        isStockInDetailReportStartDateSelected = false;
                    }
                }
            });

            cboStockInDetailReportEndDateFilter.dispose();
            cboStockInDetailReportEndDateFilter = new wijmo.input.InputDate('#cboStockInDetailReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isStockInDetailReportEndDateSelected) {
                        NProgress.start();
                        refreshStockInDetailReportFlexGrid();
                    } else {
                        isStockInDetailReportEndDateSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/stockInDetailReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnStockInDetailReportDownloadCSV").prop("disabled", true);
                        $("#btnStockInDetailReportPDF").prop("disabled", true);
                    }

                    cboStockInDetailReportCompanyFilter.dispose();
                    cboStockInDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboStockInDetailReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnStockInDetailReportDownloadCSV").prop("disabled", false);
                            $("#btnStockInDetailReportPDF").prop("disabled", false);
                            isCboStockInDetailReportCompanySelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboStockInDetailReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/stockInDetailReport/dropdown/list/branch/' + cboStockInDetailReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    Branch: branchResults[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnStockInDetailReportDownloadCSV").prop("disabled", true);
                            $("#btnStockInDetailReportPDF").prop("disabled", true);
                        }

                        cboStockInDetailReportBranchFilter.dispose();
                        cboStockInDetailReportBranchFilter = new wijmo.input.ComboBox('#cboStockInDetailReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshStockInDetailReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboStockInDetailReportShowNumberOfRows.dispose();
            cboStockInDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboStockInDetailReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboStockInDetailReportShowNumberOfRows.selectedValue;
                        stockInDetailReportCollectionView.pageSize = parseInt(numberOfRows);
                        stockInDetailReportCollectionView.refresh();
                        stockInDetailReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboStockInDetailReportCompanySelected) {
                createStockInDetailReportFlexGrid();
            } else {
                refreshStockInDetailReportFlexGrid();
            }
        }

        // ============================
        // Get StockIn Detail Report Data
        // ============================
        function getStockInDetailReportData() {
            var stockInDetailReports = new wijmo.collections.ObservableArray;
            if (cboStockInDetailReportCompanyFilter.selectedValue != null) {
                if (cboStockInDetailReportBranchFilter.selectedValue != null) {

                    var startDate = cboStockInDetailReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboStockInDetailReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboStockInDetailReportCompanyFilter.selectedValue;
                    var branchId = cboStockInDetailReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/stockInDetailReport/list/' + startDate + '/' + endDate + '/' + +companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (stockInDetailReportResults) {
                            var totalAmount = 0;
                            if (stockInDetailReportResults.length > 0) {
                                for (i = 0; i < stockInDetailReportResults.length; i++) {
                                    var docLink = "/Software/StockInDetail?id=" + stockInDetailReportResults[i]["INId"];

                                    var INDateResult = new Date(stockInDetailReportResults[i]["INDate"])
                                    var INDate = ('0' + (INDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + INDateResult.getDate()).slice(-2) + '-' + INDateResult.getFullYear();

                                    stockInDetailReports.push({
                                        INId: stockInDetailReportResults[i]["INId"],
                                        Id: stockInDetailReportResults[i]["Id"],
                                        IN: stockInDetailReportResults[i]["IN"],
                                        INForCSV: "IN-" + stockInDetailReportResults[i]["IN"],
                                        INButton: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block'>" + stockInDetailReportResults[i]["IN"],
                                        INDate: INDate,
                                        ItemId: stockInDetailReportResults[i]["ItemId"],
                                        ItemCode: stockInDetailReportResults[i]["ItemCode"],
                                        ItemManualArticleOldCode: stockInDetailReportResults[i]["ItemManualArticleOldCode"],
                                        Item: stockInDetailReportResults[i]["Item"],
                                        Particulars: stockInDetailReportResults[i]["Particulars"],
                                        UnitId: stockInDetailReportResults[i]["UnitId"],
                                        Unit: stockInDetailReportResults[i]["Unit"],
                                        Quantity: stockInDetailReportResults[i]["Quantity"],
                                        QuantityDisplay: parseFloat(stockInDetailReportResults[i]["Quantity"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Cost: stockInDetailReportResults[i]["Cost"],
                                        CostDisplay: parseFloat(stockInDetailReportResults[i]["Cost"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Amount: stockInDetailReportResults[i]["Amount"],
                                        AmountDisplay: parseFloat(stockInDetailReportResults[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        BaseUnitId: stockInDetailReportResults[i]["BaseUnitId"],
                                        BaseQuantity: stockInDetailReportResults[i]["BaseQuantity"],
                                        BaseCost: stockInDetailReportResults[i]["BaseCost"],
                                    });

                                    totalAmount += stockInDetailReportResults[i]["Amount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return stockInDetailReports;
        }

        // ====================================
        // Create StockIn Detail Report Flex Grid
        // ====================================
        function createStockInDetailReportFlexGrid() {
            stockInDetailReportCollectionView = new wijmo.collections.CollectionView(getStockInDetailReportData());
            stockInDetailReportCollectionView.canFilter = true;
            stockInDetailReportCollectionView.pageSize = cboStockInDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpStockInDetailReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                stockInDetailReportCollectionView.refresh();
            });

            stockInDetailReportCollectionView.filter = function (item) {
                return !filterText || (item.IN.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemManualArticleOldCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1);
            }

            stockInDetailReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateStockInDetailReportNavigationButtons();
            });

            stockInDetailReportFlexGrid = new wijmo.grid.FlexGrid('#stockInDetailReportFlexGrid');
            stockInDetailReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "IN Number  ",
                        "binding": "INButton",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "IN Date",
                        "binding": "INDate",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Barcode",
                        "binding": "ItemCode",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "SKU Code",
                        "binding": "ItemManualArticleOldCode",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Item",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": "4*"
                    },
                    {
                        "header": "Quantity",
                        "binding": "QuantityDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    },
                    {
                        "header": "Unit",
                        "binding": "Unit",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Cost",
                        "binding": "CostDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: stockInDetailReportCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            stockInDetailReportFlexGrid.trackChanges = true;

            updateStockInDetailReportNavigationButtons();

            btnStockInDetailReportMoveToFirstPageGrid.addEventListener('click', function () {
                stockInDetailReportCollectionView.moveToFirstPage();
                currentPageIndex = stockInDetailReportCollectionView.pageIndex + 1;
                updateStockInDetailReportNavigationButtons();
            });

            btnStockInDetailReportMoveToPreviousPageGrid.addEventListener('click', function () {
                stockInDetailReportCollectionView.moveToPreviousPage();
                currentPageIndex = stockInDetailReportCollectionView.pageIndex + 1;
                updateStockInDetailReportNavigationButtons();
            });

            btnStockInDetailReportMoveToNextPageGrid.addEventListener('click', function () {
                stockInDetailReportCollectionView.moveToNextPage();
                currentPageIndex = stockInDetailReportCollectionView.pageIndex + 1;
                updateStockInDetailReportNavigationButtons();
            });

            btnStockInDetailReportMoveToLastPageGrid.addEventListener('click', function () {
                stockInDetailReportCollectionView.moveToLastPage();
                currentPageIndex = stockInDetailReportCollectionView.pageIndex + 1;
                updateStockInDetailReportNavigationButtons();
            });
        }

        // =============================================
        // Update StockIn Detail Report Navigation Buttons
        // =============================================
        function updateStockInDetailReportNavigationButtons() {
            if (stockInDetailReportCollectionView.pageSize <= 0) {
                document.getElementById('stockInDetailReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('stockInDetailReportNavigationPageGrid').style.display = 'block';
            if (stockInDetailReportCollectionView.pageIndex === 0) {
                btnStockInDetailReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnStockInDetailReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnStockInDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnStockInDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (stockInDetailReportCollectionView.pageIndex === (stockInDetailReportCollectionView.pageCount - 1)) {
                btnStockInDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnStockInDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnStockInDetailReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnStockInDetailReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnStockInDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnStockInDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnStockInDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnStockInDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnStockInDetailReportCurrentPageGrid.innerHTML = (stockInDetailReportCollectionView.pageIndex + 1) + ' / ' + stockInDetailReportCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshStockInDetailReportFlexGrid() {
            stockInDetailReportCollectionView = new wijmo.collections.CollectionView(getStockInDetailReportData());
            stockInDetailReportCollectionView.canFilter = true;
            stockInDetailReportCollectionView.pageSize = cboStockInDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpStockInDetailReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                stockInDetailReportCollectionView.refresh();
            });

            stockInDetailReportCollectionView.filter = function (item) {
                return !filterText || (item.IN.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemManualArticleOldCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1);
            }

            stockInDetailReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateStockInDetailReportNavigationButtons();
            });

            stockInDetailReportFlexGrid.itemsSource = stockInDetailReportCollectionView;
            stockInDetailReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnStockInDetailReportDownloadCSVOnclick() {
            var CSV = '';
            var stockInDetailReport = [];
            var fileName = 'StockInDetailReport.CSV';

            stockInDetailReportCollectionView.moveToFirstPage();

            for (var p = 1; p <= stockInDetailReportCollectionView.pageCount; p++) {
                for (i = 0; i < stockInDetailReportCollectionView.items.length; i++) {
                    var IsClose = stockInDetailReportCollectionView.items[i].IsClose;
                    var isPOClose = "Not Closed";
                    if (IsClose) {
                        isPOClose = "Closed"
                    }

                    stockInDetailReport.push({
                        INNumber: stockInDetailReportCollectionView.items[i].INForCSV,
                        INDate: stockInDetailReportCollectionView.items[i].INDate,
                        Item: stockInDetailReportCollectionView.items[i].Item,
                        Quantity: stockInDetailReportCollectionView.items[i].Quantity,
                        Barcode: stockInDetailReportCollectionView.items[i].ItemCode,
                        SKUCode: stockInDetailReportCollectionView.items[i].ItemManualArticleOldCode,
                        Unit: stockInDetailReportCollectionView.items[i].Unit,
                        Cost: stockInDetailReportCollectionView.items[i].Cost,
                        Amount: stockInDetailReportCollectionView.items[i].Amount,
                    });
                }

                stockInDetailReportCollectionView.moveToNextPage();
                if (p == stockInDetailReportCollectionView.pageCount) {
                    stockInDetailReportCollectionView.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                INNumber: "IN Number",
                INDate: "IN Date",
                Item: "Item",
                Quantity: "Quantity",
                Barcode: "Barcode",
                SKUCode: "SKU Code",
                Unit: "Unit",
                Cost: "Cost",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < stockInDetailReport.length; i++) {
                var row = '';
                for (var a in stockInDetailReport[i]) {
                    row += '"' + stockInDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

