<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Stock In Detail Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Stock In Detail Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboAPStockInDetailReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnStockInDetailReportCSVOnclick()" id="btnStockInDetailReportCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnStockInDetailReportPrintPDFOnclick()" id="btnStockInDetailReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/Inventory" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboAPStockInDetailReportStartDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboAPStockInDetailReportEndDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboAPStockInDetailReportCompany"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboAPStockInDetailReportBranch"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="stockInDetailReportGrid"></div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboAPStockInDetailReportStartDate = new wijmo.input.InputDate('#cboAPStockInDetailReportStartDate');
        var cboAPStockInDetailReportEndDate = new wijmo.input.InputDate('#cboAPStockInDetailReportEndDate');
        var isAPStockInDetailReportStartDateSelected = false;
        var isAPStockInDetailReportEndDateSelected = false;
        var cboAPStockInDetailReportCompany = new wijmo.input.ComboBox('#cboAPStockInDetailReportCompany');
        var cboAPStockInDetailReportBranch = new wijmo.input.ComboBox('#cboAPStockInDetailReportBranch');
        var stockInDetailReportCollections;
        var stockInDetailReportGrid;
        var isAPStockInDetailReportCompanySelected = false;
        var cboAPStockInDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboAPStockInDetailReportShowNumberOfRows');
        var btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
        var btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
        var btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
        var btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
        var btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');
        var currentPageIndex = 0;

        // ===================
        // Get Parameter Value
        // ===================
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ============
        // Date Filters
        // ============
        function stockInDetailReportDateFilters() {
            NProgress.start();
            cboAPStockInDetailReportStartDate.dispose();
            cboAPStockInDetailReportStartDate = new wijmo.input.InputDate('#cboAPStockInDetailReportStartDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("StartDate")),
                onValueChanged: function () {
                    if (!isAPStockInDetailReportStartDateSelected) {
                        NProgress.start();
                        refreshStockInDetailReportFlexGrid();
                    } else {
                        isAPStockInDetailReportStartDateSelected = false;
                    }
                }
            });

            cboAPStockInDetailReportEndDate.dispose();
            cboAPStockInDetailReportEndDate = new wijmo.input.InputDate('#cboAPStockInDetailReportEndDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("EndDate")),
                onValueChanged: function () {
                    if (!isAPStockInDetailReportEndDateSelected) {
                        NProgress.start();
                        refreshStockInDetailReportFlexGrid();
                    } else {
                        isAPStockInDetailReportEndDateSelected = false;
                    }
                }
            });

            createCboCompany();
        }

        // ==============
        // Company Filter
        // ==============
        function createCboCompany() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/company/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnStockInDetailReportCSV").prop("disabled", true);
                        $("#btnStockInDetailReportPrintPDF").prop("disabled", true);
                    }

                    cboAPStockInDetailReportCompany.dispose();
                    cboAPStockInDetailReportCompany = new wijmo.input.ComboBox('#cboAPStockInDetailReportCompany', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getParam("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnStockInDetailReportCSV").prop("disabled", false);
                            $("#btnStockInDetailReportPrintPDF").prop("disabled", false);
                            isAPStockInDetailReportCompanySelected = true;
                            createCboBranch();
                        }
                    });

                    createCboBranch();
                }
            });
        }

        // =============
        // Branch Filter
        // =============
        function createCboBranch() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboAPStockInDetailReportCompany.selectedValue != null) {
                $.ajax({
                    url: '/api/branch/byCompanyId/list/locked/' + cboAPStockInDetailReportCompany.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnStockInDetailReportCSV").prop("disabled", true);
                            $("#btnStockInDetailReportPrintPDF").prop("disabled", true);
                        }

                        cboAPStockInDetailReportBranch.dispose();
                        cboAPStockInDetailReportBranch = new wijmo.input.ComboBox('#cboAPStockInDetailReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getParam("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshStockInDetailReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===============
        // Show Rows Table
        // ===============
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboAPStockInDetailReportShowNumberOfRows.dispose();
            cboAPStockInDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboAPStockInDetailReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboAPStockInDetailReportShowNumberOfRows.selectedValue;
                        stockInDetailReportCollections.pageSize = parseInt(numberOfRows);
                        stockInDetailReportCollections.refresh();
                        stockInDetailReportGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isAPStockInDetailReportCompanySelected) {
                createStockInDetailReportFlexGrid();
            } else {
                refreshStockInDetailReportFlexGrid();
            }
        }

        // =========================
        // Update Navigation Buttons
        // =========================
        function updateNavigateButtonsItems() {
            if (stockInDetailReportCollections.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (stockInDetailReportCollections.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (stockInDetailReportCollections.pageIndex === (stockInDetailReportCollections.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (stockInDetailReportCollections.pageIndex + 1) + ' / ' + stockInDetailReportCollections.pageCount;
        }

        // ==================================
        // Get StockIn Order Detail Data
        // ==================================
        function getStockInDetailReport() {
            var stockInDetailReports = new wijmo.collections.ObservableArray;
            if (cboAPStockInDetailReportCompany.selectedValue != null) {
                if (cboAPStockInDetailReportBranch.selectedValue != null) {
                    var startDate = cboAPStockInDetailReportStartDate.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboAPStockInDetailReportEndDate.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboAPStockInDetailReportCompany.selectedValue;
                    var branchId = cboAPStockInDetailReportBranch.selectedValue;

                    $.ajax({
                        url: '/api/stockInDetailReport/list/' + startDate + '/' + endDate + '/' + +companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (stockInDetailReportResults) {
                            var totalAmount = 0;
                            if (stockInDetailReportResults.length > 0) {
                                for (i = 0; i < stockInDetailReportResults.length; i++) {
                                    var docLink = "/Software/StockInDetail?id=" + stockInDetailReportResults[i]["INId"];

                                    var INDateResult = new Date(stockInDetailReportResults[i]["INDate"])
                                    var INDate = ('0' + (INDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + INDateResult.getDate()).slice(-2) + '-' + INDateResult.getFullYear();

                                    stockInDetailReports.push({
                                        INId: stockInDetailReportResults[i]["INId"],
                                        Id: stockInDetailReportResults[i]["Id"],
                                        IN: stockInDetailReportResults[i]["IN"],
                                        INForCSV: "IN-" + stockInDetailReportResults[i]["IN"],
                                        INButton: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block'>" + stockInDetailReportResults[i]["IN"],
                                        INDate: INDate,
                                        ItemId: stockInDetailReportResults[i]["ItemId"],
                                        ItemCode: stockInDetailReportResults[i]["ItemCode"],
                                        Item: stockInDetailReportResults[i]["Item"],
                                        Particulars: stockInDetailReportResults[i]["Particulars"],
                                        UnitId: stockInDetailReportResults[i]["UnitId"],
                                        Unit: stockInDetailReportResults[i]["Unit"],
                                        Quantity: stockInDetailReportResults[i]["Quantity"],
                                        QuantityDisplay: parseFloat(stockInDetailReportResults[i]["Quantity"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Cost: stockInDetailReportResults[i]["Cost"],
                                        CostDisplay: parseFloat(stockInDetailReportResults[i]["Cost"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Amount: stockInDetailReportResults[i]["Amount"],
                                        AmountDisplay: parseFloat(stockInDetailReportResults[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        BaseUnitId: stockInDetailReportResults[i]["BaseUnitId"],
                                        BaseQuantity: stockInDetailReportResults[i]["BaseQuantity"],
                                        BaseCost: stockInDetailReportResults[i]["BaseCost"],
                                    });

                                    totalAmount += stockInDetailReportResults[i]["Amount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return stockInDetailReports;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshStockInDetailReportFlexGrid() {
            stockInDetailReportCollections = new wijmo.collections.CollectionView(getStockInDetailReport());
            stockInDetailReportCollections.canFilter = true;
            stockInDetailReportCollections.pageSize = cboAPStockInDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                stockInDetailReportCollections.refresh();

                if (stockInDetailReportCollections.items.length > 0) {
                    var totalAmount = 0;
                    for (var i = 0; i < stockInDetailReportCollections.items.length; i++) {
                        totalAmount += stockInDetailReportCollections.items[i].Amount;
                    }

                    document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            stockInDetailReportCollections.filter = function (item) {
                return !filterText || (item.IN.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1);
            }

            stockInDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            stockInDetailReportGrid.itemsSource = stockInDetailReportCollections;
            stockInDetailReportGrid.trackChanges = true;
        }

        // =========
        // Flex Grid
        // =========
        function createStockInDetailReportFlexGrid() {
            stockInDetailReportCollections = new wijmo.collections.CollectionView(getStockInDetailReport());
            stockInDetailReportCollections.canFilter = true;
            stockInDetailReportCollections.pageSize = cboAPStockInDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                stockInDetailReportCollections.refresh();

                if (stockInDetailReportCollections.items.length > 0) {
                    var totalAmount = 0;
                    for (var i = 0; i < stockInDetailReportCollections.items.length; i++) {
                        totalAmount += stockInDetailReportCollections.items[i].Amount;
                    }

                    document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            stockInDetailReportCollections.filter = function (item) {
                return !filterText || (item.IN.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1);
            }

            stockInDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            stockInDetailReportGrid = new wijmo.grid.FlexGrid('#stockInDetailReportGrid');
            stockInDetailReportGrid.initialize({
                columns: [
                    {
                        "header": "IN Number  ",
                        "binding": "INButton",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "IN Date",
                        "binding": "INDate",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Item",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": "4*"
                    },
                    {
                        "header": "Quantity",
                        "binding": "QuantityDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    },
                    {
                        "header": "Unit",
                        "binding": "Unit",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Cost",
                        "binding": "CostDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: stockInDetailReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            stockInDetailReportGrid.trackChanges = true;

            updateNavigateButtonsItems();

            btnFirstPageGrid.addEventListener('click', function () {
                stockInDetailReportCollections.moveToFirstPage();
                currentPageIndex = stockInDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPreviousPageGrid.addEventListener('click', function () {
                stockInDetailReportCollections.moveToPreviousPage();
                currentPageIndex = stockInDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnNextPageGrid.addEventListener('click', function () {
                stockInDetailReportCollections.moveToNextPage();
                currentPageIndex = stockInDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnLastPageGrid.addEventListener('click', function () {
                stockInDetailReportCollections.moveToLastPage();
                currentPageIndex = stockInDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });
        }

        // ============
        // Download CSV
        // ============
        function btnStockInDetailReportCSVOnclick() {
            var CSV = '';
            var stockInDetailReport = [];
            var fileName = 'StockInDetailReport.CSV';

            stockInDetailReportCollections.moveToFirstPage();

            for (var p = 1; p <= stockInDetailReportCollections.pageCount; p++) {
                for (i = 0; i < stockInDetailReportCollections.items.length; i++) {
                    var IsClose = stockInDetailReportCollections.items[i].IsClose;
                    var isPOClose = "Not Closed";
                    if (IsClose) {
                        isPOClose = "Closed"
                    }

                    stockInDetailReport.push({
                        INNumber: stockInDetailReportCollections.items[i].INForCSV,
                        INDate: stockInDetailReportCollections.items[i].INDate,
                        Item: stockInDetailReportCollections.items[i].Item,
                        Quantity: stockInDetailReportCollections.items[i].Quantity,
                        Unit: stockInDetailReportCollections.items[i].Unit,
                        Cost: stockInDetailReportCollections.items[i].Cost,
                        Amount: stockInDetailReportCollections.items[i].Amount,
                    });
                }

                stockInDetailReportCollections.moveToNextPage();
                if (p == stockInDetailReportCollections.pageCount) {
                    stockInDetailReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                INNumber: "IN Number",
                INDate: "IN Date",
                Item: "Item",
                Quantity: "Quantity",
                Unit: "Unit",
                Cost: "Cost",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < stockInDetailReport.length; i++) {
                var row = '';
                for (var a in stockInDetailReport[i]) {
                    row += '"' + stockInDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

