        // ========================================
        // Download Journal Voucher Book Report CSV
        // ========================================
        function btnJournalVoucherBookDownloadCSVOnclick() {
            var CSV = '';
            var journalVoucherBook = [];
            var fileName = 'JournalVoucherBook.CSV';

            journalVoucherBookCollectionView.moveToFirstPage();

            for (var p = 1; p <= journalVoucherBookCollectionView.pageCount; p++) {
                for (i = 0; i < journalVoucherBookCollectionView.items.length; i++) {
                    journalVoucherBook.push({
                        DocumentReference: journalVoucherBookCollectionView.items[i].DocumentReference,
                        ManualDocumentCode: journalVoucherBookCollectionView.items[i].ManualDocumentCode,
                        AccountCode: journalVoucherBookCollectionView.items[i].AccountCode,
                        Account: journalVoucherBookCollectionView.items[i].Account,
                        Article: journalVoucherBookCollectionView.items[i].Article,
                        DebitAmount: journalVoucherBookCollectionView.items[i].DebitAmount,
                        CreditAmount: journalVoucherBookCollectionView.items[i].CreditAmount,
                        Balance: journalVoucherBookCollectionView.items[i].Balance,
                    });
                }

                journalVoucherBookCollectionView.moveToNextPage();
                if (p == journalVoucherBookCollectionView.pageCount) {
                    journalVoucherBookCollectionView.moveToPage(journalVoucherBookCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                DocumentReference: "Document Reference",
                ManualDocumentCode: "Manual JV Number",
                AccountCode: "Account Code",
                Account: "Account",
                Article: "Article",
                DebitAmount: "Debit Amount",
                CreditAmount: "Credit Amount",
                Balance: "Balance",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < journalVoucherBook.length; i++) {
                var row = '';
                for (var a in journalVoucherBook[i]) {
                    row += '"' + journalVoucherBook[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

