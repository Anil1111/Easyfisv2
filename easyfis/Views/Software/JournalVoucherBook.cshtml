<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Journal Voucher Book</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Journal Voucher Book
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpJournalVoucherBookSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboJournalVoucherBookDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnJournalVoucherBookDownloadCSVOnclick()" id="btnJournalVoucherBookDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnJournalVoucherBookPrintPDFOnclick()" id="btnJournalVoucherBookPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ==================
                        Date Range Filters
                        ==================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboJournalVoucherBookStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboJournalVoucherBookEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboJournalVoucherBookCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboJournalVoucherBookBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="journalVoucherBookFlexGrid" class="grid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="journalVoucherBookNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherBookMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherBookMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnJournalVoucherBookCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherBookMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherBookMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Debit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalDebitAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Credit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalCreditAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Balance</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalBalanceAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ==================================
        // Journal Voucher Date Range Filters
        // ==================================
        var cboJournalVoucherBookStartDateFilter = new wijmo.input.InputDate('#cboJournalVoucherBookStartDateFilter');
        var cboJournalVoucherBookEndDateFilter = new wijmo.input.InputDate('#cboJournalVoucherBookEndDateFilter');
        var isCboJournalVoucherBookStartDateFilterSelected = false;
        var isCboJournalVoucherBookEndDateFilterSelected = false;

        // ==========================
        // Company and Branch Filters
        // ==========================
        var cboJournalVoucherBookCompanyFilter = new wijmo.input.ComboBox('#cboJournalVoucherBookCompanyFilter');
        var isCboJournalVoucherBookCompanyFilterSelected = false;
        var cboJournalVoucherBookBranchFilter = new wijmo.input.ComboBox('#cboJournalVoucherBookBranchFilter');

        // ==========================================
        // Journal Voucher Collection View, Flex Grid
        // ==========================================
        var journalVoucherBookCollectionView;
        var journalVoucherBookFlexGrid;
        var cboJournalVoucherBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboJournalVoucherBookDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnJournalVoucherBookMoveToFirstPageGrid = document.getElementById('btnJournalVoucherBookMoveToFirstPageGrid');
        var btnJournalVoucherBookMoveToPreviousPageGrid = document.getElementById('btnJournalVoucherBookMoveToPreviousPageGrid');
        var btnJournalVoucherBookMoveToNextPageGrid = document.getElementById('btnJournalVoucherBookMoveToNextPageGrid');
        var btnJournalVoucherBookMoveToLastPageGrid = document.getElementById('btnJournalVoucherBookMoveToLastPageGrid');
        var btnJournalVoucherBookCurrentPageGrid = document.getElementById('btnJournalVoucherBookCurrentPageGrid');
        var journalVoucherBookCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // =========================
        // Create Combo Date Filters
        // =========================
        function createCboJournalVoucherBookDateFilters() {
            NProgress.start();
            cboJournalVoucherBookStartDateFilter.dispose();
            cboJournalVoucherBookStartDateFilter = new wijmo.input.InputDate('#cboJournalVoucherBookStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboJournalVoucherBookStartDateFilterSelected) {
                        NProgress.start();
                        refreshJournalVoucherBookFlexGrid();
                    } else {
                        isCboJournalVoucherBookStartDateFilterSelected = false;
                    }
                }
            });

            cboJournalVoucherBookEndDateFilter.dispose();
            cboJournalVoucherBookEndDateFilter = new wijmo.input.InputDate('#cboJournalVoucherBookEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboJournalVoucherBookEndDateFilterSelected) {
                        NProgress.start();
                        refreshJournalVoucherBookFlexGrid();
                    } else {
                        isCboJournalVoucherBookEndDateFilterSelected = false;
                    }
                }
            });

            createCboJournalVoucherBookCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboJournalVoucherBookCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/journalVoucherBook/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnJournalVoucherBookDownloadCSV").prop("disabled", true);
                        $("#btnJournalVoucherBookPrintPDF").prop("disabled", true);
                    }

                    cboJournalVoucherBookCompanyFilter.dispose();
                    cboJournalVoucherBookCompanyFilter = new wijmo.input.ComboBox('#cboJournalVoucherBookCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnJournalVoucherBookDownloadCSV").prop("disabled", false);
                            $("#btnJournalVoucherBookPrintPDF").prop("disabled", false);
                            isCboJournalVoucherBookCompanyFilterSelected = true;
                            createCboJournalVoucherBookBranchFilter();
                        }
                    });

                    createCboJournalVoucherBookBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboJournalVoucherBookBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboJournalVoucherBookCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/journalVoucherBook/dropdown/list/branch/' + cboJournalVoucherBookCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnJournalVoucherBookDownloadCSV").prop("disabled", true);
                            $("#btnJournalVoucherBookPrintPDF").prop("disabled", true);
                        }

                        cboJournalVoucherBookBranchFilter.dispose();
                        cboJournalVoucherBookBranchFilter = new wijmo.input.ComboBox('#cboJournalVoucherBookBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshJournalVoucherBookFlexGrid();
                            }
                        });

                        createCboJournalVoucherBookDisplayNumberOfRows();
                    }
                });
            }
        }

        // =============================
        // Create Display Number of Rows
        // =============================
        function createCboJournalVoucherBookDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboJournalVoucherBookDisplayNumberOfRows.dispose();
            cboJournalVoucherBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboJournalVoucherBookDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboJournalVoucherBookDisplayNumberOfRows.selectedValue;
                        journalVoucherBookCollectionView.pageSize = parseInt(numberOfRows);
                        journalVoucherBookCollectionView.refresh();
                        journalVoucherBookFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboJournalVoucherBookCompanyFilterSelected) {
                createJournalVoucherBookFlexGrid();
            } else {
                refreshJournalVoucherBookFlexGrid();
            }
        }

        // =============================
        // Get Journal Voucher Book Data
        // =============================
        function getJournalVoucherBookData() {
            var journalVoucherBooks = new wijmo.collections.ObservableArray;
            if (cboJournalVoucherBookCompanyFilter.selectedValue != null) {
                if (cboJournalVoucherBookBranchFilter.selectedValue != null) {

                    var startDate = cboJournalVoucherBookStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboJournalVoucherBookEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboJournalVoucherBookCompanyFilter.selectedValue;
                    var branchId = cboJournalVoucherBookBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/journalVoucherBook/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {

                            var totalDebit = 0;
                            var totalCredit = 0;
                            var totalBalance = 0;

                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    journalVoucherBooks.push({
                                        DocumentReference: results[i]["DocumentReference"],
                                        ManualDocumentCode: results[i]["ManualDocumentCode"],
                                        AccountCode: results[i]["AccountCode"],
                                        Account: results[i]["Account"],
                                        Article: results[i]["Article"],
                                        DebitAmount: results[i]["DebitAmount"],
                                        DebitAmountDisplay: parseFloat(results[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        CreditAmount: results[i]["CreditAmount"],
                                        CreditAmountDisplay: parseFloat(results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Balance: results[i]["DebitAmount"] - results[i]["CreditAmount"],
                                        BalanceDisplay: parseFloat(results[i]["DebitAmount"] - results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                    });

                                    totalDebit += results[i]["DebitAmount"];
                                    totalCredit += results[i]["CreditAmount"];
                                    totalBalance += results[i]["DebitAmount"] - results[i]["CreditAmount"];
                                }
                            }

                            document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return journalVoucherBooks;
        }

        // =====================================
        // Create Journal Voucher Book Flex Grid
        // =====================================
        function createJournalVoucherBookFlexGrid() {
            journalVoucherBookCollectionView = new wijmo.collections.CollectionView(getJournalVoucherBookData());
            journalVoucherBookCollectionView.canFilter = true;
            journalVoucherBookCollectionView.pageSize = cboJournalVoucherBookDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpJournalVoucherBookSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                journalVoucherBookCollectionView.refresh();

                if (journalVoucherBookCollectionView.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;
                    for (var i = 0; i < journalVoucherBookCollectionView.items.length; i++) {
                        totalDebit += journalVoucherBookCollectionView.items[i].DebitAmount;
                        totalCredit += journalVoucherBookCollectionView.items[i].CreditAmount;
                        totalBalance += journalVoucherBookCollectionView.items[i].Balance;
                    }

                    document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            journalVoucherBookCollectionView.filter = function (item) {
                return !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ManualDocumentCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.AccountCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1);
            }

            journalVoucherBookCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateJournalVoucherBookNavigationButtons();
            });

            journalVoucherBookFlexGrid = new wijmo.grid.FlexGrid('#journalVoucherBookFlexGrid');
            journalVoucherBookFlexGrid.initialize({
                columns: [
                    {
                        "header": "Doc Reference",
                        "binding": "DocumentReference",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Manual JV No.",
                        "binding": "ManualDocumentCode",
                        "allowSorting": true,
                        "width": "1.3*"
                    },
                    {
                        "header": "Code",
                        "binding": "AccountCode",
                        "allowSorting": true,
                        "width": "0.5*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Debit",
                        "binding": "DebitAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Credit",
                        "binding": "CreditAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Balance",
                        "binding": "BalanceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: journalVoucherBookCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            journalVoucherBookFlexGrid.trackChanges = true;

            updateJournalVoucherBookNavigationButtons();

            btnJournalVoucherBookMoveToFirstPageGrid.addEventListener('click', function () {
                journalVoucherBookCollectionView.moveToFirstPage();
                journalVoucherBookCurrentPageIndex = journalVoucherBookCollectionView.pageIndex + 1;
                updateJournalVoucherBookNavigationButtons();
            });

            btnJournalVoucherBookMoveToPreviousPageGrid.addEventListener('click', function () {
                journalVoucherBookCollectionView.moveToPreviousPage();
                journalVoucherBookCurrentPageIndex = journalVoucherBookCollectionView.pageIndex + 1;
                updateJournalVoucherBookNavigationButtons();
            });

            btnJournalVoucherBookMoveToNextPageGrid.addEventListener('click', function () {
                journalVoucherBookCollectionView.moveToNextPage();
                journalVoucherBookCurrentPageIndex = journalVoucherBookCollectionView.pageIndex + 1;
                updateJournalVoucherBookNavigationButtons();
            });

            btnJournalVoucherBookMoveToLastPageGrid.addEventListener('click', function () {
                journalVoucherBookCollectionView.moveToLastPage();
                journalVoucherBookCurrentPageIndex = journalVoucherBookCollectionView.pageIndex + 1;
                updateJournalVoucherBookNavigationButtons();
            });
        }

        // ======================================
        // Refresh Journal Voucher Book Flex Grid
        // ======================================
        function refreshJournalVoucherBookFlexGrid() {
            journalVoucherBookCollectionView = new wijmo.collections.CollectionView(getJournalVoucherBookData());
            journalVoucherBookCollectionView.canFilter = true;
            journalVoucherBookCollectionView.pageSize = cboJournalVoucherBookDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpJournalVoucherBookSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                journalVoucherBookCollectionView.refresh();

                if (journalVoucherBookCollectionView.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;
                    for (var i = 0; i < journalVoucherBookCollectionView.items.length; i++) {
