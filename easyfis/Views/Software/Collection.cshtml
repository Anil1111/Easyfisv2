@{
    var branchId = Request.QueryString["BranchId"];
}
<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="Some slide and push menu demos using CSS3 transitions.">

    <!-- Title of the Page -->
    <title>Collection</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <!-- Header -->
        @Html.Partial("_SoftwareHeader")

        <!-- Section -->
        <section>
            <div class="sub-nav">
                <div class="container">
                    <h4><i class="fa fa-cc-visa"></i> Collection</h4>
                </div>
                <div class="div_Current_Page">
                    <div class="container">
                        <span id="currentPage"></span>
                    </div>
                </div>
            </div>
            <div class="container">
                <!-- Collection List -->
                <div id="CollectionList">
                    <label>OR date </label>
                    <div class="row">
                        <div class="col-lg-4">
                            <div id="filterDate"></div>
                            <input type="hidden" id="filterDate_data" />
                        </div>
                        <div class="col-lg-8"></div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="input-group input-group-sm">
                                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                <input type="text" class="form-control input-sm" id="InputFilter" placeholder="Search">
                            </div>
                        </div>
                        <div class="col-lg-8" align="right">
                            <a href="@Url.Action("CollectionDetail", "Software", new { CollectonId = 0, BranchId = branchId })" class=" btn btn-primary btn-sm"><i class="fa fa-plus"></i> Add</a>
                            <a href="@Url.Action("Index", "Software", new { BranchId = branchId })" class="btn btn-danger btn-sm" id="cmdCloseButtonCompany"><i class="fa fa-times"></i> Close</a>
                        </div>
                    </div>
                    <br />
                    <div class="row" align="left">
                        <div class="col-lg-12">
                            <div id="CollectionGrid" class="grid" align="left"></div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="btn-group col-md-7" id="naviagtionPageGrid">
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                <span class="glyphicon glyphicon-fast-backward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                <span class="glyphicon glyphicon-step-backward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                <span class="glyphicon glyphicon-step-forward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                <span class="glyphicon glyphicon-fast-forward"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Collecion Delete -->
        <div class="modal fade" id="deleteCollecionConfirm" role="dialog">
            <div class="modal-dialog modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Delete Collecion <i class="fa fa-trash"></i></h4>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this?
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger btn-sm" id="cmdConfirmDeleteCollecion" onclick="cmdCollectionConfirmDeleteButton_OnClick()"><i class="fa fa-trash"></i> Delete</button>
                        <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary btn-sm" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Lock -->
        <div class="modal fade" id="deleteRecordLock" role="dialog">
            <div class="modal-dialog modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Record Locked <i class="fa fa-lock"></i></h4>
                    </div>
                    <div class="modal-body">
                        Sorry, the record is lock! It can't be deleted!
                    </div>
                    <div class="modal-footer">
                        <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary btn-sm" data-dismiss="modal"> Okay</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading Modal -->
        <div class="modal fade" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="Loading..." aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class=" modal-dialog modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-body">
                        <h4>Loading ...</h4>
                    </div>
                    <div class="modal-footer">
                        <img class="img-thumbnail img-responsive center-block img-custom" src='~/images/loading/progress_bar.gif'>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        @Html.Partial("_SoftwareFooter")
    </div>

    <!-- SideBar Menu -->
    @Html.Partial("_SoftwareSideBarMenu")

    <div id="c-mask" class="c-mask"></div><!-- /c-mask -->
    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var collections;
        var collectionGrid;

        var btnFirstPageGrid;
        var btnPreviousPageGrid;
        var btnNextPageGrid;
        var btnLastPageGrid;
        var btnCurrentPageGrid;

        // ====================================
        // GET Collection List Filter by ORDate
        // ====================================
        function getCollectionFilterByORDate(ORDateFilter) {
            var collections = new wijmo.collections.ObservableArray;
            $('#loadingModal').modal('show');
            $.ajax({
                url: '/api/listCollectionFilterByORDate/' + ORDateFilter,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (Results) {
                    $('#loadingModal').modal('hide');
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            if(Results[i]["IsLocked"] == true) {
                                collections.push({
                                    EditId: "<button class='btn btn-primary btn-xs btn-block' id='collectionEditButton' onclick='cmdCollectionEditButton_OnClick()'><i class='fa fa-edit'></i> Edit</button>",
                                    DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='collectionDeleteButton' onclick='cmdCollectionDeleteLockButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                    Id: Results[i]["Id"],
                                    BranchId: Results[i]["BranchId"],
                                    Branch: Results[i]["Branch"],
                                    ORNumber: Results[i]["ORNumber"],
                                    ORDate: Results[i]["ORDate"],
                                    CustomerId: Results[i]["CustomerId"],
                                    Customer: Results[i]["Customer"],
                                    Particulars: Results[i]["Particulars"],
                                    ManualORNumber: Results[i]["ManualORNumber"],
                                    PreparedById: Results[i]["PreparedById"],
                                    PreparedBy: Results[i]["PreparedBy"],
                                    CheckedById: Results[i]["CheckedById"],
                                    CheckedBy: Results[i]["CheckedBy"],
                                    ApprovedById: Results[i]["ApprovedById"],
                                    ApprovedBy: Results[i]["ApprovedBy"],
                                    IsLocked: Results[i]["IsLocked"],
                                    CreatedById: Results[i]["CreatedById"],
                                    CreatedBy: Results[i]["CreatedBy"],
                                    CreatedDateTime: Results[i]["CreatedDateTime"],
                                    UpdatedById: Results[i]["UpdatedById"],
                                    UpdatedBy: Results[i]["UpdatedBy"],
                                    UpdatedDateTime: Results[i]["UpdatedDateTime"]
                                });
                            } else {
                                collections.push({
                                    EditId: "<button class='btn btn-primary btn-xs btn-block' id='collectionEditButton' onclick='cmdCollectionEditButton_OnClick()'><i class='fa fa-edit'></i> Edit</button>",
                                    DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='collectionDeleteButton' onclick='cmdCollectionDeleteButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                    Id: Results[i]["Id"],
                                    BranchId: Results[i]["BranchId"],
                                    Branch: Results[i]["Branch"],
                                    ORNumber: Results[i]["ORNumber"],
                                    ORDate: Results[i]["ORDate"],
                                    CustomerId: Results[i]["CustomerId"],
                                    Customer: Results[i]["Customer"],
                                    Particulars: Results[i]["Particulars"],
                                    ManualORNumber: Results[i]["ManualORNumber"],
                                    PreparedById: Results[i]["PreparedById"],
                                    PreparedBy: Results[i]["PreparedBy"],
                                    CheckedById: Results[i]["CheckedById"],
                                    CheckedBy: Results[i]["CheckedBy"],
                                    ApprovedById: Results[i]["ApprovedById"],
                                    ApprovedBy: Results[i]["ApprovedBy"],
                                    IsLocked: Results[i]["IsLocked"],
                                    CreatedById: Results[i]["CreatedById"],
                                    CreatedBy: Results[i]["CreatedBy"],
                                    CreatedDateTime: Results[i]["CreatedDateTime"],
                                    UpdatedById: Results[i]["UpdatedById"],
                                    UpdatedBy: Results[i]["UpdatedBy"],
                                    UpdatedDateTime: Results[i]["UpdatedDateTime"]
                                });
                            }
                        }
                    }
                }
            }).fail(function (xhr, textStatus, err) {
                alert(err);
            });
            return collections;
        }

        // =============================
        // Collection Delete Lock Button
        // =============================
        function cmdCollectionDeleteLockButton_OnClick() {
            $('#deleteRecordLock').modal({
                show: true,
                backdrop: 'static'
            });
        }

        // ======================
        // Collection Edit Button
        // ======================
        function cmdCollectionEditButton_OnClick() {
            collections.editItem(collections.currentItem);
            var collection = collections.currentEditItem;
            var id = collection.Id;
            window.location = '/Software/CollectionDetail?CollectonId=' + id + '&BranchId=' + @branchId;
        }

        // ========================
        // Collection delete Button
        // ========================
        function cmdCollectionDeleteButton_OnClick() {
            $('#deleteCollecionConfirm').modal({
                show: true,
                backdrop: 'static'
            });

            $("#cmdConfirmDeleteCollecion").prop("disabled", false);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
        }
        // Company Confirm Delete Button
        function cmdCollectionConfirmDeleteButton_OnClick() {
            $("#cmdConfirmDeleteCollecion").prop("disabled", true);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

            collections.editItem(collections.currentItem);
            var id = collections.currentEditItem.Id;
            $.ajax({
                url: '/api/deleteCollection/' + id,
                type: "DELETE",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        $("#cmdConfirmDeleteCollecion").prop("disabled", true);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                        toastr.success("Successfully Deleted");
                        
                        $('#deleteCollecionConfirm').modal('hide');

                        var ORDateFilter = document.getElementById('filterDate_data').value;
                        collections = new wijmo.collections.CollectionView(getCollectionFilterByORDate(ORDateFilter));
                        collections.canFilter = true;
                        collections.pageSize = 15;

                        var filterText = '';
                        $('#InputFilter').keyup(function () {
                            filterText = this.value.toLowerCase();
                            collections.refresh();
                        });
                        collections.filter = function (item) {
                            return !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1);
                        }
                        collections.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollections();
                        });
                        collections.currentChanged.addHandler(function (sender, args) {
                            updateDetails();
                        });

                        // Flex Grid
                        collectionGrid.itemsSource = collections;
                        collectionGrid.trackChanges = true;
                    },
                    404: function () {
                        toastr.error("Request Not Found");
                        $('#deleteCollecionConfirm').modal('hide');
                        $("#cmdConfirmDeleteCollecion").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Can't be deleted");
                        $('#deleteCollecionConfirm').modal('hide');
                        $("#cmdConfirmDeleteCollecion").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    }
                }
            });
        }


        // ===================
        // FlexGrid Selection
        // ===================
        function updateDetails() {
            var item = collections.currentItem;
            document.getElementById('createdBy').innerHTML = item.CreatedBy;
            document.getElementById('createdDate').innerHTML = item.CreatedDateTime;
            document.getElementById('updatedBy').innerHTML = item.UpdatedBy;
            document.getElementById('updatedDate').innerHTML = item.UpdatedDateTime;
        }

        // =================================
        // Navigation Buttons for Collection
        // =================================
        function updateNavigateButtonsCollections() {
            if (collections.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (collections.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (collections.pageIndex === (collections.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (collections.pageIndex + 1) + ' / ' + collections.pageCount;
        }

        // ===========
        // Onload Page
        // ===========
        $(document).ready(function () {
            $.ajax({
                url: '/api/listBranchById/' + @branchId,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (results) {
                    if (results.length > 0) {
                        branches.push({
                            BranchId: results.Id,
                            BranchBranch: results.Branch
                        });
                    }
                    //document.getElementById('currentBranchName').innerHTML = '<a href="@Url.Action("Index", "Software", new { BranchId = branchId })" class="branchNameStyle">' + results.Branch + "</a>: /";
                }
            });

            document.getElementById('currentPage').innerHTML = '<a href="@Url.Action("Index", "Software", new { BranchId = branchId })" class="currentPageLinkCustom">Main Menu</a> ' + ' > Collection';

            toastr.options = {
                "closeButton": true,
                "debug": true,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }

            var ORDateFilter_Date = new Date();
            document.getElementById("filterDate_data").value = [ ORDateFilter_Date.getMonth()+1, ORDateFilter_Date.getDate(), ORDateFilter_Date.getFullYear()].join('-');

            var cboFilterDate;
            cboFilterDate = new wijmo.input.InputDate('#filterDate', {
                format: 'MM/dd/yyyy',
                value: new Date(),
                mask: '99/99/9999',
                onValueChanged: function () {
                    document.getElementById('filterDate_data').value = [ this.value.getMonth()+1, this.value.getDate(), this.value.getFullYear() ].join('-');
                    var ORDateFilterValue = document.getElementById('filterDate_data').value;

                    $('body').removeClass('modal-open');
                    $(".modal-backdrop").remove();

                    collections = new wijmo.collections.CollectionView(getCollectionFilterByORDate(ORDateFilterValue));
                    collections.canFilter = true;
                    collections.pageSize = 15;

                    var filterText = '';
                    $('#InputFilter').keyup(function () {
                        filterText = this.value.toLowerCase();
                        collections.refresh();
                    });
                    collections.filter = function (item) {
                        return !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1);
                    }
                    collections.collectionChanged.addHandler(function (sender, args) {
                        updateNavigateButtonsCollections();
                    });
                    collections.currentChanged.addHandler(function (sender, args) {
                        updateDetails();
                    });

                    collectionGrid.itemsSource = collections;
                    collectionGrid.trackChanges = true;

                    updateNavigateButtonsCollections();
                }
            });


            var ORDateFilter = document.getElementById('filterDate_data').value;
            collections = new wijmo.collections.CollectionView(getCollectionFilterByORDate(ORDateFilter));
            collections.canFilter = true;
            collections.pageSize = 15;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                collections.refresh();
            });
            collections.filter = function (item) {
                return !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1);
            }
            collections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsCollections();
            });
            collections.currentChanged.addHandler(function (sender, args) {
                updateDetails();
            });

            // Flex Grid
            collectionGrid = new wijmo.grid.FlexGrid('#CollectionGrid');
            collectionGrid.initialize({
                columns: [
                            {
                                "header": "Edit",
                                "binding": "EditId",
                                "width": 60,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteId",
                                "width": 70,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "OR Number",
                                "binding": "ORNumber",
                                "allowSorting": true,
                                "width": "2*",
                            },
                            {
                                "header": "OR Date",
                                "binding": "ORDate",
                                "allowSorting": true,
                                "width": "2*"
                            },
                            {
                                "header": "Branch",
                                "binding": "Branch",
                                "allowSorting": true,
                                "width": "3*"
                            },
                            {
                                "header": "Customer",
                                "binding": "Customer",
                                "allowSorting": true,
                                "width": "3*"
                            },
                            {
                                "header": "Amount",
                                //"binding": "ContactNumber",
                                "allowSorting": true,
                                "width": "2*"
                            },
                            {
                                "header": "Lock",
                                "binding": "IsLocked",
                                "allowSorting": true,
                                "width": "1*"
                            }
                ],
                autoGenerateColumns: false,
                itemsSource: collections,
                isReadOnly: true,
                //frozenColumns: 2,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            collectionGrid.trackChanges = true;

            //Navigation button
            btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
            btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
            btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
            btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
            btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

            updateNavigateButtonsCollections();

            btnFirstPageGrid.addEventListener('click', function () {
                collections.moveToFirstPage();
                updateNavigateButtonsCollections();
            });
            btnPreviousPageGrid.addEventListener('click', function () {
                collections.moveToPreviousPage();
                updateNavigateButtonsCollections();
            });
            btnNextPageGrid.addEventListener('click', function () {
                collections.moveToNextPage();
                updateNavigateButtonsCollections();
            });
            btnLastPageGrid.addEventListener('click', function () {
                collections.moveToLastPage();
                updateNavigateButtonsCollections();
            });
        });

</script>
</body>
</html>