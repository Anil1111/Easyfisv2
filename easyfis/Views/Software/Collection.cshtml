<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Collection</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body class="">
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h2>
                        <i class="fa fa-cc-visa fa-fw"></i> Collection
                    </h2>
                </div>
            </section>
            <br />
            <section class="container">
                <div class="input-group" style="margin-bottom: 10px;">
                    <span class="input-group-addon">Company</span>
                    <input type="text" class="form-control" id="" value="@ViewData["Company"] / @ViewData["Branch"]" placeholder="Company" disabled>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 59%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 40%" align="right">
                                    <button class="btn btn-primary " id="btnAddCollection" onclick="btnAddCollection_OnClick()"><i class="fa fa-plus"></i> Add</button>
                                    <button class="btn btn-danger " id="btnCloseCollection" onclick="btnCloseCollection_OnClick()"><i class=" fa fa-times"></i> Close</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 29%">
                                    <div class="input-group">
                                        <span class="input-group-addon">Start Date</span>
                                        <div id="filterDate"></div>
                                        <input type="hidden" id="filterDate_data" />
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 29%">
                                    <div class="input-group">
                                        <span class="input-group-addon">End Date</span>
                                        <div id="filterEndDate"></div>
                                        <input type="hidden" id="filterEndDate_data" />
                                    </div>
                                </td>
                                <td style="width: 41%"></td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div id="CollectionGrid" class="grid" align="left"></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>

    <div id="c-mask" class="c-mask"></div><!-- /c-mask -->
    <!-- Collecion Delete -->
    <div class="modal fade" id="deleteCollecionConfirm" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Collecion <i class="fa fa-trash"></i></h4>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger " id="cmdConfirmDeleteCollecion" onclick="cmdCollectionConfirmDeleteButton_OnClick()"><i class="fa fa-trash"></i> Delete</button>
                    <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary " data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Lock -->
    <div class="modal fade" id="deleteRecordLock" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Record Locked <i class="fa fa-lock"></i></h4>
                </div>
                <div class="modal-body">
                    Sorry, the record is lock! It can't be deleted!
                </div>
                <div class="modal-footer">
                    <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary " data-dismiss="modal"> Okay</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var collections;
        var collectionGrid;

        var btnFirstPageGrid;
        var btnPreviousPageGrid;
        var btnNextPageGrid;
        var btnLastPageGrid;
        var btnCurrentPageGrid;

        var isFirstSelect = true;
        var isFirstSelectEndDate = true;

        // ====================================
        // GET Collection List Filter by ORDate
        // ====================================
        function getCollectionFilterByORDate() {
            var collections = new wijmo.collections.ObservableArray;
            
            var startDate = document.getElementById("filterDate_data").value
            var endDate = document.getElementById("filterEndDate_data").value;

            NProgress.start();
            $.ajax({
                url: '/api/listCollectionFilterByORDate/' + startDate + '/' + endDate,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {

                            var canDelete = "@ViewData["CanDelete"]";
                            var deleteDisabled;

                            if (canDelete == "True") {
                                deleteDisabled = "";
                            } else if (canDelete == "False") {
                                deleteDisabled = "disabled";
                            } else {
                                deleteDisabled = "disabled";
                            }

                            var btnDeleteId;
                            if (Results[i]["IsLocked"] == true) {
                                btnDeleteId = "<button class='btn btn-danger btn-xs btn-block' onclick='cmdCollectionDeleteLockButton_OnClick()' " + deleteDisabled + "><i class='fa fa-trash'></i> Delete</button>";
                            } else {
                                btnDeleteId = "<button class='btn btn-danger btn-xs btn-block' onclick='cmdCollectionDeleteButton_OnClick()' " + deleteDisabled + "><i class='fa fa-trash'></i> Delete</button>";
                            }

                            var canEdit = "@ViewData["CanEdit"]";
                            var editDisabled;

                            if (canEdit == "True") {
                                editDisabled = "";
                            } else if (canEdit == "False") {
                                editDisabled = "disabled";
                            } else {
                                editDisabled = "disabled";
                            }

                            collections.push({
                                EditId: "<button class='btn btn-primary btn-xs btn-block' id='collectionEditButton' onclick='cmdCollectionEditButton_OnClick()'" + editDisabled + "><i class='fa fa-edit'></i> Edit</button>",
                                DeleteId: btnDeleteId,
                                Id: Results[i]["Id"],
                                BranchId: Results[i]["BranchId"],
                                Branch: Results[i]["Branch"],
                                ORNumber: Results[i]["ORNumber"],
                                ORDate: Results[i]["ORDate"],
                                CustomerId: Results[i]["CustomerId"],
                                Customer: Results[i]["Customer"],
                                Particulars: Results[i]["Particulars"],
                                ManualORNumber: Results[i]["ManualORNumber"],
                                Amount: Results[i]["Amount"],
                                PreparedById: Results[i]["PreparedById"],
                                PreparedBy: Results[i]["PreparedBy"],
                                CheckedById: Results[i]["CheckedById"],
                                CheckedBy: Results[i]["CheckedBy"],
                                ApprovedById: Results[i]["ApprovedById"],
                                ApprovedBy: Results[i]["ApprovedBy"],
                                IsLocked: Results[i]["IsLocked"],
                                CreatedById: Results[i]["CreatedById"],
                                CreatedBy: Results[i]["CreatedBy"],
                                CreatedDateTime: Results[i]["CreatedDateTime"],
                                UpdatedById: Results[i]["UpdatedById"],
                                UpdatedBy: Results[i]["UpdatedBy"],
                                UpdatedDateTime: Results[i]["UpdatedDateTime"]
                            });

                        }
                    }
                    NProgress.done();
                }
            }).fail(function (xhr, textStatus, err) {
                alert(err);
            });
            return collections;
        }

        // =============================
        // Collection Delete Lock Button
        // =============================
        function cmdCollectionDeleteLockButton_OnClick() {
            toastr.error("Record Locked");
        }

        // =====================
        // Collection Add Button
        // =====================
        function btnAddCollection_OnClick() {
            //window.location = '/Software/CollectionDetail';

            document.getElementById('btnAddCollection').innerHTML = "<i class='fa fa-spinner fa-spin'></i> Adding";
            $('#btnAddCollection').prop('disabled', true);
            $('#btnCloseCollection').prop('disabled', true);

            var canAccessToDetailPage = "@ViewData["CanAccessToDetailPage"]";
            if (canAccessToDetailPage == "True") {
                $.ajax({
                    type: "POST",
                    url: '/api/addCollection',
                    contentType: "application/json; charset=utf-8",
                    success: function (id) {
                        if (id > 0) {
                            window.location = '/Software/CollectionDetail?CollectonId=' + id;
                        } else {
                            toastr.error("Internal Server Error");
                        }
                    }
                });
            } else if (canAccessToDetailPage == "False") {
                window.location = '/Software/Forbidden';
            } else {
                document.getElementById('btnAddCollection').innerHTML = "<i class='fa fa-plus'></i> Add";
                $('#btnAddCollection').prop('disabled', false);
                $('#btnCloseCollection').prop('disabled', false);
            }
        }

        // =======================
        // Collection Close Button
        // =======================
        function btnCloseCollection_OnClick() {
            window.location = '/Software';
        }

        // ======================
        // Collection Edit Button
        // ======================
        function cmdCollectionEditButton_OnClick() {
            collections.editItem(collections.currentItem);
            var collection = collections.currentEditItem;
            var collectionId = collection.Id;
            window.location = '/Software/CollectionDetail?CollectonId=' + collectionId;
        }

        // ========================
        // Collection delete Button
        // ========================
        function cmdCollectionDeleteButton_OnClick() {
            $('#deleteCollecionConfirm').modal({
                show: true,
                backdrop: 'static'
            });

            document.getElementById('cmdConfirmDeleteCollecion').innerHTML = "<i class='fa fa-trash'></i> Delete";
            $("#cmdConfirmDeleteCollecion").prop("disabled", false);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
        }
        // Company Confirm Delete Button
        function cmdCollectionConfirmDeleteButton_OnClick() {
            document.getElementById('cmdConfirmDeleteCollecion').innerHTML = "<i class='fa fa-spinner fa-spin'></i> Deleting";
            $("#cmdConfirmDeleteCollecion").prop("disabled", true);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

            collections.editItem(collections.currentItem);
            var id = collections.currentEditItem.Id;
            $.ajax({
                url: '/api/deleteCollection/' + id,
                type: "DELETE",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        $("#cmdConfirmDeleteCollecion").prop("disabled", true);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                        toastr.success("Delete Successful");

                        $('#deleteCollecionConfirm').modal('hide');

                        var ORDateFilter = document.getElementById('filterDate_data').value;
                        collections = new wijmo.collections.CollectionView(getCollectionFilterByORDate());
                        collections.canFilter = true;
                        collections.pageSize = 15;

                        var filterText = '';
                        $('#InputFilter').keyup(function () {
                            filterText = this.value.toLowerCase();
                            collections.refresh();
                        });
                        collections.filter = function (item) {
                            return !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Customer.toLowerCase().indexOf(filterText) > -1);
                        }
                        collections.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollections();
                        });
                        collections.currentChanged.addHandler(function (sender, args) {
                            updateDetails();
                        });

                        // Flex Grid
                        collectionGrid.itemsSource = collections;
                        collectionGrid.trackChanges = true;
                    },
                    404: function () {
                        toastr.error("Not Found");
                        $('#deleteCollecionConfirm').modal('hide');
                        $("#cmdConfirmDeleteCollecion").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Bad Request");
                        $('#deleteCollecionConfirm').modal('hide');
                        $("#cmdConfirmDeleteCollecion").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    }
                }
            });
        }


        // ===================
        // FlexGrid Selection
        // ===================
        function updateDetails() {
            var item = collections.currentItem;
            document.getElementById('createdBy').innerHTML = item.CreatedBy;
            document.getElementById('createdDate').innerHTML = item.CreatedDateTime;
            document.getElementById('updatedBy').innerHTML = item.UpdatedBy;
            document.getElementById('updatedDate').innerHTML = item.UpdatedDateTime;
        }

        // =================================
        // Navigation Buttons for Collection
        // =================================
        function updateNavigateButtonsCollections() {
            if (collections.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (collections.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (collections.pageIndex === (collections.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (collections.pageIndex + 1) + ' / ' + collections.pageCount;
        }

        // ===========
        // Onload Page
        // ===========
        $(document).ready(function () {
            var ORDateFilter_Date = new Date();
            document.getElementById("filterDate_data").value = [ORDateFilter_Date.getMonth() + 1, ORDateFilter_Date.getDate(), ORDateFilter_Date.getFullYear()].join('-');
            document.getElementById("filterEndDate_data").value = [ORDateFilter_Date.getMonth() + 1, ORDateFilter_Date.getDate(), ORDateFilter_Date.getFullYear()].join('-');

            var cboFilterDate;
            cboFilterDate = new wijmo.input.InputDate('#filterDate', {
                format: 'MM/dd/yyyy',
                value: new Date(),
                mask: '99/99/9999',
                onValueChanged: function () {
                    if (!isFirstSelect) {
                        document.getElementById('filterDate_data').value = [this.value.getMonth() + 1, this.value.getDate(), this.value.getFullYear()].join('-');
                        var ORDateFilterValue = document.getElementById('filterDate_data').value;

                        $('body').removeClass('modal-open');
                        $(".modal-backdrop").remove();

                        collections = new wijmo.collections.CollectionView(getCollectionFilterByORDate());
                        collections.canFilter = true;
                        collections.pageSize = 15;

                        var filterText = '';
                        $('#InputFilter').keyup(function () {
                            filterText = this.value.toLowerCase();
                            collections.refresh();
                        });
                        collections.filter = function (item) {
                            return !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Customer.toLowerCase().indexOf(filterText) > -1);
                        }
                        collections.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollections();
                        });
                        collections.currentChanged.addHandler(function (sender, args) {
                            updateDetails();
                        });

                        collectionGrid.itemsSource = collections;
                        collectionGrid.trackChanges = true;

                        updateNavigateButtonsCollections();
                    } else {
                        isFirstSelect = false;
                    }
                }
            });

            var cboFilterEndDate;
            cboFilterEndDate = new wijmo.input.InputDate('#filterEndDate', {
                format: 'MM/dd/yyyy',
                value: new Date(),
                mask: '99/99/9999',
                onValueChanged: function () {
                    if (!isFirstSelectEndDate) {
                        document.getElementById('filterEndDate_data').value = [this.value.getMonth() + 1, this.value.getDate(), this.value.getFullYear()].join('-');
                        var ORDateFilterValue = document.getElementById('filterEndDate_data').value;

                        $('body').removeClass('modal-open');
                        $(".modal-backdrop").remove();

                        collections = new wijmo.collections.CollectionView(getCollectionFilterByORDate());
                        collections.canFilter = true;
                        collections.pageSize = 15;

                        var filterText = '';
                        $('#InputFilter').keyup(function () {
                            filterText = this.value.toLowerCase();
                            collections.refresh();
                        });
                        collections.filter = function (item) {
                            return !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Customer.toLowerCase().indexOf(filterText) > -1);
                        }
                        collections.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollections();
                        });
                        collections.currentChanged.addHandler(function (sender, args) {
                            updateDetails();
                        });

                        collectionGrid.itemsSource = collections;
                        collectionGrid.trackChanges = true;

                        updateNavigateButtonsCollections();
                    } else {
                        isFirstSelectEndDate = false;
                    }
                }
            });


            var ORDateFilter = document.getElementById('filterDate_data').value;
            collections = new wijmo.collections.CollectionView(getCollectionFilterByORDate());
            collections.canFilter = true;
            collections.pageSize = 15;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                collections.refresh();
            });
            collections.filter = function (item) {
                return !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                                   || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                                   || (item.Customer.toLowerCase().indexOf(filterText) > -1);
            }
            collections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsCollections();
            });
            collections.currentChanged.addHandler(function (sender, args) {
                updateDetails();
            });

            // Flex Grid
            collectionGrid = new wijmo.grid.FlexGrid('#CollectionGrid');
            collectionGrid.initialize({
                columns: [
                            {
                                "header": "Edit",
                                "binding": "EditId",
                                "width": 70,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteId",
                                "width": 70,
                                "align": "center",
                                "allowResizing": false,
                                "allowSorting": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "OR Number",
                                "binding": "ORNumber",
                                "allowSorting": true,
                                "width": 110
                            },
                            {
                                "header": "OR Date",
                                "binding": "ORDate",
                                "allowSorting": true,
                                "width": 100
                            },
                            {
                                "header": "Branch",
                                "binding": "Branch",
                                "allowSorting": true,
                                "width": 250
                            },
                            {
                                "header": "Customer",
                                "binding": "Customer",
                                "allowSorting": true,
                                "width": 280
                            },
                            {
                                "header": "Amount",
                                "binding": "Amount",
                                "allowSorting": true,
                                "width": 150
                            },
                            {
                                "header": "L",
                                "binding": "IsLocked",
                                "allowSorting": true,
                                "width": 50
                            }
                ],
                autoGenerateColumns: false,
                itemsSource: collections,
                isReadOnly: true,
                //frozenColumns: 2,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            collectionGrid.trackChanges = true;

            //Navigation button
            btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
            btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
            btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
            btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
            btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

            updateNavigateButtonsCollections();

            btnFirstPageGrid.addEventListener('click', function () {
                collections.moveToFirstPage();
                updateNavigateButtonsCollections();
            });
            btnPreviousPageGrid.addEventListener('click', function () {
                collections.moveToPreviousPage();
                updateNavigateButtonsCollections();
            });
            btnNextPageGrid.addEventListener('click', function () {
                collections.moveToNextPage();
                updateNavigateButtonsCollections();
            });
            btnLastPageGrid.addEventListener('click', function () {
                collections.moveToLastPage();
                updateNavigateButtonsCollections();
            });

            var canAdd = "@ViewData["CanAdd"]";
            if (canAdd == "True") {
                $("#btnAddCollection").prop("disabled", false)
            } else if (canAdd == "False") {
                $("#btnAddCollection").prop("disabled", true)
            } else {
                $("#btnAddCollection").prop("disabled", true)
            }
        });
    </script>
    <script type="text/javascript">
        var slideLeft = new Menu({
            wrapper: '#o-wrapper',
            type: 'slide-left',
            menuOpenerClass: '.c-button',
            maskId: '#c-mask'
        });

        var slideLeftBtn = document.querySelector('#c-button--slide-left');

        slideLeftBtn.addEventListener('click', function (e) {
            e.preventDefault;
            slideLeft.open();
        });
    </script>

</body>
</html>