<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Trial Balance Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Trial Balance
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboARTrialBalanceReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnTrialBalanceReportCSVOnclick()" id="btnTrialBalanceReportCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnTrialBalanceReportPrintPDFOnclick()" id="btnTrialBalanceReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboARTrialBalanceReportStartDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboARTrialBalanceReportEndDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboARTrialBalanceReportCompany"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboARTrialBalanceReportBranch"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="trialBalanceReportGrid" class="grid"></div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Debit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalDebitAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Credit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalCreditAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Balance</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalBalanceAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboARTrialBalanceReportStartDate = new wijmo.input.InputDate('#cboARTrialBalanceReportStartDate');
        var cboARTrialBalanceReportEndDate = new wijmo.input.InputDate('#cboARTrialBalanceReportEndDate');
        var isARTrialBalanceReportStartDateSelected = false;
        var isARTrialBalanceReportEndDateSelected = false;
        var cboARTrialBalanceReportCompany = new wijmo.input.ComboBox('#cboARTrialBalanceReportCompany');
        var cboARTrialBalanceReportBranch = new wijmo.input.ComboBox('#cboARTrialBalanceReportBranch');
        var trialBalanceReportCollections;
        var trialBalanceReportGrid;
        var isARTrialBalanceReportCompanySelected = false;
        var cboARTrialBalanceReportShowNumberOfRows = new wijmo.input.ComboBox('#cboARTrialBalanceReportShowNumberOfRows');
        var btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
        var btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
        var btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
        var btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
        var btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');
        var currentPageIndex = 0;

        // ===================
        // Get Parameter Value
        // ===================
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ============
        // Date Filters
        // ============
        function trialBalanceReportDateFilters() {
            NProgress.start();
            cboARTrialBalanceReportStartDate.dispose();
            cboARTrialBalanceReportStartDate = new wijmo.input.InputDate('#cboARTrialBalanceReportStartDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("StartDate")),
                onValueChanged: function () {
                    if (!isARTrialBalanceReportStartDateSelected) {
                        NProgress.start();
                        refreshTrialBalanceReportFlexGrid();
                    } else {
                        isARTrialBalanceReportStartDateSelected = false;
                    }
                }
            });

            cboARTrialBalanceReportEndDate.dispose();
            cboARTrialBalanceReportEndDate = new wijmo.input.InputDate('#cboARTrialBalanceReportEndDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("EndDate")),
                onValueChanged: function () {
                    if (!isARTrialBalanceReportEndDateSelected) {
                        NProgress.start();
                        refreshTrialBalanceReportFlexGrid();
                    } else {
                        isARTrialBalanceReportEndDateSelected = false;
                    }
                }
            });

            createCboCompany();
        }

        // ==============
        // Company Filter
        // ==============
        function createCboCompany() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/trialBalance/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnTrialBalanceReportCSV").prop("disabled", true);
                        $("#btnTrialBalanceReportPrintPDF").prop("disabled", true);
                    }

                    cboARTrialBalanceReportCompany.dispose();
                    cboARTrialBalanceReportCompany = new wijmo.input.ComboBox('#cboARTrialBalanceReportCompany', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getParam("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnTrialBalanceReportCSV").prop("disabled", false);
                            $("#btnTrialBalanceReportPrintPDF").prop("disabled", false);
                            isARTrialBalanceReportCompanySelected = true;
                            createCboBranch();
                        }
                    });

                    createCboBranch();
                }
            });
        }

        // =============
        // Branch Filter
        // =============
        function createCboBranch() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboARTrialBalanceReportCompany.selectedValue != null) {
                $.ajax({
                    url: '/api/trialBalance/dropdown/list/branch/' + cboARTrialBalanceReportCompany.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnTrialBalanceReportCSV").prop("disabled", true);
                            $("#btnTrialBalanceReportPrintPDF").prop("disabled", true);
                        }

                        cboARTrialBalanceReportBranch.dispose();
                        cboARTrialBalanceReportBranch = new wijmo.input.ComboBox('#cboARTrialBalanceReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getParam("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshTrialBalanceReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===============
        // Show Rows Table
        // ===============
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboARTrialBalanceReportShowNumberOfRows.dispose();
            cboARTrialBalanceReportShowNumberOfRows = new wijmo.input.ComboBox('#cboARTrialBalanceReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboARTrialBalanceReportShowNumberOfRows.selectedValue;
                        trialBalanceReportCollections.pageSize = parseInt(numberOfRows);
                        trialBalanceReportCollections.refresh();
                        trialBalanceReportGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isARTrialBalanceReportCompanySelected) {
                createTrialBalanceReportFlexGrid();
            } else {
                refreshTrialBalanceReportFlexGrid();
            }
        }

        // ======================
        // Get Trial Balance Data
        // ======================
        function getTrialBalanceReport() {
            var trialBalanceReports = new wijmo.collections.ObservableArray;
            if (cboARTrialBalanceReportCompany.selectedValue != null) {
                if (cboARTrialBalanceReportBranch.selectedValue != null) {
                    var startDate = cboARTrialBalanceReportStartDate.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboARTrialBalanceReportEndDate.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboARTrialBalanceReportCompany.selectedValue;
                    var branchId = cboARTrialBalanceReportBranch.selectedValue;

                    $.ajax({
                        url: '/api/trialBalance/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (trialBalanceReportResult) {
                            var totalDebit = 0;
                            var totalCredit = 0;
                            var totalBalance = 0;
                            if (trialBalanceReportResult.length > 0) {
                                for (i = 0; i < trialBalanceReportResult.length; i++) {
                                    var accountLink = "/Software/AccountLedger?StartDate=" + startDate + "&EndDate=" + endDate + "&CompanyId=" + companyId + "&BranchId=" + branchId + "&AccountId=" + trialBalanceReportResult[i]["AccountId"];

                                    trialBalanceReports.push({
                                        AccountId: trialBalanceReportResult[i]["AccountId"],
                                        AccountCode: trialBalanceReportResult[i]["AccountCode"],
                                        Account: "<a href='" + accountLink + "' class='btn btn-primary btn-xs btn-block' style='text-align: left;'> " + trialBalanceReportResult[i]["AccountCode"] + " - " + trialBalanceReportResult[i]["Account"] + "</a>",
                                        AccountForCSV: trialBalanceReportResult[i]["AccountCode"] + " - " + trialBalanceReportResult[i]["Account"],
                                        DebitAmount: trialBalanceReportResult[i]["DebitAmount"],
                                        DebitAmountDisplay: parseFloat(trialBalanceReportResult[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        CreditAmount: trialBalanceReportResult[i]["CreditAmount"],
                                        CreditAmountDisplay: parseFloat(trialBalanceReportResult[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Balance: trialBalanceReportResult[i]["DebitAmount"] - trialBalanceReportResult[i]["CreditAmount"],
                                        BalanceDisplay: parseFloat(trialBalanceReportResult[i]["DebitAmount"] - trialBalanceReportResult[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    totalDebit += trialBalanceReportResult[i]["DebitAmount"];
                                    totalCredit += trialBalanceReportResult[i]["CreditAmount"];
                                    totalBalance += trialBalanceReportResult[i]["DebitAmount"] - trialBalanceReportResult[i]["CreditAmount"];
                                }
                            }

                            document.getElementById("totalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("totalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("totalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return trialBalanceReports;
        }

        // =========================
        // Update Navigation Buttons
        // =========================
        function updateNavigateButtonsItems() {
            if (trialBalanceReportCollections.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (trialBalanceReportCollections.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (trialBalanceReportCollections.pageIndex === (trialBalanceReportCollections.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (trialBalanceReportCollections.pageIndex + 1) + ' / ' + trialBalanceReportCollections.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshTrialBalanceReportFlexGrid() {
            trialBalanceReportCollections = new wijmo.collections.CollectionView(getTrialBalanceReport());
            trialBalanceReportCollections.canFilter = true;
            trialBalanceReportCollections.pageSize = cboARTrialBalanceReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                trialBalanceReportCollections.refresh();

                if (trialBalanceReportCollections.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;

                    for (var i = 0; i < trialBalanceReportCollections.items.length; i++) {
                        totalDebit += trialBalanceReportCollections.items[i].DebitAmount;
                        totalCredit += trialBalanceReportCollections.items[i].CreditAmount;
                        totalBalance += trialBalanceReportCollections.items[i].Balance;
                    }

                    document.getElementById("totalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            trialBalanceReportCollections.filter = function (item) {
                return !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1);
            }

            trialBalanceReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            trialBalanceReportGrid.itemsSource = trialBalanceReportCollections;
            trialBalanceReportGrid.trackChanges = true;
        }

        // =========
        // Flex Grid
        // =========
        function createTrialBalanceReportFlexGrid() {
            trialBalanceReportCollections = new wijmo.collections.CollectionView(getTrialBalanceReport());
            trialBalanceReportCollections.canFilter = true;
            trialBalanceReportCollections.pageSize = cboARTrialBalanceReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                trialBalanceReportCollections.refresh();

                if (trialBalanceReportCollections.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;

                    for (var i = 0; i < trialBalanceReportCollections.items.length; i++) {
                        totalDebit += trialBalanceReportCollections.items[i].DebitAmount;
                        totalCredit += trialBalanceReportCollections.items[i].CreditAmount;
                        totalBalance += trialBalanceReportCollections.items[i].Balance;
                    }

                    document.getElementById("totalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            trialBalanceReportCollections.filter = function (item) {
                return !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1);
            }

            trialBalanceReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            trialBalanceReportGrid = new wijmo.grid.FlexGrid('#trialBalanceReportGrid');
            trialBalanceReportGrid.initialize({
                columns: [
                    {
                        "header": "Account",
                        "binding": "Account",
                        "width": "4*",
                        "allowSorting": true,
                        "isContentHtml": true
                    },
                    {
                        "header": "Debit",
                        "binding": "DebitAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    },
                    {
                        "header": "Credit",
                        "binding": "CreditAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: trialBalanceReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            trialBalanceReportGrid.trackChanges = true;

            updateNavigateButtonsItems();

            btnFirstPageGrid.addEventListener('click', function () {
                trialBalanceReportCollections.moveToFirstPage();
                currentPageIndex = trialBalanceReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPreviousPageGrid.addEventListener('click', function () {
                trialBalanceReportCollections.moveToPreviousPage();
                currentPageIndex = trialBalanceReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnNextPageGrid.addEventListener('click', function () {
                trialBalanceReportCollections.moveToNextPage();
                currentPageIndex = trialBalanceReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnLastPageGrid.addEventListener('click', function () {
                trialBalanceReportCollections.moveToLastPage();
                currentPageIndex = trialBalanceReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });
        }

        // ============
        // Download CSV
        // ============
        function btnTrialBalanceReportCSVOnclick() {
            var CSV = '';
            var trialBalanceReport = [];
            var fileName = 'TrialBalanceReport.CSV';

            trialBalanceReportCollections.moveToFirstPage();

            for (var p = 1; p <= trialBalanceReportCollections.pageCount; p++) {
                for (i = 0; i < trialBalanceReportCollections.items.length; i++) {
                    var IsClose = trialBalanceReportCollections.items[i].IsClose;
                    var isPOClose = "Not Closed";
                    if (IsClose) {
                        isPOClose = "Closed"
                    }

                    trialBalanceReport.push({
                        Account: trialBalanceReportCollections.items[i].AccountForCSV,
                        DebitAmount: trialBalanceReportCollections.items[i].DebitAmount,
                        CreditAmount: trialBalanceReportCollections.items[i].CreditAmount,
                    });
                }

                trialBalanceReportCollections.moveToNextPage();
                if (p == trialBalanceReportCollections.pageCount) {
                    trialBalanceReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Account: "Account",
                DebitAmount: "Debit Amount",
                CreditAmount: "Credit Amount",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < trialBalanceReport.length; i++) {
                var row = '';
                for (var a in trialBalanceReport[i]) {
                    row += '"' + trialBalanceReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

