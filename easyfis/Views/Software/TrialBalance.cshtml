<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Trial Balance</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body class="">
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Trial Balance <br />  <small>@ViewData["Company"] &nbsp; | &nbsp; @ViewData["Branch"]</small>
                    </h3>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 50%" align="right">
                                    <button onclick="FinancialStatementTrialBalanceCSV_OnClick()" class="btn btn-primary "><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="FinancialStatementTrialBalancePDF_OnClick()" class="btn btn-primary "><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger "><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49%">
                                    <div class="input-group ">
                                        <span class="input-group-addon">Filter Company</span>
                                        <input type="text" class="form-control " id="companyname" placeholder="filter company" disabled>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 50%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon">Date</span>
                                        <input type="text" class="form-control " id="jdate" placeholder="Date as of" disabled>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="trialBalanceGrid" class="grid"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <table class="table table-responsive table-bordered">
                            <tr>
                                <td align="right">
                                    <b>Total Debit: </b>
                                </td>
                                <td style="padding-left: 10px" align="right">
                                    <span id="totalDebit">NA</span>
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    <b>Total Credit: </b>
                                </td>
                                <td style="padding-left: 10px" align="right">
                                    <span id="totalCredit">NA</span>
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    <b>Balance: </b>
                                </td>
                                <td style="padding-left: 10px" align="right">
                                    <span id="totalBalance">NA</span>
                                </td>
                            </tr>
                        </table>
                        <hr />
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>

    <div id="c-mask" class="c-mask"></div><!-- /c-mask -->
    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        var trialBalanceGrid;

        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);
            var results = regex.exec(window.location.href);
            if (results == null)
                return "";
            else
                return results[1];
        }

        function getTrialBalance() {
            NProgress.start();
            var journals = new wijmo.collections.ObservableArray;
            document.getElementById("jdate").value = "Date from " + getParam("StartDate") + " to " + getParam("EndDate");
            $.ajax({
                url: '/api/trialBalance/list/' + getParam("StartDate") + "/" + getParam("EndDate") + "/" + getParam("CompanyId"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    $.ajax({
                        url: '/api/company/' + getParam("CompanyId"),
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (companyResults) {
                            document.getElementById("companyname").value = companyResults.Company;
                        }
                    });

                    if (Results.length > 0) {
                        var totalDebit = 0;
                        var totalCredit = 0;
                        var totalBalance = 0;

                        for (i = 0; i < Results.length; i++) {
                            var accountLink = "/Software/AccountLedger?StartDate=" + getParam("StartDate") + "&EndDate=" + getParam("EndDate") + "&CompanyId=" + getParam("CompanyId") + "&AccountId=" + Results[i]["AccountId"];

                            totalDebit = totalDebit + Results[i]["DebitAmount"];
                            totalCredit = totalCredit + Results[i]["CreditAmount"];
                            totalBalance = totalDebit - totalCredit;

                            journals.push({
                                AccountId: Results[i]["AccountId"],
                                AccountCode: Results[i]["AccountCode"],
                                Account: "<a href='" + accountLink + "' class='btn btn-default btn-xs btn-block' style='text-align: left;'> " + Results[i]["AccountCode"] + " - " + Results[i]["Account"] + "</a>",
                                AccountForCSV: Results[i]["AccountCode"] + " - " + Results[i]["Account"],
                                DebitAmount: Results[i]["DebitAmount"],
                                CreditAmount: Results[i]["CreditAmount"],
                                Balance: Results[i]["DebitAmount"] - Results[i]["CreditAmount"],
                            });
                        }

                        document.getElementById("totalDebit").innerHTML = totalDebit.toLocaleString();
                        document.getElementById("totalCredit").innerHTML = totalCredit.toLocaleString();
                        document.getElementById("totalBalance").innerHTML = totalBalance.toLocaleString();
                    }
                    NProgress.done();
                }
            }).fail(function (xhr, textStatus, err) {
                alert(err);
            });

            return journals;
        }

        function FinancialStatementTrialBalancePDF_OnClick() {
            window.location.href = '/RepTrialBalance/TrialBalance?StartDate=' + getParam("StartDate") + '&EndDate=' + getParam("EndDate") + '&CompanyId=' + getParam("CompanyId");
        }

        var trialBalances;

        function FinancialStatementTrialBalanceCSV_OnClick() {

            var CSV = '';
            var trialBalance = [];
            var fileName = 'TrialBalance.CSV';

            for (i = 0; i < trialBalances.items.length; i++) {
                trialBalance.push({
                    AccountForCSV: trialBalances.items[i].AccountForCSV,
                    DebitAmount: trialBalances.items[i].DebitAmount,
                    CreditAmount: trialBalances.items[i].CreditAmount,

                });
            }

            //for (var i = 0; i < symbols.length; i++) {
            //    CSV += '"' + symbols[i].AccountCode + '"\r\n';
            //}

            var Headers = [];
            Headers.push({
                AccountForCSV: "Account",
                DebitAmount: "Debit",
                CreditAmount: "Credit",


            });

            var header = '';
            // Rows
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }



            CSV = header + '\r\n';
            for (var i = 0; i < trialBalance.length; i++) {
                var row = '';
                for (var a in trialBalance[i]) {
                    row += '"' + trialBalance[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }


            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");

                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

        $(document).ready(function () {
            trialBalances = new wijmo.collections.CollectionView(getTrialBalance());
            trialBalances.canFilter = true;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                trialBalances.refresh();
            });
            trialBalances.filter = function (item) {
                return !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)

            }
            // Flex Grid
            trialBalanceGrid = new wijmo.grid.FlexGrid('#trialBalanceGrid');
            trialBalanceGrid.initialize({
                columns: [
                    {
                        "header": "Account",
                        "binding": "Account",
                        "width": 780,
                        "allowResizing": false,
                        "allowSorting": false,
                        "isContentHtml": true
                    },
                    {
                        "header": "Debit",
                        "binding": "DebitAmount",
                        "allowSorting": true,
                        "width": 150,
                    },
                    {
                        "header": "Credit",
                        "binding": "CreditAmount",
                        "allowSorting": true,
                        "width": 150,
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: trialBalances,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            trialBalanceGrid.trackChanges = true;
        });
    </script>
    <script type="text/javascript">
        var slideLeft = new Menu({
            wrapper: '#o-wrapper',
            type: 'slide-left',
            menuOpenerClass: '.c-button',
            maskId: '#c-mask'
        });

        var slideLeftBtn = document.querySelector('#c-button--slide-left');

        slideLeftBtn.addEventListener('click', function (e) {
            e.preventDefault;
            slideLeft.open();
        });
    </script>
</body>
</html>