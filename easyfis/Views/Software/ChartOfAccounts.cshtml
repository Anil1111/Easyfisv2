            btnPreviousPageGridAccountCategory.addEventListener('click', function () {
                accountCashFlows.moveToPreviousPage();
                updateNavigateButtonsAccountCashFlow();
            });
            btnNextPageGridAccountCategory.addEventListener('click', function () {
