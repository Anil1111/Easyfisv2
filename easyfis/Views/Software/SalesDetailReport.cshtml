<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Sales Detail Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Sales Detail Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpSalesDetailReportFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboSalesDetailReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnSalesDetailReportDownloadCSVOnclick()" id="btnSalesDetailReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnSalesDetailReportPDFOnclick()" id="btnSalesDetailReportPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboSalesDetailReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboSalesDetailReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboSalesDetailReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboSalesDetailReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="salesDetailReportFlexGrid" style="font-size: 11.5px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="salesDetailReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnSalesDetailReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnSalesDetailReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnSalesDetailReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnSalesDetailReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnSalesDetailReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total VAT</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalVATAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboSalesDetailReportStartDateFilter = new wijmo.input.InputDate('#cboSalesDetailReportStartDateFilter');
        var cboSalesDetailReportEndDateFilter = new wijmo.input.InputDate('#cboSalesDetailReportEndDateFilter');
        var isSalesDetailReportStartDateSelected = false;
        var isSalesDetailReportEndDateSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboSalesDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboSalesDetailReportCompanyFilter');
        var cboSalesDetailReportBranchFilter = new wijmo.input.ComboBox('#cboSalesDetailReportBranchFilter');
        var isCboSalesDetailReportCompanySelected = false;

        // =============================
        // Collection View and Flex Grid
        // =============================
        var salesDetailReportCollectionView;
        var salesDetailReportFlexGrid;
        var cboSalesDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboSalesDetailReportShowNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnSalesDetailReportMoveToFirstPageGrid = document.getElementById('btnSalesDetailReportMoveToFirstPageGrid');
        var btnSalesDetailReportMoveToPreviousPageGrid = document.getElementById('btnSalesDetailReportMoveToPreviousPageGrid');
        var btnSalesDetailReportMoveToNextPageGrid = document.getElementById('btnSalesDetailReportMoveToNextPageGrid');
        var btnSalesDetailReportMoveToLastPageGrid = document.getElementById('btnSalesDetailReportMoveToLastPageGrid');
        var btnSalesDetailReportCurrentPageGrid = document.getElementById('btnSalesDetailReportCurrentPageGrid');
        var currentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboSalesDetailReportStartDateFilter.dispose();
            cboSalesDetailReportStartDateFilter = new wijmo.input.InputDate('#cboSalesDetailReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isSalesDetailReportStartDateSelected) {
                        NProgress.start();
                        refreshSalesDetailReportFlexGrid();
                    } else {
                        isSalesDetailReportStartDateSelected = false;
                    }
                }
            });

            cboSalesDetailReportEndDateFilter.dispose();
            cboSalesDetailReportEndDateFilter = new wijmo.input.InputDate('#cboSalesDetailReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isSalesDetailReportEndDateSelected) {
                        NProgress.start();
                        refreshSalesDetailReportFlexGrid();
                    } else {
                        isSalesDetailReportEndDateSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/salesDetailReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnSalesDetailReportDownloadCSV").prop("disabled", true);
                        $("#btnSalesDetailReportPDF").prop("disabled", true);
                    }

                    cboSalesDetailReportCompanyFilter.dispose();
                    cboSalesDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboSalesDetailReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnSalesDetailReportDownloadCSV").prop("disabled", false);
                            $("#btnSalesDetailReportPDF").prop("disabled", false);
                            isCboSalesDetailReportCompanySelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboSalesDetailReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/salesDetailReport/dropdown/list/branch/' + cboSalesDetailReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    Branch: branchResults[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnSalesDetailReportDownloadCSV").prop("disabled", true);
                            $("#btnSalesDetailReportPDF").prop("disabled", true);
                        }

                        cboSalesDetailReportBranchFilter.dispose();
                        cboSalesDetailReportBranchFilter = new wijmo.input.ComboBox('#cboSalesDetailReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshSalesDetailReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboSalesDetailReportShowNumberOfRows.dispose();
            cboSalesDetailReportShowNumberOfRows = new wijmo.input.ComboBox('#cboSalesDetailReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboSalesDetailReportShowNumberOfRows.selectedValue;
                        salesDetailReportCollectionView.pageSize = parseInt(numberOfRows);
                        salesDetailReportCollectionView.refresh();
                        salesDetailReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboSalesDetailReportCompanySelected) {
                createSalesDetailReportFlexGrid();
            } else {
                refreshSalesDetailReportFlexGrid();
            }
        }

        // ============================
        // Get Sales Detail Report Data
        // ============================
        function getSalesDetailReportData() {
            var salesDetailReports = new wijmo.collections.ObservableArray;
            if (cboSalesDetailReportCompanyFilter.selectedValue != null) {
                if (cboSalesDetailReportBranchFilter.selectedValue != null) {

                    var startDate = cboSalesDetailReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboSalesDetailReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboSalesDetailReportCompanyFilter.selectedValue;
                    var branchId = cboSalesDetailReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/salesDetailReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var totalAmount = 0;
                            var totalVATAmount = 0;
                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/SalesDetail?id=" + results[i]["SIId"];

                                    var SIDateResult = new Date(results[i]["SIDate"])
                                    var SIDate = ('0' + (SIDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + SIDateResult.getDate()).slice(-2) + '-' + SIDateResult.getFullYear();

                                    salesDetailReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 9px;'><i class='fa fa-edit'></i> Detail",
                                        SIId: results["SIId"],
                                        SINumber: results[i]["SINumber"],
                                        Branch: results[i]["Branch"],
                                        SIDate: SIDate,
                                        Customer: results[i]["Customer"],
                                        Sales: results[i]["Sales"],
                                        ItemCode: results[i]["ItemCode"],
                                        ItemManualArticleOldCode: results[i]["ItemManualArticleOldCode"],
                                        Item: results[i]["Item"],
                                        ItemCategory: results[i]["ItemCategory"],
                                        Unit: results[i]["Unit"],
                                        Quantity: results[i]["Quantity"],
                                        QuantityDisplay: parseFloat(results[i]["Quantity"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Price: results[i]["Price"],
                                        PriceDisplay: parseFloat(results[i]["Price"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        DiscountAmount: results[i]["DiscountAmount"],
                                        DiscountAmountDisplay: parseFloat(results[i]["DiscountAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        NetPrice: results[i]["NetPrice"],
                                        NetPriceDisplay: parseFloat(results[i]["NetPrice"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        VATAmount: results[i]["VATAmount"],
                                        VATAmountDisplay: parseFloat(results[i]["VATAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    totalAmount += results[i]["Amount"];
                                    totalVATAmount += results[i]["VATAmount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("totalVATAmount").value = parseFloat(totalVATAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalVATAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalVATAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return salesDetailReports;
        }

        // ====================================
        // Create Sales Detail Report Flex Grid
        // ====================================
        function createSalesDetailReportFlexGrid() {
            salesDetailReportCollectionView = new wijmo.collections.CollectionView(getSalesDetailReportData());
            salesDetailReportCollectionView.canFilter = true;
            salesDetailReportCollectionView.pageSize = cboSalesDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpSalesDetailReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesDetailReportCollectionView.refresh();
            });

            salesDetailReportCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Sales.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemManualArticleOldCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemCategory.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1);
            }

            salesDetailReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateSalesDetailReportNavigationButtons();
            });

            salesDetailReportFlexGrid = new wijmo.grid.FlexGrid('#salesDetailReportFlexGrid');
            salesDetailReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 55,
                        "isContentHtml": true
                    },
                    {
                        "header": "SI No.",
                        "binding": "SINumber",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "1.1*"
                    },
                    {
                        "header": "SI Date",
                        "binding": "SIDate",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "2.3*"
                    },
                    {
                        "header": "Qty.",
                        "binding": "QuantityDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "0.7*"
                    },
                    {
                        "header": "Barcode",
                        "binding": "ItemCode",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "SKU Code",
                        "binding": "ItemManualArticleOldCode",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Item",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Unit",
                        "binding": "Unit",
                        "allowSorting": true,
                        "width": "0.7*"
                    },
                    {
                        "header": "Price",
                        "binding": "PriceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Disc.",
                        "binding": "DiscountAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Net",
                        "binding": "NetPriceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "VAT",
                        "binding": "VATAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: salesDetailReportCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesDetailReportFlexGrid.trackChanges = true;

            updateSalesDetailReportNavigationButtons();

            btnSalesDetailReportMoveToFirstPageGrid.addEventListener('click', function () {
                salesDetailReportCollectionView.moveToFirstPage();
                currentPageIndex = salesDetailReportCollectionView.pageIndex + 1;
                updateSalesDetailReportNavigationButtons();
            });

            btnSalesDetailReportMoveToPreviousPageGrid.addEventListener('click', function () {
                salesDetailReportCollectionView.moveToPreviousPage();
                currentPageIndex = salesDetailReportCollectionView.pageIndex + 1;
                updateSalesDetailReportNavigationButtons();
            });

            btnSalesDetailReportMoveToNextPageGrid.addEventListener('click', function () {
                salesDetailReportCollectionView.moveToNextPage();
                currentPageIndex = salesDetailReportCollectionView.pageIndex + 1;
                updateSalesDetailReportNavigationButtons();
            });

            btnSalesDetailReportMoveToLastPageGrid.addEventListener('click', function () {
                salesDetailReportCollectionView.moveToLastPage();
                currentPageIndex = salesDetailReportCollectionView.pageIndex + 1;
                updateSalesDetailReportNavigationButtons();
            });
        }

        // =============================================
        // Update Sales Detail Report Navigation Buttons
        // =============================================
        function updateSalesDetailReportNavigationButtons() {
            if (salesDetailReportCollectionView.pageSize <= 0) {
                document.getElementById('salesDetailReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('salesDetailReportNavigationPageGrid').style.display = 'block';
            if (salesDetailReportCollectionView.pageIndex === 0) {
                btnSalesDetailReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnSalesDetailReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnSalesDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnSalesDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (salesDetailReportCollectionView.pageIndex === (salesDetailReportCollectionView.pageCount - 1)) {
                btnSalesDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnSalesDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnSalesDetailReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnSalesDetailReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnSalesDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnSalesDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnSalesDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnSalesDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnSalesDetailReportCurrentPageGrid.innerHTML = (salesDetailReportCollectionView.pageIndex + 1) + ' / ' + salesDetailReportCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshSalesDetailReportFlexGrid() {
            salesDetailReportCollectionView = new wijmo.collections.CollectionView(getSalesDetailReportData());
            salesDetailReportCollectionView.canFilter = true;
            salesDetailReportCollectionView.pageSize = cboSalesDetailReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpSalesDetailReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesDetailReportCollectionView.refresh();
            });

            salesDetailReportCollectionView.filter = function (item) {
