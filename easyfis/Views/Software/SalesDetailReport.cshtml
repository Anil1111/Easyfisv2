                        ItemCategory: salesDetailReportCollectionView.items[i].ItemCategory,
                        Unit: salesDetailReportCollectionView.items[i].Unit,
                        Price: salesDetailReportCollectionView.items[i].Price,
                        DiscountAmount: salesDetailReportCollectionView.items[i].DiscountAmount,
                        NetPrice: salesDetailReportCollectionView.items[i].NetPrice,
                        Amount: salesDetailReportCollectionView.items[i].Amount,
                        VATAmount: salesDetailReportCollectionView.items[i].VATAmount
                    });
                }

                salesDetailReportCollectionView.moveToNextPage();
                if (p == salesDetailReportCollectionView.pageCount) {
                    salesDetailReportCollectionView.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                SINumber: "SI Number",
                SIDate: "SI Date",
                Customer: "Customer",
                Sales: "Sales",
                Quantity: "Quantity",
                Barcode: "Barcode",
                SKUcode: "SKU Code",
                Item: "Item",
                ItemCategory: "Category",
                Unit: "Unit",
                Price: "Price",
                DiscountAmount: "Discount Amount",
                NetPrice: "Net Price",
                Amount: "Amount",
                VATAmount: "VAT Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < salesDetailReport.length; i++) {
                var row = '';
                for (var a in salesDetailReport[i]) {
                    row += '"' + salesDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

