<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title> Sales Detail Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_SoftwareHeader")
        @Html.Partial("_SoftwareSideBarMenu")

        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Sales Detail Report
                    <small><i class="fa fa-building"></i> @ViewData["Company"] / @ViewData["Branch"]</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Software"> Dashboard</a></li>
                    <li> <a href="/Software/AccountsReceivable"> Accounts Receivable </a></li>
                    <li> Sales Detail Report </li>
                </ol>
            </section>

            <section class="content">
                <div class="box box-default">
                    <div class="box-header">
                    
                    </div>
                    <div class="box-body">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>
                                            @ViewData["Company"]
                                            <small>
                                                <i class="fa fa-calendar fa-fw"></i> <span id="dateFrom"></span>
                                            </small>
                                        </h4>
                                    </div>
                                    <div class="col-md-6" align="right">
                                        <button onclick="salesDetailReportCSV_OnClick()" class="btn btn-primary btn-sm"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                        <button onclick="salesDetailReportPDF_OnClick()" class="btn btn-primary btn-sm"><i class="fa fa-print"></i> Print</button>
                                        <a href="/Software/AccountsReceivable" class="btn btn-danger btn-sm"><i class="fa fa-close"></i> Close</a>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div id="salesDetailReportGrid" class="grid"></div>
                            </div>
                            <div class="panel-footer">
                                <div align="right">
                                    <div class="row">
                                        <div class="col-md-8"></div>
                                        <div class="col-md-4">
                                            <table class="table table-responsive table-bordered">
                                                <tr>
                                                    <td align="right">
                                                        <b>Total: </b>
                                                    </td>
                                                    <td style="padding-left: 10px" align="right">
                                                        <span id="total">NA</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        @Html.Partial("_SoftwareFooter")
    </div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);
            var results = regex.exec(window.location.href);
            if (results == null)
                return "";
            else
                return results[1];
        }

        function salesDetailReportPDF_OnClick() {
            window.location.href = '/RepSalesDetailReport/SalesDetailReport?StartDate=' + getParam("StartDate") + '&EndDate=' + getParam("EndDate");
        }

        function getSalesDetailReport() {
            var salesDetailReport = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/salesDetailReport/list/' + getParam("StartDate") + '/' + getParam("EndDate"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (salesDetailReportResult) {
                    if (salesDetailReportResult.length > 0) {
                        var totalAmount = 0;

                        for (i = 0; i < salesDetailReportResult.length; i++) {
                            var docLink = "/Software/SalesDetail?SalesId=" + salesDetailReportResult[i]["SIId"];
                            // Array Push
                            salesDetailReport.push({
                                
                                SIId: salesDetailReportResult["SIId"],
                                Id: salesDetailReportResult[i]["Id"],
                                SI: salesDetailReportResult[i]["SI"],
                                SIButton: "<a href='" + docLink + "' class='btn btn-default btn-xs btn-block' style='text-align: left'>" +  salesDetailReportResult[i]["SI"],
                                SIDate: salesDetailReportResult[i]["SIDate"],
                                Item: salesDetailReportResult[i]["Item"],
                                ItemInventory: salesDetailReportResult[i]["ItemInventory"],
                                Unit: salesDetailReportResult[i]["Unit"],
                                Quantity: salesDetailReportResult[i]["Quantity"],
                                Price: salesDetailReportResult[i]["Price"],
                                Amount: salesDetailReportResult[i]["Amount"],

                            });

                            totalAmount += salesDetailReportResult[i]["Amount"];
                        }

                        document.getElementById("total").innerHTML = totalAmount.toLocaleString();
                    }
                    NProgress.done();
                }
            });

            return salesDetailReport;
        }
        var salesDetailReportCollection;

        function salesDetailReportCSV_OnClick() {


            var CSV = '';
            var salesDetailReport = [];
            var fileName = 'SalesDetailReport.CSV';

            for (i = 0; i < salesDetailReportCollection.items.length; i++) {
                salesDetailReport.push({
                    SI: salesDetailReportCollection.items[i].SI,
                    SIDate: salesDetailReportCollection.items[i].SIDate,
                    Item: salesDetailReportCollection.items[i].Item,
                    ItemInventory: salesDetailReportCollection.items[i].ItemInventory,
                    Price: salesDetailReportCollection.items[i].Price,
                    Quantity: salesDetailReportCollection.items[i].Quantity,
                    Unit: salesDetailReportCollection.items[i].Unit,
                    Amount: salesDetailReportCollection.items[i].Amount,


                });
            }

            //for (var i = 0; i < symbols.length; i++) {
            //    CSV += '"' + symbols[i].AccountCode + '"\r\n';
            //}

            // Rows
            for (var i = 0; i < salesDetailReport.length; i++) {
                var row = '';
                for (var a in salesDetailReport[i]) {
                    row += '"' + salesDetailReport[i][a] + '",';
                }
                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");

                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

        $(document).ready(function () {
            NProgress.start();
            document.getElementById("dateFrom").innerHTML = "Date from " + getParam("StartDate") + " to " + getParam("EndDate");

            salesDetailReportCollection = new wijmo.collections.CollectionView(getSalesDetailReport());

            // Flex Grid
            var salesDetailReportGrid = new wijmo.grid.FlexGrid('#salesDetailReportGrid');
            salesDetailReportGrid.initialize({
                columns: [
                            {
                                "header": "SI Number ",
                                "binding": "SIButton",
                                "isContentHtml": true,
                                "allowSorting": true,
                                "width": "0.5*",
                            },
                            {
                                "header": "SI Date ",
                                "binding": "SIDate",
                                "allowSorting": true,
                                "width": "0.5*"
                            },
                            {
                                "header": "Item ",
                                "binding": "Item",
                                "allowSorting": true,
                                "width": "1*"
                            },
                            {
                                "header": "Inventory Code ",
                                "binding": "ItemInventory",
                                "allowSorting": true,
                                "width": "1*"
                            },
                            {
                                "header": "Price",
                                "binding": "Price",
                                "allowSorting": true,
                                "width": "0.5*"
                            },
                            {
                                "header": "Quantity",
                                "binding": "Quantity",
                                "allowSorting": true,
                                "width": "0.5*"
                            },
                            {
                                "header": "Unit",
                                "binding": "Unit",
                               "allowSorting": true,
                               "width": "0.5*"
                            },
                            {
                                "header": "Amount",
                               "binding": "Amount",
                               "allowSorting": true,
                               "width": "0.5*"
                            }


                ],
                autoGenerateColumns: false,
                itemsSource: salesDetailReportCollection,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesDetailReportGrid.trackChanges = true;
        });

    </script>
</body>
</html>