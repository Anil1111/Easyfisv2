        function accountsReceivableReportCSVOnclick() {
            var CSV = '';
            var accountReceivables = [];
            var fileName = 'AccountsReceivableReport.CSV';

            for (i = 0; i < accountsReceivableCollections.items.length; i++) {
                accountReceivables.push({
