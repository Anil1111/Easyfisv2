<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Accounts Receivable Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Accounts Receivable Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 50%" align="right">
                                    <button onclick="accountsReceivableReportCSVOnclick()" id="btnCSV" class="btn btn-success "><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="accountsReceivableReportPDFOnclick()" id="btnPrintPDF" class="btn btn-primary "><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger "><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Date as of</b></span>
                                        <div class="comboBox-wide" id="cboAPReportDateAsOf" style="font-size: 12.5px;"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboAPReportComapny" style="font-size: 12.5px;"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboAPReportBranch" style="font-size: 12.5px;"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Account</b></span>
                                        <div class="comboBox-wide" id="cboAPReportAccount" style="font-size: 12.5px;"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div id="accountsReceivableGrid" style="font-size: 12.5px;"></div>
                <br /><br />
                <div class="row">
                    <div class="col-md-6">

                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal dl-custom">
                            <dt>
                                <b>Total Balance</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalBalance" placeholder="0.00" disabled />
                            </dd>
                            <dt>
                                <b>Total Current Amount</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalCurrentAmount" placeholder="0.00" disabled />
                            </dd>
                            <dt>
                                <b>Total Amount in 30 Days</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalAmount30Days" placeholder="0.00" disabled />
                            </dd>
                            <dt>
                                <b>Total Amount in 60 Days</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalAmount60Days" placeholder="0.00" disabled />
                            </dd>
                            <dt>
                                <b>Total Amount in 90 Days</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalAmount90Days" placeholder="0.00" disabled />
                            </dd>
                            <dt>
                                <b>Total Amount Over 120 Days</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalAmountOver120Days" placeholder="0.00" disabled />
                            </dd>
                        </dl>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboAPReportDateAsOf = new wijmo.input.InputDate('#cboAPReportDateAsOf');
        var isDateAsOfSelected = true;
        var cboAPReportComapny = new wijmo.input.ComboBox('#cboAPReportComapny');
        var cboAPReportBranch = new wijmo.input.ComboBox('#cboAPReportBranch');
        var cboAPReportAccount = new wijmo.input.ComboBox('#cboAPReportAccount');
        var accountsReceivableCollections;
        var accountsReceivableGrid;
        var accountHasData = false;

        // ====================
        // Get Parameter Values
        // ====================
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ==============
        // AP Filter Date
        // ==============
        function createCboAPAllDateFilters() {
            NProgress.start();
            cboAPReportDateAsOf.dispose();
            cboAPReportDateAsOf = new wijmo.input.InputDate('#cboAPReportDateAsOf', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("DateAsOf")),
                onValueChanged: function () {
                    if (isDateAsOfSelected) {
                        NProgress.start();
                        refreshAccountsReceivableFlexGrid();
                    } else {
                        isDateAsOfSelected = false;
                    }
                }
            });

            createCboAPAllCompanyFilter();
        }

        var isCompanySelected = false;

        // ======================
        // AP All Company Filters
        // ======================
        function createCboAPAllCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/company/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnCSV").prop("disabled", true);
                        $("#btnPrintPDF").prop("disabled", true);
                    }

                    cboAPReportComapny.dispose();
                    cboAPReportComapny = new wijmo.input.ComboBox('#cboAPReportComapny', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getParam("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            if (accountHasData) {
                                $("#btnCSV").prop("disabled", false);
                                $("#btnPrintPDF").prop("disabled", false);
                            }
                            isCompanySelected = true;
                            createCboAPBranchFilter();
                        }
                    });

                    createCboAPBranchFilter();
                }
            });
        }

        // ================
        // AP Branch Filter
        // ================
        function createCboAPBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboAPReportComapny.selectedValue != null) {
                var companyId = cboAPReportComapny.selectedValue;

                $.ajax({
                    url: '/api/branch/byCompanyId/list/locked/' + companyId,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnCSV").prop("disabled", true);
                            $("#btnPrintPDF").prop("disabled", true);
                        }

                        cboAPReportBranch.dispose();
                        cboAPReportBranch = new wijmo.input.ComboBox('#cboAPReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getParam("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshAccountsReceivableFlexGrid();
                            }
                        });

                        if (!isCompanySelected) {
                            createCboAPAccountFilter();
                        } else {
                            refreshAccountsReceivableFlexGrid();
                        }
                    }
                });
            } else {
                cboAPReportBranch.dispose();
                cboAPReportBranch = new wijmo.input.ComboBox('#cboAPReportBranch', {
                    disabled: true,
                    isEditable: false,
                    itemsSource: branchObservableArray
                });

                refreshAccountsReceivableFlexGrid();
            }
        }

        // =================
        // AP Account Filter
        // =================
        function createCboAPAccountFilter() {
            var accountsObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/articleGroup/account/list/2',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (accountResults) {
                    if (accountResults.length > 0) {
                        for (i = 0; i < accountResults.length; i++) {
                            accountsObservableArray.push({
                                AccountId: accountResults[i]["AccountId"],
                                AccountCode: accountResults[i]["AccountCode"],
                                Account: accountResults[i]["Account"],
                            });
                        }
                    }

                    var disabled = true;
                    if (accountResults.length > 0) {
                        disabled = false;
                        accountHasData = true;
                    } else {
                        $("#btnCSV").prop("disabled", true);
                        $("#btnPrintPDF").prop("disabled", true);
                    }

                    cboAPReportAccount.dispose();
                    cboAPReportAccount = new wijmo.input.ComboBox('#cboAPReportAccount', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: accountsObservableArray,
                        displayMemberPath: "Account",
                        selectedValuePath: "AccountId",
                        selectedValue: getParam("AccountId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            refreshAccountsReceivableFlexGrid();
                        }
                    });

                    createAccounstReceivableFlexGrid();
                }
            });
        }

        // ===================
        // Accounts Receivable
        // ===================
        function getAccountsReceivable() {
            var accountsReceivableObservableArray = new wijmo.collections.ObservableArray;
            if (cboAPReportComapny.selectedValue != null) {
                if (cboAPReportBranch.selectedValue != null) {
                    if (cboAPReportAccount.selectedValue != null) {

                        var dateAsOf = cboAPReportDateAsOf.value.toLocaleDateString().replace(/\//g, '-');
                        var companyId = cboAPReportComapny.selectedValue;
                        var branchId = cboAPReportBranch.selectedValue;
                        var accountId = cboAPReportAccount.selectedValue;

                        $.ajax({
                            url: '/api/accountsReceivable/list/' + dateAsOf + "/" + companyId + "/" + branchId + "/" + accountId,
                            cache: false,
                            type: 'GET',
                            contentType: 'application/json; charset=utf-8',
                            success: function (accountsReceivableResults) {
                                var totalBalance = 0;
                                var totalCurrentAmount = 0;
                                var totalAge30Amount = 0;
                                var totalAge60Amount = 0;
                                var totalAge90Amount = 0;
                                var totalAge120Amount = 0;

                                if (accountsReceivableResults.length > 0) {
                                    for (i = 0; i < accountsReceivableResults.length; i++) {
                                        var docLink = "/Software/SalesDetail?id=" + accountsReceivableResults[i]["Id"];

                                        totalBalance = totalBalance + accountsReceivableResults[i]["BalanceAmount"];
                                        totalCurrentAmount = totalCurrentAmount + accountsReceivableResults[i]["CurrentAmount"];
                                        totalAge30Amount = totalAge30Amount + accountsReceivableResults[i]["Age30Amount"];
                                        totalAge60Amount = totalAge60Amount + accountsReceivableResults[i]["Age60Amount"];
                                        totalAge90Amount = totalAge90Amount + accountsReceivableResults[i]["Age90Amount"];
                                        totalAge120Amount = totalAge120Amount + accountsReceivableResults[i]["Age120Amount"];

                                        var SIDateResult = new Date(accountsReceivableResults[i]["SIDate"])
                                        var SIDate = ('0' + (SIDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + SIDateResult.getDate()).slice(-2) + '-' + SIDateResult.getFullYear();

                                        var DueDateResult = new Date(accountsReceivableResults[i]["DueDate"])
                                        var DueDate = ('0' + (DueDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + DueDateResult.getDate()).slice(-2) + '-' + DueDateResult.getFullYear();

                                        accountsReceivableObservableArray.push({
                                            Id: accountsReceivableResults[i]["Id"],
                                            Branch: accountsReceivableResults[i]["Branch"],
                                            AccountId: accountsReceivableResults[i]["AccountId"],
                                            AccountCode: accountsReceivableResults[i]["AccountCode"],
                                            Account: accountsReceivableResults[i]["AccountCode"] + "-" + accountsReceivableResults[i]["Account"],
                                            CustomerId: accountsReceivableResults[i]["CustomerId"],
                                            Customer: accountsReceivableResults[i]["Customer"],
                                            SINumber: "<a href='" + docLink + "' style='font-size: 10px;' class='btn btn-primary btn-xs btn-block'>" + accountsReceivableResults[i]["SINumber"] + "</a>",
                                            SINumberValue: accountsReceivableResults[i]["SINumber"],
                                            SINumberCSVValue: "SI-" + accountsReceivableResults[i]["SINumber"],
                                            SIDate: SIDate,
                                            DocumentReference: accountsReceivableResults[i]["DocumentReference"],
                                            BalanceAmount: accountsReceivableResults[i]["BalanceAmount"],
                                            BalanceAmountDisplay: parseFloat(accountsReceivableResults[i]["BalanceAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            DueDate: DueDate,
                                            NumberOfDaysFromDueDate: accountsReceivableResults[i]["NumberOfDaysFromDueDate"],
                                            CurrentAmount: accountsReceivableResults[i]["CurrentAmount"],
                                            CurrentAmountDisplay: parseFloat(accountsReceivableResults[i]["CurrentAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            Age30Amount: accountsReceivableResults[i]["Age30Amount"],
                                            Age30AmountDisplay: parseFloat(accountsReceivableResults[i]["Age30Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            Age60Amount: accountsReceivableResults[i]["Age60Amount"],
                                            Age60AmountDisplay: parseFloat(accountsReceivableResults[i]["Age60Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            Age90Amount: accountsReceivableResults[i]["Age90Amount"],
                                            Age90AmountDisplay: parseFloat(accountsReceivableResults[i]["Age90Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            Age120Amount: accountsReceivableResults[i]["Age120Amount"],
                                            Age120AmountDisplay: parseFloat(accountsReceivableResults[i]["Age120Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        });
                                    }
                                }

                                document.getElementById("totalBalance").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                document.getElementById("totalCurrentAmount").value = parseFloat(totalCurrentAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                document.getElementById("totalAmount30Days").value = parseFloat(totalAge30Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                document.getElementById("totalAmount60Days").value = parseFloat(totalAge60Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                document.getElementById("totalAmount90Days").value = parseFloat(totalAge90Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                document.getElementById("totalAmountOver120Days").value = parseFloat(totalAge120Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

                                NProgress.done();
                            }
                        });
                    } else {
                        document.getElementById("totalBalance").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById("totalCurrentAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById("totalAmount30Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById("totalAmount60Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById("totalAmount90Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById("totalAmountOver120Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

                        NProgress.done();
                    }
                } else {
                    document.getElementById("totalBalance").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCurrentAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount30Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount60Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount90Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmountOver120Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

                    NProgress.done();
                }
            } else {
                document.getElementById("totalBalance").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalCurrentAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalAmount30Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalAmount60Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalAmount90Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalAmountOver120Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

                NProgress.done();
            }

            return accountsReceivableObservableArray;
        }

        // ==========================
        // Accounts Receivable Flex Grid
        // ==========================
        function createAccounstReceivableFlexGrid() {
            accountsReceivableCollections = new wijmo.collections.CollectionView(getAccountsReceivable());
            accountsReceivableCollections.canFilter = true;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                accountsReceivableCollections.refresh();

                if (accountsReceivableCollections.items.length > 0) {
                    var totalBalance = 0;
                    var totalCurrentAmount = 0;
                    var totalAge30Amount = 0;
                    var totalAge60Amount = 0;
                    var totalAge90Amount = 0;
                    var totalAge120Amount = 0;

                    for (var i = 0; i < accountsReceivableCollections.items.length; i++) {
                        totalBalance = totalBalance + accountsReceivableCollections.items[i]["BalanceAmount"];
                        totalCurrentAmount = totalCurrentAmount + accountsReceivableCollections.items[i]["CurrentAmount"];
                        totalAge30Amount = totalAge30Amount + accountsReceivableCollections.items[i]["Age30Amount"];
                        totalAge60Amount = totalAge60Amount + accountsReceivableCollections.items[i]["Age60Amount"];
                        totalAge90Amount = totalAge90Amount + accountsReceivableCollections.items[i]["Age90Amount"];
                        totalAge120Amount = totalAge120Amount + accountsReceivableCollections.items[i]["Age120Amount"];
                    }

                    document.getElementById("totalBalance").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCurrentAmount").value = parseFloat(totalCurrentAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount30Days").value = parseFloat(totalAge30Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount60Days").value = parseFloat(totalAge60Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount90Days").value = parseFloat(totalAge90Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmountOver120Days").value = parseFloat(totalAge120Amount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalBalance").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCurrentAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount30Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount60Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmount90Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalAmountOver120Days").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            accountsReceivableCollections.filter = function (item) {
                return !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumberValue.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1);
            }

            accountsReceivableGrid = new wijmo.grid.FlexGrid('#accountsReceivableGrid');
            accountsReceivableGrid.initialize({
                columns: [
                    {
                        "header": "SI No.",
                        "binding": "SINumber",
                        "allowSorting": true,
                        "width": 80,
                        "isContentHtml": true
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "1.3*",

                    },
                    {
                        "header": "SI Date",
                        "binding": "SIDate",
                        "allowSorting": true,
                        "width": "0.8*"
                    },
                    {
                        "header": "Doc. Ref.",
                        "binding": "DocumentReference",
                        "allowSorting": true,
                        "width": "1*",
                    },
