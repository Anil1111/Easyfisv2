<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Receiving Receipt Book</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Receiving Receipt Book
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpReceivingReceiptBookSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboReceivingReceiptBookDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnReceivingReceiptBookDownloadCSVOnclick()" id="btnReceivingReceiptBookDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnReceivingReceiptBookPrintPDFOnclick()" id="btnReceivingReceiptBookPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ==================
                        Date Range Filters
                        ==================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboReceivingReceiptBookStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboReceivingReceiptBookEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboReceivingReceiptBookCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboReceivingReceiptBookBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="receivingReceiptBookFlexGrid" class="grid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="receivingReceiptBookNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnReceivingReceiptBookMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnReceivingReceiptBookMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnReceivingReceiptBookCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnReceivingReceiptBookMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnReceivingReceiptBookMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Debit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalDebitAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Credit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalCreditAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Balance</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalBalanceAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ====================================
        // Receiving Receipt Date Range Filters
        // ====================================
        var cboReceivingReceiptBookStartDateFilter = new wijmo.input.InputDate('#cboReceivingReceiptBookStartDateFilter');
        var cboReceivingReceiptBookEndDateFilter = new wijmo.input.InputDate('#cboReceivingReceiptBookEndDateFilter');
        var isCboReceivingReceiptBookStartDateFilterSelected = false;
        var isCboReceivingReceiptBookEndDateFilterSelected = false;

        // ==========================
        // Company and Branch Filters
        // ==========================
        var cboReceivingReceiptBookCompanyFilter = new wijmo.input.ComboBox('#cboReceivingReceiptBookCompanyFilter');
        var isCboReceivingReceiptBookCompanyFilterSelected = false;
        var cboReceivingReceiptBookBranchFilter = new wijmo.input.ComboBox('#cboReceivingReceiptBookBranchFilter');

        // ============================================
        // Receiving Receipt Collection View, Flex Grid
        // ============================================
        var receivingReceiptBookCollectionView;
        var receivingReceiptBookFlexGrid;
        var cboReceivingReceiptBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboReceivingReceiptBookDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnReceivingReceiptBookMoveToFirstPageGrid = document.getElementById('btnReceivingReceiptBookMoveToFirstPageGrid');
        var btnReceivingReceiptBookMoveToPreviousPageGrid = document.getElementById('btnReceivingReceiptBookMoveToPreviousPageGrid');
        var btnReceivingReceiptBookMoveToNextPageGrid = document.getElementById('btnReceivingReceiptBookMoveToNextPageGrid');
        var btnReceivingReceiptBookMoveToLastPageGrid = document.getElementById('btnReceivingReceiptBookMoveToLastPageGrid');
        var btnReceivingReceiptBookCurrentPageGrid = document.getElementById('btnReceivingReceiptBookCurrentPageGrid');
        var receivingReceiptBookCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // =========================
        // Create Combo Date Filters
        // =========================
        function createCboReceivingReceiptBookDateFilters() {
            NProgress.start();
            cboReceivingReceiptBookStartDateFilter.dispose();
            cboReceivingReceiptBookStartDateFilter = new wijmo.input.InputDate('#cboReceivingReceiptBookStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboReceivingReceiptBookStartDateFilterSelected) {
                        NProgress.start();
                        refreshReceivingReceiptBookFlexGrid();
                    } else {
                        isCboReceivingReceiptBookStartDateFilterSelected = false;
                    }
                }
            });

            cboReceivingReceiptBookEndDateFilter.dispose();
            cboReceivingReceiptBookEndDateFilter = new wijmo.input.InputDate('#cboReceivingReceiptBookEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboReceivingReceiptBookEndDateFilterSelected) {
                        NProgress.start();
                        refreshReceivingReceiptBookFlexGrid();
                    } else {
                        isCboReceivingReceiptBookEndDateFilterSelected = false;
                    }
                }
            });

            createCboReceivingReceiptBookCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboReceivingReceiptBookCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/company/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnReceivingReceiptBookDownloadCSV").prop("disabled", true);
                        $("#btnReceivingReceiptBookPrintPDF").prop("disabled", true);
                    }

                    cboReceivingReceiptBookCompanyFilter.dispose();
                    cboReceivingReceiptBookCompanyFilter = new wijmo.input.ComboBox('#cboReceivingReceiptBookCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnReceivingReceiptBookDownloadCSV").prop("disabled", false);
                            $("#btnReceivingReceiptBookPrintPDF").prop("disabled", false);
                            isCboReceivingReceiptBookCompanyFilterSelected = true;
                            createCboReceivingReceiptBookBranchFilter();
                        }
                    });

                    createCboReceivingReceiptBookBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboReceivingReceiptBookBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboReceivingReceiptBookCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/branch/byCompanyId/list/locked/' + cboReceivingReceiptBookCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnReceivingReceiptBookDownloadCSV").prop("disabled", true);
                            $("#btnReceivingReceiptBookPrintPDF").prop("disabled", true);
                        }

                        cboReceivingReceiptBookBranchFilter.dispose();
                        cboReceivingReceiptBookBranchFilter = new wijmo.input.ComboBox('#cboReceivingReceiptBookBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshReceivingReceiptBookFlexGrid();
                            }
                        });

                        createCboReceivingReceiptBookDisplayNumberOfRows();
                    }
                });
            }
        }

        // =============================
        // Create Display Number of Rows
        // =============================
        function createCboReceivingReceiptBookDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboReceivingReceiptBookDisplayNumberOfRows.dispose();
            cboReceivingReceiptBookDisplayNumberOfRows = new wijmo.input.ComboBox('#cboReceivingReceiptBookDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboReceivingReceiptBookDisplayNumberOfRows.selectedValue;
                        receivingReceiptBookCollectionView.pageSize = parseInt(numberOfRows);
                        receivingReceiptBookCollectionView.refresh();
                        receivingReceiptBookFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboReceivingReceiptBookCompanyFilterSelected) {
                createReceivingReceiptBookFlexGrid();
            } else {
                refreshReceivingReceiptBookFlexGrid();
            }
        }

        // ===============================
        // Get Receiving Receipt Book Data
        // ===============================
        function getCollecitonBookData() {
            var receivingReceiptBooks = new wijmo.collections.ObservableArray;
            if (cboReceivingReceiptBookCompanyFilter.selectedValue != null) {
                if (cboReceivingReceiptBookBranchFilter.selectedValue != null) {

                    var startDate = cboReceivingReceiptBookStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboReceivingReceiptBookEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboReceivingReceiptBookCompanyFilter.selectedValue;
                    var branchId = cboReceivingReceiptBookBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/ReceivingReceiptBook/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {

                            var totalDebit = 0;
                            var totalCredit = 0;
                            var totalBalance = 0;

                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    receivingReceiptBooks.push({
                                        DocumentReference: results[i]["DocumentReference"],
                                        ManualDocumentCode: results[i]["ManualDocumentCode"],
                                        AccountCode: results[i]["AccountCode"],
                                        Account: results[i]["Account"],
                                        Article: results[i]["Article"],
                                        DebitAmount: results[i]["DebitAmount"],
                                        DebitAmountDisplay: parseFloat(results[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        CreditAmount: results[i]["CreditAmount"],
                                        CreditAmountDisplay: parseFloat(results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Balance: results[i]["DebitAmount"] - results[i]["CreditAmount"],
                                        BalanceDisplay: parseFloat(results[i]["DebitAmount"] - results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                    });

                                    totalDebit += results[i]["DebitAmount"];
                                    totalCredit += results[i]["CreditAmount"];
                                    totalBalance += results[i]["DebitAmount"] - results[i]["CreditAmount"];
                                }
                            }

                            document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return receivingReceiptBooks;
        }

        // =======================================
        // Create Receiving Receipt Book Flex Grid
        // =======================================
        function createReceivingReceiptBookFlexGrid() {
            receivingReceiptBookCollectionView = new wijmo.collections.CollectionView(getCollecitonBookData());
            receivingReceiptBookCollectionView.canFilter = true;
            receivingReceiptBookCollectionView.pageSize = cboReceivingReceiptBookDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpReceivingReceiptBookSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                receivingReceiptBookCollectionView.refresh();

                if (receivingReceiptBookCollectionView.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;
                    for (var i = 0; i < receivingReceiptBookCollectionView.items.length; i++) {
                        totalDebit += receivingReceiptBookCollectionView.items[i].DebitAmount;
                        totalCredit += receivingReceiptBookCollectionView.items[i].CreditAmount;
                        totalBalance += receivingReceiptBookCollectionView.items[i].Balance;
                    }

                    document.getElementById("inpTotalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpTotalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            receivingReceiptBookCollectionView.filter = function (item) {
                return !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ManualDocumentCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.AccountCode.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1);
            }

            receivingReceiptBookCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateReceivingReceiptBookNavigationButtons();
            });

            receivingReceiptBookFlexGrid = new wijmo.grid.FlexGrid('#receivingReceiptBookFlexGrid');
            receivingReceiptBookFlexGrid.initialize({
                columns: [
                    {
                        "header": "Doc Reference",
                        "binding": "DocumentReference",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Manual RR No.",
                        "binding": "ManualDocumentCode",
                        "allowSorting": true,
                        "width": "1.3*"
                    },
                    {
                        "header": "Code",
                        "binding": "AccountCode",
                        "allowSorting": true,
                        "width": "0.5*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Debit",
                        "binding": "DebitAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Credit",
                        "binding": "CreditAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Balance",
                        "binding": "BalanceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: receivingReceiptBookCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            receivingReceiptBookFlexGrid.trackChanges = true;

            updateReceivingReceiptBookNavigationButtons();

            btnReceivingReceiptBookMoveToFirstPageGrid.addEventListener('click', function () {
                receivingReceiptBookCollectionView.moveToFirstPage();
                receivingReceiptBookCurrentPageIndex = receivingReceiptBookCollectionView.pageIndex + 1;
                updateReceivingReceiptBookNavigationButtons();
            });

            btnReceivingReceiptBookMoveToPreviousPageGrid.addEventListener('click', function () {
                receivingReceiptBookCollectionView.moveToPreviousPage();
                receivingReceiptBookCurrentPageIndex = receivingReceiptBookCollectionView.pageIndex + 1;
                updateReceivingReceiptBookNavigationButtons();
            });

            btnReceivingReceiptBookMoveToNextPageGrid.addEventListener('click', function () {
                receivingReceiptBookCollectionView.moveToNextPage();
                receivingReceiptBookCurrentPageIndex = receivingReceiptBookCollectionView.pageIndex + 1;
                updateReceivingReceiptBookNavigationButtons();
            });

            btnReceivingReceiptBookMoveToLastPageGrid.addEventListener('click', function () {
                receivingReceiptBookCollectionView.moveToLastPage();
                receivingReceiptBookCurrentPageIndex = receivingReceiptBookCollectionView.pageIndex + 1;
                updateReceivingReceiptBookNavigationButtons();
            });
        }

        // ========================================
        // Refresh Receiving Receipt Book Flex Grid
        // ========================================
        function refreshReceivingReceiptBookFlexGrid() {
            receivingReceiptBookCollectionView = new wijmo.collections.CollectionView(getCollecitonBookData());
            receivingReceiptBookCollectionView.canFilter = true;
            receivingReceiptBookCollectionView.pageSize = cboReceivingReceiptBookDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpReceivingReceiptBookSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                receivingReceiptBookCollectionView.refresh();

                if (receivingReceiptBookCollectionView.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;
                    for (var i = 0; i < receivingReceiptBookCollectionView.items.length; i++) {
                        totalDebit += receivingReceiptBookCollectionView.items[i].DebitAmount;
