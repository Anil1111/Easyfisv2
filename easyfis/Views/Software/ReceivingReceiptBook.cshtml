        function btnReceivingReceiptBookDownloadCSVOnclick() {
            var CSV = '';
            var receivingReceiptBook = [];
            var fileName = 'ReceivingReceiptBook.CSV';

            receivingReceiptBookCollectionView.moveToFirstPage();

            for (var p = 1; p <= receivingReceiptBookCollectionView.pageCount; p++) {
                for (i = 0; i < receivingReceiptBookCollectionView.items.length; i++) {
