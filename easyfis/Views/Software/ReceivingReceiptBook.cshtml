                        ManualDocumentCode: receivingReceiptBookCollectionView.items[i].ManualDocumentCode,
                        AccountCode: receivingReceiptBookCollectionView.items[i].AccountCode,
                        Account: receivingReceiptBookCollectionView.items[i].Account,
                        Article: receivingReceiptBookCollectionView.items[i].Article,
                        DebitAmount: receivingReceiptBookCollectionView.items[i].DebitAmount,
                        CreditAmount: receivingReceiptBookCollectionView.items[i].CreditAmount,
                        Balance: receivingReceiptBookCollectionView.items[i].Balance,
                    });
                }

                receivingReceiptBookCollectionView.moveToNextPage();
                if (p == receivingReceiptBookCollectionView.pageCount) {
                    receivingReceiptBookCollectionView.moveToPage(receivingReceiptBookCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                DocumentReference: "Document Reference",
                ManualDocumentCode: "Manual RR Number",
                AccountCode: "Account Code",
                Account: "Account",
                Article: "Article",
                DebitAmount: "Debit Amount",
                CreditAmount: "Credit Amount",
                Balance: "Balance",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < receivingReceiptBook.length; i++) {
                var row = '';
                for (var a in receivingReceiptBook[i]) {
                    row += '"' + receivingReceiptBook[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

