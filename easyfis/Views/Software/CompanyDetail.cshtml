        function updateBranchNavigationButtons() {
            if (branchCollectionView.pageSize <= 0) {
                document.getElementById('branchNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('branchNavigationPageGrid').style.display = 'block';
            if (branchCollectionView.pageIndex === 0) {
                btnBranchMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnBranchMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnBranchMoveToNextPageGrid.removeAttribute('disabled');
                btnBranchMoveToLastPageGrid.removeAttribute('disabled');
            } else if (branchCollectionView.pageIndex === (branchCollectionView.pageCount - 1)) {
                btnBranchMoveToFirstPageGrid.removeAttribute('disabled');
                btnBranchMoveToPreviousPageGrid.removeAttribute('disabled');
                btnBranchMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnBranchMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnBranchMoveToFirstPageGrid.removeAttribute('disabled');
                btnBranchMoveToPreviousPageGrid.removeAttribute('disabled');
                btnBranchMoveToNextPageGrid.removeAttribute('disabled');
