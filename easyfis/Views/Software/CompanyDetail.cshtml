@{
    var id = Request.QueryString["id"];
}
<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="Some slide and push menu demos using CSS3 transitions.">

    <!-- Title of the Page -->
    <title>Software - Company Detail</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Font-Awesome/css")
    @Styles.Render("~/Content/Software-css")
    @Styles.Render("~/WijmoCSS/Wijmo-css")
</head>
<body>
    <div id="wrapper" class="wrapper">
        <!-- Header -->
        @Html.Partial("_SoftwareHeader")

        <!-- Section -->
        <section>
            <br /><br /><br />
            <div class="container">
                <div class="row">
                    <div class="col-md-12" align="right">
                        <button class="btn btn-primary" id="cmdAddCompany" onclick="cmdCompanyAddButton_OnClick()"><i class="fa fa-check"></i> Save</button>
                        <button class="btn btn-success" id="cmdUpdateCompany" onclick="cmdCompanyUpdateButton_OnClick()"><i class="fa fa-check"></i> Update</button>
                        <a href="@Url.Action("Company","Software")" class="btn btn-danger"><i class="fa fa-times"></i> Close</a>
                    </div>
                </div>
                <hr />
                <h4 id="companyDetailLabel">New Company</h4>
                <div class="well">
                    <form id="companyDetailForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="usr">Company:</label>
                                    <input type="text" class="form-control requiredCompany" id="company_Company">
                                </div>
                                <div class="form-group">
                                    <label for="usr">Address:</label>
                                    <textarea class="form-control textarea-custom-company requiredCompany" id="company_Address"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="usr">Contact Number:</label>
                                    <input type="text" class="form-control requiredCompany" id="company_ContactNumber">
                                </div>
                                <div class="form-group">
                                    <label for="usr">TAX Number:</label>
                                    <input type="text" class="form-control requiredCompany" id="company_TaxNumber">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <hr class="divider" />
                <!-- Branch List -->
                <section id="branchList">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 id="companyNameLabel">Branch List (Empty)</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" readonly>
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                                <input type="text" class="form-control" id="InputFilter" placeholder="Search Branch">
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <button type="submit" class="btn btn-primary pull-right" id="cmdBranchAddBranchButton" onclick="cmdbranchAddBranchButton_OnClick()"><i class="fa fa-plus"></i> Add</button>
                        </div>
                    </div>
                    <br />
                    <div class="row" align="left">
                        <div class="col-lg-12">
                            <div id="BranchGrid" class="grid" align="left"></div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="btn-group col-md-7" id="naviagtionPageGrid">
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                <span class="glyphicon glyphicon-fast-backward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                <span class="glyphicon glyphicon-step-backward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                <span class="glyphicon glyphicon-step-forward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                <span class="glyphicon glyphicon-fast-forward"></span>
                            </button>
                        </div>
                    </div>
                </section>
            </div>
        </section>

        <!-- Branch Edit Detail -->
        <div class="modal fade" id="branchEdit" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="companyNameModalLabel">Branch Detail</h4>
                    </div>
                    <div class="modal-body">
