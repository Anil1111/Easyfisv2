@model easyfis.Entities.MstUserForm
@{
    // =====================
    // User Rights Variables
    // =====================
    var canAdd = Model.CanAdd;
    var canEdit = Model.CanEdit;
    var canDelete = Model.CanDelete;
    var canLock = Model.CanLock;
    var canUnlock = Model.CanUnlock;
    var canPrint = Model.CanPrint;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Company Detail</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Company Detail
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ======================================
                        Options: Lock, Unlock and Close Button
                        ======================================
                    -->
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-2">
                                <button class="btn btn-primary" id="btnCompanyDetailSave" onclick="btnCompanyDetailSaveOnclick()"><i class="fa fa-save"></i> Save</button>
                            </div>
                            <div class="col-md-10" align="right">
                                @{
                                    if (canLock)
                                    {
                                        <button class="btn btn-primary" id="btnCompanyDetailLock" onclick="btnCompanyDetailLockOnclick()"><i class="fa fa-lock"></i> Lock</button>
                                    }
                                    if (canUnlock)
                                    {
                                        <button class="btn btn-primary" id="btnCompanyDetailUnlock" onclick="btnCompanyDetailUnlockOnclick()"><i class="fa fa-unlock"></i> Unlock</button>
                                    }
                                }
                                <button class="btn btn-danger" id="btnCompanyDetailClose" onclick="window.location.href = '/Software/Company'"><i class="fa fa-times"></i> Close</button>
                            </div>
                        </div>
                    </div>

                    <!--
                        ======================================
                        Details, Fields and Other Informations
                        ======================================
                    -->
                    <div class="panel-body">
                        <form class="form-horizontal" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Company</label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control requiredCompany" id="inpComapanyDetailCompany" placeholder="Company" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Address</label>
                                        <div class="col-sm-8">
                                            <textarea rows="5" class="form-control textarea-custom requiredCompany" id="inpComapanyDetailAddress" placeholder="Address"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Contact No.</label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control requiredCompany" id="inpComapanyDetailContactNumber" placeholder="Contact Number" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">TAX No.</label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control requiredCompany" id="inpComapanyDetailTaxNumber" placeholder="TIN Number" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!--
                    ========
                    Branches
                    ========
                -->
                <ul class="nav nav-tabs" role="tablist" id="myTab">
                    <li role="presentation" class="active"><a data-toggle="tab" href="#tabBranches" id="tabPaneBranches">Branches</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#tabMore" id="tabPaneMore">More</a></li>
                </ul>
                <br />
                <div class="tab-content">
                    <div id="tabBranches" class="tab-pane active">
                        <div class="panel panel-default">

                            <!--
                                =============================================================
                                Branches: Search, Filter, Display Number of Rows and  Buttons
                                =============================================================
                            -->
                            <div class="panel-heading">
                                <table style="width: 100%" border="0">
                                    <tr>
                                        <td style="width: 49.5%">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                                <input type="text" class="form-control" id="inpBranchSearchFilter" placeholder="Search...">
                                            </div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 24%">
                                            <div class="input-group">
                                                <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                                <div class="comboBox-wide" id="cboBranchDisplayNumberOfRows"></div>
                                            </div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 24.5%" align="right">
                                            @{
                                                if (canAdd)
                                                {
                                                    <button type="submit" class="btn btn-primary pull-right" id="btnBranchAdd" onclick="btnBranchAddOnclick()"><i class="fa fa-plus"></i> Add</button>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!--
                                ===================
                                Branches: Flex Grid
                                ===================
                            -->
                            <div class="panel-body">
                                <div id="branchFlexGrid" class="grid"></div>
                            </div>

                            <!--
                                ============================
                                Branches: Navigation Buttons
                                ============================
                            -->
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="btn-group col-md-7" id="branchNavigationPageGrid">
                                        <button type="button" class="btn btn-default border-custom" id="btnBranchMoveToFirstPageGrid">
                                            <span class="glyphicon glyphicon-fast-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnBranchMoveToPreviousPageGrid">
                                            <span class="glyphicon glyphicon-step-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnBranchCurrentPageGrid"></button>
                                        <button type="button" class="btn btn-default border-custom" id="btnBranchMoveToNextPageGrid">
                                            <span class="glyphicon glyphicon-step-forward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnBranchMoveToLastPageGrid">
                                            <span class="glyphicon glyphicon-fast-forward"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="tabMore" class="tab-pane">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <form class="form-horizontal" role="form">
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Closing Date</label>
                                                <div class="col-sm-8">
                                                    <div class="comboBox-wide" id="cboCompanyClosingDate"></div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-md-6"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ==========
                    User Stamp
                    ==========
                -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        User stamp
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p>Created by:</p>
                                <div style="padding-left: 10px;">
                                    <i class="fa fa-key fa-fw"></i> <label id="createdBy">NA</label>
                                    <br />
                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="createdDate">mm/dd/yyyy</span></small>
                                </div>
                                <br />
                            </div>
                            <div class="col-md-6">
                                <p>Updated by:</p>
                                <div style="padding-left: 10px;">
                                    <i class="fa fa-key fa-fw"></i> <label id="updatedBy">NA</label>
                                    <br />
                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="updatedDate">mm/dd/yyyy</span></small>
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    <!--
        ====================
        Branch: Detail Modal
        ====================
    -->
    <div class="modal fade" id="branchDetailModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="branchModalTitle">Branch</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <span id="branchLoading"></span>
                    </center>
                    <form id="branchDetailForm">
                        <dl class="dl-horizontal">
                            <dt id="dtBranchCodeLabel">Code</dt>
                            <dd id="ddBranchCodeData">
                                <input type="text" class="form-control" id="inpBranchCode" disabled />
                            </dd>
                            <dt>Branch</dt>
                            <dd>
                                <input type="text" class="form-control requiredBranch" id="inpBranch" placeholder="Branch" />
                            </dd>
                            <dt>Address</dt>
                            <dd>
                                <textarea rows="5" class="form-control textarea-custom requiredBranch" id="inpBranchAddress" placeholder="Address"></textarea>
                            </dd>
                            <dt>Contact Number:</dt>
                            <dd>
                                <input type="text" class="form-control requiredBranch" id="inpBranchContactNumber" placeholder="Contact Number" />
                            </dd>
                            <dt>Tax Number</dt>
                            <dd>
                                <input type="text" class="form-control" id="inpBranchTaxNumber" placeholder="TIN Number" />
                            </dd>
                        </dl>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="btnBranchSave" class="btn btn-primary" onclick="btnBranchSaveOnclick()"><i class="fa fa-save"></i> Save</button>
                    <button id="btnBranchCloseDetailModal" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                </div>
            </div>
        </div>
    </div>

    <!--
        ==============================
        Branches: Confirm Delete Modal
        ==============================
    -->
    <div class="modal fade" id="branchConfirmDeleteModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete</h4>
                </div>
                <div class="modal-body">
                    Delete Branch?
                </div>
                <div class="modal-footer">
                    <button id="btnBranchConfirmDelete" class="btn btn-danger" onclick="btnBranchConfirmDeleteOnclick()"><i class="fa fa-trash"></i> Delete</button>
                    <button id="btnBranchConfirmDeleteCloseModal" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ==============================
        // Company Detail Data and Fields
        // ==============================
        var isLocked = false;
        var cboCompanyClosingDate = new wijmo.input.InputDate('#cboCompanyClosingDate');

        // ========================================================
        // Branch Collection View, Flex Grid and Navigation Buttons
        // ========================================================
        var branchCollectionView;
        var branchFlexGrid;
        var cboBranchDisplayNumberOfRows = new wijmo.input.ComboBox('#cboBranchDisplayNumberOfRows');
        var btnBranchMoveToFirstPageGrid = document.getElementById('btnBranchMoveToFirstPageGrid');
        var btnBranchMoveToPreviousPageGrid = document.getElementById('btnBranchMoveToPreviousPageGrid');
        var btnBranchMoveToNextPageGrid = document.getElementById('btnBranchMoveToNextPageGrid');
        var btnBranchMoveToLastPageGrid = document.getElementById('btnBranchMoveToLastPageGrid');
        var btnBranchCurrentPageGrid = document.getElementById('btnBranchCurrentPageGrid');

        // ======================
        // Branch Data and Fields
        // ======================
        var branchId = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            }  else {
                return results[1];
            }
        }

        // =======================
        // Get Company Detail Data
        // =======================
        function getCompanyDetailData() {
            if (document.location.search.length > 0) {
                NProgress.start();

                var companyId = getURLParameterValue("id");

                $.ajax({
                    url: '/api/company/detail/' + companyId,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    data: {},
                    success: function (results) {
                        if (results != null) {
                            document.getElementById('inpComapanyDetailCompany').value = results.Company;
                            document.getElementById('inpComapanyDetailAddress').value = results.Address;
                            document.getElementById('inpComapanyDetailContactNumber').value = results.ContactNumber;
                            document.getElementById('inpComapanyDetailTaxNumber').value = results.TaxNumber;
                            document.getElementById('createdBy').innerHTML = results.CreatedBy;
                            document.getElementById('createdDate').innerHTML = results.CreatedDateTime;
                            document.getElementById('updatedBy').innerHTML = results.UpdatedBy;
                            document.getElementById('updatedDate').innerHTML = results.UpdatedDateTime;

                            var closingDate = null;
                            if (results.ClosingDate != "") {
                                closingDate = new Date(results.ClosingDate);   
                            }

                            cboCompanyClosingDate.dispose();
                            cboCompanyClosingDate = new wijmo.input.InputDate('#cboCompanyClosingDate', {
                                required: false,
                                format: 'MM-dd-yyyy',
                                value: closingDate,
                            });

                            if (results.IsLocked) {
                                document.getElementById('inpComapanyDetailCompany').disabled = true;
                                document.getElementById('inpComapanyDetailAddress').disabled = true;
                                document.getElementById('inpComapanyDetailContactNumber').disabled = true;
                                document.getElementById('inpComapanyDetailTaxNumber').disabled = true;
                                cboCompanyClosingDate.disabled = true;

                                $("#btnCompanyDetailSave").prop("disabled", true);
                                $("#btnCompanyDetailLock").prop("disabled", true);
                                $("#btnBranchAdd").prop("disabled", true);

                                isLocked = true;
                            } else {
                                $("#btnCompanyDetailUnlock").prop("disabled", true);
                                $("#cmdPrintCompany").prop("disabled", true);
                            }

                            createCboDisplayNumberOfRows();
                            createBranchFlexGrid();
                        } else {
                            alert("No Data");
                            window.location = "/Software/Company";
                        }
                    }
                });
            } else {
                alert("No Id Parameter Value");
                window.location = "/Software/Company";
            }
        }

        // =============
        // Save Comapany
        // =============
        function btnCompanyDetailSaveOnclick() {
            document.getElementById('btnCompanyDetailSave').innerHTML = "<i class='fa fa-save'></i> Saving...";
            $("#btnCompanyDetailSave").prop("disabled", true);
            $("#btnCompanyDetailLock").prop("disabled", true);
            $("#btnCompanyDetailUnlock").prop("disabled", true);
            $("#btnCompanyDetailClose").prop("disabled", true);

            var companyObject = new Object();
            var companyId = getURLParameterValue("id");
            companyObject.Company = document.getElementById('inpComapanyDetailCompany').value;
            companyObject.Address = document.getElementById('inpComapanyDetailAddress').value;
            companyObject.ContactNumber = document.getElementById('inpComapanyDetailContactNumber').value;
            companyObject.TaxNumber = document.getElementById('inpComapanyDetailTaxNumber').value;

            var closingDate = "";
            if (cboCompanyClosingDate.value != null) {
                closingDate = cboCompanyClosingDate.value.toLocaleDateString();
            }

            companyObject.ClosingDate = closingDate;
            var dataUpdate = JSON.stringify(companyObject);

            var isValid = true;
            $('.requiredCompany').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                } else {
                    $(this).css({
                        "border": "",
                    });
                }
            });

            if (isValid) {
                $.ajax({
                    type: "PUT",
                    url: '/api/company/save/' + companyId,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: dataUpdate,
                    statusCode: {
                        200: function () {
                            toastr.success("Save Successful");
                            window.setTimeout(function () {
                                location.reload()
                            }, 1000);
                        },
                        404: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404");
                            document.getElementById('btnCompanyDetailSave').innerHTML = "<i class='fa fa-save'></i> Save";
                            $("#btnCompanyDetailSave").prop("disabled", false);

                            if (isLocked) {
                                $("#btnCompanyDetailUnlock").prop("disabled", false);
                            } else {
                                $("#btnCompanyDetailLock").prop("disabled", false);
                            }

                            $("#btnCompanyDetailClose").prop("disabled", false);
                        },
                        400: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 400");
                            document.getElementById('btnCompanyDetailSave').innerHTML = "<i class='fa fa-save'></i> Save";
                            $("#btnCompanyDetailSave").prop("disabled", false);

                            if (isLocked) {
                                $("#btnCompanyDetailUnlock").prop("disabled", false);
                            } else {
                                $("#btnCompanyDetailLock").prop("disabled", false);
                            }

                            $("#btnCompanyDetailClose").prop("disabled", false);
                        },
                        500: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 500");
                            document.getElementById('btnCompanyDetailSave').innerHTML = "<i class='fa fa-save'></i> Save";
                            $("#btnCompanyDetailSave").prop("disabled", false);

                            if (isLocked) {
                                $("#btnCompanyDetailUnlock").prop("disabled", false);
                            } else {
                                $("#btnCompanyDetailLock").prop("disabled", false);
                            }

                            $("#btnCompanyDetailClose").prop("disabled", false);
                        }
                    }
                });
            } else {
                toastr.error("Invalid Entry");
            }
        }

        // =============
        // Lock Comapany
        // =============
        function btnCompanyDetailLockOnclick() {
            document.getElementById('btnCompanyDetailLock').innerHTML = "<i class='fa fa-lock'></i> Locking...";
            $("#btnCompanyDetailSave").prop("disabled", true);
            $("#btnCompanyDetailLock").prop("disabled", true);
            $("#btnCompanyDetailUnlock").prop("disabled", true);
            $("#btnCompanyDetailClose").prop("disabled", true);

            var companyObject = new Object();
            var companyId = getURLParameterValue("id");
            companyObject.Company = document.getElementById('inpComapanyDetailCompany').value;
            companyObject.Address = document.getElementById('inpComapanyDetailAddress').value;
            companyObject.ContactNumber = document.getElementById('inpComapanyDetailContactNumber').value;
            companyObject.TaxNumber = document.getElementById('inpComapanyDetailTaxNumber').value;

            var closingDate = "";
            if (cboCompanyClosingDate.value != null) {
                closingDate = cboCompanyClosingDate.value.toLocaleDateString();
                console.log(closingDate);
            }

            companyObject.ClosingDate = closingDate;
            var dataUpdate = JSON.stringify(companyObject);

            var isValid = true;
            $('.requiredCompany').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                } else {
                    $(this).css({
                        "border": "",
                    });
                }
            });

            if (isValid) {
                $.ajax({
                    type: "PUT",
                    url: '/api/company/lock/' + companyId,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: dataUpdate,
                    statusCode: {
                        200: function () {
                            toastr.success("Lock Successful");
                            window.setTimeout(function () {
                                location.reload()
                            }, 1000);
                        },
                        404: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404");
                            document.getElementById('btnCompanyDetailLock').innerHTML = "<i class='fa fa-lock'></i> Lock";
                            $("#btnCompanyDetailSave").prop("disabled", false);
                            $("#btnCompanyDetailLock").prop("disabled", false);
                            $("#btnCompanyDetailClose").prop("disabled", false);
                        },
                        400: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 400");
                            document.getElementById('btnCompanyDetailLock').innerHTML = "<i class='fa fa-lock'></i> Lock";
                            $("#btnCompanyDetailSave").prop("disabled", false);
                            $("#btnCompanyDetailLock").prop("disabled", false);
                            $("#btnCompanyDetailClose").prop("disabled", false);
                        },
                        500: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 500");
                            document.getElementById('btnCompanyDetailLock').innerHTML = "<i class='fa fa-lock'></i> Lock";
                            $("#btnCompanyDetailSave").prop("disabled", false);
                            $("#btnCompanyDetailLock").prop("disabled", false);
                            $("#btnCompanyDetailClose").prop("disabled", false);
                        }
                    }
                });
            } else {
                toastr.error("Invalid Entry");
            }
        }

        // =============
        // Unlock Button
        // =============
        function btnCompanyDetailUnlockOnclick() {
            document.getElementById('btnCompanyDetailUnlock').innerHTML = "<i class='fa fa-unlock'></i> Unlocking...";
            $("#btnCompanyDetailLock").prop("disabled", true);
            $("#btnCompanyDetailUnlock").prop("disabled", true);
            $("#btnCompanyDetailClose").prop("disabled", true);

            var companyId = getURLParameterValue("id");

            $.ajax({
                type: "PUT",
                url: '/api/company/unlock/' + companyId,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        toastr.success("Unlock Successful");
                        window.setTimeout(function () {
                            location.reload()
                        }, 1000);
                    },
                    404: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404");
                        document.getElementById('btnCompanyDetailUnlock').innerHTML = "<i class='fa fa-unlock'></i> Unlock";
                        $("#btnCompanyDetailUnlock").prop("disabled", false);
                        $("#btnCompanyDetailClose").prop("disabled", true);
                    },
                    400: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 400");
                        document.getElementById('btnCompanyDetailUnlock').innerHTML = "<i class='fa fa-unlock'></i> Unlock";
                        $("#btnCompanyDetailUnlock").prop("disabled", false);
                        $("#btnCompanyDetailClose").prop("disabled", true);
                    },
                    500: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 500");
                        document.getElementById('btnCompanyDetailUnlock').innerHTML = "<i class='fa fa-unlock'></i> Unlock";
                        $("#btnCompanyDetailUnlock").prop("disabled", false);
                        $("#btnCompanyDetailClose").prop("disabled", true);
                    }
                }
            });
        }

        // ===============
        // Get Branch Data
        // ===============
        function getBranchData() {
            var branchObservableArray = new wijmo.collections.ObservableArray;
            if (document.location.search.length > 0) {
                var companyId = getURLParameterValue("id");
                NProgress.start();
                $.ajax({
                    url: '/api/branch/list/' + companyId,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                var btnEditId = "<button class='btn btn-primary btn-xs btn-block' onclick='btnBranchEditOnclick()'><i class='fa fa-edit'></i> Edit</button>";
                                var btnDeleteId = "<button class='btn btn-danger btn-xs btn-block' onclick='btnBranchDeleteOnclick()'><i class='fa fa-trash'></i> Delete</button>";
                                if (isLocked) {
                                    btnEditId = "<button class='btn btn-primary btn-xs btn-block' onclick='btnBranchEditOnclick()' disabled><i class='fa fa-edit'></i> Edit</button>";
                                    btnDeleteId = "<button class='btn btn-danger btn-xs btn-block' onclick='btnBranchDeleteOnclick()' disabled><i class='fa fa-trash'></i> Delete</button>";
                                }

                                for (i = 0; i < results.length; i++) {
                                    branchObservableArray.push({
                                        EditId: btnEditId,
                                        DeleteId: btnDeleteId,
                                        Id: results[i]["Id"],
                                        CompanyId: results[i]["CompanyId"],
                                        Branch: results[i]["Branch"],
                                        BranchCode: results[i]["BranchCode"],
