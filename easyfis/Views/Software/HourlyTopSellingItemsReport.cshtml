<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Hourly Top Selling Items Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Hourly Top Selling Items Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpHourlyTopSellingItemsReportSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboHourlyTopSellingItemsReportDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnHourlyTopSellingItemsReportDownloadCSVOnclick()" id="btnHourlyTopSellingItemsReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboHourlyTopSellingItemsReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboHourlyTopSellingItemsReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboHourlyTopSellingItemsReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboHourlyTopSellingItemsReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="hourlyTopSellingItemsReportFlexGrid" class="grid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="btnHourlyTopSellingItemsReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnHourlyTopSellingItemsReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnHourlyTopSellingItemsReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnHourlyTopSellingItemsReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnHourlyTopSellingItemsReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnHourlyTopSellingItemsReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboHourlyTopSellingItemsReportStartDateFilter = new wijmo.input.InputDate('#cboHourlyTopSellingItemsReportStartDateFilter');
        var cboHourlyTopSellingItemsReportEndDateFilter = new wijmo.input.InputDate('#cboHourlyTopSellingItemsReportEndDateFilter');
        var isCboHourlyTopSellingItemsReportStartDateFilterSelected = false;
        var isCboHourlyTopSellingItemsReportEndDateFilterSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboHourlyTopSellingItemsReportCompanyFilter = new wijmo.input.ComboBox('#cboHourlyTopSellingItemsReportCompanyFilter');
        var cboHourlyTopSellingItemsReportBranchFilter = new wijmo.input.ComboBox('#cboHourlyTopSellingItemsReportBranchFilter');
        var isCboHourlyTopSellingItemsReportCompanyFilterSelected = false;

        // =============================
        // Collection View and Flex Grid
        // =============================
        var hourlyTopSellingItemsReportCollectionView;
        var hourlyTopSellingItemsReportFlexGrid;
        var cboHourlyTopSellingItemsReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboHourlyTopSellingItemsReportDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnHourlyTopSellingItemsReportMoveToFirstPageGrid = document.getElementById('btnHourlyTopSellingItemsReportMoveToFirstPageGrid');
        var btnHourlyTopSellingItemsReportMoveToPreviousPageGrid = document.getElementById('btnHourlyTopSellingItemsReportMoveToPreviousPageGrid');
        var btnHourlyTopSellingItemsReportMoveToNextPageGrid = document.getElementById('btnHourlyTopSellingItemsReportMoveToNextPageGrid');
        var btnHourlyTopSellingItemsReportMoveToLastPageGrid = document.getElementById('btnHourlyTopSellingItemsReportMoveToLastPageGrid');
        var btnHourlyTopSellingItemsReportCurrentPageGrid = document.getElementById('btnHourlyTopSellingItemsReportCurrentPageGrid');
        var hourlyTopSellingItemsReportCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();
            cboHourlyTopSellingItemsReportStartDateFilter.dispose();
            cboHourlyTopSellingItemsReportStartDateFilter = new wijmo.input.InputDate('#cboHourlyTopSellingItemsReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboHourlyTopSellingItemsReportStartDateFilterSelected) {
                        NProgress.start();
                        refreshHourlyTopSellingItemsReportFlexGrid();
                    } else {
                        isCboHourlyTopSellingItemsReportStartDateFilterSelected = false;
                    }
                }
            });

            cboHourlyTopSellingItemsReportEndDateFilter.dispose();
            cboHourlyTopSellingItemsReportEndDateFilter = new wijmo.input.InputDate('#cboHourlyTopSellingItemsReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboHourlyTopSellingItemsReportEndDateFilterSelected) {
                        NProgress.start();
                        refreshHourlyTopSellingItemsReportFlexGrid();
                    } else {
                        isCboHourlyTopSellingItemsReportEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/hourlyTopItemsSellingReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnHourlyTopSellingItemsReportDownloadCSV").prop("disabled", true);
                        $("#btnHourlyTopSellingItemsReportPrintPDF").prop("disabled", true);
                    }

                    cboHourlyTopSellingItemsReportCompanyFilter.dispose();
                    cboHourlyTopSellingItemsReportCompanyFilter = new wijmo.input.ComboBox('#cboHourlyTopSellingItemsReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnHourlyTopSellingItemsReportDownloadCSV").prop("disabled", false);
                            $("#btnHourlyTopSellingItemsReportPrintPDF").prop("disabled", false);
                            isCboHourlyTopSellingItemsReportCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboHourlyTopSellingItemsReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/hourlyTopItemsSellingReport/dropdown/list/branch/' + cboHourlyTopSellingItemsReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    Branch: branchResults[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnHourlyTopSellingItemsReportDownloadCSV").prop("disabled", true);
                            $("#btnHourlyTopSellingItemsReportPrintPDF").prop("disabled", true);
                        }

                        cboHourlyTopSellingItemsReportBranchFilter.dispose();
                        cboHourlyTopSellingItemsReportBranchFilter = new wijmo.input.ComboBox('#cboHourlyTopSellingItemsReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshHourlyTopSellingItemsReportFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboHourlyTopSellingItemsReportDisplayNumberOfRows.dispose();
            cboHourlyTopSellingItemsReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboHourlyTopSellingItemsReportDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboHourlyTopSellingItemsReportDisplayNumberOfRows.selectedValue;
                        hourlyTopSellingItemsReportCollectionView.pageSize = parseInt(numberOfRows);
                        hourlyTopSellingItemsReportCollectionView.refresh();
                        hourlyTopSellingItemsReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboHourlyTopSellingItemsReportCompanyFilterSelected) {
                createHourlyTopSellingItemsReportFlexGrid();
            } else {
                refreshHourlyTopSellingItemsReportFlexGrid();
            }
        }

        // ========================================
        // Get Hourly Top Selling Items Report Data
        // ========================================
        function getHourlyTopSellingItemsReportData() {
            var hourlyTopSellingItemsReportObservableArray = new wijmo.collections.ObservableArray;
            if (cboHourlyTopSellingItemsReportCompanyFilter.selectedValue != null) {
                if (cboHourlyTopSellingItemsReportBranchFilter.selectedValue != null) {

                    var startDate = cboHourlyTopSellingItemsReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboHourlyTopSellingItemsReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboHourlyTopSellingItemsReportCompanyFilter.selectedValue;
                    var branchId = cboHourlyTopSellingItemsReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/hourlyTopItemsSellingReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (hourlyTopSellingItemsReportResult) {
                            var totalAmount = 0;
                            if (hourlyTopSellingItemsReportResult.length > 0) {
                                for (i = 0; i < hourlyTopSellingItemsReportResult.length; i++) {
                                    var docLink = "/Software/ItemDetail?id=" + hourlyTopSellingItemsReportResult[i]["ItemId"];

                                    hourlyTopSellingItemsReportObservableArray.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block'><i class='fa fa-edit'></i> Detail",
                                        Branch: hourlyTopSellingItemsReportResult[i]["Branch"],
                                        Item: hourlyTopSellingItemsReportResult[i]["Item"],
                                        BaseUnit: hourlyTopSellingItemsReportResult[i]["BaseUnit"],
                                        BaseQuantity: hourlyTopSellingItemsReportResult[i]["BaseQuantity"],
                                        BaseQuantityDisplay: parseFloat(hourlyTopSellingItemsReportResult[i]["BaseQuantity"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        BasePrice: hourlyTopSellingItemsReportResult[i]["BasePrice"],
                                        BasePriceDisplay: parseFloat(hourlyTopSellingItemsReportResult[i]["BasePrice"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Amount: hourlyTopSellingItemsReportResult[i]["Amount"],
                                        AmountDisplay: parseFloat(hourlyTopSellingItemsReportResult[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        SalesItemTimeStamp: hourlyTopSellingItemsReportResult[i]["SalesItemTimeStamp"]
                                    });

                                    totalAmount += hourlyTopSellingItemsReportResult[i]["Amount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return hourlyTopSellingItemsReportObservableArray;
        }

        // ================================================
        // Create Hourly Top Selling Items Report Flex Grid
        // ================================================
        function createHourlyTopSellingItemsReportFlexGrid() {
            hourlyTopSellingItemsReportCollectionView = new wijmo.collections.CollectionView(getHourlyTopSellingItemsReportData());
            hourlyTopSellingItemsReportCollectionView.canFilter = true;
            hourlyTopSellingItemsReportCollectionView.pageSize = cboHourlyTopSellingItemsReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpHourlyTopSellingItemsReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                hourlyTopSellingItemsReportCollectionView.refresh();
            });

            hourlyTopSellingItemsReportCollectionView.filter = function (item) {
                return !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.BaseUnit.toLowerCase().indexOf(filterText) > -1);
            }

            hourlyTopSellingItemsReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateHourlyTopSellingItemsReportNavigationButtons();
            });

            hourlyTopSellingItemsReportFlexGrid = new wijmo.grid.FlexGrid('#hourlyTopSellingItemsReportFlexGrid');
            hourlyTopSellingItemsReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "Item",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Price",
                        "binding": "BasePriceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Unit",
                        "binding": "BaseUnit",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Quantity",
                        "binding": "BaseQuantityDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Time",
                        "binding": "SalesItemTimeStamp",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: hourlyTopSellingItemsReportCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            hourlyTopSellingItemsReportFlexGrid.trackChanges = true;

            updateHourlyTopSellingItemsReportNavigationButtons();

            btnHourlyTopSellingItemsReportMoveToFirstPageGrid.addEventListener('click', function () {
                hourlyTopSellingItemsReportCollectionView.moveToFirstPage();
                hourlyTopSellingItemsReportCurrentPageIndex = hourlyTopSellingItemsReportCollectionView.pageIndex + 1;
                updateHourlyTopSellingItemsReportNavigationButtons();
            });

            btnHourlyTopSellingItemsReportMoveToPreviousPageGrid.addEventListener('click', function () {
                hourlyTopSellingItemsReportCollectionView.moveToPreviousPage();
                hourlyTopSellingItemsReportCurrentPageIndex = hourlyTopSellingItemsReportCollectionView.pageIndex + 1;
                updateHourlyTopSellingItemsReportNavigationButtons();
            });

            btnHourlyTopSellingItemsReportMoveToNextPageGrid.addEventListener('click', function () {
                hourlyTopSellingItemsReportCollectionView.moveToNextPage();
                hourlyTopSellingItemsReportCurrentPageIndex = hourlyTopSellingItemsReportCollectionView.pageIndex + 1;
                updateHourlyTopSellingItemsReportNavigationButtons();
            });

            btnHourlyTopSellingItemsReportMoveToLastPageGrid.addEventListener('click', function () {
                hourlyTopSellingItemsReportCollectionView.moveToLastPage();
                hourlyTopSellingItemsReportCurrentPageIndex = hourlyTopSellingItemsReportCollectionView.pageIndex + 1;
                updateHourlyTopSellingItemsReportNavigationButtons();
            });
        }

        // =========================================================
        // Update Hourly Top Selling Items Report Navigation Buttons
        // =========================================================
        function updateHourlyTopSellingItemsReportNavigationButtons() {
            if (hourlyTopSellingItemsReportCollectionView.pageSize <= 0) {
                document.getElementById('btnHourlyTopSellingItemsReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('btnHourlyTopSellingItemsReportNavigationPageGrid').style.display = 'block';
            if (hourlyTopSellingItemsReportCollectionView.pageIndex === 0) {
                btnHourlyTopSellingItemsReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnHourlyTopSellingItemsReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnHourlyTopSellingItemsReportMoveToNextPageGrid.removeAttribute('disabled');
                btnHourlyTopSellingItemsReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (hourlyTopSellingItemsReportCollectionView.pageIndex === (hourlyTopSellingItemsReportCollectionView.pageCount - 1)) {
                btnHourlyTopSellingItemsReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnHourlyTopSellingItemsReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnHourlyTopSellingItemsReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnHourlyTopSellingItemsReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnHourlyTopSellingItemsReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnHourlyTopSellingItemsReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnHourlyTopSellingItemsReportMoveToNextPageGrid.removeAttribute('disabled');
                btnHourlyTopSellingItemsReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnHourlyTopSellingItemsReportCurrentPageGrid.innerHTML = (hourlyTopSellingItemsReportCollectionView.pageIndex + 1) + ' / ' + hourlyTopSellingItemsReportCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshHourlyTopSellingItemsReportFlexGrid() {
            hourlyTopSellingItemsReportCollectionView = new wijmo.collections.CollectionView(getHourlyTopSellingItemsReportData());
            hourlyTopSellingItemsReportCollectionView.canFilter = true;
            hourlyTopSellingItemsReportCollectionView.pageSize = cboHourlyTopSellingItemsReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpHourlyTopSellingItemsReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                hourlyTopSellingItemsReportCollectionView.refresh();
            });

            hourlyTopSellingItemsReportCollectionView.filter = function (item) {
                return !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.BaseUnit.toLowerCase().indexOf(filterText) > -1);
            }

            hourlyTopSellingItemsReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateHourlyTopSellingItemsReportNavigationButtons();
            });

            hourlyTopSellingItemsReportFlexGrid.itemsSource = hourlyTopSellingItemsReportCollectionView;
            hourlyTopSellingItemsReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnHourlyTopSellingItemsReportDownloadCSVOnclick() {
            var CSV = '';
            var hourlyTopSellingItemsReport = [];
            var fileName = 'HourlyTopSellingItemsReport.CSV';

            hourlyTopSellingItemsReportCollectionView.moveToFirstPage();

            for (var p = 1; p <= hourlyTopSellingItemsReportCollectionView.pageCount; p++) {
                for (i = 0; i < hourlyTopSellingItemsReportCollectionView.items.length; i++) {
                    hourlyTopSellingItemsReport.push({
                        Branch: hourlyTopSellingItemsReportCollectionView.items[i].Branch,
                        Item: hourlyTopSellingItemsReportCollectionView.items[i].Item,
                        Price: hourlyTopSellingItemsReportCollectionView.items[i].BasePrice,
                        Unit: hourlyTopSellingItemsReportCollectionView.items[i].BaseUnit,
                        Quantity: hourlyTopSellingItemsReportCollectionView.items[i].BaseQuantity,
                        Amount: hourlyTopSellingItemsReportCollectionView.items[i].Amount,
                        Hour: hourlyTopSellingItemsReportCollectionView.items[i].SalesItemTimeStamp
                    });
                }

                hourlyTopSellingItemsReportCollectionView.moveToNextPage();
                if (p == hourlyTopSellingItemsReportCollectionView.pageCount) {
                    hourlyTopSellingItemsReportCollectionView.moveToPage(hourlyTopSellingItemsReportCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                Item: "Item",
                Price: "Price",
                Unit: "Unit",
                Quantity: "Quantity",
                Amount: "Amount",
                Hour: "Hour"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < hourlyTopSellingItemsReport.length; i++) {
                var row = '';
                for (var a in hourlyTopSellingItemsReport[i]) {
                    row += '"' + hourlyTopSellingItemsReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

