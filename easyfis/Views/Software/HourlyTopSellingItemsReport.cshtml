<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Hourly Top Selling Items Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body class="">
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Hourly Top Selling Items Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; @ViewData["Branch"]
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 59%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 40%" align="right">
                                    @*<button onclick="salesDetailReportCSV_OnClick()" class="btn btn-primary "><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                        <button onclick="salesDetailReportPDF_OnClick()" class="btn btn-primary "><i class="fa fa-print"></i> Print</button>*@
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger "><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 59%">
                                    <div class="input-group ">
                                        <span class="input-group-addon">Date:</span>
                                        <input type="text" class="form-control " id="dateFrom" placeholder="filter date" disabled>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 20%" align="right"></td>
                                <td style="width: 20%"></td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="salesDetailReportGrid" class="grid"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <table class="table table-responsive table-bordered">
                            <tr>
                                <td align="right">
                                    <b>Total: </b>
                                </td>
                                <td style="padding-left: 10px" align="right">
                                    <span id="total">NA</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>

    <div id="c-mask" class="c-mask"></div><!-- /c-mask -->
    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);
            var results = regex.exec(window.location.href);
            if (results == null)
                return "";
            else
                return results[1];
        }

        function salesDetailReportPDF_OnClick() {
            window.location.href = '/RepSalesDetailReport/SalesDetailReport?StartDate=' + getParam("StartDate") + '&EndDate=' + getParam("EndDate");
        }

        function getSalesDetailReport() {
            var salesDetailReport = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/hourlyTopItemsSellingReport/list/' + getParam("StartDate") + '/' + getParam("EndDate") + '/' + getParam("CompanyId") + '/' + getParam("BranchId"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (salesDetailReportResult) {
                    if (salesDetailReportResult.length > 0) {
                        var totalAmount = 0;

                        for (i = 0; i < salesDetailReportResult.length; i++) {
                            var docLink = "/Software/SalesDetail?SalesId=" + salesDetailReportResult[i]["SIId"];
                            // Array Push
                            salesDetailReport.push({
                                Item: salesDetailReportResult[i]["Item"],
                                BaseUnit: salesDetailReportResult[i]["BaseUnit"],
                                BaseQuantity: salesDetailReportResult[i]["BaseQuantity"],
                                BasePrice: salesDetailReportResult[i]["BasePrice"],
                                SalesItemTimeStamp: salesDetailReportResult[i]["SalesItemTimeStamp"]
                            });

                            totalAmount += salesDetailReportResult[i]["Amount"];
                        }

                        document.getElementById("total").innerHTML = totalAmount.toLocaleString();
                    }
                    NProgress.done();
                }
            });

            return salesDetailReport;
        }
        var salesDetailReportCollection;

        function salesDetailReportCSV_OnClick() {


            var CSV = '';
            var salesDetailReport = [];
            var fileName = 'SalesDetailReport.CSV';

            for (i = 0; i < salesDetailReportCollection.items.length; i++) {
                salesDetailReport.push({
                    SI: salesDetailReportCollection.items[i].SIForCSV,
                    SIDate: salesDetailReportCollection.items[i].SIDate,
                    Item: salesDetailReportCollection.items[i].Item,
                    ItemInventory: salesDetailReportCollection.items[i].ItemInventory,
                    Price: salesDetailReportCollection.items[i].Price,
                    Quantity: salesDetailReportCollection.items[i].Quantity,
                    Unit: salesDetailReportCollection.items[i].Unit,
                    Amount: salesDetailReportCollection.items[i].Amount,


                });
            }

            //for (var i = 0; i < symbols.length; i++) {
            //    CSV += '"' + symbols[i].AccountCode + '"\r\n';
            //}

            // Rows
            // Rows
            var Headers = [];
            Headers.push({

                SI: "SI Number",
                SIDate: "SI Date",
                Item: "Item",
                ItemInventory: "Inventory Code",
                Price: "Price",
                Quantity: "Quantity",
                Unit: "Unit",
                Amount: "Amount",

            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }
            CSV = header + '\r\n';
            for (var i = 0; i < salesDetailReport.length; i++) {
                var row = '';
                for (var a in salesDetailReport[i]) {
                    row += '"' + salesDetailReport[i][a] + '",';
                }
                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");

                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

        $(document).ready(function () {
            NProgress.start();
            document.getElementById("dateFrom").value = "Date from " + getParam("StartDate") + " to " + getParam("EndDate");

            salesDetailReportCollection = new wijmo.collections.CollectionView(getSalesDetailReport());
            salesDetailReportCollection.canFilter = true;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesDetailReportCollection.refresh();
            });
            salesDetailReportCollection.filter = function (item) {
                return !filterText || (item.SI.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemInventory.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1)

            }
            // Flex Grid
            var salesDetailReportGrid = new wijmo.grid.FlexGrid('#salesDetailReportGrid');
            salesDetailReportGrid.initialize({
                columns: [
                    {
                        "header": "Item ",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": 530
                    },
                    {
                        "header": "Unit",
                        "binding": "BaseUnit",
                        "allowSorting": true,
                        "width": 250
                    },
                    {
                        "header": "Quantity",
                        "binding": "BaseQuantity",
                        "allowSorting": true,
                        "width": 150
                    },
                    {
                        "header": "Price",
                        "binding": "BasePrice",
                        "allowSorting": true,
                        "width": 150
                    },
                    {
                        "header": "Time Stamp",
                        "align": "center",
                        "binding": "SalesItemTimeStamp",
                        "allowSorting": true,
                        "width": 150
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: salesDetailReportCollection,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesDetailReportGrid.trackChanges = true;
        });
    </script>
    <script type="text/javascript">
        var slideLeft = new Menu({
            wrapper: '#o-wrapper',
            type: 'slide-left',
            menuOpenerClass: '.c-button',
            maskId: '#c-mask'
        });

        var slideLeftBtn = document.querySelector('#c-button--slide-left');

        slideLeftBtn.addEventListener('click', function (e) {
            e.preventDefault;
            slideLeft.open();
        });
    </script>
</body>
</html>