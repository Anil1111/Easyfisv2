<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Hourly Top Selling Items Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Hourly Top Selling Items Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboARHourlyTopSellingItemsReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnHourlyTopSellingItemsReportCSVOnclick()" id="btnHourlyTopSellingItemsReportCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    @*<button onclick="btnHourlyTopSellingItemsReportPrintPDFOnclick()" id="btnHourlyTopSellingItemsReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>*@
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboARHourlyTopSellingItemsReportStartDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboARHourlyTopSellingItemsReportEndDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboARHourlyTopSellingItemsReportCompany"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboARHourlyTopSellingItemsReportBranch"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="salesDetailReportGrid" class="grid"></div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="totalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboARHourlyTopSellingItemsReportStartDate = new wijmo.input.InputDate('#cboARHourlyTopSellingItemsReportStartDate');
        var cboARHourlyTopSellingItemsReportEndDate = new wijmo.input.InputDate('#cboARHourlyTopSellingItemsReportEndDate');
        var isARHourlyTopSellingItemsReportStartDateSelected = false;
        var isARHourlyTopSellingItemsReportEndDateSelected = false;
        var cboARHourlyTopSellingItemsReportCompany = new wijmo.input.ComboBox('#cboARHourlyTopSellingItemsReportCompany');
        var cboARHourlyTopSellingItemsReportBranch = new wijmo.input.ComboBox('#cboARHourlyTopSellingItemsReportBranch');
        var salesDetailReportCollections;
        var salesDetailReportGrid;
        var isARHourlyTopSellingItemsReportCompanySelected = false;
        var cboARHourlyTopSellingItemsReportShowNumberOfRows = new wijmo.input.ComboBox('#cboARHourlyTopSellingItemsReportShowNumberOfRows');
        var btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
        var btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
        var btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
        var btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
        var btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');
        var currentPageIndex = 0;

        // ===================
        // Get Parameter Value
        // ===================
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ============
        // Date Filters
        // ============
        function salesDetailReportDateFilters() {
            NProgress.start();
            cboARHourlyTopSellingItemsReportStartDate.dispose();
            cboARHourlyTopSellingItemsReportStartDate = new wijmo.input.InputDate('#cboARHourlyTopSellingItemsReportStartDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("StartDate")),
                onValueChanged: function () {
                    if (!isARHourlyTopSellingItemsReportStartDateSelected) {
                        NProgress.start();
                        refreshHourlyTopSellingItemsReportFlexGrid();
                    } else {
                        isARHourlyTopSellingItemsReportStartDateSelected = false;
                    }
                }
            });

            cboARHourlyTopSellingItemsReportEndDate.dispose();
            cboARHourlyTopSellingItemsReportEndDate = new wijmo.input.InputDate('#cboARHourlyTopSellingItemsReportEndDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("EndDate")),
                onValueChanged: function () {
                    if (!isARHourlyTopSellingItemsReportEndDateSelected) {
                        NProgress.start();
                        refreshHourlyTopSellingItemsReportFlexGrid();
                    } else {
                        isARHourlyTopSellingItemsReportEndDateSelected = false;
                    }
                }
            });

            createCboCompany();
        }

        // ==============
        // Company Filter
        // ==============
        function createCboCompany() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/company/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnHourlyTopSellingItemsReportCSV").prop("disabled", true);
                        $("#btnHourlyTopSellingItemsReportPrintPDF").prop("disabled", true);
                    }

                    cboARHourlyTopSellingItemsReportCompany.dispose();
                    cboARHourlyTopSellingItemsReportCompany = new wijmo.input.ComboBox('#cboARHourlyTopSellingItemsReportCompany', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getParam("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnHourlyTopSellingItemsReportCSV").prop("disabled", false);
                            $("#btnHourlyTopSellingItemsReportPrintPDF").prop("disabled", false);
                            isARHourlyTopSellingItemsReportCompanySelected = true;
                            createCboBranch();
                        }
                    });

                    createCboBranch();
                }
            });
        }

        // =============
        // Branch Filter
        // =============
        function createCboBranch() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboARHourlyTopSellingItemsReportCompany.selectedValue != null) {
                $.ajax({
                    url: '/api/branch/byCompanyId/list/locked/' + cboARHourlyTopSellingItemsReportCompany.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnHourlyTopSellingItemsReportCSV").prop("disabled", true);
                            $("#btnHourlyTopSellingItemsReportPrintPDF").prop("disabled", true);
                        }

                        cboARHourlyTopSellingItemsReportBranch.dispose();
                        cboARHourlyTopSellingItemsReportBranch = new wijmo.input.ComboBox('#cboARHourlyTopSellingItemsReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getParam("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshHourlyTopSellingItemsReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===============
        // Show Rows Table
        // ===============
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboARHourlyTopSellingItemsReportShowNumberOfRows.dispose();
            cboARHourlyTopSellingItemsReportShowNumberOfRows = new wijmo.input.ComboBox('#cboARHourlyTopSellingItemsReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboARHourlyTopSellingItemsReportShowNumberOfRows.selectedValue;
                        salesDetailReportCollections.pageSize = parseInt(numberOfRows);
                        salesDetailReportCollections.refresh();
                        salesDetailReportGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isARHourlyTopSellingItemsReportCompanySelected) {
                createHourlyTopSellingItemsReportFlexGrid();
            } else {
                refreshHourlyTopSellingItemsReportFlexGrid();
            }
        }

        // ===============================
        // Get Sales Order Detail Data
        // ===============================
        function getHourlyTopSellingItemsReport() {
            var salesDetailReports = new wijmo.collections.ObservableArray;
            if (cboARHourlyTopSellingItemsReportCompany.selectedValue != null) {
                if (cboARHourlyTopSellingItemsReportBranch.selectedValue != null) {
                    var startDate = cboARHourlyTopSellingItemsReportStartDate.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboARHourlyTopSellingItemsReportEndDate.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboARHourlyTopSellingItemsReportCompany.selectedValue;
                    var branchId = cboARHourlyTopSellingItemsReportBranch.selectedValue;

                    $.ajax({
                        url: '/api/hourlyTopItemsSellingReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (salesDetailReportResult) {
                            var totalAmount = 0;
                            if (salesDetailReportResult.length > 0) {
                                for (i = 0; i < salesDetailReportResult.length; i++) {
                                    var docLink = "/Software/ItemDetail?id=" + salesDetailReportResult[i]["ItemId"];

                                    salesDetailReports.push({
                                        Detail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block'><i class='fa fa-edit'></i> Item Detail",
                                        Branch: salesDetailReportResult[i]["Branch"],
                                        Item: salesDetailReportResult[i]["Item"],
                                        BaseUnit: salesDetailReportResult[i]["BaseUnit"],
                                        BaseQuantity: salesDetailReportResult[i]["BaseQuantity"],
                                        BaseQuantityDisplay: parseFloat(salesDetailReportResult[i]["BaseQuantity"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        BasePrice: salesDetailReportResult[i]["BasePrice"],
                                        BasePriceDisplay: parseFloat(salesDetailReportResult[i]["BasePrice"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Amount: salesDetailReportResult[i]["Amount"],
                                        AmountDisplay: parseFloat(salesDetailReportResult[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        SalesItemTimeStamp: salesDetailReportResult[i]["SalesItemTimeStamp"]
                                    });

                                    totalAmount += salesDetailReportResult[i]["Amount"];
                                }
                            }

                            document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return salesDetailReports;
        }

        // =========================
        // Update Navigation Buttons
        // =========================
        function updateNavigateButtonsItems() {
            if (salesDetailReportCollections.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            if (salesDetailReportCollections.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (salesDetailReportCollections.pageIndex === (salesDetailReportCollections.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (salesDetailReportCollections.pageIndex + 1) + ' / ' + salesDetailReportCollections.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshHourlyTopSellingItemsReportFlexGrid() {
            salesDetailReportCollections = new wijmo.collections.CollectionView(getHourlyTopSellingItemsReport());
            salesDetailReportCollections.canFilter = true;
            salesDetailReportCollections.pageSize = cboARHourlyTopSellingItemsReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesDetailReportCollections.refresh();

                if (salesDetailReportCollections.items.length > 0) {
                    var totalAmount = 0;
                    for (var i = 0; i < salesDetailReportCollections.items.length; i++) {
                        totalAmount += salesDetailReportCollections.items[i].Amount;
                    }

                    document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            salesDetailReportCollections.filter = function (item) {
                return !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.BaseUnit.toLowerCase().indexOf(filterText) > -1);
            }

            salesDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            salesDetailReportGrid.itemsSource = salesDetailReportCollections;
            salesDetailReportGrid.trackChanges = true;
        }

        // =========
        // Flex Grid
        // =========
        function createHourlyTopSellingItemsReportFlexGrid() {
            salesDetailReportCollections = new wijmo.collections.CollectionView(getHourlyTopSellingItemsReport());
            salesDetailReportCollections.canFilter = true;
            salesDetailReportCollections.pageSize = cboARHourlyTopSellingItemsReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesDetailReportCollections.refresh();

                if (salesDetailReportCollections.items.length > 0) {
                    var totalAmount = 0;
                    for (var i = 0; i < salesDetailReportCollections.items.length; i++) {
                        totalAmount += salesDetailReportCollections.items[i].Amount;
                    }

                    document.getElementById("totalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            salesDetailReportCollections.filter = function (item) {
                return !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.BaseUnit.toLowerCase().indexOf(filterText) > -1);
            }

            salesDetailReportCollections.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsItems();
            });

            salesDetailReportGrid = new wijmo.grid.FlexGrid('#salesDetailReportGrid');
            salesDetailReportGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "Detail",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "0.7*"
                    },
                    {
                        "header": "Item",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Price",
                        "binding": "BasePriceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Unit",
                        "binding": "BaseUnit",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Quantity",
                        "binding": "BaseQuantityDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Time",
                        "binding": "SalesItemTimeStamp",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: salesDetailReportCollections,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesDetailReportGrid.trackChanges = true;

            updateNavigateButtonsItems();

            btnFirstPageGrid.addEventListener('click', function () {
                salesDetailReportCollections.moveToFirstPage();
                currentPageIndex = salesDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnPreviousPageGrid.addEventListener('click', function () {
                salesDetailReportCollections.moveToPreviousPage();
                currentPageIndex = salesDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnNextPageGrid.addEventListener('click', function () {
                salesDetailReportCollections.moveToNextPage();
                currentPageIndex = salesDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });

            btnLastPageGrid.addEventListener('click', function () {
                salesDetailReportCollections.moveToLastPage();
                currentPageIndex = salesDetailReportCollections.pageIndex + 1;
                updateNavigateButtonsItems();
            });
        }

        // ============
        // Download CSV
        // ============
        function btnHourlyTopSellingItemsReportCSVOnclick() {
            var CSV = '';
            var salesDetailReport = [];
            var fileName = 'HourlyTopSellingItemsReport.CSV';

            salesDetailReportCollections.moveToFirstPage();

            for (var p = 1; p <= salesDetailReportCollections.pageCount; p++) {
                for (i = 0; i < salesDetailReportCollections.items.length; i++) {
                    var IsClose = salesDetailReportCollections.items[i].IsClose;
                    var isPOClose = "Not Closed";
                    if (IsClose) {
                        isPOClose = "Closed"
                    }

                    salesDetailReport.push({
                        Branch: salesDetailReportCollections.items[i].Branch,
                        Item: salesDetailReportCollections.items[i].Item,
                        Price: salesDetailReportCollections.items[i].BasePrice,
                        Unit: salesDetailReportCollections.items[i].BaseUnit,
                        Quantity: salesDetailReportCollections.items[i].BaseQuantity,
                        Amount: salesDetailReportCollections.items[i].Amount,
                        Hour: salesDetailReportCollections.items[i].SalesItemTimeStamp
                    });
                }

                salesDetailReportCollections.moveToNextPage();
                if (p == salesDetailReportCollections.pageCount) {
                    salesDetailReportCollections.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                Item: "Item",
                Price: "Price",
                Unit: "Unit",
                Quantity: "Quantity",
                Amount: "Amount",
                Hour: "Hour"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < salesDetailReport.length; i++) {
                var row = '';
                for (var a in salesDetailReport[i]) {
                    row += '"' + salesDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

