        function btnBIRCASSalesJournalDownloadCSVOnclick() {
            var CSV = '';
            var BIRCASSalesJournal = [];
            var fileName = 'BIRCASSalesJournal.CSV';

            BIRCASSalesJournalCollectionView.moveToFirstPage();


            for (var p = 1; p <= BIRCASSalesJournalCollectionView.pageCount; p++) {
                for (i = 0; i < BIRCASSalesJournalCollectionView.items.length; i++) {
                    BIRCASSalesJournal.push({
                        Date: BIRCASSalesJournalCollectionView.items[i].Date,
                        ReferenceNumber: BIRCASSalesJournalCollectionView.items[i].ReferenceNumber,
                        Customer: BIRCASSalesJournalCollectionView.items[i].Customer,
                        CustomerTIN: BIRCASSalesJournalCollectionView.items[i].CustomerTIN,
                        Address: BIRCASSalesJournalCollectionView.items[i].Address,
                        ManualReferenceNumber: BIRCASSalesJournalCollectionView.items[i].ManualReferenceNumber,
                        TotalAmount: BIRCASSalesJournalCollectionView.items[i].TotalAmount,
                        Discount: BIRCASSalesJournalCollectionView.items[i].Discount,
                        VAT: BIRCASSalesJournalCollectionView.items[i].VAT,
                        NetSales: BIRCASSalesJournalCollectionView.items[i].NetSales
                    });
                }

                BIRCASSalesJournalCollectionView.moveToNextPage();
                if (p == BIRCASSalesJournalCollectionView.pageCount) {
                    BIRCASSalesJournalCollectionView.moveToPage(BIRCASSalesJournalCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Date: "Date",
                ReferenceNumber: "Tx No.",
                Customer: "Customer",
                CustomerTIN: "Customer TIN",
                Address: "Address",
                ManualReferenceNumber: "Doc. Ref. No.",
                TotalAmount: "Total Amount",
                Discount: "Discount",
                VAT: "VAT",
                NetSales: "NetSales"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < BIRCASSalesJournal.length; i++) {
                var row = '';
                for (var a in BIRCASSalesJournal[i]) {
                    row += '"' + BIRCASSalesJournal[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

