<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>BIR CAS - Sales Journal</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        BIR CAS - Sales Journal
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpBIRCASSalesJournalSeacrhFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboBIRCASSalesJournalDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button class="btn btn-success" onclick="btnBIRCASSalesJournalDownloadCSVOnclick()" id="btnBIRCASSalesJournalDownloadCSV"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button class="btn btn-primary" onclick="btnBIRCASSalesJournalPrintPDFOnclick()" id="btnBIRCASSalesJournalPrintPDF"><i class="fa fa-file-pdf-o" aria-hidden="true"></i> PDF</button>
                                    <a href="/Software/BIRCASReports" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASSalesJournalStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASSalesJournalEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASSalesJournalCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASSalesJournalBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="BIRCASSalesJournalFlexGrid" class="grid" style="font-size: 12px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="BIRCASSalesJournalNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASSalesJournalMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASSalesJournalMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnBIRCASSalesJournalCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASSalesJournalMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASSalesJournalMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Discount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalDiscount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total VAT</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalVAT" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Net Sales</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalNetSales" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ==================
        // Data Range Filters
        // ==================
        var cboBIRCASSalesJournalStartDateFilter = new wijmo.input.InputDate('#cboBIRCASSalesJournalStartDateFilter');
        var cboBIRCASSalesJournalEndDateFilter = new wijmo.input.InputDate('#cboBIRCASSalesJournalEndDateFilter');
        var isCboBIRCASSalesJournalStartDateFilterSelected = false;
        var isCboBIRCASSalesJournalEndDateFilterSelected = false;

        // ==========================
        // Company and Branch Filters
        // ==========================
        var cboBIRCASSalesJournalCompanyFilter = new wijmo.input.ComboBox('#cboBIRCASSalesJournalCompanyFilter');
        var isCboBIRCASSalesJournalCompanyFilterSelected = false;
        var cboBIRCASSalesJournalBranchFilter = new wijmo.input.ComboBox('#cboBIRCASSalesJournalBranchFilter');

        // =============================
        // Collection View and Flex Grid
        // =============================
        var BIRCASSalesJournalCollectionView;
        var BIRCASSalesJournalFlexGrid;
        var cboBIRCASSalesJournalDisplayNumberOfRows = new wijmo.input.ComboBox('#cboBIRCASSalesJournalDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnBIRCASSalesJournalMoveToFirstPageGrid = document.getElementById('btnBIRCASSalesJournalMoveToFirstPageGrid');
        var btnBIRCASSalesJournalMoveToPreviousPageGrid = document.getElementById('btnBIRCASSalesJournalMoveToPreviousPageGrid');
        var btnBIRCASSalesJournalMoveToNextPageGrid = document.getElementById('btnBIRCASSalesJournalMoveToNextPageGrid');
        var btnBIRCASSalesJournalMoveToLastPageGrid = document.getElementById('btnBIRCASSalesJournalMoveToLastPageGrid');
        var btnBIRCASSalesJournalCurrentPageGrid = document.getElementById('btnBIRCASSalesJournalCurrentPageGrid');
        var BIRCASSalesJournalCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangedFilter() {
            NProgress.start();
            cboBIRCASSalesJournalStartDateFilter.dispose();
            cboBIRCASSalesJournalStartDateFilter = new wijmo.input.InputDate('#cboBIRCASSalesJournalStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboBIRCASSalesJournalStartDateFilterSelected) {
                        NProgress.start();
                        refreshBIRCASSalesJournalFlexGrid();
                    } else {
                        isCboBIRCASSalesJournalStartDateFilterSelected = false;
                    }
                }
            });

            cboBIRCASSalesJournalEndDateFilter.dispose();
            cboBIRCASSalesJournalEndDateFilter = new wijmo.input.InputDate('#cboBIRCASSalesJournalEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboBIRCASSalesJournalEndDateFilterSelected) {
                        NProgress.start();
                        refreshBIRCASSalesJournalFlexGrid();
                    } else {
                        isCboBIRCASSalesJournalEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/BIRCASSalesJournal/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnBIRCASSalesJournalDownloadCSV").prop("disabled", true);
                        $("#btnBIRCASSalesJournalPrintPDF").prop("disabled", true);
                    }

                    cboBIRCASSalesJournalCompanyFilter.dispose();
                    cboBIRCASSalesJournalCompanyFilter = new wijmo.input.ComboBox('#cboBIRCASSalesJournalCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnBIRCASSalesJournalDownloadCSV").prop("disabled", false);
                            $("#btnBIRCASSalesJournalPrintPDF").prop("disabled", false);
                            isCboBIRCASSalesJournalCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();

            if (cboBIRCASSalesJournalCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/BIRCASSalesJournal/dropdown/list/branch/' + cboBIRCASSalesJournalCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            branchObservableArray.push({
                                Id: 0,
                                Branch: "All Branches"
                            });

                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnBIRCASSalesJournalDownloadCSV").prop("disabled", true);
                            $("#btnBIRCASSalesJournalPrintPDF").prop("disabled", true);
                        }

                        cboBIRCASSalesJournalBranchFilter.dispose();
                        cboBIRCASSalesJournalBranchFilter = new wijmo.input.ComboBox('#cboBIRCASSalesJournalBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshBIRCASSalesJournalFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboBIRCASSalesJournalDisplayNumberOfRows.dispose();
            cboBIRCASSalesJournalDisplayNumberOfRows = new wijmo.input.ComboBox('#cboBIRCASSalesJournalDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboBIRCASSalesJournalDisplayNumberOfRows.selectedValue;
                        BIRCASSalesJournalCollectionView.pageSize = parseInt(numberOfRows);
                        BIRCASSalesJournalCollectionView.refresh();
                        BIRCASSalesJournalFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboBIRCASSalesJournalCompanyFilterSelected) {
                createBIRCASSalesJournalFlexGrid();
            } else {
                refreshBIRCASSalesJournalFlexGrid();
            }
        }

        // ========
        // Get Data
        // ========
        function getBIRCASSalesJournalData() {
            var BIRCASSalesJournalObservableArray = new wijmo.collections.ObservableArray;
            if (cboBIRCASSalesJournalCompanyFilter.selectedValue != null) {
                if (cboBIRCASSalesJournalBranchFilter.selectedValue != null) {
                    var startDate = cboBIRCASSalesJournalStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboBIRCASSalesJournalEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboBIRCASSalesJournalCompanyFilter.selectedValue;
                    var branchId = cboBIRCASSalesJournalBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/BIRCASSalesJournal/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {

                            var totalAmount = 0;
                            var totalDiscount = 0;
                            var totalVAT = 0;
                            var totalNetSales = 0;

                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var dataDateResult = new Date(results[i]["Date"]);
                                    var dataDate = ('0' + (dataDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + dataDateResult.getDate()).slice(-2) + '-' + dataDateResult.getFullYear();

                                    BIRCASSalesJournalObservableArray.push({
                                        Date: dataDate,
                                        ReferenceNumber: results[i]["ReferenceNumber"],
                                        Customer: results[i]["Customer"],
                                        CustomerTIN: results[i]["CustomerTIN"],
                                        Address: results[i]["Address"],
                                        ManualReferenceNumber: results[i]["ManualReferenceNumber"],
                                        TotalAmount: results[i]["TotalAmount"],
                                        TotalAmountDisplay: parseFloat(results[i]["TotalAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Discount: results[i]["Discount"],
                                        DiscountDisplay: parseFloat(results[i]["Discount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        VAT: results[i]["VAT"],
                                        VATDisplay: parseFloat(results[i]["VAT"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        NetSales: results[i]["NetSales"],
                                        NetSalesDisplay: parseFloat(results[i]["NetSales"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    totalAmount += results[i]["TotalAmount"];
                                    totalDiscount += results[i]["Discount"];
                                    totalVAT += results[i]["VAT"];
                                    totalNetSales += results[i]["NetSales"];
                                }
                            }

                            document.getElementById("inpTotalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalDiscount").value = parseFloat(totalDiscount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalVAT").value = parseFloat(totalVAT).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalNetSales").value = parseFloat(totalNetSales).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalDiscount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalVAT").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalNetSales").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalDiscount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalVAT").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalNetSales").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return BIRCASSalesJournalObservableArray;
        }

        // ================
        // Create Flex Grid
        // ================
        function createBIRCASSalesJournalFlexGrid() {
            BIRCASSalesJournalCollectionView = new wijmo.collections.CollectionView(getBIRCASSalesJournalData());
            BIRCASSalesJournalCollectionView.canFilter = true;
            BIRCASSalesJournalCollectionView.pageSize = cboBIRCASSalesJournalDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpBIRCASSalesJournalSeacrhFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                BIRCASSalesJournalCollectionView.refresh();

                if (BIRCASSalesJournalCollectionView.items.length > 0) {
                    var totalAmount = 0;
                    var totalDiscount = 0;
                    var totalVAT = 0;
                    var totalNetSales = 0;

                    for (var p = 1; p <= BIRCASSalesJournalCollectionView.pageCount; p++) {
                        for (i = 0; i < BIRCASSalesJournalCollectionView.items.length; i++) {
                            totalAmount += BIRCASSalesJournalCollectionView.items[i].TotalAmount;
                            totalDiscount += BIRCASSalesJournalCollectionView.items[i].Discount;
                            totalVAT += BIRCASSalesJournalCollectionView.items[i].VAT;
                            totalNetSales += BIRCASSalesJournalCollectionView.items[i].NetSales;
                        }

                        BIRCASSalesJournalCollectionView.moveToNextPage();
                        if (p == BIRCASSalesJournalCollectionView.pageCount) {
                            BIRCASSalesJournalCollectionView.moveToPage(BIRCASSalesJournalCurrentPageIndex - 1);
                        }
                    }

                    document.getElementById("inpTotalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalDiscount").value = parseFloat(totalDiscount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalVAT").value = parseFloat(totalVAT).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalNetSales").value = parseFloat(totalNetSales).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalDiscount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalVAT").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalNetSales").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            BIRCASSalesJournalCollectionView.filter = function (item) {
                return !filterText || (item.ReferenceNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CustomerTIN.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Address.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ManualReferenceNumber.toLowerCase().indexOf(filterText) > -1);
            }

            BIRCASSalesJournalCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateBIRCASSalesJournalNavigationButton();
            });

            BIRCASSalesJournalFlexGrid = new wijmo.grid.FlexGrid('#BIRCASSalesJournalFlexGrid');
            BIRCASSalesJournalFlexGrid.initialize({
                columns: [
                    {
                        "header": "Date",
                        "binding": "Date",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Tx No.",
                        "binding": "ReferenceNumber",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Customer TIN",
                        "binding": "CustomerTIN",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Address",
                        "binding": "Address",
                        "allowSorting": true,
                        "width": "3*"
                    },
                    {
                        "header": "Doc. Ref. No.",
                        "binding": "ManualReferenceNumber",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Total Amount",
                        "binding": "TotalAmountDisplay",
                        "allowSorting": true,
                        "width": "2*",
                        "align": "right"
                    },
                    {
                        "header": "Discount",
                        "binding": "DiscountDisplay",
                        "allowSorting": true,
                        "width": "2*",
                        "align": "right"
                    },
                    {
                        "header": "VAT",
                        "binding": "VATDisplay",
                        "allowSorting": true,
                        "width": "2*",
                        "align": "right"
                    },
                    {
                        "header": "Net Purchase",
                        "binding": "NetSalesDisplay",
                        "allowSorting": true,
                        "width": "2*",
                        "align": "right"
                    },
                ],
