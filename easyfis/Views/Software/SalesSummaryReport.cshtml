<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Sales Summary Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Sales Summary Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpSalesSummaryReportFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboSalesSummaryReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnSalesSummaryReportDownloadCSVOnclick()" id="btnSalesSummaryReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnSalesSummaryReportPDFOnclick()" id="btnSalesSummaryReportPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboSalesSummaryReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboSalesSummaryReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboSalesSummaryReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboSalesSummaryReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="salesSummaryReportFlexGrid" style="font-size: 12px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="salesSummaryReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnSalesSummaryReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnSalesSummaryReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnSalesSummaryReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnSalesSummaryReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnSalesSummaryReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboSalesSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboSalesSummaryReportStartDateFilter');
        var cboSalesSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboSalesSummaryReportEndDateFilter');
        var isSalesSummaryReportStartDateSelected = false;
        var isSalesSummaryReportEndDateSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboSalesSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboSalesSummaryReportCompanyFilter');
        var cboSalesSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboSalesSummaryReportBranchFilter');
        var isSalesSummaryReportCompanySelected = false;

        // =============================
        // Collection View and Flex Grid
        // =============================
        var salesSummaryReportCollectionView;
        var salesSummaryReportFlexGrid;
        var cboSalesSummaryReportShowNumberOfRows = new wijmo.input.ComboBox('#cboSalesSummaryReportShowNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnSalesSummaryReportMoveToFirstPageGrid = document.getElementById('btnSalesSummaryReportMoveToFirstPageGrid');
        var btnSalesSummaryReportMoveToPreviousPageGrid = document.getElementById('btnSalesSummaryReportMoveToPreviousPageGrid');
        var btnSalesSummaryReportMoveToNextPageGrid = document.getElementById('btnSalesSummaryReportMoveToNextPageGrid');
        var btnSalesSummaryReportMoveToLastPageGrid = document.getElementById('btnSalesSummaryReportMoveToLastPageGrid');
        var btnSalesSummaryReportCurrentPageGrid = document.getElementById('btnSalesSummaryReportCurrentPageGrid');
        var currentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboSalesSummaryReportStartDateFilter.dispose();
            cboSalesSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboSalesSummaryReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isSalesSummaryReportStartDateSelected) {
                        NProgress.start();
                        refreshSalesSummaryReportFlexGrid();
                    } else {
                        isSalesSummaryReportStartDateSelected = false;
                    }
                }
            });

            cboSalesSummaryReportEndDateFilter.dispose();
            cboSalesSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboSalesSummaryReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isSalesSummaryReportEndDateSelected) {
                        NProgress.start();
                        refreshSalesSummaryReportFlexGrid();
                    } else {
                        isSalesSummaryReportEndDateSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/salesSummaryReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnSalesSummaryReportDownloadCSV").prop("disabled", true);
                        $("#btnSalesSummaryReportPDF").prop("disabled", true);
                    }

                    cboSalesSummaryReportCompanyFilter.dispose();
                    cboSalesSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboSalesSummaryReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnSalesSummaryReportDownloadCSV").prop("disabled", false);
                            $("#btnSalesSummaryReportPDF").prop("disabled", false);
                            isSalesSummaryReportCompanySelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboSalesSummaryReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/salesSummaryReport/dropdown/list/branch/' + cboSalesSummaryReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnSalesSummaryReportDownloadCSV").prop("disabled", true);
                            $("#btnSalesSummaryReportPDF").prop("disabled", true);
                        }

                        cboSalesSummaryReportBranchFilter.dispose();
                        cboSalesSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboSalesSummaryReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshSalesSummaryReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboSalesSummaryReportShowNumberOfRows.dispose();
            cboSalesSummaryReportShowNumberOfRows = new wijmo.input.ComboBox('#cboSalesSummaryReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboSalesSummaryReportShowNumberOfRows.selectedValue;
                        salesSummaryReportCollectionView.pageSize = parseInt(numberOfRows);
                        salesSummaryReportCollectionView.refresh();
                        salesSummaryReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isSalesSummaryReportCompanySelected) {
                createSalesSummaryReportFlexGrid();
            } else {
                refreshSalesSummaryReportFlexGrid();
            }
        }

        // =============================
        // Get Sales Summary Report Data
        // =============================
        function getSalesSummaryReportData() {
            var salesSummaryReports = new wijmo.collections.ObservableArray;

            if (cboSalesSummaryReportCompanyFilter.selectedValue != null) {
                if (cboSalesSummaryReportBranchFilter.selectedValue != null) {

                    var startDate = cboSalesSummaryReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboSalesSummaryReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboSalesSummaryReportCompanyFilter.selectedValue;
                    var branchId = cboSalesSummaryReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/salesSummaryReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var totalAmount = 0;
                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/SalesDetail?id=" + results[i]["SIId"];

                                    var SIDateResult = new Date(results[i]["SIDate"])
                                    var SIDate = ('0' + (SIDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + SIDateResult.getDate()).slice(-2) + '-' + SIDateResult.getFullYear();

                                    salesSummaryReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block'><i class='fa fa-edit'></i> Detail",
                                        SIId: results[i]["SIId"],
                                        Branch: results[i]["Branch"],
                                        SINumber: results[i]["SINumber"],
                                        SIDate: SIDate,
                                        Customer: results[i]["Customer"],
                                        Term: results[i]["Term"],
                                        DocumentReference: results[i]["DocumentReference"],
                                        Sales: results[i]["Sales"],
                                        Time: results[i]["Time"],
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    totalAmount += results[i]["Amount"];
                                }
                            }

                            document.getElementById("inpTotalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return salesSummaryReports;
        }

        // =====================================
        // Create Sales Summary Report Flex Grid
        // =====================================
        function createSalesSummaryReportFlexGrid() {
            salesSummaryReportCollectionView = new wijmo.collections.CollectionView(getSalesSummaryReportData());
            salesSummaryReportCollectionView.canFilter = true;
            salesSummaryReportCollectionView.pageSize = cboSalesSummaryReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpSalesSummaryReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesSummaryReportCollectionView.refresh();
            });

            salesSummaryReportCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Term.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Sales.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Time.toLowerCase().indexOf(filterText) > -1);
            }

            salesSummaryReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateSalesSummaryReportNavigationButtons();
            });

            salesSummaryReportFlexGrid = new wijmo.grid.FlexGrid('#salesSummaryReportFlexGrid');
            salesSummaryReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "SI No.",
                        "binding": "SINumber",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": 100
                    },
                    {
                        "header": "SI Date ",
                        "binding": "SIDate",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "2.5*"
                    },
                    {
                        "header": "Terms",
                        "binding": "Term",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Doc Ref.",
                        "binding": "DocumentReference",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Sales",
                        "binding": "Sales",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Time",
                        "binding": "Time",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1.5*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: salesSummaryReportCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesSummaryReportFlexGrid.trackChanges = true;

            updateSalesSummaryReportNavigationButtons();

            btnSalesSummaryReportMoveToFirstPageGrid.addEventListener('click', function () {
                salesSummaryReportCollectionView.moveToFirstPage();
                currentPageIndex = salesSummaryReportCollectionView.pageIndex + 1;
                updateSalesSummaryReportNavigationButtons();
            });

            btnSalesSummaryReportMoveToPreviousPageGrid.addEventListener('click', function () {
                salesSummaryReportCollectionView.moveToPreviousPage();
                currentPageIndex = salesSummaryReportCollectionView.pageIndex + 1;
                updateSalesSummaryReportNavigationButtons();
            });

            btnSalesSummaryReportMoveToNextPageGrid.addEventListener('click', function () {
                salesSummaryReportCollectionView.moveToNextPage();
                currentPageIndex = salesSummaryReportCollectionView.pageIndex + 1;
                updateSalesSummaryReportNavigationButtons();
            });

            btnSalesSummaryReportMoveToLastPageGrid.addEventListener('click', function () {
                salesSummaryReportCollectionView.moveToLastPage();
                currentPageIndex = salesSummaryReportCollectionView.pageIndex + 1;
                updateSalesSummaryReportNavigationButtons();
            });
        }

        // ==============================================
        // Update Sales Summary Report Navigation Buttons
        // ==============================================
        function updateSalesSummaryReportNavigationButtons() {
            if (salesSummaryReportCollectionView.pageSize <= 0) {
                document.getElementById('salesSummaryReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('salesSummaryReportNavigationPageGrid').style.display = 'block';
            if (salesSummaryReportCollectionView.pageIndex === 0) {
                btnSalesSummaryReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnSalesSummaryReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnSalesSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnSalesSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (salesSummaryReportCollectionView.pageIndex === (salesSummaryReportCollectionView.pageCount - 1)) {
                btnSalesSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnSalesSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnSalesSummaryReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnSalesSummaryReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnSalesSummaryReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnSalesSummaryReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnSalesSummaryReportMoveToNextPageGrid.removeAttribute('disabled');
                btnSalesSummaryReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnSalesSummaryReportCurrentPageGrid.innerHTML = (salesSummaryReportCollectionView.pageIndex + 1) + ' / ' + salesSummaryReportCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshSalesSummaryReportFlexGrid() {
            salesSummaryReportCollectionView = new wijmo.collections.CollectionView(getSalesSummaryReportData());
            salesSummaryReportCollectionView.canFilter = true;
            salesSummaryReportCollectionView.pageSize = cboSalesSummaryReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpSalesSummaryReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesSummaryReportCollectionView.refresh();
            });

            salesSummaryReportCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Term.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Sales.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Time.toLowerCase().indexOf(filterText) > -1);
            }

            salesSummaryReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateSalesSummaryReportNavigationButtons();
            });

            salesSummaryReportFlexGrid.itemsSource = salesSummaryReportCollectionView;
            salesSummaryReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnSalesSummaryReportDownloadCSVOnclick() {
            var CSV = '';
            var salesSummaryReport = [];
            var fileName = 'SalesSummaryReport.CSV';

            salesSummaryReportCollectionView.moveToFirstPage();

            for (var p = 1; p <= salesSummaryReportCollectionView.pageCount; p++) {
                for (i = 0; i < salesSummaryReportCollectionView.items.length; i++) {
                    salesSummaryReport.push({
                        Branch: salesSummaryReportCollectionView.items[i].Branch,
                        SINumber: "SI-" + salesSummaryReportCollectionView.items[i].SINumber,
                        SIDate: salesSummaryReportCollectionView.items[i].SIDate,
                        Customer: salesSummaryReportCollectionView.items[i].Customer,
                        Term: salesSummaryReportCollectionView.items[i].Term,
                        DocumentReference: salesSummaryReportCollectionView.items[i].DocumentReference,
                        Sales: salesSummaryReportCollectionView.items[i].Sales,
                        Time: salesSummaryReportCollectionView.items[i].Time,
                        Amount: salesSummaryReportCollectionView.items[i].Amount,
                    });
                }

                salesSummaryReportCollectionView.moveToNextPage();
                if (p == salesSummaryReportCollectionView.pageCount) {
                    salesSummaryReportCollectionView.moveToPage(currentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Branch: "Branch",
                SINumber: "SI Number",
                SIDate: "SI Date",
                Customer: "Customer",
                Term: "Terms",
                DocumentReference: "Document Reference",
                Sales: "Sales",
                Time: "Time",
                Amount: "Amount",
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < salesSummaryReport.length; i++) {
                var row = '';
                for (var a in salesSummaryReport[i]) {
                    row += '"' + salesSummaryReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

