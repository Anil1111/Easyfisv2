@model easyfis.Entities.MstUserForm
@{
    // =====================
    // User Rights Variables
    // =====================
    var canAdd = Model.CanAdd;
    var canEdit = Model.CanEdit;
    var canDelete = Model.CanDelete;
    var canLock = Model.CanLock;
    var canUnlock = Model.CanUnlock;
    var canPrint = Model.CanPrint;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Item Price Detail</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Item Price Detail
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ======================================
                        Options: Lock, Unlock and Close Button
                        ======================================
                    -->
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-12" align="right">
                                @{
                                    if (canLock)
                                    {
                                        <button class="btn btn-primary" id="btnItemPriceDetailLock" onclick="btnItemPriceDetailLockOnclick()"><i class="fa fa-lock"></i> Lock</button>
                                    }
                                    if (canUnlock)
                                    {
                                        <button class="btn btn-primary" id="btnItemPriceDetailUnlock" onclick="btnItemPriceDetailUnlockOnclick()"><i class="fa fa-unlock"></i> Unlock</button>
                                    }
                                    if (canPrint)
                                    {
                                        <button class="btn btn-primary" id="btnItemPricePrint" onclick="btnItemPricePrintOnclick()"><i class="fa fa-print"></i> Print</button>
                                    }
                                }
                                <button class="btn btn-danger" id="btnItemPriceDetailClose" onclick="window.location.href = '/Software/ItemPrice'"><i class="fa fa-times"></i> Close</button>
                            </div>
                        </div>
                    </div>

                    <!--
                        ======================================
                        Details, Fields and Other Informations
                        ======================================
                    -->
                    <div class="panel-body">
                        <form class="form-horizontal" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Branch</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboItemPriceBranch"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">IP Number</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="inpItemPriceIPNumber" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">IP Date</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboItemPriceIPDate"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Manual IP Number</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="inpItemPriceManualIPNumber" class="form-control requiredItemPrice" placeholder="Manual IP Number" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Particulars</label>
                                        <div class="col-sm-8">
                                            <textarea rows="5" type="text" id="inpItemPriceParticulars" class="form-control textarea-custom requiredItemPrice" placeholder="Particulars"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Prepared by</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboItemPricePreparedBy"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Checked by</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboItemPriceCheckedBy"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Approved by</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboItemPriceApprovedBy"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!--
                    ===================
                    Article Price Items
                    ===================
                -->
                <ul class="nav nav-tabs" role="tablist" id="myTab">
                    <li role="presentation" class="active"><a data-toggle="tab" href="#CollectionLine" id="articlePriceItemList">Item</a></li>
                </ul>
                <br />
                <div class="tab-content">
                    <div id="articlePriceItemList" class="tab-pane fade in active">
                        <div class="panel panel-default">

                            <!--
                                ========================================================================
                                Article Price Items: Search, Filter, Display Number of Rows and  Buttons
                                ========================================================================
                            -->
                            <div class="panel-heading">
                                <table style="width: 100%" border="0">
                                    <tr>
                                        <td style="width: 49.5%">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                                <input type="text" class="form-control" id="inpArticlePriceItemPriceSearchFilter" placeholder="Search...">
                                            </div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 24%">
                                            <div class="input-group">
                                                <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                                <div class="comboBox-wide" id="cboArticlePriceItemDisplayNumberOfRows"></div>
                                            </div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 24.5%" align="right">
                                            @{
                                                if (canAdd)
                                                {
                                                    <button type="submit" class="btn btn-primary" id="btnArticlePriceItemAdd" onclick="btnArticlePriceItemAddOnclick()"><i class="fa fa-plus"></i> Add</button>
                                                    <button class="btn btn-primary" id="btnItemQuery" onclick="btnItemQueryOnclick()"><i class="fa fa-search-plus"></i> Item Query</button>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!--
                                ==============================
                                Article Price Items: Flex Grid
                                ==============================
                            -->
                            <div class="panel-body">
                                <div id="articlePriceItemFlexGrid" class="grid"></div>
                            </div>

                            <!--
                                =======================================
                                Article Price Items: Navigation Buttons
                                =======================================
                            -->
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="btn-group col-md-7" id="articlePriceItemNavigationPageGrid">
                                        <button type="button" class="btn btn-default border-custom" id="btnArticlePriceItemMoveToFirstPageGrid">
                                            <span class="glyphicon glyphicon-fast-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnArticlePriceItemMoveToPreviousPageGrid">
                                            <span class="glyphicon glyphicon-step-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnArticlePriceItemCurrentPageGrid"></button>
                                        <button type="button" class="btn btn-default border-custom" id="btnArticlePriceItemMoveToNextPageGrid">
                                            <span class="glyphicon glyphicon-step-forward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnArticlePriceItemMoveToLastPageGrid">
                                            <span class="glyphicon glyphicon-fast-forward"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ==========
                    User Stamp
                    ==========
                -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        User stamp
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p>Created by:</p>
                                <div style="padding-left: 10px;">
                                    <i class="fa fa-key fa-fw"></i> <label id="createdBy">NA</label>
                                    <br />
                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="createdDate">mm/dd/yyyy</span></small>
                                </div>
                                <br />
                            </div>
                            <div class="col-md-6">
                                <p>Updated by:</p>
                                <div style="padding-left: 10px;">
                                    <i class="fa fa-key fa-fw"></i> <label id="updatedBy">NA</label>
                                    <br />
                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="updatedDate">mm/dd/yyyy</span></small>
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    <!--
        ================================
        Article Price Item: Detail Modal
        ================================
    -->
    <div class="modal fade" id="articlePriceItemDetailModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="articlePriceItemModalTitle">Article Price Item</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <span id="articlePriceItemLoading"></span>
                    </center>
                    <form id="articlePriceItemDetailForm">
                        <dl class="dl-horizontal">
                            <dt>Item</dt>
                            <dd>
                                <table style="width: 100%" border="0">
                                    <tr>
                                        <td style="width: 30%">
                                            <div class="comboBox-wide" id="cboArticlePriceItemCode"></div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 69%">
                                            <div class="comboBox-wide" id="cboArticlePriceItemDescription"></div>
                                        </td>
                                    </tr>
                                </table>
                            </dd>
                            <dt>Price</dt>
                            <dd>
                                <input type="text" class="form-control requiredArticlePriceItem numberField" id="inpArticlePriceItemPrice" placeholder="Price" />
                            </dd>
                            <dt>Trigger Qty.</dt>
                            <dd>
                                <input type="text" class="form-control requiredArticlePriceItem numberField" id="inpArticlePriceItemTriggerQuantity" placeholder="Trigger Quantity" />
                            </dd>
                        </dl>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="btnArticlePriceItemSave" class="btn btn-primary" onclick="btnArticlePriceItemSaveOnclick()"><i class="fa fa-save"></i> Save</button>
                    <button id="btnArticlePriceItemCloseDetailModal" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                </div>
            </div>
        </div>
    </div>

    <!--
        =========================================
        Article Price Items: Confirm Delete Modal
        =========================================
    -->
    <div class="modal fade" id="articlePriceItemConfirmDeleteModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete</h4>
                </div>
                <div class="modal-body">
                    Delete Item?
                </div>
                <div class="modal-footer">
                    <button id="btnArticlePriceItemConfirmDelete" class="btn btn-danger" onclick="btnArticlePriceItemConfirmDeleteOnclick()"><i class="fa fa-trash"></i> Delete</button>
                    <button id="btnArticlePriceItemConfirmDeleteCloseModal" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!--
        ===============================
        Article Price Items: Item Query
        ===============================
    -->
    <div class="modal fade" id="itemQueryListModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Item Query</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <span id="itemQueryLoading"></span>
                    </center>
                    <div id="itemQueryContent">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                    <input type="text" class="form-control" id="itemQuerySearchFilter" placeholder="Search">
                                </div>
                            </div>
                            <div class="panel-body">
                                <div id="itemQueryFlexGrid"></div>
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="btn-group col-md-7" id="itemQueryNavigationPageGrid">
                                        <button type="button" class="btn btn-default border-custom" id="btnItemQueryMoveToFirstPageGrid">
                                            <span class="glyphicon glyphicon-fast-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnItemQueryMoveToPreviousPageGrid">
                                            <span class="glyphicon glyphicon-step-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnItemQueryCurrentPageGrid"></button>
                                        <button type="button" class="btn btn-default border-custom" id="btnItemQueryMoveToNextPageGrid">
                                            <span class="glyphicon glyphicon-step-forward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnItemQueryMoveToLastPageGrid">
                                            <span class="glyphicon glyphicon-fast-forward"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ========================================
        // Item Price Detail Combo, Data and Fields
        // ========================================
        var cboItemPriceBranch = new wijmo.input.ComboBox('#cboItemPriceBranch');
        var cboItemPriceIPDate = new wijmo.input.InputDate('#cboItemPriceIPDate');
        var cboItemPricePreparedBy = new wijmo.input.ComboBox('#cboItemPricePreparedBy');
        var cboItemPriceCheckedBy = new wijmo.input.ComboBox('#cboItemPriceCheckedBy');
        var cboItemPriceApprovedBy = new wijmo.input.ComboBox('#cboItemPriceApprovedBy');
        var isLocked = false;

        // ====================================================================
        // Article Price Item Collection View, Flex Grid and Navigation Buttons
        // ====================================================================
        var articlePriceItemCollectionView;
        var articlePriceItemFlexGrid;
        var cboArticlePriceItemDisplayNumberOfRows = new wijmo.input.ComboBox('#cboArticlePriceItemDisplayNumberOfRows');
        var btnArticlePriceItemMoveToFirstPageGrid = document.getElementById('btnArticlePriceItemMoveToFirstPageGrid');
        var btnArticlePriceItemMoveToPreviousPageGrid = document.getElementById('btnArticlePriceItemMoveToPreviousPageGrid');
        var btnArticlePriceItemMoveToNextPageGrid = document.getElementById('btnArticlePriceItemMoveToNextPageGrid');
        var btnArticlePriceItemMoveToLastPageGrid = document.getElementById('btnArticlePriceItemMoveToLastPageGrid');
        var btnArticlePriceItemCurrentPageGrid = document.getElementById('btnArticlePriceItemCurrentPageGrid');

        // =========================================
        // Article Price Item Combo, Data and Fields
        // =========================================
        var articlePriceItemId = 0;
        var cboArticlePriceItemCode = new wijmo.input.ComboBox('#cboArticlePriceItemCode');
        var cboArticlePriceItemDescription = new wijmo.input.ComboBox('#cboArticlePriceItemDescription');

        // ==========
        // Item Query
        // ==========
        var itemQueryItemsCollectionView;
        var itemQueryFlexGrid = new wijmo.grid.FlexGrid('#itemQueryFlexGrid');
        var btnItemQueryMoveToFirstPageGrid = document.getElementById('btnItemQueryMoveToFirstPageGrid');
        var btnItemQueryMoveToPreviousPageGrid = document.getElementById('btnItemQueryMoveToPreviousPageGrid');
        var btnItemQueryMoveToNextPageGrid = document.getElementById('btnItemQueryMoveToNextPageGrid');
        var btnItemQueryMoveToLastPageGrid = document.getElementById('btnItemQueryMoveToLastPageGrid');
        var btnItemQueryCurrentPageGrid = document.getElementById('btnItemQueryCurrentPageGrid');
        var isItemQueryClicked = false;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            }  else {
                return results[1];
            }
        }

        // =====================================
        // Create Item Price Detail Combo Branch
        // =====================================
        function createItemPriceDetailCboBranch() {
            var branchesObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/articlePrice/dropdown/list/branch',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            branchesObservableArray.push({
                                Id: results[i]["Id"],
                                Branch: results[i]["Branch"]
                            });
                        }
                    }

                    cboItemPriceBranch.dispose();
                    cboItemPriceBranch = new wijmo.input.ComboBox('#cboItemPriceBranch', {
                        disabled: true,
                        isEditable: false,
                        placeholder: "Select Branch",
                        itemsSource: branchesObservableArray,
                        displayMemberPath: "Branch",
                        selectedValuePath: "Id"
                    });

                    createItemPriceDetailCboUser();
                }
            });
        }

        // ===================================
        // Create Item Price Detail Combo User
        // ===================================
        function createItemPriceDetailCboUser() {
            var usersObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/articlePrice/dropdown/list/users',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            usersObservableArray.push({
                                Id: results[i]["Id"],
                                FullName: results[i]["FullName"]
                            });
                        }
                    }

                    cboItemPricePreparedBy.dispose();
                    cboItemPricePreparedBy = new wijmo.input.ComboBox('#cboItemPricePreparedBy', {
                        disabled: true,
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    cboItemPriceCheckedBy.dispose();
                    cboItemPriceCheckedBy = new wijmo.input.ComboBox('#cboItemPriceCheckedBy', {
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    cboItemPriceApprovedBy.dispose();
                    cboItemPriceApprovedBy = new wijmo.input.ComboBox('#cboItemPriceApprovedBy', {
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    createCboArticlePriceItemDataPriceDetailData();
                }
            });
        }

        // ==========================
        // Get Item Price Detail Data
        // ==========================
        function createCboArticlePriceItemDataPriceDetailData() {
            if (document.location.search.length > 0) {
                NProgress.start();

                var itemPriceId = getURLParameterValue("id");

                $.ajax({
                    url: '/api/articlePrice/detail/' + itemPriceId,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    data: {},
                    success: function (results) {
                        if (results != null) {
                            cboItemPriceBranch.selectedValue = results.BranchId;
                            document.getElementById('inpItemPriceIPNumber').value = results.IPNumber;
                            cboItemPriceIPDate.dispose();
                            cboItemPriceIPDate = new wijmo.input.InputDate('#cboItemPriceIPDate', {
                                format: 'MM-dd-yyyy',
                                value: new Date(results.IPDate),
                            });
                            document.getElementById('inpItemPriceManualIPNumber').value = results.ManualIPNumber;
                            document.getElementById('inpItemPriceParticulars').value = results.Particulars;
                            cboItemPricePreparedBy.selectedValue = results.PreparedById;
                            cboItemPriceCheckedBy.selectedValue = results.CheckedById;
                            cboItemPriceApprovedBy.selectedValue = results.ApprovedById;

                            if (results.IsLocked) {
                                cboItemPriceIPDate.disabled = true;
                                document.getElementById('inpItemPriceManualIPNumber').disabled = true;
                                document.getElementById('inpItemPriceParticulars').disabled = true;
                                cboItemPricePreparedBy.disabled = true;
                                cboItemPriceCheckedBy.disabled = true;
                                cboItemPriceApprovedBy.disabled = true;

                                $("#btnItemPriceDetailLock").prop("disabled", true);
                                $("#btnArticlePriceItemAdd").prop("disabled", true);
                                $("#btnItemQuery").prop("disabled", true);

                                isLocked = true;
                            } else {
                                $("#btnItemPriceDetailUnlock").prop("disabled", true);
                                $("#btnItemPricePrint").prop("disabled", true);
                            }

                            createCboDisplayNumberOfRows();
                            createArticlePriceItemFlexGrid();
                        } else {
                            alert("No Data");
                            window.location = "/Software/ItemPrice";
                        }
                    }
                });
            } else {
                alert("No Id Parameter Value");
                window.location = "/Software/ItemPrice";
            }
        }

        // ===============
        // Lock Item Price
        // ===============
        function btnItemPriceDetailLockOnclick() {
            document.getElementById('btnItemPriceDetailLock').innerHTML = "<i class='fa fa-lock'></i> Locking...";
            $("#btnItemPriceDetailLock").prop("disabled", true);
            $("#btnItemPriceDetailUnlock").prop("disabled", true);
            $("#btnItemPriceDetailClose").prop("disabled", true);

            var itemPriceObject = new Object();
            var itemPriceId = getURLParameterValue("id");
            itemPriceObject.BranchId = cboItemPriceBranch.selectedValue;
            itemPriceObject.IPDate = cboItemPriceIPDate.value.toLocaleDateString();
            itemPriceObject.Particulars = document.getElementById('inpItemPriceParticulars').value;
            itemPriceObject.ManualIPNumber = document.getElementById('inpItemPriceManualIPNumber').value;
            itemPriceObject.CheckedById = cboItemPriceCheckedBy.selectedValue;
            itemPriceObject.ApprovedById = cboItemPriceApprovedBy.selectedValue;
            var data = JSON.stringify(itemPriceObject);

            var isValid = true;
            $('.requiredItemPrice').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                } else {
                    $(this).css({
                        "border": "",
                    });
                }
            });

            if (isValid) {
                $.ajax({
                    type: "PUT",
                    url: '/api/articlePrice/lock/' + itemPriceId,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: data,
                    statusCode: {
                        200: function () {
                            toastr.success("Lock Successful");
                            window.setTimeout(function () {
                                location.reload()
                            }, 1000);
                        },
                        404: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404");
                            document.getElementById('btnItemPriceDetailLock').innerHTML = "<i class='fa fa-lock'></i> Lock";
                            $("#btnItemPriceDetailLock").prop("disabled", false);
                            $("#btnItemPriceDetailClose").prop("disabled", false);
                        },
                        400: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 400");
                            document.getElementById('btnItemPriceDetailLock').innerHTML = "<i class='fa fa-lock'></i> Lock";
                            $("#btnItemPriceDetailLock").prop("disabled", false);
                            $("#btnItemPriceDetailClose").prop("disabled", false);
                        },
                        500: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 500");
                            document.getElementById('btnItemPriceDetailLock').innerHTML = "<i class='fa fa-lock'></i> Lock";
                            $("#btnItemPriceDetailLock").prop("disabled", false);
                            $("#btnItemPriceDetailClose").prop("disabled", false);
                        }
                    }
                });
            } else {
                toastr.error("Invalid Entry");
            }
        }

        // =============
        // Unlock Button
        // =============
        function btnItemPriceDetailUnlockOnclick() {
            document.getElementById('btnItemPriceDetailUnlock').innerHTML = "<i class='fa fa-unlock'></i> Unlocking...";
            $("#btnItemPriceDetailLock").prop("disabled", true);
            $("#btnItemPriceDetailUnlock").prop("disabled", true);
            $("#btnItemPriceDetailClose").prop("disabled", true);

            var itemPriceId = getURLParameterValue("id");

            $.ajax({
