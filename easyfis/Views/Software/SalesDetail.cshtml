        // =================
        // Compute NET Price
        // =================
        function computeNetPrice() {
            var DiscountIsInclusive = document.getElementById('saleItem_DiscontInclusive').value.replace(/\,/g, '');;
            var DiscountRate = document.getElementById('saleItem_DiscountRate').value.replace(/\,/g, '');;
            var PriceExVATPrice = document.getElementById('saleItem_PriceExVAT').value.replace(/\,/g, '');;
            var VATPercentage = document.getElementById('saleItem_VATRate').value.replace(/\,/g, '');;
            var discountAmount = document.getElementById('saleItem_DiscountAmount').value.replace(/\,/g, '');;

            var price;
            if (document.getElementById('saleItem_DiscontInclusive').value == 'false') {
                price = PriceExVATPrice / (1 + (VATPercentage / 100));
                var saleItemDiscountAmount = price * (DiscountRate / 100);

                document.getElementById('saleItem_DiscountAmount').value = saleItemDiscountAmount.toLocaleString();

                var newDiscountAmount = price * (DiscountRate / 100);
                var netPrice = price - newDiscountAmount;

                document.getElementById('saleItem_NetPrice').value = netPrice.toLocaleString();

                computeAmount();
            } else {
                var saleItemDiscountAmount = PriceExVATPrice * (DiscountRate / 100);

                document.getElementById('saleItem_DiscountAmount').value = saleItemDiscountAmount.toLocaleString();

                var newDiscountAmount = PriceExVATPrice * (DiscountRate / 100);
                var netPrice = PriceExVATPrice - newDiscountAmount;

                document.getElementById('saleItem_NetPrice').value = netPrice.toLocaleString();

            }
        }

        // ==============
        // Compute Amount
        // ==============
        function computeAmount() {
            var quantity = document.getElementById('saleItem_Quantity').value.replace(/\,/g, '');
            var netPrice = document.getElementById('saleItem_NetPrice').value.replace(/\,/g, '');
            var amount = quantity * netPrice;

            document.getElementById('saleItem_Amount').value = amount.toLocaleString();
            computeTax();
        }

        // ===========
        // Compute Tax
        // ===========
        function computeTax() {
            var PriceExVATPrice = document.getElementById('saleItem_PriceExVAT').value.replace(/\,/g, '');;
            var DiscountIsInclusive = document.getElementById('saleItem_DiscontInclusive').value.replace(/\,/g, '');;
            var VATPercentage = document.getElementById('saleItem_VATRate').value.replace(/\,/g, '');;
            var netPrice = document.getElementById('saleItem_NetPrice').value.replace(/\,/g, '');;
            var VATAmount = document.getElementById('saleItem_VATAmount').value.replace(/\,/g, '');;
            var amount = document.getElementById('saleItem_Amount').value.replace(/\,/g, '');;
            var quantity = document.getElementById('saleItem_Quantity').value.replace(/\,/g, '');;

            if (document.getElementById('saleItem_TAXInclusive').value == 'true') {
                var VATAmount = amount / (1 + (VATPercentage / 100)) * (VATPercentage / 100);

                document.getElementById('saleItem_VATAmount').value = VATAmount.toLocaleString();
            } else {
                var amount = netPrice * quantity;
                var VATAmount = amount * (VATPercentage / 100);

                document.getElementById('saleItem_VATAmount').value = VATAmount.toLocaleString();
                document.getElementById('saleItem_Amount').value = amount.toLocaleString();
            }
        }

