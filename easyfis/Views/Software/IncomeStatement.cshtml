<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Income Statement</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Income Statement
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpIncomeStatementSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboIncomeStatementDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnIncomeStatementDownloadCSVOnclick()" id="btnIncomeStatementDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnIncomeStatementPrintPDFOnclick()" id="btnIncomeStatementPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboIncomeStatementStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboIncomeStatementEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboIncomeStatementCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboIncomeStatementBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="incomeStatementFlexGrid" style="font-size: 12px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="btnIncomeStatementNaviagtionPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnIncomeStatementMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnIncomeStatementMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnIncomeStatementCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnIncomeStatementMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnIncomeStatementMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Income</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalIncome" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Expense</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalExpense" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Net Income (Loss)</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpNetIncomeLoss" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboIncomeStatementStartDateFilter = new wijmo.input.InputDate('#cboIncomeStatementStartDateFilter');
        var cboIncomeStatementEndDateFilter = new wijmo.input.InputDate('#cboIncomeStatementEndDateFilter');
        var isCboIncomeStatementStartDateFilterSelected = false;
        var isCboIncomeStatementEndDateFilterSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboIncomeStatementCompanyFilter = new wijmo.input.ComboBox('#cboIncomeStatementCompanyFilter');
        var isCboIncomeStatementCompanyFilterSelected = false;
        var cboIncomeStatementBranchFilter = new wijmo.input.ComboBox('#cboIncomeStatementBranchFilter');

        // =============================
        // Collection View and Flex Grid
        // =============================
        var incomeStatementCollectionView;
        var incomeStatementFlexGrid;
        var cboIncomeStatementDisplayNumberOfRows = new wijmo.input.ComboBox('#cboIncomeStatementDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnIncomeStatementMoveToFirstPageGrid = document.getElementById('btnIncomeStatementMoveToFirstPageGrid');
        var btnIncomeStatementMoveToPreviousPageGrid = document.getElementById('btnIncomeStatementMoveToPreviousPageGrid');
        var btnIncomeStatementMoveToNextPageGrid = document.getElementById('btnIncomeStatementMoveToNextPageGrid');
        var btnIncomeStatementMoveToLastPageGrid = document.getElementById('btnIncomeStatementMoveToLastPageGrid');
        var btnIncomeStatementCurrentPageGrid = document.getElementById('btnIncomeStatementCurrentPageGrid');
        var incomeStatementCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboIncomeStatementStartDateFilter.dispose();
            cboIncomeStatementStartDateFilter = new wijmo.input.InputDate('#cboIncomeStatementStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboIncomeStatementStartDateFilterSelected) {
                        NProgress.start();
                        refreshIncomeStatementFlexGrid();
                    } else {
                        isCboIncomeStatementStartDateFilterSelected = false;
                    }
                }
            });

            cboIncomeStatementEndDateFilter.dispose();
            cboIncomeStatementEndDateFilter = new wijmo.input.InputDate('#cboIncomeStatementEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboIncomeStatementEndDateFilterSelected) {
                        NProgress.start();
                        refreshIncomeStatementFlexGrid();
                    } else {
                        isCboIncomeStatementEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/incomeStatement/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnIncomeStatementDownloadCSV").prop("disabled", true);
                        $("#btnIncomeStatementPrintPDF").prop("disabled", true);
                    }

                    cboIncomeStatementCompanyFilter.dispose();
                    cboIncomeStatementCompanyFilter = new wijmo.input.ComboBox('#cboIncomeStatementCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnIncomeStatementDownloadCSV").prop("disabled", false);
                            $("#btnIncomeStatementPrintPDF").prop("disabled", false);
                            isCboIncomeStatementCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboIncomeStatementCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/incomeStatement/dropdown/list/branch/' + cboIncomeStatementCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnIncomeStatementDownloadCSV").prop("disabled", true);
                            $("#btnIncomeStatementPrintPDF").prop("disabled", true);
                        }

                        cboIncomeStatementBranchFilter.dispose();
                        cboIncomeStatementBranchFilter = new wijmo.input.ComboBox('#cboIncomeStatementBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshIncomeStatementFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboIncomeStatementDisplayNumberOfRows.dispose();
            cboIncomeStatementDisplayNumberOfRows = new wijmo.input.ComboBox('#cboIncomeStatementDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboIncomeStatementDisplayNumberOfRows.selectedValue;
                        incomeStatementCollectionView.pageSize = parseInt(numberOfRows);
                        incomeStatementCollectionView.refresh();
                        incomeStatementFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboIncomeStatementCompanyFilterSelected) {
                createIncomeStatementFlexGrid();
            } else {
                refreshIncomeStatementFlexGrid();
            }
        }

        // =========================
        // Get Income Statement Data
        // =========================
        function getIncomeStatementData() {
            var incomeStatements = new wijmo.collections.ObservableArray;
            if (cboIncomeStatementCompanyFilter.selectedValue != null) {
                if (cboIncomeStatementBranchFilter.selectedValue != null) {

                    var startDate = cboIncomeStatementStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboIncomeStatementEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboIncomeStatementCompanyFilter.selectedValue;
                    var branchId = cboIncomeStatementBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/incomeStatement/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var totalIncome = 0;
                            var totalExpense = 0;
                            var netIncomeLoss = 0;

                            if (results != null) {
                                if (results.length > 0) {
                                    for (i = 0; i < results.length; i++) {

                                        if (results[i]["DocumentReference"] === "5 - incomes") {
                                            totalIncome += results[i]["Balance"];
                                        }

                                        if (results[i]["DocumentReference"] === "6 - Expenses") {
                                            totalExpense += results[i]["Balance"];
                                        }

                                        var docAccountLedgerLink = '/Software/AccountLedger?StartDate=' + startDate + '&EndDate=' + endDate + '&CompanyId=' + companyId + '&BranchId=' + branchId + '&AccountId=' + results[i]["AccountId"];;

                                        incomeStatements.push({
                                            BtnAccountLedgerDetail: "<a href='" + docAccountLedgerLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 9.5px;'><i class='fa fa-list fa-fw'></i> Ledger</a>",
                                            DocumentReference: results[i]["DocumentReference"],
                                            AccountCategoryCode: results[i]["AccountCategoryCode"],
                                            AccountCategory: results[i]["AccountCategoryCode"] + " - " + results[i]["AccountCategory"],
                                            SubCategoryDescription: results[i]["SubCategoryDescription"],
                                            AccountTypeCode: results[i]["AccountTypeCode"],
                                            AccountType: results[i]["AccountTypeCode"] + " - " + results[i]["AccountType"],
                                            AccountCode: results[i]["AccountCode"],
                                            Account: results[i]["AccountCode"] + " - " + results[i]["Account"],
                                            DebitAmount: results[i]["DebitAmount"],
                                            DebitAmountDisplay: parseFloat(results[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            CreditAmount: results[i]["CreditAmount"],
                                            CreditAmountDisplay: parseFloat(results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            Balance: results[i]["Balance"],
                                            BalanceDisplay: parseFloat(results[i]["Balance"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        });
                                    }

                                    netIncomeLoss = totalIncome - totalExpense;
                                }
                            }

                            document.getElementById("inpTotalIncome").value = parseFloat(totalIncome).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalExpense").value = parseFloat(totalExpense).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpNetIncomeLoss").value = parseFloat(netIncomeLoss).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalIncome").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalExpense").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpNetIncomeLoss").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalIncome").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalExpense").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpNetIncomeLoss").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return incomeStatements;
        }

        // =================================
        // Create Income Statement Flex Grid
        // =================================
        function createIncomeStatementFlexGrid() {
            incomeStatementCollectionView = new wijmo.collections.CollectionView(getIncomeStatementData());
            incomeStatementCollectionView.canFilter = true;
            incomeStatementCollectionView.pageSize = cboIncomeStatementDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpIncomeStatementSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                incomeStatementCollectionView.refresh();
            });

            incomeStatementCollectionView.filter = function (item) {
                return !filterText || (item.AccountCategory.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SubCategoryDescription.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.AccountType.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1);
            }

            incomeStatementCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateIncomeStatementNavigationButtons();
            });

            incomeStatementFlexGrid = new wijmo.grid.FlexGrid('#incomeStatementFlexGrid');
            incomeStatementFlexGrid.initialize({
                columns: [
                    {
                        "header": "Ledger",
                        "binding": "BtnAccountLedgerDetail",
                        "width": 70,
                        "isContentHtml": true
                    },
                    {
                        "header": "Category",
                        "binding": "AccountCategory",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Sub Category",
                        "binding": "SubCategoryDescription",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Account Type",
                        "binding": "AccountType",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "2*"
                    },
                    {
                        "header": "Amount",
                        "binding": "BalanceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                ],
                autoGenerateColumns: false,
                itemsSource: incomeStatementCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            incomeStatementFlexGrid.trackChanges = true;

            updateIncomeStatementNavigationButtons();

            btnIncomeStatementMoveToFirstPageGrid.addEventListener('click', function () {
                incomeStatementCollectionView.moveToFirstPage();
                incomeStatementCurrentPageIndex = incomeStatementCollectionView.pageIndex + 1;
                updateIncomeStatementNavigationButtons();
            });

            btnIncomeStatementMoveToPreviousPageGrid.addEventListener('click', function () {
                incomeStatementCollectionView.moveToPreviousPage();
                incomeStatementCurrentPageIndex = incomeStatementCollectionView.pageIndex + 1;
                updateIncomeStatementNavigationButtons();
            });

            btnIncomeStatementMoveToNextPageGrid.addEventListener('click', function () {
                incomeStatementCollectionView.moveToNextPage();
                incomeStatementCurrentPageIndex = incomeStatementCollectionView.pageIndex + 1;
                updateIncomeStatementNavigationButtons();
            });

            btnIncomeStatementMoveToLastPageGrid.addEventListener('click', function () {
                incomeStatementCollectionView.moveToLastPage();
                incomeStatementCurrentPageIndex = incomeStatementCollectionView.pageIndex + 1;
                updateIncomeStatementNavigationButtons();
            });
        }

        // ==========================================
        // Update Income Statement Navigation Buttons
        // ==========================================
        function updateIncomeStatementNavigationButtons() {
            if (incomeStatementCollectionView.pageSize <= 0) {
                document.getElementById('btnIncomeStatementNaviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('btnIncomeStatementNaviagtionPageGrid').style.display = 'block';
            if (incomeStatementCollectionView.pageIndex === 0) {
                btnIncomeStatementMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnIncomeStatementMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnIncomeStatementMoveToNextPageGrid.removeAttribute('disabled');
                btnIncomeStatementMoveToLastPageGrid.removeAttribute('disabled');
            } else if (incomeStatementCollectionView.pageIndex === (incomeStatementCollectionView.pageCount - 1)) {
                btnIncomeStatementMoveToFirstPageGrid.removeAttribute('disabled');
                btnIncomeStatementMoveToPreviousPageGrid.removeAttribute('disabled');
                btnIncomeStatementMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnIncomeStatementMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnIncomeStatementMoveToFirstPageGrid.removeAttribute('disabled');
                btnIncomeStatementMoveToPreviousPageGrid.removeAttribute('disabled');
                btnIncomeStatementMoveToNextPageGrid.removeAttribute('disabled');
                btnIncomeStatementMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnIncomeStatementCurrentPageGrid.innerHTML = (incomeStatementCollectionView.pageIndex + 1) + ' / ' + incomeStatementCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshIncomeStatementFlexGrid() {
            incomeStatementCollectionView = new wijmo.collections.CollectionView(getIncomeStatementData());
            incomeStatementCollectionView.canFilter = true;
            incomeStatementCollectionView.pageSize = cboIncomeStatementDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpIncomeStatementSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                incomeStatementCollectionView.refresh();
            });

            incomeStatementCollectionView.filter = function (item) {
                return !filterText || (item.AccountCategory.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SubCategoryDescription.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.AccountType.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1);
            }

            incomeStatementCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateIncomeStatementNavigationButtons();
            });

            incomeStatementFlexGrid.itemsSource = incomeStatementCollectionView;
            incomeStatementFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnIncomeStatementDownloadCSVOnclick() {
            var CSV = '';
            var incomeStatement = [];
            var fileName = 'IncomeStatement.CSV';

            incomeStatementCollectionView.moveToFirstPage();

            for (var p = 1; p <= incomeStatementCollectionView.pageCount; p++) {
                for (i = 0; i < incomeStatementCollectionView.items.length; i++) {
                    incomeStatement.push({
                        AccountCategory: incomeStatementCollectionView.items[i].AccountCategory,
                        SubCategoryDescription: incomeStatementCollectionView.items[i].SubCategoryDescription,
                        AccountType: incomeStatementCollectionView.items[i].AccountType,
                        Account: incomeStatementCollectionView.items[i].Account,
                        Amount: incomeStatementCollectionView.items[i].Balance,
                    });
                }

                incomeStatementCollectionView.moveToNextPage();
                if (p == incomeStatementCollectionView.pageCount) {
                    incomeStatementCollectionView.moveToPage(incomeStatementCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                AccountCategory: "Account Category",
                SubCategoryDescription: "Sub Category Description",
                AccountType: "Account Type",
                Account: "Account",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < incomeStatement.length; i++) {
                var row = '';
                for (var a in incomeStatement[i]) {
                    row += '"' + incomeStatement[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Download successful.");
            }
        }

