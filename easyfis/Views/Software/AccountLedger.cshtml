<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Account Ledger</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Account Ledger
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 50.5%" align="right">
                                    <button onclick="btnAccountLedgerReportCSVOnclick()" id="btnAccountLedgerReportCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnAccountLedgerReportPrintPDFOnclick()" id="btnAccountLedgerReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/FinancialStatements" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboARAccountLedgerReportStartDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboARAccountLedgerReportEndDate"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboARAccountLedgerReportCompany"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboARAccountLedgerReportBranch"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Account</b></span>
                                        <div class="comboBox-wide" id="cboAccountLedgerAccount"></div>
                                    </div>
                                </td>
                                <td style="width: 50.5%"></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div id="accountLedgerReportGrid" class="grid"></div>
                <br /><br />
                <div class="row">
                    <div class="col-md-6">

                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal dl-custom">
                            <dt>
                                <b>Total Debit</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalDebitAmount" placeholder="0.00" disabled />
                            </dd>
                            <dt>
                                <b>Total Credit</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalCreditAmount" placeholder="0.00" disabled />
                            </dd>
                            <dt>
                                <b>Balance</b>
                            </dt>
                            <dd>
                                <input type="text" class="form-control numberField" id="totalBalanceAmount" placeholder="0.00" disabled />
                            </dd>
                        </dl>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboARAccountLedgerReportStartDate = new wijmo.input.InputDate('#cboARAccountLedgerReportStartDate');
        var cboARAccountLedgerReportEndDate = new wijmo.input.InputDate('#cboARAccountLedgerReportEndDate');
        var isARAccountLedgerReportStartDateSelected = false;
        var isARAccountLedgerReportEndDateSelected = false;
        var cboARAccountLedgerReportCompany = new wijmo.input.ComboBox('#cboARAccountLedgerReportCompany');
        var cboARAccountLedgerReportBranch = new wijmo.input.ComboBox('#cboARAccountLedgerReportBranch');
        var accountLedgerReportCollections;
        var accountLedgerReportGrid;
        var isARAccountLedgerReportCompanySelected = false;
        var cboAccountLedgerAccount = new wijmo.input.ComboBox('#cboAccountLedgerAccount');

        // ===================
        // Get Parameter Value
        // ===================
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ============
        // Date Filters
        // ============
        function accountLedgerReportDateFilters() {
            NProgress.start();
            cboARAccountLedgerReportStartDate.dispose();
            cboARAccountLedgerReportStartDate = new wijmo.input.InputDate('#cboARAccountLedgerReportStartDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("StartDate")),
                onValueChanged: function () {
                    if (!isARAccountLedgerReportStartDateSelected) {
                        NProgress.start();
                        refreshAccountLedgerReportFlexGrid();
                    } else {
                        isARAccountLedgerReportStartDateSelected = false;
                    }
                }
            });

            cboARAccountLedgerReportEndDate.dispose();
            cboARAccountLedgerReportEndDate = new wijmo.input.InputDate('#cboARAccountLedgerReportEndDate', {
                format: 'MM-dd-yyyy',
                value: new Date(getParam("EndDate")),
                onValueChanged: function () {
                    if (!isARAccountLedgerReportEndDateSelected) {
                        NProgress.start();
                        refreshAccountLedgerReportFlexGrid();
                    } else {
                        isARAccountLedgerReportEndDateSelected = false;
                    }
                }
            });

            createCboCompany();
        }

        // ==============
        // Company Filter
        // ==============
        function createCboCompany() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/company/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyResults) {
                    if (companyResults.length > 0) {
                        for (i = 0; i < companyResults.length; i++) {
                            companyObservableArray.push({
                                Id: companyResults[i]["Id"],
                                Company: companyResults[i]["Company"],
                                Address: companyResults[i]["Address"],
                                ContactNumber: companyResults[i]["ContactNumber"],
                                TaxNumber: companyResults[i]["TaxNumber"],
                            });
                        }
                    }

                    var disabled = true;
                    if (companyResults.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnAccountLedgerReportCSV").prop("disabled", true);
                        $("#btnAccountLedgerReportPrintPDF").prop("disabled", true);
                    }

                    cboARAccountLedgerReportCompany.dispose();
                    cboARAccountLedgerReportCompany = new wijmo.input.ComboBox('#cboARAccountLedgerReportCompany', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getParam("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnAccountLedgerReportCSV").prop("disabled", false);
                            $("#btnAccountLedgerReportPrintPDF").prop("disabled", false);
                            isARAccountLedgerReportCompanySelected = true;
                            createCboBranch();
                        }
                    });

                    createCboBranch();
                }
            });
        }

        // =============
        // Branch Filter
        // =============
        function createCboBranch() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboARAccountLedgerReportCompany.selectedValue != null) {
                $.ajax({
                    url: '/api/branch/byCompanyId/list/locked/' + cboARAccountLedgerReportCompany.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (branchResults) {
                        if (branchResults.length > 0) {
                            for (i = 0; i < branchResults.length; i++) {
                                branchObservableArray.push({
                                    Id: branchResults[i]["Id"],
                                    CompanyId: branchResults[i]["CompanyId"],
                                    Branch: branchResults[i]["Branch"],
                                    Address: branchResults[i]["Address"],
                                    ContactNumber: branchResults[i]["ContactNumber"],
                                    TaxNumber: branchResults[i]["TaxNumber"]
                                });
                            }
                        }

                        var disabled = true;
                        if (branchResults.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnAccountLedgerReportCSV").prop("disabled", true);
                            $("#btnAccountLedgerReportPrintPDF").prop("disabled", true);
                        }

                        cboARAccountLedgerReportBranch.dispose();
                        cboARAccountLedgerReportBranch = new wijmo.input.ComboBox('#cboARAccountLedgerReportBranch', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getParam("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshAccountLedgerReportFlexGrid();
                            }
                        });

                        if (!isARAccountLedgerReportCompanySelected) {
                            createCboFSAccountFilters();
                        } else {
                            refreshAccountLedgerReportFlexGrid();
                        }
                    }
                });
            }
        }

        // ===============
        // Account Filters
        // ===============
        function createCboFSAccountFilters() {
            var accountsObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/listAccount',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (accountResults) {
                    if (accountResults.length > 0) {
                        for (i = 0; i < accountResults.length; i++) {
                            accountsObservableArray.push({
                                Id: accountResults[i]["Id"],
                                AccountCode: accountResults[i]["AccountCode"],
                                Account: accountResults[i]["Account"],
                            });
                        }
                    }

                    var disabled = true;
                    if (accountResults.length > 0) {
                        disabled = false;
                    } else {

                    }

                    cboAccountLedgerAccount.dispose();
                    cboAccountLedgerAccount = new wijmo.input.ComboBox('#cboAccountLedgerAccount', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: accountsObservableArray,
                        displayMemberPath: "Account",
                        selectedValuePath: "Id",
                        selectedValue: getParam("AccountId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            refreshAccountLedgerReportFlexGrid();
                        }
                    });

                    if (!isARAccountLedgerReportCompanySelected) {
                        createAccountLedgerReportFlexGrid();
                    } else {
                        refreshAccountLedgerReportFlexGrid();
                    }

                    NProgress.done();
                }
            });
        }

        // ======================
        // Get Trial Balance Data
        // ======================
        function getAccountLedgerReport() {
            var accountLedgerReports = new wijmo.collections.ObservableArray;
            if (cboARAccountLedgerReportCompany.selectedValue != null) {
                if (cboARAccountLedgerReportBranch.selectedValue != null) {
                    if (cboAccountLedgerAccount.selectedValue != null) {
                        var startDate = cboARAccountLedgerReportStartDate.value.toLocaleDateString().replace(/\//g, '-');
                        var endDate = cboARAccountLedgerReportEndDate.value.toLocaleDateString().replace(/\//g, '-');
                        var companyId = cboARAccountLedgerReportCompany.selectedValue;
                        var branchId = cboARAccountLedgerReportBranch.selectedValue;
                        var accountId = cboAccountLedgerAccount.selectedValue;

                        $.ajax({
                            url: '/api/accountLedger/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId + '/' + accountId,
                            cache: false,
                            type: 'GET',
                            contentType: 'application/json; charset=utf-8',
                            success: function (accountLedgerReportResult) {
                                var totalDebit = 0;
                                var totalCredit = 0;
                                var totalBalance = 0;

                                if (accountLedgerReportResult.length > 0) {
                                    for (i = 0; i < accountLedgerReportResult.length; i++) {

                                        var JournalDateResult = new Date(accountLedgerReportResult[i]["JournalDate"])
                                        var JournalDate = ('0' + (JournalDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + JournalDateResult.getDate()).slice(-2) + '-' + JournalDateResult.getFullYear();

                                        var docRefLink = "";
                                        if (accountLedgerReportResult[i]["ORId"] != null) {
                                            docRefLink = "/Software/CollectionDetail?id=" + accountLedgerReportResult[i]["ORId"];
                                        } else if (accountLedgerReportResult[i]["CVId"] != null) {
                                            docRefLink = "/Software/DisbursementDetail?id=" + accountLedgerReportResult[i]["CVId"];
                                        } else if (accountLedgerReportResult[i]["JVId"] != null) {
                                            docRefLink = "/Software/JournalVoucherDetail?id=" + accountLedgerReportResult[i]["JVId"];
                                        } else if (accountLedgerReportResult[i]["RRId"] != null) {
                                            docRefLink = "/Software/ReceivingReceiptDetail?id=" + accountLedgerReportResult[i]["RRId"];
                                        } else if (accountLedgerReportResult[i]["SIId"] != null) {
                                            docRefLink = "/Software/SalesDetail?id=" + accountLedgerReportResult[i]["SIId"];
                                        } else if (accountLedgerReportResult[i]["INId"] != null) {
                                            docRefLink = "/Software/StockInDetail?id=" + accountLedgerReportResult[i]["INId"];
                                        } else if (accountLedgerReportResult[i]["OTId"] != null) {
                                            docRefLink = "/Software/StockOutDetail?id=" + accountLedgerReportResult[i]["OTId"];
                                        } else if (accountLedgerReportResult[i]["STId"] != null) {
                                            docRefLink = "/Software/StockTransferDetail?id=" + accountLedgerReportResult[i]["STId"];
                                        } else {
                                            docRefLink = "#";
                                        }

                                        var accountLink = "/Software/AccountLedger?StartDate=" + startDate + "&EndDate=" + endDate + "&CompanyId=" + companyId + "&AccountId=" + accountLedgerReportResult[i]["AccountId"];

                                        accountLedgerReports.push({
                                            AccountId: accountLedgerReportResult[i]["AccountId"],
                                            AccountCode: accountLedgerReportResult[i]["AccountCode"],
                                            Account: accountLedgerReportResult[i]["Account"],
                                            JournalDate: JournalDate,
                                            DocumentReferenceForCSV: accountLedgerReportResult[i]["DocumentReference"],
                                            DocumentReference: "<a href='" + docRefLink + "' class='btn btn-primary btn-xs btn-block'> " + accountLedgerReportResult[i]["DocumentReference"] + "</a>",
                                            Article: accountLedgerReportResult[i]["Article"],
                                            Particulars: accountLedgerReportResult[i]["Particulars"],
                                            DebitAmount: accountLedgerReportResult[i]["DebitAmount"],
                                            DebitAmountDisplay: parseFloat(accountLedgerReportResult[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            CreditAmount: accountLedgerReportResult[i]["CreditAmount"],
                                            CreditAmountDisplay: parseFloat(accountLedgerReportResult[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            Balance: accountLedgerReportResult[i]["DebitAmount"] - accountLedgerReportResult[i]["CreditAmount"],
                                            BalanceDisplay: parseFloat(accountLedgerReportResult[i]["DebitAmount"] - accountLedgerReportResult[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                            ORId: accountLedgerReportResult[i]["ORId"],
                                            CVId: accountLedgerReportResult[i]["CVId"],
                                            JVId: accountLedgerReportResult[i]["JVId"],
                                            RRId: accountLedgerReportResult[i]["RRId"],
                                            SIId: accountLedgerReportResult[i]["SIId"],
                                            INId: accountLedgerReportResult[i]["INId"],
                                            OTId: accountLedgerReportResult[i]["OTId"],
                                            STId: accountLedgerReportResult[i]["STId"]
                                        });

                                        totalDebit += accountLedgerReportResult[i]["DebitAmount"];
                                        totalCredit += accountLedgerReportResult[i]["CreditAmount"];
                                        totalBalance += accountLedgerReportResult[i]["DebitAmount"] - accountLedgerReportResult[i]["CreditAmount"];
                                    }
                                }

                                document.getElementById("totalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                document.getElementById("totalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                document.getElementById("totalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                NProgress.done();
                            }
                        });
                    } else {
                        document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    }
                } else {
                    document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return accountLedgerReports;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshAccountLedgerReportFlexGrid() {
            accountLedgerReportCollections = new wijmo.collections.CollectionView(getAccountLedgerReport());
            accountLedgerReportCollections.canFilter = true;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                accountLedgerReportCollections.refresh();

                if (accountLedgerReportCollections.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;

                    for (var i = 0; i < accountLedgerReportCollections.items.length; i++) {
                        totalDebit += accountLedgerReportCollections.items[i].DebitAmount;
                        totalCredit += accountLedgerReportCollections.items[i].CreditAmount;
                        totalBalance += accountLedgerReportCollections.items[i].Balance;
                    }

                    document.getElementById("totalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            accountLedgerReportCollections.filter = function (item) {
                return !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1);
            }

            accountLedgerReportGrid.itemsSource = accountLedgerReportCollections;
            accountLedgerReportGrid.trackChanges = true;
        }

        // =========
        // Flex Grid
        // =========
        function createAccountLedgerReportFlexGrid() {
            accountLedgerReportCollections = new wijmo.collections.CollectionView(getAccountLedgerReport());
            accountLedgerReportCollections.canFilter = true;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                accountLedgerReportCollections.refresh();

                if (accountLedgerReportCollections.items.length > 0) {
                    var totalDebit = 0;
                    var totalCredit = 0;
                    var totalBalance = 0;

                    for (var i = 0; i < accountLedgerReportCollections.items.length; i++) {
                        totalDebit += accountLedgerReportCollections.items[i].DebitAmount;
                        totalCredit += accountLedgerReportCollections.items[i].CreditAmount;
                        totalBalance += accountLedgerReportCollections.items[i].Balance;
                    }

                    document.getElementById("totalDebitAmount").value = parseFloat(totalDebit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(totalCredit).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(totalBalance).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                } else {
                    document.getElementById("totalDebitAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalCreditAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("totalBalanceAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            });

            accountLedgerReportCollections.filter = function (item) {
                return !filterText || (item.DocumentReference.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Particulars.toLowerCase().indexOf(filterText) > -1);
            }

            accountLedgerReportGrid = new wijmo.grid.FlexGrid('#accountLedgerReportGrid');
            accountLedgerReportGrid.initialize({
                columns: [
                    {
                        "header": "Date",
                        "binding": "JournalDate",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Document Reference ",
                        "binding": "DocumentReference",
                        "width": "1.5*",
                        "allowResizing": false,
                        "allowSorting": false,
                        "isContentHtml": true
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "allowSorting": true,
                        "width": "1.5*",
                    },
                    {
                        "header": "Particulars",
                        "binding": "Particulars",
                        "allowSorting": true,
                        "width": "1.5*",
                    },
                    {
                        "header": "Debit",
                        "binding": "DebitAmountDisplay",
                        "align": "right",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Credit",
                        "binding": "CreditAmountDisplay",
