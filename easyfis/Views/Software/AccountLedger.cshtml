        // ==================================
        // Download Account Ledger Report CSV
        // ==================================
        function btnAccountLedgerReportDownloadCSVOnclick() {
            var CSV = '';
            var accountLedgerReport = [];
            var fileName = 'AccountLedgerReport.CSV';

            accountLedgerReportCollectionView.moveToFirstPage();

            for (var p = 1; p <= accountLedgerReportCollectionView.pageCount; p++) {
                for (i = 0; i < accountLedgerReportCollectionView.items.length; i++) {

                    accountLedgerReport.push({
                        JournalDate: accountLedgerReportCollectionView.items[i].JournalDate,
                        ManualNo: accountLedgerReportCollectionView.items[i].ManualNo,
                        DocumentReference: accountLedgerReportCollectionView.items[i].DocumentReferenceForCSV,
                        Article: accountLedgerReportCollectionView.items[i].Article,
                        Particulars: accountLedgerReportCollectionView.items[i].Particulars,
                        DebitAmount: accountLedgerReportCollectionView.items[i].DebitAmount,
                        CreditAmount: accountLedgerReportCollectionView.items[i].CreditAmount,
                        Balance: accountLedgerReportCollectionView.items[i].Balance
                    });
                }

                accountLedgerReportCollectionView.moveToNextPage();
                if (p == accountLedgerReportCollectionView.pageCount) {
                    accountLedgerReportCollectionView.moveToPage(accountLedgerReportCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                JournalDate: "Journal Date",
                ManualNo: "Manual No",
                DocumentReference: "Document Reference",
                Article: "Article",
                Particulars: "Particulars",
                DebitAmount: "Debit Amount",
                CreditAmount: "Credit Amount",
                Balance: "Balance"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < accountLedgerReport.length; i++) {
                var row = '';
                for (var a in accountLedgerReport[i]) {
                    row += '"' + accountLedgerReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload Successful.");
            }
        }

