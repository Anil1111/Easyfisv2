        // ============
        // Download CSV
        // ============
        function btnAccountLedgerReportCSVOnclick() {
            var CSV = '';
            var accountLedgerReport = [];
            var fileName = 'AccountLedgerReport.CSV';

            for (i = 0; i < accountLedgerReportCollections.items.length; i++) {
                var IsClose = accountLedgerReportCollections.items[i].IsClose;
                var isPOClose = "Not Closed";
                if (IsClose) {
                    isPOClose = "Closed"
                }

                accountLedgerReport.push({
                    JournalDate: accountLedgerReportCollections.items[i].JournalDate,
                    DocumentReference: accountLedgerReportCollections.items[i].DocumentReferenceForCSV,
                    Article: accountLedgerReportCollections.items[i].Article,
                    Particulars: accountLedgerReportCollections.items[i].Particulars,
                    DebitAmount: accountLedgerReportCollections.items[i].DebitAmount,
                    CreditAmount: accountLedgerReportCollections.items[i].CreditAmount,
                    Balance: accountLedgerReportCollections.items[i].Balance
                });
            }

            var Headers = [];
            Headers.push({
                JournalDate: "Journal Date",
                DocumentReference: "Document Reference",
                Article: "Article",
                Particulars: "Particulars",
                DebitAmount: "Debit Amount",
                CreditAmount: "Credit Amount",
                Balance: "Balance"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < accountLedgerReport.length; i++) {
                var row = '';
                for (var a in accountLedgerReport[i]) {
                    row += '"' + accountLedgerReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

