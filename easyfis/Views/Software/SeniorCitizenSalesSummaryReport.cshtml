<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Senior Citizen Sales Summary Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Senior Citizen Sales Summary Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpSeniorCitizenSalesSummaryReportFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboSeniorCitizenSalesSummaryReportShowNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnSeniorCitizenSalesSummaryReportDownloadCSVOnclick()" id="btnSeniorCitizenSalesSummaryReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    @*<button onclick="btnSeniorCitizenSalesSummaryReportPDFOnclick()" id="btnSeniorCitizenSalesSummaryReportPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>*@
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboSeniorCitizenSalesSummaryReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboSeniorCitizenSalesSummaryReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboSeniorCitizenSalesSummaryReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboSeniorCitizenSalesSummaryReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="seniorCitizenSalesSummaryReportFlexGrid" style="font-size: 12px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="seniorCitizenSalesSummaryReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnSeniorCitizenSalesSummaryReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnSeniorCitizenSalesSummaryReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnSeniorCitizenSalesSummaryReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnSeniorCitizenSalesSummaryReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnSeniorCitizenSalesSummaryReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Discount Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalDiscountAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboSeniorCitizenSalesSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboSeniorCitizenSalesSummaryReportStartDateFilter');
        var cboSeniorCitizenSalesSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboSeniorCitizenSalesSummaryReportEndDateFilter');
        var isSeniorCitizenSalesSummaryReportStartDateSelected = false;
        var isSeniorCitizenSalesSummaryReportEndDateSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboSeniorCitizenSalesSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboSeniorCitizenSalesSummaryReportCompanyFilter');
        var cboSeniorCitizenSalesSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboSeniorCitizenSalesSummaryReportBranchFilter');
        var isSeniorCitizenSalesSummaryReportCompanySelected = false;

        // =============================
        // Collection View and Flex Grid
        // =============================
        var seniorCitizenSalesSummaryReportCollectionView;
        var seniorCitizenSalesSummaryReportFlexGrid;
        var cboSeniorCitizenSalesSummaryReportShowNumberOfRows = new wijmo.input.ComboBox('#cboSeniorCitizenSalesSummaryReportShowNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnSeniorCitizenSalesSummaryReportMoveToFirstPageGrid = document.getElementById('btnSeniorCitizenSalesSummaryReportMoveToFirstPageGrid');
        var btnSeniorCitizenSalesSummaryReportMoveToPreviousPageGrid = document.getElementById('btnSeniorCitizenSalesSummaryReportMoveToPreviousPageGrid');
        var btnSeniorCitizenSalesSummaryReportMoveToNextPageGrid = document.getElementById('btnSeniorCitizenSalesSummaryReportMoveToNextPageGrid');
        var btnSeniorCitizenSalesSummaryReportMoveToLastPageGrid = document.getElementById('btnSeniorCitizenSalesSummaryReportMoveToLastPageGrid');
        var btnSeniorCitizenSalesSummaryReportCurrentPageGrid = document.getElementById('btnSeniorCitizenSalesSummaryReportCurrentPageGrid');
        var currentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboSeniorCitizenSalesSummaryReportStartDateFilter.dispose();
            cboSeniorCitizenSalesSummaryReportStartDateFilter = new wijmo.input.InputDate('#cboSeniorCitizenSalesSummaryReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isSeniorCitizenSalesSummaryReportStartDateSelected) {
                        NProgress.start();
                        refreshSeniorCitizenSalesSummaryReportFlexGrid();
                    } else {
                        isSeniorCitizenSalesSummaryReportStartDateSelected = false;
                    }
                }
            });

            cboSeniorCitizenSalesSummaryReportEndDateFilter.dispose();
            cboSeniorCitizenSalesSummaryReportEndDateFilter = new wijmo.input.InputDate('#cboSeniorCitizenSalesSummaryReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isSeniorCitizenSalesSummaryReportEndDateSelected) {
                        NProgress.start();
                        refreshSeniorCitizenSalesSummaryReportFlexGrid();
                    } else {
                        isSeniorCitizenSalesSummaryReportEndDateSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/seniorCitizenSalesSummaryReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnSeniorCitizenSalesSummaryReportDownloadCSV").prop("disabled", true);
                        $("#btnSeniorCitizenSalesSummaryReportPDF").prop("disabled", true);
                    }

                    cboSeniorCitizenSalesSummaryReportCompanyFilter.dispose();
                    cboSeniorCitizenSalesSummaryReportCompanyFilter = new wijmo.input.ComboBox('#cboSeniorCitizenSalesSummaryReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnSeniorCitizenSalesSummaryReportDownloadCSV").prop("disabled", false);
                            $("#btnSeniorCitizenSalesSummaryReportPDF").prop("disabled", false);
                            isSeniorCitizenSalesSummaryReportCompanySelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboSeniorCitizenSalesSummaryReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/seniorCitizenSalesSummaryReport/dropdown/list/branch/' + cboSeniorCitizenSalesSummaryReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnSeniorCitizenSalesSummaryReportDownloadCSV").prop("disabled", true);
                            $("#btnSeniorCitizenSalesSummaryReportPDF").prop("disabled", true);
                        }

                        cboSeniorCitizenSalesSummaryReportBranchFilter.dispose();
                        cboSeniorCitizenSalesSummaryReportBranchFilter = new wijmo.input.ComboBox('#cboSeniorCitizenSalesSummaryReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshSeniorCitizenSalesSummaryReportFlexGrid();
                            }
                        });

                        createCboShowRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboShowRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboSeniorCitizenSalesSummaryReportShowNumberOfRows.dispose();
            cboSeniorCitizenSalesSummaryReportShowNumberOfRows = new wijmo.input.ComboBox('#cboSeniorCitizenSalesSummaryReportShowNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboSeniorCitizenSalesSummaryReportShowNumberOfRows.selectedValue;
                        seniorCitizenSalesSummaryReportCollectionView.pageSize = parseInt(numberOfRows);
                        seniorCitizenSalesSummaryReportCollectionView.refresh();
                        seniorCitizenSalesSummaryReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isSeniorCitizenSalesSummaryReportCompanySelected) {
                createSeniorCitizenSalesSummaryReportFlexGrid();
            } else {
                refreshSeniorCitizenSalesSummaryReportFlexGrid();
            }
        }

        // =============================
        // Get Sales Summary Report Data
        // =============================
        function getSeniorCitizenSalesSummaryReportData() {
            var seniorCitizenSalesSummaryReports = new wijmo.collections.ObservableArray;

            if (cboSeniorCitizenSalesSummaryReportCompanyFilter.selectedValue != null) {
                if (cboSeniorCitizenSalesSummaryReportBranchFilter.selectedValue != null) {

                    var startDate = cboSeniorCitizenSalesSummaryReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboSeniorCitizenSalesSummaryReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboSeniorCitizenSalesSummaryReportCompanyFilter.selectedValue;
                    var branchId = cboSeniorCitizenSalesSummaryReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/seniorCitizenSalesSummaryReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (seniorCitizenSalesSummaryReportVATSalesResult) {
                            var totalAmount = 0;
                            var totalDiscountAmount = 0;

                            if (seniorCitizenSalesSummaryReportVATSalesResult.length > 0) {
                                for (i = 0; i < seniorCitizenSalesSummaryReportVATSalesResult.length; i++) {
                                    var docLink = "/Software/SalesDetail?id=" + seniorCitizenSalesSummaryReportVATSalesResult[i]["SIId"];

                                    var SIDateResult = new Date(seniorCitizenSalesSummaryReportVATSalesResult[i]["SIDate"])
                                    var SIDate = ('0' + (SIDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + SIDateResult.getDate()).slice(-2) + '-' + SIDateResult.getFullYear();

                                    seniorCitizenSalesSummaryReports.push({
                                        Id: seniorCitizenSalesSummaryReportVATSalesResult[i]["Id"],
                                        SIId: seniorCitizenSalesSummaryReportVATSalesResult["SIId"],
                                        SI: seniorCitizenSalesSummaryReportVATSalesResult[i]["SI"],
                                        Branch: seniorCitizenSalesSummaryReportVATSalesResult[i]["Branch"],
                                        SIForCSV: "SI-" + seniorCitizenSalesSummaryReportVATSalesResult[i]["SI"],
                                        SIButton: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 10.5px;'>" + seniorCitizenSalesSummaryReportVATSalesResult[i]["SI"],
                                        SIDate: SIDate,
                                        Item: seniorCitizenSalesSummaryReportVATSalesResult[i]["Item"],
                                        ItemInventory: seniorCitizenSalesSummaryReportVATSalesResult[i]["ItemInventory"] != null ? seniorCitizenSalesSummaryReportVATSalesResult[i]["ItemInventory"] : "",
                                        Unit: seniorCitizenSalesSummaryReportVATSalesResult[i]["Unit"],
                                        Quantity: seniorCitizenSalesSummaryReportVATSalesResult[i]["Quantity"],
                                        QuantityDisplay: parseFloat(seniorCitizenSalesSummaryReportVATSalesResult[i]["Quantity"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Price: seniorCitizenSalesSummaryReportVATSalesResult[i]["Price"],
                                        PriceDisplay: parseFloat(seniorCitizenSalesSummaryReportVATSalesResult[i]["Price"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","), Discount: seniorCitizenSalesSummaryReportVATSalesResult[i]["Discount"],
                                        Discount: seniorCitizenSalesSummaryReportVATSalesResult[i]["Discount"],
                                        DiscountRate: seniorCitizenSalesSummaryReportVATSalesResult[i]["DiscountRate"],
                                        DiscountPercentage: seniorCitizenSalesSummaryReportVATSalesResult[i]["Discount"] + "<hr style='margin-top: 3px; margin-bottom: 3px; border-color: #cccccc' />" + parseFloat(seniorCitizenSalesSummaryReportVATSalesResult[i]["DiscountRate"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        DiscountAmount: seniorCitizenSalesSummaryReportVATSalesResult[i]["DiscountAmount"],
                                        DiscountAmountDisplay: parseFloat(seniorCitizenSalesSummaryReportVATSalesResult[i]["DiscountAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Amount: seniorCitizenSalesSummaryReportVATSalesResult[i]["Amount"],
                                        AmountDisplay: parseFloat(seniorCitizenSalesSummaryReportVATSalesResult[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                        Customer: seniorCitizenSalesSummaryReportVATSalesResult[i]["Customer"],
                                    });

                                    totalAmount += seniorCitizenSalesSummaryReportVATSalesResult[i]["Amount"];
                                    totalDiscountAmount += seniorCitizenSalesSummaryReportVATSalesResult[i]["DiscountAmount"];
                                }
                            }

                            document.getElementById("inpTotalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            document.getElementById("inpTotalDiscountAmount").value = parseFloat(totalDiscountAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });

                } else {
                    document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalDiscountAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                document.getElementById("inpTotalDiscountAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return seniorCitizenSalesSummaryReports;
        }

        // =====================================
        // Create Sales Summary Report Flex Grid
        // =====================================
        function createSeniorCitizenSalesSummaryReportFlexGrid() {
            seniorCitizenSalesSummaryReportCollectionView = new wijmo.collections.CollectionView(getSeniorCitizenSalesSummaryReportData());
            seniorCitizenSalesSummaryReportCollectionView.canFilter = true;
            seniorCitizenSalesSummaryReportCollectionView.pageSize = cboSeniorCitizenSalesSummaryReportShowNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpSeniorCitizenSalesSummaryReportFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                seniorCitizenSalesSummaryReportCollectionView.refresh();
            });

            seniorCitizenSalesSummaryReportCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SI.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Item.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ItemInventory.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Unit.toLowerCase().indexOf(filterText) > -1);
            }

            seniorCitizenSalesSummaryReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateSeniorCitizenSalesSummaryReportNavigationButtons();
            });

            seniorCitizenSalesSummaryReportFlexGrid = new wijmo.grid.FlexGrid('#seniorCitizenSalesSummaryReportFlexGrid');
            seniorCitizenSalesSummaryReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "SI Number",
                        "binding": "SIButton",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "SI Date",
                        "binding": "SIDate",
                        "allowSorting": true,
                        "width": "0.8*"
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "Item",
                        "binding": "Item",
                        "allowSorting": true,
                        "width": "1.2*"
                    },
                    {
                        "header": "Price",
                        "binding": "PriceDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Unit",
                        "binding": "Unit",
                        "allowSorting": true,
                        "width": "0.7*"
                    },
                    {
                        "header": "Quantity",
                        "binding": "QuantityDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Rate",
                        "binding": "DiscountPercentage",
                        "allowSorting": true,
                        "width": "0.8*",
                        "align": "right",
                        "isContentHtml": true
                    },
                    {
                        "header": "Discount Amt.",
                        "binding": "DiscountAmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: seniorCitizenSalesSummaryReportCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            seniorCitizenSalesSummaryReportFlexGrid.trackChanges = true;

            var hr = new wijmo.grid.Row();
            seniorCitizenSalesSummaryReportFlexGrid.allowMerging = wijmo.grid.AllowMerging.AllHeaders;
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.rows.push(hr);
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.rows[0].allowMerging = true;

            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.columns[0].allowMerging = true;
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.setCellData(0, 0, 'SI Number');

            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.columns[1].allowMerging = true;
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.setCellData(0, 1, 'SI Date');

            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.columns[2].allowMerging = true;
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.setCellData(0, 2, 'Customer');

            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.columns[3].allowMerging = true;
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.setCellData(0, 3, 'Item');

            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.columns[4].allowMerging = true;
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.setCellData(0, 4, 'Price');

            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.columns[5].allowMerging = true;
            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.setCellData(0, 5, 'Unit');

            seniorCitizenSalesSummaryReportFlexGrid.columnHeaders.columns[6].allowMerging = true;
