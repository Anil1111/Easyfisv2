<!DOCTYPE html>
<html>
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Title of the Page -->
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Senior Citizen Sales Summary Report</title>

    <!-- CSS StyleSheets-->
    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")
            <section class="content-header">
                <div class="container">
                    <h3>
                        Senior Citizen Sales Summary Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; @ViewData["Branch"]
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 59%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control " id="InputFilter" placeholder="Search">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 40%" align="right">
                                    @*<button onclick="salesSummaryReportCSV_OnClick()" class="btn btn-primary "><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="salesSummaryReportPDF_OnClick()" class="btn btn-primary "><i class="fa fa-print"></i> Print</button>*@
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger "><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 59%">
                                    <div class="input-group ">
                                        <span class="input-group-addon">Date:</span>
                                        <input type="text" class="form-control " id="dateFrom" placeholder="filter date" disabled>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 20%" align="right"></td>
                                <td style="width: 20%"></td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div id="salesSummaryReportGrid" class="grid"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <table class="table table-responsive table-bordered">
                            <tr>
                                <td align="right">
                                    <b>Total: </b>
                                </td>
                                <td style="padding-left: 10px" align="right">
                                    <span id="total">NA</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </section>
            @Html.Partial("_SoftwareFooter")
        </main>
    </div>

    <div id="c-mask" class="c-mask"></div><!-- /c-mask -->
    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);
            var results = regex.exec(window.location.href);
            if (results == null)
                return "";
            else
                return results[1];
        }

        function salesSummaryReportPDF_OnClick() {
            window.location.href = '/RepSalesSummaryReport/SalesSummaryReport?StartDate=' + getParam("StartDate") + '&EndDate=' + getParam("EndDate");
        }

        function getSalesSummaryReport() {
            var salesSummaryReport = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/seniorCitizenSalesSummaryReport/list/' + getParam("StartDate") + '/' + getParam("EndDate"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (salesSummaryReportResult) {
                    if (salesSummaryReportResult.length > 0) {
                        var totalAmount = 0;

                        for (i = 0; i < salesSummaryReportResult.length; i++) {
                            var docLink = "/Software/SalesDetail?SalesId=" + salesSummaryReportResult[i]["Id"];
                            // Array Push
                            salesSummaryReport.push({
                                Id: salesSummaryReportResult[i]["Id"],
                                Branch: salesSummaryReportResult[i]["Branch"],
                                SINumber: salesSummaryReportResult[i]["SINumber"],
                                SINumberForCSV: "SI-" + salesSummaryReportResult[i]["SINumber"],
                                SINumberButton: "<a href='" + docLink + "' class='btn btn-default btn-xs btn-block' style='text-align: left'>" + salesSummaryReportResult[i]["SINumber"],
                                SIDate: salesSummaryReportResult[i]["SIDate"],
                                Customer: salesSummaryReportResult[i]["Customer"],
                                Remarks: salesSummaryReportResult[i]["Remarks"],
                                SoldBy: salesSummaryReportResult[i]["SoldBy"],
                                Amount: salesSummaryReportResult[i]["Amount"],

                            });

                            totalAmount += salesSummaryReportResult[i]["Amount"];
                        }

                        document.getElementById("total").innerHTML = totalAmount.toLocaleString();
                    }
                    NProgress.done();
                }
            });

            return salesSummaryReport;
        }
        var salesSummaryReportCollection;

        function salesSummaryReportCSV_OnClick() {


            var CSV = '';
            var salesSummaryReport = [];
            var fileName = 'SalesSummaryReport.CSV';

            for (i = 0; i < salesSummaryReportCollection.items.length; i++) {
                salesSummaryReport.push({
                    Branch: salesSummaryReportCollection.items[i].Branch,
                    SIDate: salesSummaryReportCollection.items[i].SIDate,
                    SINumber: salesSummaryReportCollection.items[i].SINumberForCSV,
                    Customer: salesSummaryReportCollection.items[i].Customer,
                    SoldBy: salesSummaryReportCollection.items[i].SoldBy,
                    Remarks: salesSummaryReportCollection.items[i].Remarks,
                    Amount: salesSummaryReportCollection.items[i].Amount,


                });
            }

            //for (var i = 0; i < symbols.length; i++) {
            //    CSV += '"' + symbols[i].AccountCode + '"\r\n';
            //}

            // Rows
            var Headers = [];
            Headers.push({

                Branch: "Branch",
                SIDate: "SI Date",
                SINumber: "SI Number",
                Customer: "Customer",
                SoldBy: "Sold By",
                Remarks: "Remarks",
                Amount: "Amount",

            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }
            CSV = header + '\r\n';
            for (var i = 0; i < salesSummaryReport.length; i++) {
                var row = '';
                for (var a in salesSummaryReport[i]) {
                    row += '"' + salesSummaryReport[i][a] + '",';
                }
                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");

                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

        $(document).ready(function () {
            NProgress.start();
            document.getElementById("dateFrom").value = "Date from " + getParam("StartDate") + " to " + getParam("EndDate");

            salesSummaryReportCollection = new wijmo.collections.CollectionView(getSalesSummaryReport());
            salesSummaryReportCollection.canFilter = true;

            var filterText = '';
            $('#InputFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                salesSummaryReportCollection.refresh();
            });
            salesSummaryReportCollection.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SoldBy.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Remarks.toLowerCase().indexOf(filterText) > -1)

            }
            // Flex Grid
            var salesSummaryReportGrid = new wijmo.grid.FlexGrid('#salesSummaryReportGrid');
            salesSummaryReportGrid.initialize({
                columns: [
                    {
                        "header": "Branch   ",
                        "binding": "Branch",
                        "allowSorting": true,
                        "width": 200
                    },
                    {
                        "header": "SI Date ",
                        "binding": "SIDate",
                        "allowSorting": true,
                        "width": 100
                    },
                    {
                        "header": "SI Number",
                        "binding": "SINumberButton",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": 110
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": 200
                    },
                    {
                        "header": "Sold By",
                        "binding": "SoldBy",
                        "allowSorting": true,
                        "width": 200
                    },
                    {
                        "header": "Remarks",
                        "binding": "Remarks",
                        "allowSorting": true,
                        "width": 200
                    },
                    {
                        "header": "Amount",
                        "binding": "Amount",
                        "allowSorting": true,
                        "width": 150
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: salesSummaryReportCollection,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            salesSummaryReportGrid.trackChanges = true;
        });
    </script>
    <script type="text/javascript">
        var slideLeft = new Menu({
            wrapper: '#o-wrapper',
            type: 'slide-left',
            menuOpenerClass: '.c-button',
            maskId: '#c-mask'
        });

        var slideLeftBtn = document.querySelector('#c-button--slide-left');

        slideLeftBtn.addEventListener('click', function (e) {
            e.preventDefault;
            slideLeft.open();
        });
    </script>
</body>
</html>