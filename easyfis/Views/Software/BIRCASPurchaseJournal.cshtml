                            BIRCASPurchaseJournalCollectionView.moveToPage(BIRCASPurchaseJournalCurrentPageIndex - 1);
                        }
                    }

                    document.getElementById("inpTotalAmount").value = parseFloat(totalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalDiscount").value = parseFloat(totalDiscount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalVAT").value = parseFloat(totalVAT).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    document.getElementById("inpTotalNetPurchase").value = parseFloat(totalNetPurchase).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
