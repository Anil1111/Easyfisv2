<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>BIR CAS - Purchase Journal</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        BIR CAS - Purchase Journal
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpBIRCASPurchaseJournalSeacrhFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboBIRCASPurchaseJournalDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button class="btn btn-success" onclick="btnBIRCASPurchaseJournalDownloadCSVOnclick()" id="btnBIRCASPurchaseJournalDownloadCSV"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button class="btn btn-primary" onclick="btnBIRCASPurchaseJournalPrintPDFOnclick()" id="btnBIRCASPurchaseJournalPrintPDF"><i class="fa fa-file-pdf-o" aria-hidden="true"></i> PDF</button>
                                    <a href="/Software/BIRCASReports" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASPurchaseJournalStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASPurchaseJournalEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASPurchaseJournalCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboBIRCASPurchaseJournalBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="BIRCASPurchaseJournalFlexGrid" class="grid"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="BIRCASPurchaseJournalNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASPurchaseJournalMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASPurchaseJournalMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnBIRCASPurchaseJournalCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASPurchaseJournalMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnBIRCASPurchaseJournalMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ==================
        // Data Range Filters
        // ==================
        var cboBIRCASPurchaseJournalStartDateFilter = new wijmo.input.InputDate('#cboBIRCASPurchaseJournalStartDateFilter');
        var cboBIRCASPurchaseJournalEndDateFilter = new wijmo.input.InputDate('#cboBIRCASPurchaseJournalEndDateFilter');
        var isCboBIRCASPurchaseJournalStartDateFilterSelected = false;
        var isCboBIRCASPurchaseJournalEndDateFilterSelected = false;

        // ==========================
        // Company and Branch Filters
        // ==========================
        var cboBIRCASPurchaseJournalCompanyFilter = new wijmo.input.ComboBox('#cboBIRCASPurchaseJournalCompanyFilter');
        var isCboBIRCASPurchaseJournalCompanyFilterSelected = false;
        var cboBIRCASPurchaseJournalBranchFilter = new wijmo.input.ComboBox('#cboBIRCASPurchaseJournalBranchFilter');

        // =============================
        // Collection View and Flex Grid
        // =============================
        var BIRCASPurchaseJournalCollectionView;
        var BIRCASPurchaseJournalFlexGrid;
        var cboBIRCASPurchaseJournalDisplayNumberOfRows = new wijmo.input.ComboBox('#cboBIRCASPurchaseJournalDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnBIRCASPurchaseJournalMoveToFirstPageGrid = document.getElementById('btnBIRCASPurchaseJournalMoveToFirstPageGrid');
        var btnBIRCASPurchaseJournalMoveToPreviousPageGrid = document.getElementById('btnBIRCASPurchaseJournalMoveToPreviousPageGrid');
        var btnBIRCASPurchaseJournalMoveToNextPageGrid = document.getElementById('btnBIRCASPurchaseJournalMoveToNextPageGrid');
        var btnBIRCASPurchaseJournalMoveToLastPageGrid = document.getElementById('btnBIRCASPurchaseJournalMoveToLastPageGrid');
        var btnBIRCASPurchaseJournalCurrentPageGrid = document.getElementById('btnBIRCASPurchaseJournalCurrentPageGrid');
        var BIRCASPurchaseJournalCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangedFilter() {
            NProgress.start();
            cboBIRCASPurchaseJournalStartDateFilter.dispose();
            cboBIRCASPurchaseJournalStartDateFilter = new wijmo.input.InputDate('#cboBIRCASPurchaseJournalStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboBIRCASPurchaseJournalStartDateFilterSelected) {
                        NProgress.start();
                        refreshBIRCASPurchaseJournalFlexGrid();
                    } else {
                        isCboBIRCASPurchaseJournalStartDateFilterSelected = false;
                    }
                }
            });

            cboBIRCASPurchaseJournalEndDateFilter.dispose();
            cboBIRCASPurchaseJournalEndDateFilter = new wijmo.input.InputDate('#cboBIRCASPurchaseJournalEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboBIRCASPurchaseJournalEndDateFilterSelected) {
                        NProgress.start();
                        refreshBIRCASPurchaseJournalFlexGrid();
                    } else {
                        isCboBIRCASPurchaseJournalEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/BIRCASPurchaseJournal/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnBIRCASPurchaseJournalDownloadCSV").prop("disabled", true);
                        $("#btnBIRCASPurchaseJournalPrintPDF").prop("disabled", true);
                    }

                    cboBIRCASPurchaseJournalCompanyFilter.dispose();
                    cboBIRCASPurchaseJournalCompanyFilter = new wijmo.input.ComboBox('#cboBIRCASPurchaseJournalCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnBIRCASPurchaseJournalDownloadCSV").prop("disabled", false);
                            $("#btnBIRCASPurchaseJournalPrintPDF").prop("disabled", false);
                            isCboBIRCASPurchaseJournalCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();

            if (cboBIRCASPurchaseJournalCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/BIRCASPurchaseJournal/dropdown/list/branch/' + cboBIRCASPurchaseJournalCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnBIRCASPurchaseJournalDownloadCSV").prop("disabled", true);
                            $("#btnBIRCASPurchaseJournalPrintPDF").prop("disabled", true);
                        }

                        cboBIRCASPurchaseJournalBranchFilter.dispose();
                        cboBIRCASPurchaseJournalBranchFilter = new wijmo.input.ComboBox('#cboBIRCASPurchaseJournalBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshBIRCASPurchaseJournalFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboBIRCASPurchaseJournalDisplayNumberOfRows.dispose();
            cboBIRCASPurchaseJournalDisplayNumberOfRows = new wijmo.input.ComboBox('#cboBIRCASPurchaseJournalDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboBIRCASPurchaseJournalDisplayNumberOfRows.selectedValue;
                        BIRCASPurchaseJournalCollectionView.pageSize = parseInt(numberOfRows);
                        BIRCASPurchaseJournalCollectionView.refresh();
                        BIRCASPurchaseJournalFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboBIRCASPurchaseJournalCompanyFilterSelected) {
                createBIRCASPurchaseJournalFlexGrid();
            } else {
                refreshBIRCASPurchaseJournalFlexGrid();
            }
        }

        // ========
        // Get Data
        // ========
        function getBIRCASPurchaseJournalData() {
            var BIRCASPurchaseJournalObservableArray = new wijmo.collections.ObservableArray;
            if (cboBIRCASPurchaseJournalCompanyFilter.selectedValue != null) {
                if (cboBIRCASPurchaseJournalBranchFilter.selectedValue != null) {
                    var startDate = cboBIRCASPurchaseJournalStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboBIRCASPurchaseJournalEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboBIRCASPurchaseJournalCompanyFilter.selectedValue;
                    var branchId = cboBIRCASPurchaseJournalBranchFilter.selectedValue;

                    //$.ajax({
                    //    url: '/api/../' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                    //    cache: false,
                    //    type: 'GET',
                    //    contentType: 'application/json; charset=utf-8',
                    //    success: function (BIRCASPurchaseJournalResult) {
                    //        var inpBIRCASPurchaseJournalTotalAmount = 0;
                    //        if (BIRCASPurchaseJournalResult.length > 0) {
                    //            for (i = 0; i < BIRCASPurchaseJournalResult.length; i++) {

                    //            }
                    //        }
                    //    }
                    //});
                } else {

                }
            } else {

            }

            NProgress.done();
            return BIRCASPurchaseJournalObservableArray;
        }

        // ================
        // Create Flex Grid
        // ================
        function createBIRCASPurchaseJournalFlexGrid() {
            BIRCASPurchaseJournalCollectionView = new wijmo.collections.CollectionView(getBIRCASPurchaseJournalData());
            BIRCASPurchaseJournalCollectionView.canFilter = true;
            BIRCASPurchaseJournalCollectionView.pageSize = cboBIRCASPurchaseJournalDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpBIRCASPurchaseJournalSeacrhFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                BIRCASPurchaseJournalCollectionView.refresh();
            });

            BIRCASPurchaseJournalCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1);
            }

            BIRCASPurchaseJournalCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateBIRCASPurchaseJournalNavigationButton();
            });

            BIRCASPurchaseJournalFlexGrid = new wijmo.grid.FlexGrid('#BIRCASPurchaseJournalFlexGrid');
            BIRCASPurchaseJournalFlexGrid.initialize({
                columns: [

                ],
                autoGenerateColumns: false,
                itemsSource: BIRCASPurchaseJournalCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            BIRCASPurchaseJournalFlexGrid.trackChanges = true;

            updateBIRCASPurchaseJournalNavigationButton();

            btnBIRCASPurchaseJournalMoveToFirstPageGrid.addEventListener('click', function () {
                BIRCASPurchaseJournalCollectionView.moveToFirstPage();
                BIRCASPurchaseJournalCurrentPageIndex = BIRCASPurchaseJournalCollectionView.pageIndex + 1;
                updateBIRCASPurchaseJournalNavigationButton();
            });

            btnBIRCASPurchaseJournalMoveToPreviousPageGrid.addEventListener('click', function () {
                BIRCASPurchaseJournalCollectionView.moveToPreviousPage();
                BIRCASPurchaseJournalCurrentPageIndex = BIRCASPurchaseJournalCollectionView.pageIndex + 1;
                updateBIRCASPurchaseJournalNavigationButton();
            });

            btnBIRCASPurchaseJournalMoveToNextPageGrid.addEventListener('click', function () {
                BIRCASPurchaseJournalCollectionView.moveToNextPage();
                BIRCASPurchaseJournalCurrentPageIndex = BIRCASPurchaseJournalCollectionView.pageIndex + 1;
                updateBIRCASPurchaseJournalNavigationButton();
            });

            btnBIRCASPurchaseJournalMoveToLastPageGrid.addEventListener('click', function () {
                BIRCASPurchaseJournalCollectionView.moveToLastPage();
                BIRCASPurchaseJournalCurrentPageIndex = BIRCASPurchaseJournalCollectionView.pageIndex + 1;
                updateBIRCASPurchaseJournalNavigationButton();
            });
        }

        // =========================
        // Update Navigation Buttons
        // =========================
        function updateBIRCASPurchaseJournalNavigationButton() {
            if (BIRCASPurchaseJournalCollectionView.pageSize <= 0) {
                document.getElementById('BIRCASPurchaseJournalNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('BIRCASPurchaseJournalNavigationPageGrid').style.display = 'block';
            if (BIRCASPurchaseJournalCollectionView.pageIndex === 0) {
                btnBIRCASPurchaseJournalMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnBIRCASPurchaseJournalMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnBIRCASPurchaseJournalMoveToNextPageGrid.removeAttribute('disabled');
                btnBIRCASPurchaseJournalMoveToLastPageGrid.removeAttribute('disabled');
            } else if (BIRCASPurchaseJournalCollectionView.pageIndex === (BIRCASPurchaseJournalCollectionView.pageCount - 1)) {
                btnBIRCASPurchaseJournalMoveToFirstPageGrid.removeAttribute('disabled');
                btnBIRCASPurchaseJournalMoveToPreviousPageGrid.removeAttribute('disabled');
                btnBIRCASPurchaseJournalMoveToNextPageGrid.setAttribute('disabled', 'disabled');
                btnBIRCASPurchaseJournalMoveToLastPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnBIRCASPurchaseJournalMoveToFirstPageGrid.removeAttribute('disabled');
                btnBIRCASPurchaseJournalMoveToPreviousPageGrid.removeAttribute('disabled');
                btnBIRCASPurchaseJournalMoveToNextPageGrid.removeAttribute('disabled');
                btnBIRCASPurchaseJournalMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnBIRCASPurchaseJournalCurrentPageGrid.innerHTML = (BIRCASPurchaseJournalCollectionView.pageIndex + 1) + ' / ' + BIRCASPurchaseJournalCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshBIRCASPurchaseJournalFlexGrid() {
            BIRCASPurchaseJournalCollectionView = new wijmo.collections.CollectionView(getBIRCASPurchaseJournalData());
            BIRCASPurchaseJournalCollectionView.canFilter = true;
            BIRCASPurchaseJournalCollectionView.pageSize = cboBIRCASPurchaseJournalDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpBIRCASPurchaseJournalSeacrhFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                BIRCASPurchaseJournalCollectionView.refresh();
            });

            BIRCASPurchaseJournalCollectionView.filter = function (item) {
                return !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1);
            }

            BIRCASPurchaseJournalCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateBIRCASPurchaseJournalNavigationButton();
            });

            BIRCASPurchaseJournalFlexGrid.itemsSource = BIRCASPurchaseJournalCollectionView;
            BIRCASPurchaseJournalFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnBIRCASPurchaseJournalDownloadCSVOnclick() {
            var CSV = '';
            var BIRCASPurchaseJournal = [];
            var fileName = 'BIRCASPurchaseJournal.CSV';

            BIRCASPurchaseJournalCollectionView.moveToFirstPage();

            for (var p = 1; p <= BIRCASPurchaseJournalCollectionView.pageCount; p++) {
                for (i = 0; i < BIRCASPurchaseJournalCollectionView.items.length; i++) {
                    BIRCASPurchaseJournal.push({

                    });
                }

                BIRCASPurchaseJournalCollectionView.moveToNextPage();
                if (p == BIRCASPurchaseJournalCollectionView.pageCount) {
                    BIRCASPurchaseJournalCollectionView.moveToPage(BIRCASPurchaseJournalCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({

            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < BIRCASPurchaseJournal.length; i++) {
                var row = '';
                for (var a in BIRCASPurchaseJournal[i]) {
                    row += '"' + BIRCASPurchaseJournal[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

        // =====================
        // Preview and Print PDF
        // =====================
        function btnBIRCASPurchaseJournalPrintPDFOnclick() {
            if (cboBIRCASPurchaseJournalCompanyFilter.selectedValue != null) {
                if (cboBIRCASPurchaseJournalBranchFilter.selectedValue != null) {
                    var startDate = cboBIRCASPurchaseJournalStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboBIRCASPurchaseJournalEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboBIRCASPurchaseJournalCompanyFilter.selectedValue;
                    var branchId = cboBIRCASPurchaseJournalBranchFilter.selectedValue;

                    window.location.href = '/RepBIRCASPurchaseJournal/BIRCASPurchaseJournal?StartDate=' + startDate + '&EndDate=' + endDate + '&CompanyId=' + companyId + '&BranchId=' + branchId;
                } else {
                    toastr.error("Lacking Information");
                }
            } else {
                toastr.error("Lacking Information");
            }
        }

        // =============================
        // Document Ready - On load Page
        // =============================
        $(document).ready(function () {
            createCboDateRangedFilter();
        });
    </script>
    <script type="text/javascript">
        // =================
        // User Branch Combo
        // =================
        var cboUserBranches = new wijmo.input.ComboBox('#cboUserBranches');

        // =========================
        // Get Current User Branches
        // =========================
        function getUserBranches() {
            $("#loadingUserBranches").show();
            document.getElementById("loadingUserBranches").innerHTML = '<i class="fa fa-spinner fa-spin"></i>';
            $("#userBranchContent").hide();

            $('#userBranchesModal').modal({ show: true, backdrop: 'static' });

            document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-save fa-fw'></i> Update";
            $("#updateUserBranch").prop("disabled", false);
            $("#closeUserBranch").prop("disabled", false);

            var userBranchesObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/userBranch/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (userBranchesResults) {
                    if (userBranchesResults.length > 0) {
                        for (i = 0; i < userBranchesResults.length; i++) {
                            userBranchesObservableArray.push({
                                BranchId: userBranchesResults[i]["BranchId"],
                                Branch: userBranchesResults[i]["Branch"]
                            });
                        }
                    }

                    var currentBranch = "@ViewData["BranchId"]";
                    cboUserBranches.dispose();
                    cboUserBranches = new wijmo.input.ComboBox('#cboUserBranches', {
                        isEditable: false,
                        placeholder: "Select Branches",
                        itemsSource: userBranchesObservableArray,
                        displayMemberPath: "Branch",
                        selectedValuePath: "BranchId",
                        selectedValue: currentBranch
                    });

                    setTimeout(function () {
                        $("#loadingUserBranches").hide();
                        $("#userBranchContent").show();
                    }, 500)
                }
            });
        }

        // ==========================
        // Update Current User Branch
        // ==========================
        function updateUserBranchOnclick() {
            document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-spinner fa-spin'></i> Updating";
            $("#updateUserBranch").prop("disabled", true);
            $("#closeUserBranch").prop("disabled", true);

            var userBranchObject = new Object();
            userBranchObject.BranchId = cboUserBranches.selectedValue;
            var userBranchData = JSON.stringify(userBranchObject);

            $.ajax({
                type: "PUT",
                url: '/api/userBranch/update',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: userBranchData,
                statusCode: {
                    200: function () {
                        toastr.success("Update Successful");
                        window.setTimeout(function () {
                            location.reload()
                        }, 1000);
                    },
                    404: function () {
                        toastr.error("Not Found");
                        document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-save fa-fw'></i> Update";
                        $("#updateUserBranch").prop("disabled", false);
                        $("#closeUserBranch").prop("disabled", false);
                    },
                    500: function () {
                        toastr.error("Bad Request");
                        document.getElementById('updateUserBranch').innerHTML = "<i class='fa fa-save fa-fw'></i> Update";
                        $("#updateUserBranch").prop("disabled", false);
                        $("#closeUserBranch").prop("disabled", false);
                    }
                }
            });
        }
    </script>
