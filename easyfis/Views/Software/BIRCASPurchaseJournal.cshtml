        function btnBIRCASPurchaseJournalDownloadCSVOnclick() {
            var CSV = '';
            var BIRCASPurchaseJournal = [];
            var fileName = 'BIRCASPurchaseJournal.CSV';

            BIRCASPurchaseJournalCollectionView.moveToFirstPage();


            for (var p = 1; p <= BIRCASPurchaseJournalCollectionView.pageCount; p++) {
                for (i = 0; i < BIRCASPurchaseJournalCollectionView.items.length; i++) {
                    BIRCASPurchaseJournal.push({
                        Date: BIRCASPurchaseJournalCollectionView.items[i].Date,
                        ReferenceNumber: BIRCASPurchaseJournalCollectionView.items[i].ReferenceNumber,
                        Supplier: BIRCASPurchaseJournalCollectionView.items[i].Supplier,
                        SupplierTIN: BIRCASPurchaseJournalCollectionView.items[i].SupplierTIN,
                        Address: BIRCASPurchaseJournalCollectionView.items[i].Address,
                        ManualReferenceNumber: BIRCASPurchaseJournalCollectionView.items[i].ManualReferenceNumber,
                        TotalAmount: BIRCASPurchaseJournalCollectionView.items[i].TotalAmount,
                        Discount: BIRCASPurchaseJournalCollectionView.items[i].Discount,
                        VAT: BIRCASPurchaseJournalCollectionView.items[i].VAT,
                        NetPurchase: BIRCASPurchaseJournalCollectionView.items[i].NetPurchase
                    });
                }

                BIRCASPurchaseJournalCollectionView.moveToNextPage();
                if (p == BIRCASPurchaseJournalCollectionView.pageCount) {
                    BIRCASPurchaseJournalCollectionView.moveToPage(BIRCASPurchaseJournalCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                Date: "Date",
                ReferenceNumber: "Reference Number",
                Supplier: "Supplier",
                SupplierTIN: "Supplier TIN",
                Address: "Address",
                ManualReferenceNumber: "Document Reference",
                TotalAmount: "Total Amount",
                Discount: "Discount",
                VAT: "VAT",
                NetPurchase: "NetPurchase"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < BIRCASPurchaseJournal.length; i++) {
                var row = '';
                for (var a in BIRCASPurchaseJournal[i]) {
                    row += '"' + BIRCASPurchaseJournal[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

