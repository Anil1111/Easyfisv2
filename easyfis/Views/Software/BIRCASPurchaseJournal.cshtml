                    var totalDiscount = 0;
                    var totalVAT = 0;
                    var totalNetPurchase = 0;

                    for (var p = 1; p <= BIRCASPurchaseJournalCollectionView.pageCount; p++) {
                        for (i = 0; i < BIRCASPurchaseJournalCollectionView.items.length; i++) {
                            totalAmount += BIRCASPurchaseJournalCollectionView.items[i].TotalAmount;
