                            <dt>Aritcle</dt>
                            <dd><div class="comboBox-wide" id="cboJVLineArticle"></div></dd>
                            <dt>Particulars</dt>
                            <dd><textarea rows="5" id="JVL_Particulars" class="form-control textarea-custom requiredJournalVoucherLine" placeholder="Particulars"></textarea></dd>
                            <dt>Debit Amount</dt>
                            <dd><input type="text" id="JVL_DebitAmount" class="form-control  numberField  requiredJournalVoucherLine" placeholder="0.00" /></dd>
