@model easyfis.Entities.MstUserForm
@{
    // =====================
    // User Rights Variables
    // =====================
    var canAdd = Model.CanAdd;
    var canEdit = Model.CanEdit;
    var canDelete = Model.CanDelete;
    var canLock = Model.CanLock;
    var canUnlock = Model.CanUnlock;
    var canPrint = Model.CanPrint;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Journal Voucher Detail</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Journal Voucher Detail
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ======================================================
                        Options: Journal, Lock, Unlock, Print and Close Button
                        ======================================================
                    -->
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-12" align="right">
                                <button class="btn btn-primary" id="btnJournalVoucherDetailJournal" onclick="btnJournalVoucherDetailJournalOnclick()"><i class="fa fa-book"></i> Journal</button>
                                @{
                                    if (canLock)
                                    {
                                        <button class="btn btn-primary" id="btnJournalVoucherDetailLock" onclick="btnJournalVoucherDetailLockOnclick()"><i class="fa fa-lock"></i> Lock </button>
                                    }
                                    if (canUnlock)
                                    {
                                        <button class="btn btn-primary" id="btnJournalVoucherDetailUnlock" onclick="btnJournalVoucherDetailUnlockOnclick()"><i class="fa fa-unlock"></i> Unlock</button>
                                    }
                                    if (canPrint)
                                    {
                                        <button class="btn btn-primary" id="btnJournalVoucherDetailPrint" onclick="btnJournalVoucherDetailPrintOnclick()"><i class="fa fa-print"></i> Print</button>
                                    }
                                }
                                <button class="btn btn-danger" id="btnJournalVoucherDetailClose" onclick="window.location.href ='@Url.Action("JournalVoucher", "Software")'"><i class="fa fa-times"></i> Close</button>
                            </div>
                        </div>
                    </div>

                    <!--
                        ======================================
                        Details, Fields and Other Informations
                        ======================================
                    -->
                    <div class="panel-body">
                        <form class="form-horizontal" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Branch</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboJournalVoucherDetailBranch"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">JV Number</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="inpJournalVoucherJVNumber" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">JV Date</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboJournalVoucherDetailJVDate"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Manual JV Number</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="inpJournalVoucherManualJVNumber" class="form-control  requiredJournalVoucher" placeholder="Manual JV Number" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Particulars</label>
                                        <div class="col-sm-8">
                                            <textarea rows="5" type="text" id="inpJournalVoucherParticulars" class="form-control textarea-custom requiredJournalVoucher" placeholder="Particulars"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Prepared by</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboJournalVoucherDetailPreparedBy"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Checked by</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboJournalVoucherDetailCheckedBy"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4">Approved by</label>
                                        <div class="col-sm-8">
                                            <div class="comboBox-wide" id="cboJournalVoucherDetailApprovedBy"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!--
                    =====================
                    Journal Voucher Lines
                    =====================
                -->
                <ul class="nav nav-tabs" role="tablist" id="myTab">
                    <li role="presentation" class="active"><a data-toggle="tab" href="#JournalVoucherLineList" id="branchList">Lines</a></li>
                </ul>
                <br />
                <div class="tab-content">
                    <div id="JournalVoucherLineList" class="tab-pane fade in active">
                        <div class="panel panel-default">

                            <!--
                                ==========================================================================
                                Journal Voucher Lines: Search, Filter, Display Number of Rows and  Buttons
                                ==========================================================================
                            -->
                            <div class="panel-heading">
                                <table style="width: 100%" border="0">
                                    <tr>
                                        <td style="width: 49.5%">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                                <input type="text" class="form-control" id="inpJournalVoucherLineSearchFilter" placeholder="Search...">
                                            </div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 24%">
                                            <div class="input-group">
                                                <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                                <div class="comboBox-wide" id="cboJournalVoucherLineShowNumberOfRows"></div>
                                            </div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 24.5%" align="right">
                                            @{
                                                if (canAdd)
                                                {
                                                    <button class="btn btn-primary" id="btnJournalVoucherLineAdd" onclick="btnJournalVoucherLineAddOnclick()"><i class="fa fa-plus"></i> Add</button>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!--
                                ================================
                                Journal Voucher Lines: Flex Grid
                                ================================
                            -->
                            <div class="panel-body">
                                <div id="journalVoucherLineFlexGrid"></div>
                            </div>

                            <!--
                                =========================================
                                Journal Voucher Lines: Navigation Buttons
                                =========================================
                            -->
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="btn-group col-md-7" id="journalVoucherLineNavigationPageGrid">
                                        <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherLineMoveToFirstPageGrid">
                                            <span class="glyphicon glyphicon-fast-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherLineMoveToPreviousPageGrid">
                                            <span class="glyphicon glyphicon-step-backward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnJournalVoucherLineCurrentPageGrid"></button>
                                        <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherLineMoveToNextPageGrid">
                                            <span class="glyphicon glyphicon-step-forward"></span>
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnJournalVoucherLineMoveToLastPageGrid">
                                            <span class="glyphicon glyphicon-fast-forward"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--
                            =============================
                            Journal Voucher Lines: Totals
                            =============================
                        -->
                        <div class="panel panel-default">
                            <div class="panel-body" style="padding-bottom: 0px;">
                                <div class="row">
                                    <div class="col-md-6">

                                    </div>
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt>
                                                <b>Total Debit</b>
                                            </dt>
                                            <dd>
                                                <input type="text" class="form-control numberField" id="totalDebit" placeholder="0.00" disabled />
                                            </dd>
                                            <dt>
                                                <b>Total Credit</b>
                                            </dt>
                                            <dd>
                                                <input type="text" class="form-control numberField" id="totalCredit" placeholder="0.00" disabled />
                                            </dd>
                                            <dt>
                                                <b>Total Variance</b>
                                            </dt>
                                            <dd>
                                                <input type="text" class="form-control numberField" id="totalVariance" placeholder="0.00" disabled />
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ==========
                    User Stamp
                    ==========
                -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        User stamp
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p>Created by:</p>
                                <div style="padding-left: 10px;">
                                    <i class="fa fa-key fa-fw"></i> <label id="createdBy">NA</label>
                                    <br />
                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="createdDate">mm/dd/yyyy</span></small>
                                </div>
                                <br />
                            </div>
                            <div class="col-md-6">
                                <p>Updated by:</p>
                                <div style="padding-left: 10px;">
                                    <i class="fa fa-key fa-fw"></i> <label id="updatedBy">NA</label>
                                    <br />
                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="updatedDate">mm/dd/yyyy</span></small>
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    <!--
        ===================================
        Journal Voucher Lines: Detail Modal
        ===================================
    -->
    <div class="modal fade" id="journalVoucherLineDetailModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="journalVoucherLineModalTitle">Journal Voucher Line</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <span id="journalVoucherLineLoading"></span>
                    </center>
                    <div id="journalVoucherLineDetailForm">
                        <dl class="dl-horizontal">
                            <dt>Branch</dt>
                            <dd>
                                <div id="cboJournalVoucherLineBranch" class="comboBox-wide"></div>
                            </dd>
                            <dt>Account</dt>
                            <dd>
                                <table style="width: 100%" border="0">
                                    <tr>
                                        <td style="width: 30%">
                                            <div class="comboBox-wide" id="cboJournalVoucherLineAccountCode"></div>
                                        </td>
                                        <td style="width: 1%"></td>
                                        <td style="width: 69%">
                                            <div class="comboBox-wide" id="cboJournalVoucherLineAccount"></div>
                                        </td>
                                    </tr>
                                </table>
                            </dd>
                            <dt>Aritcle</dt>
                            <dd>
                                <div class="comboBox-wide" id="cboJournalVoucherLineArticle"></div>
                            </dd>
                            <dt>Particulars</dt>
                            <dd>
                                <textarea rows="5" id="inpJournalVoucherLineParticulars" class="form-control textarea-custom requiredJournalVoucherLine" placeholder="Particulars"></textarea>
                            </dd>
                            <dt>Debit Amount</dt>
                            <dd>
                                <input type="text" id="inpJournalVoucherLineDebitAmount" class="form-control  numberField  requiredJournalVoucherLine" placeholder="0.00" />
                            </dd>
                            <dt>Credit Amount</dt>
                            <dd>
                                <input type="text" id="inpJournalVoucherLineCreditAmount" class="form-control  numberField  requiredJournalVoucherLine" placeholder="0.00" />
                            </dd>
                            <dt>RR No.</dt>
                            <dd>
                                <div class="comboBox-wide" id="cboJournalVoucherLineRR"></div>
                            </dd>
                            <dt>SI No.</dt>
                            <dd>
                                <div class="comboBox-wide" id="cboJournalVoucherLineSI"></div>
                            </dd>
                            <dt>Is Clear</dt>
                            <dd>
                                <input type="checkbox" id="inpJournalVoucherLineIsClear" class="requiredJournalVoucherLine" />
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnJournalVoucherLineSave" class="btn btn-primary" onclick="btnJournalVoucherLineSaveOnclick()"><i class="fa fa-save"></i> Save</button>
                    <button id="btnJournalVoucherLineClose" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                </div>
            </div>
        </div>
    </div>

    <!--
        ===================================
        Journal Voucher Lines: Delete Modal
        ===================================
    -->
    <div class="modal fade" id="journalVoucherLineConfirmDeleteModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete</h4>
                </div>
                <div class="modal-body">
                    Delete Journal Voucher Line?
                </div>
                <div class="modal-footer">
                    <button id="btnJournalVoucherLineConfirmDelete" class="btn btn-danger" onclick="btnJournalVoucherLineConfirmDeleteOnclick()"><i class="fa fa-trash"></i> Delete</button>
                    <button id="btnJournalVoucherLineConfirmDeleteCloseModal" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!--
        =====================
        Journal Entries Modal
        =====================
    -->
    <div class="modal fade" id="journalEntryModal" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="journalModalLabel"> Journal</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <span id="journalLoading"></span>
                    </center>
                    <div id="journalContent">
                        <div id="journalFlexGrid" style="max-height: 250px;"></div>
                        <br /><br />
                        <div class="row">
                            <div class="col-md-7"></div>
                            <div class="col-md-5">
                                <dl class="dl-horizontal">
                                    <dt>
                                        <b>Total Debit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpJournalTotalDebit" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Total Credit</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpJournalTotalCredit" placeholder="0.00" disabled />
                                    </dd>
                                    <dt>
                                        <b>Variance</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpJournalVariance" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============================================
        // Journal Voucher Detail Combo Data and Fields
        // ============================================
        var cboJournalVoucherDetailBranch = new wijmo.input.ComboBox('#cboJournalVoucherDetailBranch');
        var cboJournalVoucherDetailJVDate = new wijmo.input.InputDate('#cboJournalVoucherDetailJVDate');
        var cboJournalVoucherDetailPreparedBy = new wijmo.input.ComboBox('#cboJournalVoucherDetailPreparedBy');
        var cboJournalVoucherDetailCheckedBy = new wijmo.input.ComboBox('#cboJournalVoucherDetailCheckedBy');
        var cboJournalVoucherDetailApprovedBy = new wijmo.input.ComboBox('#cboJournalVoucherDetailApprovedBy');
        var isLocked = false;

        // =======================================================================
        // Journal Voucher Lines Collection View, Flex Grid and Navigation Buttons
        // =======================================================================
        var journalVoucherLineCollectionView;
        var journalVoucherLineFlexGrid;
        var cboJournalVoucherLineShowNumberOfRows = new wijmo.input.ComboBox('#cboJournalVoucherLineShowNumberOfRows');
        var btnJournalVoucherLineMoveToFirstPageGrid = document.getElementById('btnJournalVoucherLineMoveToFirstPageGrid');
        var btnJournalVoucherLineMoveToPreviousPageGrid = document.getElementById('btnJournalVoucherLineMoveToPreviousPageGrid');
        var btnJournalVoucherLineMoveToNextPageGrid = document.getElementById('btnJournalVoucherLineMoveToNextPageGrid');
        var btnJournalVoucherLineMoveToLastPageGrid = document.getElementById('btnJournalVoucherLineMoveToLastPageGrid');
        var btnJournalVoucherLineCurrentPageGrid = document.getElementById('btnJournalVoucherLineCurrentPageGrid');

        // ===========================================
        // Journal Voucher Lines Combo Data and Fields
        // ===========================================
        var journalVoucherLineId = 0;
        var cboJournalVoucherLineBranch = new wijmo.input.ComboBox('#cboJournalVoucherLineBranch');
        var cboJournalVoucherLineAccountCode = new wijmo.input.ComboBox('#cboJournalVoucherLineAccountCode');
        var cboJournalVoucherLineAccount = new wijmo.input.ComboBox('#cboJournalVoucherLineAccount');
        var IsAccountChanged = false;
        var cboJournalVoucherLineArticle = new wijmo.input.ComboBox('#cboJournalVoucherLineArticle');
        var cboJournalVoucherLineRR = new wijmo.input.ComboBox('#cboJournalVoucherLineRR');
        var cboJournalVoucherLineSI = new wijmo.input.ComboBox('#cboJournalVoucherLineSI');

        // =============================================
        // Journal Entries Collection View and Flex Grid
        // =============================================
        var journalCollectionView;
        var journalFlexGrid = new wijmo.grid.FlexGrid('#journalFlexGrid');

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ==========================================
        // Create Journal Voucher Detail Combo Branch
        // ==========================================
        function createCboJournalVoucherDetailBranch() {
            NProgress.start();
            var branchesObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/journalVoucher/dropdown/list/branch',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            branchesObservableArray.push({
                                Id: results[i]["Id"],
                                Branch: results[i]["Branch"]
                            });
                        }
                    }

                    cboJournalVoucherDetailBranch.dispose();
                    cboJournalVoucherDetailBranch = new wijmo.input.ComboBox('#cboJournalVoucherDetailBranch', {
                        disabled: true,
                        isEditable: false,
                        placeholder: "Select Branch",
                        itemsSource: branchesObservableArray,
                        displayMemberPath: "Branch",
                        selectedValuePath: "Id"
                    });

                    createCboJournalVoucherDetailUser();
                }
            });
        }

        // ========================================
        // Create Journal Voucher Detail Combo User
        // ========================================
        function createCboJournalVoucherDetailUser() {
            var usersObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/journalVoucher/dropdown/list/users',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            usersObservableArray.push({
                                Id: results[i]["Id"],
                                FullName: results[i]["FullName"]
                            });
                        }
                    }

                    cboJournalVoucherDetailPreparedBy.dispose();
                    cboJournalVoucherDetailPreparedBy = new wijmo.input.ComboBox('#cboJournalVoucherDetailPreparedBy', {
                        disabled: true,
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    cboJournalVoucherDetailCheckedBy.dispose();
                    cboJournalVoucherDetailCheckedBy = new wijmo.input.ComboBox('#cboJournalVoucherDetailCheckedBy', {
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    cboJournalVoucherDetailApprovedBy.dispose();
                    cboJournalVoucherDetailApprovedBy = new wijmo.input.ComboBox('#cboJournalVoucherDetailApprovedBy', {
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    getJournalVoucherDetailData();
                }
            });
        }

        // ===============================
        // Get Journal Voucher Detail Data
        // ===============================
        function getJournalVoucherDetailData() {
            if (document.location.search.length > 0) {
                var id = getURLParameterValue("id");
               $.ajax({
                   url: '/api/journalVoucher/detail/' + id,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results != null) {
                            cboJournalVoucherDetailBranch.selectedValue = results.BranchId;
                            document.getElementById('inpJournalVoucherJVNumber').value = results.JVNumber;
                            cboJournalVoucherDetailJVDate.dispose();
                            cboJournalVoucherDetailJVDate = new wijmo.input.InputDate('#cboJournalVoucherDetailJVDate', {
                                format: 'MM-dd-yyyy',
                                value: new Date(results.JVDate),
                            });
                            document.getElementById('inpJournalVoucherManualJVNumber').value = results.ManualJVNumber;
                            document.getElementById('inpJournalVoucherParticulars').value = results.Particulars;
                            cboJournalVoucherDetailPreparedBy.selectedValue = results.PreparedById;
                            cboJournalVoucherDetailCheckedBy.selectedValue = results.CheckedById;
                            cboJournalVoucherDetailApprovedBy.selectedValue = results.ApprovedById;

                            document.getElementById('createdBy').innerHTML = results.CreatedBy;
                            document.getElementById('createdDate').innerHTML = results.CreatedDateTime;
                            document.getElementById('updatedBy').innerHTML = results.UpdatedBy;
                            document.getElementById('updatedDate').innerHTML = results.UpdatedDateTime;

                            if (results.IsLocked) {
                                cboJournalVoucherDetailBranch.disabled = true;
                                document.getElementById('inpJournalVoucherJVNumber').disabled = true;
                                cboJournalVoucherDetailJVDate.disabled = true;
                                document.getElementById('inpJournalVoucherManualJVNumber').disabled = true;
                                document.getElementById('inpJournalVoucherParticulars').disabled = true;
                                cboJournalVoucherDetailPreparedBy.disabled = true;
                                cboJournalVoucherDetailCheckedBy.disabled = true;
                                cboJournalVoucherDetailApprovedBy.disabled = true;

                                $('#btnJournalVoucherDetailLock').prop('disabled', true);
                                $("#btnJournalVoucherLineAdd").prop("disabled", true);

                                isLocked = true;
                            } else  {
                                $("#btnJournalVoucherDetailJournal").prop("disabled", true);
                                $("#btnJournalVoucherDetailPrint").prop("disabled", true);
                                $("#btnJournalVoucherDetailUnlock").prop("disabled", true);
                            }

                            createCboDisplayNumberOfRows();
                            createJournalVoucherLinesFlexGrid();
                        }
                    }
                });
            } else {
                alert("No Id Parameter Value");
                window.location = "/Software/JournalVoucher";
            }
        }

        // ====================
        // Lock Journal Voucher
        // ====================
        function btnJournalVoucherDetailLockOnclick() {
            var journalVoucherObject = new Object();
