                                    AccountId: results[i]["AccountId"],
                                    Account: results[i]["Account"],
                                    ArticleId: results[i]["ArticleId"],
                                    Article: results[i]["Article"],
                                    Particulars: results[i]["Particulars"],
                                    DebitAmount: results[i]["DebitAmount"],
                                    DebitAmountDisplay: parseFloat(results[i]["DebitAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                    CreditAmount: results[i]["CreditAmount"],
                                    CreditAmountDisplay: parseFloat(results[i]["CreditAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                                    APRRId: results[i]["APRRId"],
                                    APRRNumber: results[i]["APRRNumber"],
                                    ARSIId: results[i]["ARSIId"],
                                    ARSINumber: results[i]["ARSINumber"],
                                    IsClear: results[i]["IsClear"],
                                });

                                debitAmountTotal += results[i]["DebitAmount"];
                                creditAmountTotal += results[i]["CreditAmount"];
                            }
                        }

                        document.getElementById('totalDebit').value = parseFloat(debitAmountTotal).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        document.getElementById('totalCredit').value = parseFloat(creditAmountTotal).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

                        document.getElementById('totalVariance').value = parseFloat((debitAmountTotal - creditAmountTotal)).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

                        NProgress.done();
                    }
                });
            }

            return journalVoucherLineCollectionView;
        }

