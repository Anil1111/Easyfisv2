    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ================
        // Global Variables
        // ================
        var cboJVBranch = new wijmo.input.ComboBox('#cboJVBranch');
        var cboJVPreparedBy = new wijmo.input.ComboBox('#cboJVPreparedBy');
        var cboJVCheckedBy = new wijmo.input.ComboBox('#cboJVCheckedBy');
        var cboJVApprovedBy = new wijmo.input.ComboBox('#cboJVApprovedBy');
        var cboJVDate = new wijmo.input.InputDate('#cboJVDate');
        var isLocked = false;
        var journalVoucherLines;
        var journalVoucherLineGrid;
        var cboJVLineBranch = new wijmo.input.ComboBox('#cboJVLineBranch');
        var cboJVLineAccountCode = new wijmo.input.ComboBox('#cboJVLineAccountCode');
        var cboJVLineAccount = new wijmo.input.ComboBox('#cboJVLineAccount');
        var cboJVLineArticle = new wijmo.input.ComboBox('#cboJVLineArticle');
        var IsAccountChanged = false;
        var journalVoucherLineId = 0;
        var cboJVLineRR = new wijmo.input.ComboBox('#cboJVLineRR');
        var cboJVLineSI = new wijmo.input.ComboBox('#cboJVLineSI');
        var journalCollectionView;
        var journalFlexGrid = new wijmo.grid.FlexGrid('#journalFlexGrid');
        var cboJournalVoucherLineShowNumberOfRows = new wijmo.input.ComboBox('#cboJournalVoucherLineShowNumberOfRows');
        var btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
        var btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
        var btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
        var btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
        var btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

        // =======================
        // Get URL Parameter Value
        // =======================
        function getParam(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ========================
        // GET Branch for Combo Box
        // ========================
        function getBranchesForComboBox() {
            NProgress.start();
            var branchesObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/journalVoucher/dropdown/list/branch',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            branchesObservableArray.push({
                                Id: results[i]["Id"],
                                Branch: results[i]["Branch"]
                            });
                        }
                    }

                    cboJVBranch.dispose();
                    cboJVBranch = new wijmo.input.ComboBox('#cboJVBranch', {
                        disabled: true,
                        isEditable: false,
                        placeholder: "Select Branch",
                        itemsSource: branchesObservableArray,
                        displayMemberPath: "Branch",
                        selectedValuePath: "Id"
                    });

                    getUsersForComboBox();
                }
            });
        }

        // =======================
        // GET Users for Combo Box
        // =======================
        function getUsersForComboBox() {
            var usersObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/journalVoucher/dropdown/list/users',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            usersObservableArray.push({
                                Id: results[i]["Id"],
                                FullName: results[i]["FullName"]
                            });
                        }
                    }

                    cboJVPreparedBy.dispose();
                    cboJVPreparedBy = new wijmo.input.ComboBox('#cboJVPreparedBy', {
                        disabled: true,
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    cboJVCheckedBy.dispose();
                    cboJVCheckedBy = new wijmo.input.ComboBox('#cboJVCheckedBy', {
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    cboJVApprovedBy.dispose();
                    cboJVApprovedBy = new wijmo.input.ComboBox('#cboJVApprovedBy', {
                        isEditable: false,
                        placeholder: "Select User",
                        itemsSource: usersObservableArray,
                        displayMemberPath: "FullName",
                        selectedValuePath: "Id"
                    });

                    getJournalVoucherById();
                }
            });
        }

        // =========================
        // GET Journal Voucher by Id
        // =========================
        function getJournalVoucherById() {
            if (document.location.search.length > 0) {
                var id = getParam("id");
               $.ajax({
                   url: '/api/journalVoucher/detail/' + id,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results != null) {
                            cboJVBranch.selectedValue = results.BranchId;
                            document.getElementById('journalVoucher_Number').value = results.JVNumber;
                            cboJVDate.dispose();
                            cboJVDate = new wijmo.input.InputDate('#cboJVDate', {
                                format: 'MM-dd-yyyy',
                                value: new Date(results.JVDate),
                            });
                            document.getElementById('manual_JournalVoucher_No').value = results.ManualJVNumber;
                            document.getElementById('journalVoucher_Particulars').value = results.Particulars;
                            cboJVPreparedBy.selectedValue = results.PreparedById;
                            cboJVCheckedBy.selectedValue = results.CheckedById;
                            cboJVApprovedBy.selectedValue = results.ApprovedById;

                            document.getElementById('createdBy').innerHTML = results.CreatedBy;
                            document.getElementById('createdDate').innerHTML = results.CreatedDateTime;
                            document.getElementById('updatedBy').innerHTML = results.UpdatedBy;
                            document.getElementById('updatedDate').innerHTML = results.UpdatedDateTime;

                            if (results.IsLocked) {
                                cboJVBranch.disabled = true;
                                document.getElementById('journalVoucher_Number').disabled = true;
                                cboJVDate.disabled = true;
                                document.getElementById('manual_JournalVoucher_No').disabled = true;
                                document.getElementById('journalVoucher_Particulars').disabled = true;
                                cboJVPreparedBy.disabled = true;
                                cboJVCheckedBy.disabled = true;
                                cboJVApprovedBy.disabled = true;

                                $('#cmdSaveAndLockJournalVoucher').prop('disabled', true);
                                $("#cmdJournalVoucherLineAddJournalVoucherLineButton").prop("disabled", true);

                                isLocked = true;
                            } else  {
                                $("#cmdJournalJournalVoucher").prop("disabled", true);
                                $("#cmdPreviewJournalVoucher").prop("disabled", true);
                                $("#cmdEditJournalVoucher").prop("disabled", true);
                            }

                            createCboShowRows();
                            createJournalVoucherLinesFlexGrid();
                        }
                    }
                });
            } else {
                alert("No Id Parameter Value");
                window.location = "/Software/JournalVoucher";
            }
        }

        // ====================
        // Save and Lock Button
        // ====================
        function cmdJournalVoucherSaveAndLockButton_OnClick() {
            var journalVoucherObject = new Object();
            var id = getParam("id");
            journalVoucherObject.JVDate = cboJVDate.value.toLocaleDateString();
            journalVoucherObject.ManualJVNumber = document.getElementById('manual_JournalVoucher_No').value;
            journalVoucherObject.Particulars = document.getElementById('journalVoucher_Particulars').value;
            journalVoucherObject.CheckedById = cboJVCheckedBy.selectedValue;
            journalVoucherObject.ApprovedById = cboJVApprovedBy.selectedValue;
            var data = JSON.stringify(journalVoucherObject);

            var isValid = true;
            $('.requiredJournalVoucher').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                } else {
                    $(this).css({
                        "border": "",
                    });
                }
            });

            if (isValid) {
                document.getElementById('cmdSaveAndLockJournalVoucher').innerHTML = "<i class='fa fa-spinner fa-spin'></i> Locking";
                $("#cmdJournalJournalVoucher").prop("disabled", true);
                $("#cmdSaveAndLockJournalVoucher").prop("disabled", true);
                $("#cmdEditJournalVoucher").prop("disabled", true);
                $("#cmdPreviewJournalVoucher").prop("disabled", true);
                $("#cmdCloseJournalVoucher").prop("disabled", true);

                var id = getParam('id');

                $.ajax({
                    type: "PUT",
                    url: '/api/journalVoucher/lock/' + id,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: data,
                    statusCode: {
                        200: function () {
                            toastr.success("Lock Successful");
                            window.setTimeout(function () {
                                location.reload()
                            }, 1000);
                        },
                        404: function (message) {
                            toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404");
                            document.getElementById('cmdSaveAndLockJournalVoucher').innerHTML = "<i class='fa fa-lock'></i> Lock";
                            $("#cmdSaveAndLockJournalVoucher").prop("disabled", false);
                            $("#cmdCloseJournalVoucher").prop("disabled", false);
                        },
                        400: function (message) {
