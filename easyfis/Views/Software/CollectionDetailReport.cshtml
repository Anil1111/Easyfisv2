<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/easyfislogomini.ico">
    <title>Collection Detail Report</title>

    @Styles.Render("~/Content/Software-css")
</head>
<body>
    <div id="o-wrapper" class="o-wrapper">
        <main class="o-content">
            @Html.Partial("_SoftwareHeader")

            <section class="content-header">
                <div class="container">
                    <h3>
                        Collection Detail Report
                    </h3>
                    <p>
                        <i class="fa fa-building-o fa-fw"></i> &nbsp; @ViewData["Company"] <br />
                        <i class="fa fa-home fa-fw"></i> &nbsp; <a href="#" onclick="getUserBranches()" style="color: white;">@ViewData["Branch"]</a>
                    </p>
                </div>
            </section>
            <section class="container">
                <div class="panel panel-default">

                    <!--
                        ===============
                        Search / Filter
                        ===============
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 49.5%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="inpCollectionDetailReportSearchFilter" placeholder="Search...">
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-table"></i></b></span>
                                        <div class="comboBox-wide" id="cboCollectionDetailReportDisplayNumberOfRows"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24.5%" align="right">
                                    <button onclick="btnCollectionDetailReportDownloadCSVOnclick()" id="btnCollectionDetailReportDownloadCSV" class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i> CSV</button>
                                    <button onclick="btnCollectionDetailReportPrintPDFOnclick()" id="btnCollectionDetailReportPrintPDF" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
                                    <a href="/Software/AccountsReceivable" class="btn btn-danger"><i class="fa fa-close"></i> Close</a>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        ======================================
                        Date Range, Company and Branch Filters
                        ======================================
                    -->
                    <div class="panel-heading">
                        <table style="width: 100%" border="0">
                            <tr>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Start Date</b></span>
                                        <div class="comboBox-wide" id="cboCollectionDetailReportStartDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%" align="right">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>End Date</b></span>
                                        <div class="comboBox-wide" id="cboCollectionDetailReportEndDateFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Company</b></span>
                                        <div class="comboBox-wide" id="cboCollectionDetailReportCompanyFilter"></div>
                                    </div>
                                </td>
                                <td style="width: 1%"></td>
                                <td style="width: 24%">
                                    <div class="input-group ">
                                        <span class="input-group-addon"><b>Branch</b></span>
                                        <div class="comboBox-wide" id="cboCollectionDetailReportBranchFilter"></div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!--
                        =========
                        Flex Grid
                        =========
                    -->
                    <div class="panel-body">
                        <div id="collectionDetailReportFlexGrid" style="font-size: 11.5px;"></div>
                    </div>

                    <!--
                        ==================
                        Navigation Buttons
                        ==================
                    -->
                    <div class="panel-footer">
                        <div class="row">
                            <div class="btn-group col-md-7" id="collectionDetailReportNavigationPageGrid">
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionDetailReportMoveToFirstPageGrid">
                                    <span class="glyphicon glyphicon-fast-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionDetailReportMoveToPreviousPageGrid">
                                    <span class="glyphicon glyphicon-step-backward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCollectionDetailReportCurrentPageGrid"></button>
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionDetailReportMoveToNextPageGrid">
                                    <span class="glyphicon glyphicon-step-forward"></span>
                                </button>
                                <button type="button" class="btn btn-default border-custom" id="btnCollectionDetailReportMoveToLastPageGrid">
                                    <span class="glyphicon glyphicon-fast-forward"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                    ======
                    Totals
                    ======
                -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal dl-custom">
                                    <dt>
                                        <b>Total Amount</b>
                                    </dt>
                                    <dd>
                                        <input type="text" class="form-control numberField" id="inpTotalAmount" placeholder="0.00" disabled />
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @Html.Partial("_SoftwareFooter")
        </main>
    </div>
    <div id="c-mask" class="c-mask"></div>

    @Scripts.Render("~/Scripts/Software-js")
    <script type="text/javascript">
        // ============
        // Date Filters
        // ============
        var cboCollectionDetailReportStartDateFilter = new wijmo.input.InputDate('#cboCollectionDetailReportStartDateFilter');
        var cboCollectionDetailReportEndDateFilter = new wijmo.input.InputDate('#cboCollectionDetailReportEndDateFilter');
        var isCboCollectionDetailReportStartDateFilterSelected = false;
        var isCboCollectionDetailReporEndDateFilterSelected = false;

        // =========================
        // Company and Branch Filter
        // =========================
        var cboCollectionDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboCollectionDetailReportCompanyFilter');
        var isCboCollectionDetailReportCompanyFilterSelected = false;
        var cboCollectionDetailReportBranchFilter = new wijmo.input.ComboBox('#cboCollectionDetailReportBranchFilter');

        // =============================
        // Collection View and Flex Grid
        // =============================
        var collectionDetailReportCollectionView;
        var collectionDetailReportFlexGrid;
        var cboCollectionDetailReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboCollectionDetailReportDisplayNumberOfRows');

        // ==================
        // Navigation Buttons
        // ==================
        var btnCollectionDetailReportMoveToFirstPageGrid = document.getElementById('btnCollectionDetailReportMoveToFirstPageGrid');
        var btnCollectionDetailReportMoveToPreviousPageGrid = document.getElementById('btnCollectionDetailReportMoveToPreviousPageGrid');
        var btnCollectionDetailReportMoveToNextPageGrid = document.getElementById('btnCollectionDetailReportMoveToNextPageGrid');
        var btnCollectionDetailReportMoveToLastPageGrid = document.getElementById('btnCollectionDetailReportMoveToLastPageGrid');
        var btnCollectionDetailReportCurrentPageGrid = document.getElementById('btnCollectionDetailReportCurrentPageGrid');
        var collectionDetailReportCurrentPageIndex = 0;

        // =======================
        // Get URL Parameter Value
        // =======================
        function getURLParameterValue(name) {
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");

            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);

            var results = regex.exec(window.location.href);
            if (results == null) {
                return "";
            } else {
                return results[1];
            }
        }

        // ================================
        // Create Combo Date Ranged Filters
        // ================================
        function createCboDateRangeFilters() {
            NProgress.start();

            cboCollectionDetailReportStartDateFilter.dispose();
            cboCollectionDetailReportStartDateFilter = new wijmo.input.InputDate('#cboCollectionDetailReportStartDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("StartDate")),
                onValueChanged: function () {
                    if (!isCboCollectionDetailReportStartDateFilterSelected) {
                        NProgress.start();
                        refreshCollectionDetailReportFlexGrid();
                    } else {
                        isCboCollectionDetailReportStartDateFilterSelected = false;
                    }
                }
            });

            cboCollectionDetailReportEndDateFilter.dispose();
            cboCollectionDetailReportEndDateFilter = new wijmo.input.InputDate('#cboCollectionDetailReportEndDateFilter', {
                format: 'MM-dd-yyyy',
                value: new Date(getURLParameterValue("EndDate")),
                onValueChanged: function () {
                    if (!isCboCollectionDetailReporEndDateFilterSelected) {
                        NProgress.start();
                        refreshCollectionDetailReportFlexGrid();
                    } else {
                        isCboCollectionDetailReporEndDateFilterSelected = false;
                    }
                }
            });

            createCboCompanyFilter();
        }

        // ===========================
        // Create Combo Company Filter
        // ===========================
        function createCboCompanyFilter() {
            var companyObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/collectionDetailReport/dropdown/list/company',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            companyObservableArray.push({
                                Id: results[i]["Id"],
                                Company: results[i]["Company"]
                            });
                        }
                    }

                    var disabled = true;
                    if (results.length > 0) {
                        disabled = false;
                    } else {
                        $("#btnCollectionDetailReportDownloadCSV").prop("disabled", true);
                        $("#btnCollectionDetailReportPrintPDF").prop("disabled", true);
                    }

                    cboCollectionDetailReportCompanyFilter.dispose();
                    cboCollectionDetailReportCompanyFilter = new wijmo.input.ComboBox('#cboCollectionDetailReportCompanyFilter', {
                        disabled: disabled,
                        isEditable: false,
                        itemsSource: companyObservableArray,
                        displayMemberPath: "Company",
                        selectedValuePath: "Id",
                        selectedValue: getURLParameterValue("CompanyId"),
                        onSelectedIndexChanged: function () {
                            NProgress.start();
                            $("#btnCollectionDetailReportDownloadCSV").prop("disabled", false);
                            $("#btnCollectionDetailReportPrintPDF").prop("disabled", false);
                            isCboCollectionDetailReportCompanyFilterSelected = true;
                            createCboBranchFilter();
                        }
                    });

                    createCboBranchFilter();
                }
            });
        }

        // ==========================
        // Create Combo Branch Filter
        // ==========================
        function createCboBranchFilter() {
            var branchObservableArray = new wijmo.collections.ObservableArray();
            if (cboCollectionDetailReportCompanyFilter.selectedValue != null) {
                $.ajax({
                    url: '/api/collectionDetailReport/dropdown/list/branch/' + cboCollectionDetailReportCompanyFilter.selectedValue,
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (results) {
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {
                                branchObservableArray.push({
                                    Id: results[i]["Id"],
                                    Branch: results[i]["Branch"]
                                });
                            }
                        }

                        var disabled = true;
                        if (results.length > 0) {
                            disabled = false;
                        } else {
                            $("#btnCollectionDetailReportDownloadCSV").prop("disabled", true);
                            $("#btnCollectionDetailReportPrintPDF").prop("disabled", true);
                        }

                        cboCollectionDetailReportBranchFilter.dispose();
                        cboCollectionDetailReportBranchFilter = new wijmo.input.ComboBox('#cboCollectionDetailReportBranchFilter', {
                            disabled: disabled,
                            isEditable: false,
                            itemsSource: branchObservableArray,
                            displayMemberPath: "Branch",
                            selectedValuePath: "Id",
                            selectedValue: getURLParameterValue("BranchId"),
                            onSelectedIndexChanged: function () {
                                NProgress.start();
                                refreshCollectionDetailReportFlexGrid();
                            }
                        });

                        createCboDisplayNumberOfRows();
                    }
                });
            }
        }

        // ===================================
        // Create Combo Display Number of Rows
        // ===================================
        function createCboDisplayNumberOfRows() {
            var rowsObservableArray = new wijmo.collections.ObservableArray();

            for (var i = 0; i <= 4; i++) {
                var rows = 0;
                var rowsString = "";

                if (i == 0) {
                    rows = 15;
                    rowsString = "Show 15 Rows";
                } else if (i == 1) {
                    rows = 50;
                    rowsString = "Show 50 Rows";
                } else if (i == 2) {
                    rows = 100;
                    rowsString = "Show 100 Rows";
                } else if (i == 3) {
                    rows = 150;
                    rowsString = "Show 150 Rows";
                } else {
                    rows = 200;
                    rowsString = "Show 200 Rows";
                }

                rowsObservableArray.push({
                    rowNumber: rows,
                    rowString: rowsString
                });
            }

            cboCollectionDetailReportDisplayNumberOfRows.dispose();
            cboCollectionDetailReportDisplayNumberOfRows = new wijmo.input.ComboBox('#cboCollectionDetailReportDisplayNumberOfRows', {
                isEditable: false,
                itemsSource: rowsObservableArray,
                displayMemberPath: "rowString",
                selectedValuePath: "rowNumber",
                selectedValue: 50,
                onSelectedIndexChanged: function () {
                    NProgress.start();

                    setTimeout(function () {
                        var numberOfRows = cboCollectionDetailReportDisplayNumberOfRows.selectedValue;
                        collectionDetailReportCollectionView.pageSize = parseInt(numberOfRows);
                        collectionDetailReportCollectionView.refresh();
                        collectionDetailReportFlexGrid.refresh();

                        NProgress.done();
                    }, 300);
                }
            });

            if (!isCboCollectionDetailReportCompanyFilterSelected) {
                createCollectionDetailReportFlexGrid();
            } else {
                refreshCollectionDetailReportFlexGrid();
            }
        }

        // =================================
        // Get Collection Detail Report Data
        // =================================
        function getCollectionDetailReportData() {
            var collectionDetailReports = new wijmo.collections.ObservableArray;
            if (cboCollectionDetailReportCompanyFilter.selectedValue != null) {
                if (cboCollectionDetailReportBranchFilter.selectedValue != null) {

                    var startDate = cboCollectionDetailReportStartDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var endDate = cboCollectionDetailReportEndDateFilter.value.toLocaleDateString().replace(/\//g, '-');
                    var companyId = cboCollectionDetailReportCompanyFilter.selectedValue;
                    var branchId = cboCollectionDetailReportBranchFilter.selectedValue;

                    $.ajax({
                        url: '/api/collectionDetailReport/list/' + startDate + '/' + endDate + '/' + + companyId + '/' + branchId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (results) {
                            var inpTotalAmount = 0;
                            if (results.length > 0) {
                                for (i = 0; i < results.length; i++) {
                                    var docLink = "/Software/CollectionDetail?id=" + results[i]["ORId"];

                                    var ORDateResult = new Date(results[i]["ORDate"])
                                    var ORDate = ('0' + (ORDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + ORDateResult.getDate()).slice(-2) + '-' + ORDateResult.getFullYear();

                                    var CheckDateResult = new Date(results[i]["CheckDate"])
                                    var CheckDate = ('0' + (CheckDateResult.getMonth() + 1)).slice(-2) + '-' + ('0' + CheckDateResult.getDate()).slice(-2) + '-' + CheckDateResult.getFullYear();

                                    collectionDetailReports.push({
                                        BtnDetail: "<a href='" + docLink + "' class='btn btn-primary btn-xs btn-block' style='font-size: 9px;'><i class='fa fa-edit'></i> Detail",
                                        ORId: results[i]["ORId"],
                                        ORBranch: results[i]["ORBranch"],
                                        ORNumber: results[i]["ORNumber"],
                                        ORDate: ORDate,
                                        Customer: results[i]["Customer"],
                                        Branch: results[i]["Branch"],
                                        Account: results[i]["Account"],
                                        Article: results[i]["Article"],
                                        PayType: results[i]["PayType"],
                                        SINumber: results[i]["SINumber"],
                                        DepositoryBank: results[i]["DepositoryBank"],
                                        CheckNumber: results[i]["CheckNumber"],
                                        CheckDate: CheckDate,
                                        CheckBank: results[i]["CheckBank"],
                                        Amount: results[i]["Amount"],
                                        AmountDisplay: parseFloat(results[i]["Amount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                                    });

                                    inpTotalAmount += results[i]["Amount"];
                                }
                            }

                            document.getElementById("inpTotalAmount").value = parseFloat(inpTotalAmount).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            NProgress.done();
                        }
                    });
                } else {
                    document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    NProgress.done();
                }
            } else {
                document.getElementById("inpTotalAmount").value = parseFloat(0).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                NProgress.done();
            }

            return collectionDetailReports;
        }

        // =========================================
        // Create Collection Detail Report Flex Grid
        // =========================================
        function createCollectionDetailReportFlexGrid() {
            collectionDetailReportCollectionView = new wijmo.collections.CollectionView(getCollectionDetailReportData());
            collectionDetailReportCollectionView.canFilter = true;
            collectionDetailReportCollectionView.pageSize = cboCollectionDetailReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpCollectionDetailReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                collectionDetailReportCollectionView.refresh();
            });

            collectionDetailReportCollectionView.filter = function (item) {
                return !filterText || (item.ORBranch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.PayType.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.DepositoryBank.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckBank.toLowerCase().indexOf(filterText) > -1);
            }

            collectionDetailReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateCollectionDetailReportNavigationButtons();
            });

            collectionDetailReportFlexGrid = new wijmo.grid.FlexGrid('#collectionDetailReportFlexGrid');
            collectionDetailReportFlexGrid.initialize({
                columns: [
                    {
                        "header": "Detail",
                        "binding": "BtnDetail",
                        "width": 55,
                        "isContentHtml": true
                    },
                    {
                        "header": "OR No.",
                        "binding": "ORNumber",
                        "isContentHtml": true,
                        "allowSorting": true,
                        "width": "1.1*"
                    },
                    {
                        "header": "OR Date",
                        "binding": "ORDate",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Customer",
                        "binding": "Customer",
                        "allowSorting": true,
                        "width": "1.5*"
                    },
                    {
                        "header": "Branch",
                        "binding": "Branch",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Account",
                        "binding": "Account",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Article",
                        "binding": "Article",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Pay Type",
                        "binding": "PayType",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "SI No",
                        "binding": "SINumber",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Dep. Bank",
                        "binding": "DepositoryBank",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Check No.",
                        "binding": "CheckNumber",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Check Date",
                        "binding": "CheckDate",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Check Bank",
                        "binding": "CheckBank",
                        "allowSorting": true,
                        "width": "1*"
                    },
                    {
                        "header": "Amount",
                        "binding": "AmountDisplay",
                        "allowSorting": true,
                        "align": "right",
                        "width": "1*"
                    }
                ],
                autoGenerateColumns: false,
                itemsSource: collectionDetailReportCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            collectionDetailReportFlexGrid.trackChanges = true;

            updateCollectionDetailReportNavigationButtons();

            btnCollectionDetailReportMoveToFirstPageGrid.addEventListener('click', function () {
                collectionDetailReportCollectionView.moveToFirstPage();
                collectionDetailReportCurrentPageIndex = collectionDetailReportCollectionView.pageIndex + 1;
                updateCollectionDetailReportNavigationButtons();
            });

            btnCollectionDetailReportMoveToPreviousPageGrid.addEventListener('click', function () {
                collectionDetailReportCollectionView.moveToPreviousPage();
                collectionDetailReportCurrentPageIndex = collectionDetailReportCollectionView.pageIndex + 1;
                updateCollectionDetailReportNavigationButtons();
            });

            btnCollectionDetailReportMoveToNextPageGrid.addEventListener('click', function () {
                collectionDetailReportCollectionView.moveToNextPage();
                collectionDetailReportCurrentPageIndex = collectionDetailReportCollectionView.pageIndex + 1;
                updateCollectionDetailReportNavigationButtons();
            });

            btnCollectionDetailReportMoveToLastPageGrid.addEventListener('click', function () {
                collectionDetailReportCollectionView.moveToLastPage();
                collectionDetailReportCurrentPageIndex = collectionDetailReportCollectionView.pageIndex + 1;
                updateCollectionDetailReportNavigationButtons();
            });
        }

        // ==================================================
        // Update Collection Detail Report Navigation Buttons
        // ==================================================
        function updateCollectionDetailReportNavigationButtons() {
            if (collectionDetailReportCollectionView.pageSize <= 0) {
                document.getElementById('collectionDetailReportNavigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('collectionDetailReportNavigationPageGrid').style.display = 'block';
            if (collectionDetailReportCollectionView.pageIndex === 0) {
                btnCollectionDetailReportMoveToFirstPageGrid.setAttribute('disabled', 'disabled');
                btnCollectionDetailReportMoveToPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnCollectionDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnCollectionDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            } else if (collectionDetailReportCollectionView.pageIndex === (collectionDetailReportCollectionView.pageCount - 1)) {
                btnCollectionDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnCollectionDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnCollectionDetailReportMoveToLastPageGrid.setAttribute('disabled', 'disabled');
                btnCollectionDetailReportMoveToNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnCollectionDetailReportMoveToFirstPageGrid.removeAttribute('disabled');
                btnCollectionDetailReportMoveToPreviousPageGrid.removeAttribute('disabled');
                btnCollectionDetailReportMoveToNextPageGrid.removeAttribute('disabled');
                btnCollectionDetailReportMoveToLastPageGrid.removeAttribute('disabled');
            }
            btnCollectionDetailReportCurrentPageGrid.innerHTML = (collectionDetailReportCollectionView.pageIndex + 1) + ' / ' + collectionDetailReportCollectionView.pageCount;
        }

        // =================
        // Refresh Flex Grid
        // =================
        function refreshCollectionDetailReportFlexGrid() {
            collectionDetailReportCollectionView = new wijmo.collections.CollectionView(getCollectionDetailReportData());
            collectionDetailReportCollectionView.canFilter = true;
            collectionDetailReportCollectionView.pageSize = cboCollectionDetailReportDisplayNumberOfRows.selectedValue;

            var filterText = '';
            $('#inpCollectionDetailReportSearchFilter').keyup(function () {
                filterText = this.value.toLowerCase();
                collectionDetailReportCollectionView.refresh();
            });

            collectionDetailReportCollectionView.filter = function (item) {
                return !filterText || (item.ORBranch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.ORNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Customer.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Branch.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.Article.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.PayType.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.SINumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.DepositoryBank.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckNumber.toLowerCase().indexOf(filterText) > -1)
                    || !filterText || (item.CheckBank.toLowerCase().indexOf(filterText) > -1);
            }

            collectionDetailReportCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateCollectionDetailReportNavigationButtons();
            });

            collectionDetailReportFlexGrid.itemsSource = collectionDetailReportCollectionView;
            collectionDetailReportFlexGrid.trackChanges = true;
        }

        // ============
        // Download CSV
        // ============
        function btnCollectionDetailReportDownloadCSVOnclick() {
            var CSV = '';
            var collectionDetailReport = [];
            var fileName = 'CollectionDetailReport.CSV';

            collectionDetailReportCollectionView.moveToFirstPage();

            for (var p = 1; p <= collectionDetailReportCollectionView.pageCount; p++) {
                for (i = 0; i < collectionDetailReportCollectionView.items.length; i++) {

                    collectionDetailReport.push({
                        ORBranch: collectionDetailReportCollectionView.items[i].ORBranch,
                        ORNumber: "OR-" + collectionDetailReportCollectionView.items[i].ORNumber,
                        ORDate: collectionDetailReportCollectionView.items[i].ORDate,
                        Customer: collectionDetailReportCollectionView.items[i].Customer,
                        Branch: collectionDetailReportCollectionView.items[i].Branch,
                        Account: collectionDetailReportCollectionView.items[i].Account,
                        Article: collectionDetailReportCollectionView.items[i].Article,
                        PayType: collectionDetailReportCollectionView.items[i].PayType,
                        SINumber: "SI-" + collectionDetailReportCollectionView.items[i].SINumber,
                        DepositoryBank: collectionDetailReportCollectionView.items[i].DepositoryBank,
                        CheckNumber: collectionDetailReportCollectionView.items[i].CheckNumber,
                        CheckDate: collectionDetailReportCollectionView.items[i].CheckDate,
                        CheckBank: collectionDetailReportCollectionView.items[i].CheckBank,
                        Amount: collectionDetailReportCollectionView.items[i].Amount
                    });
                }

                collectionDetailReportCollectionView.moveToNextPage();
                if (p == collectionDetailReportCollectionView.pageCount) {
                    collectionDetailReportCollectionView.moveToPage(collectionDetailReportCurrentPageIndex - 1);
                }
            }

            var Headers = [];
            Headers.push({
                ORBranch: "OR Branch",
                ORNumber: "OR Number",
                ORDate: "OR Date",
                Customer: "Customer",
                Branch: "Branch",
                Account: "Account",
                Article: "Article",
                PayType: "Pay Type",
                SINumber: "SI Number",
                DepositoryBank: "Depository Bank",
                CheckNumber: "Check Number",
                CheckDate: "Check Date",
                CheckBank: "Check Bank",
                Amount: "Amount"
            });

            var header = '';
            for (var b in Headers[0]) {
                header += '"' + Headers[0][b] + '",';
            }

            CSV = header + '\r\n';
            for (var i = 0; i < collectionDetailReport.length; i++) {
                var row = '';
                for (var a in collectionDetailReport[i]) {
                    row += '"' + collectionDetailReport[i][a] + '",';
                }

                row.slice(0, row.length - 1);
                CSV += row + '\r\n';
            }

            if (CSV == '') {
                toastr.error("No data.");
            } else {
                var link = document.createElement("a");
                if (link.download !== undefined) {
                    var blob = new Blob([CSV], { type: 'text/csv;charset=utf-8;' });
                    var url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", fileName);
                    link.style = "visibility:hidden";
                }

                if (navigator.msSaveBlob) {
                    link.addEventListener("click", function (event) {
                        var blob = new Blob([CSV], {
                            "type": "text/csv;charset=utf-8;"
                        });
                        navigator.msSaveBlob(blob, fileName);
                    }, false);
                }

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                toastr.success("Dowload successful.");
            }
        }

