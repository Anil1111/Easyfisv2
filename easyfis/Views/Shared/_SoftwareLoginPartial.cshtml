@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        @ViewData["FullName"]
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Account/Login"><i class="fa fa-gear"></i> Manage</a></li>
                        <li class="divider"></li>
                        <li><a href="/Manage/ChangePassword"><i class="fa fa-pencil-square-o"></i> Change Password</a></li>
                        <li><a href="#" data-toggle="modal" onclick="cmdLogoutModal_OnClick()"><i class="fa fa-sign-out"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    }
}
else
{
    <div class="navbar-custom-menu">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/Account/Login"><i class="fa fa-sign-in"></i> Sign in</a></li>
        </ul>
    </div>
}

<script type="text/javascript">
    function cmdLogoutModal_OnClick() {
        $('#modalLogout').modal({
            show: true,
            backdrop: 'static'
        });
    }
</script>
