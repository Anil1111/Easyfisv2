@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <!-- Section -->
        <section>
            <div class="cover-login-photo-custom">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <h2>Welcome</h2>
                            @Html.Label(User.Identity.GetUserName())
                            @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Index", "Software")" class="btn btn-primary btn-lg btn-block">Launch Software</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
else
{
    <!-- Section -->
    <section>
        <div class="cover-register-photo-custom">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-push-4">
                        <img class="img-thumbnail img-responsive center-block img-custom" data-src="holder.js/500x500/auto" alt="" src="../images/sectionImages/purchase.jpg"><br>
                    </div>
                    <div class="col-md-4 col-md-pull-8">
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Register</h4>
                                </div>
                                <div>
                                    <div class="panel-body">
                                        @*<form class="form-horizontal" role="form">*@
                                        @model easyfis.Models.RegisterViewModel
                                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email address" })
                                                    @*<input type="email" class="form-control modal-form-border" id="email" placeholder="Email address">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    <input type="text" class="form-control modal-form-border" id="email" placeholder="Username">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                                    @*<input type="password" class="form-control modal-form-border" id="pwd" placeholder="Password">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                                                    @*<input type="password" class="form-control modal-form-border" id="pwd" placeholder="Confirm Password">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    <input type="text" class="form-control modal-form-border" id="email" placeholder="Code">
                                                </div>
                                            </div>
                                            <br />
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    <span class="help-block">
                                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                                    </span>
                                                </div>
                                            </div>
                                            <br>
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    <input type="submit" class="btn btn-success btn-block btn-lg" value="Register">
                                                </div>
                                            </div>
                                        }
                                        @*</form>*@
                                    </div>
                                    <div class="panel-footer">
                                        <p>Do not forget to put captca in your registration</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
